;---------------------------------------------------------------------
;ITEM 소지수리스트 표시 함수 한판 개선판
;---------------------------------------------------------------------
@LIST_ITEM_KR(TYPE = "전부")
#DIMS TYPE
#DIM 표시수

SELECTCASE TYPE
CASE "전부"
	CALL LIST_ITEM_KR("조교")
	CALL LIST_ITEM_KR("일용품")
	CALL LIST_ITEM_KR("소질")
	CALL LIST_ITEM_KR("체질 변화")
	CALL LIST_ITEM_KR("조합물")
	CALL LIST_ITEM_KR("탄막")
	CALL LIST_ITEM_KR("소모품")
	CALL LIST_ITEM_KR("주류")
	CALL LIST_ITEM_KR("식재료")
	CALL LIST_ITEM_KR("야채")
	CALL LIST_ITEM_KR("고기")
	CALL LIST_ITEM_KR("초콜렛")
	CALL LIST_ITEM_KR("회복")
	CALL LIST_ITEM_KR("원예용품")
	CALL LIST_ITEM_KR("소재")
	CALL LIST_ITEM_KR("의상")
	CALL LIST_ITEM_KR("서적")
	CALL LIST_ITEM_KR("특수")
	CALL LIST_ITEM_KR("그 외")
CASEELSE
	;全部回す
    PRINTFORML □ %TYPE% □
	표시수 = 0
	FOR LOCAL, 0, 1100
		CALL ITEMDATA(LOCAL, "TYPE:" + TYPE)
		IF RESULT && ITEM:LOCAL
			PRINTFORMLC %ITEMNAME:LOCAL%({ITEM:LOCAL})
			표시수 ++
			SIF 표시수 % 4 == 0
				PRINTL 
		ENDIF
	NEXT
	SIF 표시수 % 4 != 0
		PRINTL 
    PRINTL

    SIF 표시수 == 0
        CLEARLINE 2

ENDSELECT

