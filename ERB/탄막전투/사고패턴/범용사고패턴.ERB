            VARSET CANNOT_ARRAY, 1, 1601, 2000
            CONTINUE
            ;스킬번호 += 1600
    ENDSELECT

    스킬번호 += RAND(1, 401)

    ;실장되지 않은 스킬은 통과
    IF TALENTNAME:(스킬번호 + 500) == ""
        CANNOT_ARRAY:스킬번호 = 1
