;----------------------------------
;데이트 플래그 세트 CFLAG:12SET
;호출시의 정합성을 판정해 건네받은 장소에의 데이트 플래그를 세트 한다
;ARG=데이트처 ARG:1=세트 대상
;데이트에서의 행선지 정의는 조금 특수
;XXYZ	XX=데이트처 NO Y=데이트처 파생 장소 Z=이동 소요시간(X*10min)
;----------------------------------
@SET_DATE(ARG, C_ID)
#DIM C_ID
;FLAG_OFF
IF ARG == 99 || ARG == 9999
;데이트 종료
;신사는 파생 장소가 6까지이므로 괜찮을 것. 이것으로 안 돼라면 ARG == 10000으로 한다
	;정합성 체크
	IF CHK_DATENOW(CFLAG:C_ID:데이트중)
		CFLAG:C_ID:데이트중 = MAIN_MAP
		CFLAG:MASTER:데이트중 = MAIN_MAP
		FLAG:데이트상대 = 0
		TFLAG:데이트전호감도 = 0
		SIF !AT_HOME(C_ID)
			CFLAG:(ARG:1):현재위치 = GET_ENTRANCE(MAIN_MAP)
		SIF !AT_HOME(MASTER)
			CFLAG:MASTER:현재위치 = GET_ENTRANCE(MAIN_MAP)
		IF ARG == 9999
			CFLAG:MASTER:현재위치 = 부엌
			CFLAG:C_ID:현재위치 = 부엌
		ENDIF
	ENDIF
;FLAG_ON
ELSE
	;정합성 체크
	;쇠약중, 이미 데이트중이라면 처리를 실시하지 않는다
	;SIF CHK_DATENOW(CFLAG:C_ID:데이트중) || CFLAG:C_ID:쇠약
	SIF CFLAG:C_ID:쇠약
		RETURN
	;기력이 없으면 데이트는 갈 수 없다
	SIF BASE:MASTER:기력 <= 0 || BASE:C_ID:기력 <= 0
		RETURN

	CFLAG:C_ID:데이트중 = ARG
	CFLAG:MASTER:데이트중 = ARG
	FLAG:데이트상대 = C_ID
	TFLAG:데이트전호감도 = CFLAG:C_ID:호감도
	IF C_ID == 0
		CFLAG:MASTER:현재위치 = GET_ENTRANCE(ARG)
	ELSE
		IF ARG == 2
			CALL EX_COSTUME(C_ID, "마을 데이트")
			SIF RESULT
				PRINTFORMW %CALLNAME:C_ID%는 마을에 맞는 옷으로 갈아입었습니다
		ENDIF
		CFLAG:C_ID:현재위치 = (ARG * 100) + (TIME_REQUIRED(CFLAG:MASTER:현재위치 / 100, ARG) / 10)
		CFLAG:MASTER:현재위치 = (ARG * 100) + (TIME_REQUIRED(CFLAG:MASTER:현재위치 / 100, ARG) / 10)
		;신사지도가 0번이므로 고육책의 예외처리
		IF !ARG
			CFLAG:C_ID:현재위치 += 1100
			CFLAG:MASTER:현재위치 += 1100
		ENDIF
	ENDIF
	CALL HappenToChild
ENDIF

;----------------------------------
;행동 억제 시간 세트 CFLAG:313SET
;현재의 장소에에 세트 한다
;ARG=호출 종류 ARG:1=세트 대상
;----------------------------------
@SET_DERAY(ARG,ARG:1)
IF !CFLAG:(ARG:1):데일리
	;호출 형식에 의해 처리 변경 1=장소에 의한 데일리 2이후=이벤트에 의한 데일리
	SELECTCASE ARG
		;특정의 장소에 들어가면(자) 데일리
		CASE 1
			SELECTCASE CFLAG:(ARG:1):현재위치
				;부엌은 요리하므로 데일리 발생
				CASE 11
					IF ABL:(ARG:1):요리기능 >= 3
						CFLAG:(ARG:1):데일리 = 30
					ELSEIF ABL:(ARG:1):요리기능 > 1 && ABL:(ARG:1):요리기능 < 3
						CFLAG:(ARG:1):데일리 = 60
					ELSE
						CFLAG:(ARG:1):데일리 = 120
					ENDIF
				;목욕을 하면(자) 데일리 발생
				CASE 12
					CFLAG:(ARG:1):데일리 = 60
			ENDSELECT
		;아침에 일어 나면(자) 데일리(아침은 기분이 결정되지 않고 네)
		CASE 2
			CFLAG:(ARG:1):데일리 = 60
		;일종료후는 데일리
		CASE 3
			CFLAG:(ARG:1):데일리 = 20
		;동침 하면(자) 노력해 일어나 준다(쇠약시 이외)
		CASE 4
			SIF !CFLAG:(ARG:1):쇠약
				CFLAG:(ARG:1):데일리 = 60
		;밀어넘어뜨려지고 달래면(자) 데일리
		CASE 5
			CFLAG:(ARG:1):데일리 = 40
		;무릎베개시는 데일리
		CASE 6
			CFLAG:(ARG:1):데일리 = 10
		CASE 99
			;Deray Clear to Do nothing
	ENDSELECT
ELSE
	SELECTCASE ARG
		;데일리를 클리어
		CASE 99
			CFLAG:(ARG:1):데일리 = 0
	ENDSELECT
ENDIF
