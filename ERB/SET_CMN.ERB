;현재의 장소에에 세트 한다
;ARG=호출 종류 ARG:1=세트 대상
;----------------------------------
@SET_DERAY(ARG,ARG:1)
IF !CFLAG:(ARG:1):데일리
	;호출 형식에 의해 처리 변경 1=장소에 의한 데일리 2이후=이벤트에 의한 데일리
	SELECTCASE ARG
		;특정의 장소에 들어가면(자) 데일리
		CASE 1
			SELECTCASE CFLAG:(ARG:1):현재위치
				;부엌은 요리하므로 데일리 발생
				CASE 11
					IF ABL:(ARG:1):요리기능 >= 3
						CFLAG:(ARG:1):데일리 = 30
					ELSEIF ABL:(ARG:1):요리기능 > 1 && ABL:(ARG:1):요리기능 < 3
						CFLAG:(ARG:1):데일리 = 60
					ELSE
						CFLAG:(ARG:1):데일리 = 120
					ENDIF
				;목욕을 하면(자) 데일리 발생
				CASE 12
					CFLAG:(ARG:1):데일리 = 60
			ENDSELECT
		;아침에 일어 나면(자) 데일리(아침은 기분이 결정되지 않고 네)
		CASE 2
			CFLAG:(ARG:1):데일리 = 60
		;일종료후는 데일리
		CASE 3
			CFLAG:(ARG:1):데일리 = 20
		;동침 하면(자) 노력해 일어나 준다(쇠약시 이외)
		CASE 4
			SIF !CFLAG:(ARG:1):쇠약
				CFLAG:(ARG:1):데일리 = 60
		;밀어넘어뜨려지고 달래면(자) 데일리
		CASE 5
			CFLAG:(ARG:1):데일리 = 40
		;무릎베개시는 데일리
		CASE 6
			CFLAG:(ARG:1):데일리 = 10
		CASE 99
			;Deray Clear to Do nothing
	ENDSELECT
ELSE
	SELECTCASE ARG
		;데일리를 클리어
		CASE 99
			CFLAG:(ARG:1):데일리 = 0
	ENDSELECT
ENDIF
