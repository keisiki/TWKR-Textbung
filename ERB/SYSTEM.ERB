@EVENTFIRST

;클래스 변수 초기화
CALL MAKE_ALL_CLASS_LIST
;복잡화를 위해 전용 함수로 이동
CALL NEWGAME

FLAG:경고장사용 = 1

;욕구불만도의 초기설정
FOR LOCAL, 1, CHARANUM
	CFLAG:LOCAL:욕구불만도 = RAND:500
NEXT
;로드시와 공통의 초기화

;의뢰：편지의 행선지 처리
CALL SETUP_ALL_LETTERS
FOR LOCAL,1,CHARANUM
	IF TALENT:LOCAL:스침
		RANDOM_CHARANUM = LOCAL
		BREAK
	ENDIF
NEXT
;목재데이터
CALL WoodData
;업데이트처리
CALL NEWGAME_VERUP

;SYSTEMCALL to SHOW_SHOP

CALL 시작소지금설정
BEGIN SHOP

@EVENTLOAD
GETTIME
DEBUGPRINTFORML {RESULT / 10000000000000}년 {(RESULT / 100000000000) % 100}월 {(RESULT / 1000000000) % 100}일 {(RESULT / 10000000) % 100}시야
CALL ROOMSETTING
CALL VERSION_UP
SIF CFLAG:MASTER:312
	TIME:3 = CFLAG:MASTER:312
CFLAG:MASTER:312 = 0
CALL MAKE_ALL_CLASS_LIST
;의뢰：편지의 행선지 처리
CALL SETUP_ALL_LETTERS
FOR LOCAL,1,CHARANUM
	;구상 기본 플래그 설정
	CALL KOJO_MESSAGE_SEND("FLAGSETTING", 0, LOCAL)
	IF TALENT:LOCAL:스침
		RANDOM_CHARANUM = LOCAL
		BREAK
	ENDIF
NEXT
;목재데이터
CALL WoodData
