	CASE GETNUM(TALENT, "습득속도") TO GETNUM(TALENT, "바늘질"), GETNUM(TALENT, "약독내성"), GETNUM(TALENT, "즉각함락"), GETNUM(TALENT, "盲信"), GETNUM(TALENT, "소악마")
		SIF CHARA == NO:MASTER
			RETURNF 1
