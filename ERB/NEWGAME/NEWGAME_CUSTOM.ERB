@CUSTOM_INIT(ARG)
;ARG가 여자, 후타나리일 때의 배타
IF TALENT:ARG:성별 & 1
	ABL:ARG:호모끼 = 0
	ABL:ARG:게이중독 = 0
	EXP:ARG:게이경험 = 0
	IF !(TALENT:ARG:2 & 2)
		EXP:ARG:사정경험 = 0
		EXP:ARG:삽입경험 = 0
	ENDIF
	SIF TALENT:ARG:성별 != 1
		TALENT:ARG:구현 = 0
;ARG가 남자일 때의 배타
ELSE
	ABL:ARG:V감각 = 0
	ABL:ARG:레즈끼 = 0
	ABL:ARG:레즈중독 = 0
	EXP:ARG:레즈경험 = 0
	EXP:ARG:분유경험 = 0
	EXP:ARG:V경험 = 0
	EXP:ARG:파이즈리경험 = 0
	EXP:ARG:V성교경험 = 0
	EXP:ARG:V확장경험 = 0
	EXP:ARG:자궁구개발경험 = 0
	TALENT:ARG:V감도 = 0
	TALENT:ARG:처녀 = 0
	TALENT:ARG:모유체질 = 0
	TALENT:ARG:가슴사이즈 = -2
	TALENT:ARG:걸레 = 0
	TALENT:ARG:초경 = 0
	TALENT:ARG:구현 = 0
ENDIF
;거시기
IF TALENT:ARG:2 & 2
	MAXBASE:ARG:정력 = 1000
	BASE:ARG:정력 = 1000
	MAXBASE:ARG:발기 = 1500
	;실적보너스분
	SIF ARG == MASTER && GETBIT(FLAG:702,8)
		MAXBASE:MASTER:정력 += 100
ELSE
	TALENT:ARG:비동정 = 0
	MAXBASE:ARG:정력 = 0
	BASE:ARG:정력 = 0
	MAXBASE:ARG:발기 = 0
ENDIF
;처녀라면 V계 경험 없음
IF TALENT:ARG:처녀 == 1
	ABL:ARG:V감각 = 0
	EXP:ARG:V경험 = 0
	EXP:ARG:V성교경험 = 0
	EXP:ARG:V확장경험 = 0
	EXP:ARG:자궁구개발경험 = 0
	CSTR:ARG:처녀상실이력 = 
	CFLAG:ARG:처녀상실기념일 = 0
	CFLAG:ARG:처녀상실대상 = 0
;비처녀는 V경험 1
ELSEIF TALENT:ARG:2 & 1 && EXP:ARG:V경험 == 0
	EXP:ARG:V경험 = 1
ENDIF

;퍼스트 키스
IF !EXP:ARG:키스경험
	TALENT:ARG:키스미경험 = 1
ELSE
	TALENT:ARG:키스미경험 = 0
ENDIF


