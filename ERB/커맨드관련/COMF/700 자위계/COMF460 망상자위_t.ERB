@COM460
;망상 자위
VARSET LOCAL

IF FLAG == 70
	TCVAR:194 = 1
	RETURN 0
ELSEIF GET_TARGETNUM() > 0
	TCVAR:194 = 2
	RETURN 0
ELSE
	TCVAR:194 = 3
	$LOOP_MOUSOU
	FOR LOCAL, 1, CHARANUM
	SIF !CFLAG:LOCAL:출금
		PRINTFORMLC [{LOCAL}] %CALLNAME:LOCAL%
	NEXT
	PRINTL
	DRAWLINE
	PRINTL [900] 그만둔다
	PRINTL 누구를 떠올립니까?
	INPUT
	SELECTCASE RESULT
	CASE 1 TO CHARANUM - 1
		ADDCOPYCHARA RESULT
		CFLAG:MASTER:현재위치 = 260
		CFLAG:(CHARANUM - 1):현재위치 = 260
		CFLAG:(CHARANUM - 1):안면 = 1
		CFLAG:(CHARANUM - 1):2 = 100000 
		CFLAG:(CHARANUM - 1):4 = 10000
		CFLAG:(CHARANUM - 1):생해금 = 2
		CFLAG:(CHARANUM - 1):동행 = 300
		CFLAG:TARGET:데이트중 = 2
		CFLAG:MASTER:데이트중 = 2
		TFLAG:망상중 = 1
		MARK:(CHARANUM - 1):쾌락각인 = 3
		MARK:(CHARANUM - 1):괘씸각인 = 3
		CFLAG:(CHARANUM - 1):우후후 = 0
		CFLAG:(CHARANUM - 1):수면 = 0
		CFLAG:(CHARANUM - 1):행동 = 0
		TALENT:(CHARANUM - 1):망상의산물 = 1
		BASE:(CHARANUM - 1):일량 = 0
		PRINTFORMW %CALLNAME:RESULT%과 섹스 합니다
		PRINTL 망상으로 팡팡 할거예요, 비처녀에게 설정해 둡니다만……
		PRINTL 처녀로 합니까?
		PRINTL [0]네 [1]아니오
		$INPUT_VIRGIN
		INPUT
		IF RESULT == 0
			PRINTW 상냥하게 해 주세요
			PRINTW 다만, V감각은 10이다
			TALENT:(CHARANUM - 1):처녀 = 1
			ABL:(CHARANUM - 1):V감각 = 10
			EXP:(CHARANUM - 1):정음경험 = 0
			EXP:(CHARANUM - 1):V성교경험 = 0
		ELSEIF RESULT == 1
			PRINTW 그대로 개시합니다
		ELSE
			GOTO INPUT_VIRGIN
		ENDIF
		PRINTL 그런데, 엉덩이의 구멍에 흥미는……
		PRINTL [0]있는 [1]없다
		$INPUT_ANUS
		INPUT
		IF RESULT == 0
			PRINTW 감각, 경험을 줍니다
			ABL:(CHARANUM - 1):A감각 = 10
			EXP:(CHARANUM - 1):A경험 = 100
			EXP:(CHARANUM - 1):A확장경험 = 50
		ELSEIF RESULT == 1
			PRINTW 그대로 개시합니다
		ELSE
			GOTO INPUT_ANUS
		ENDIF
		BEFORE_MOUSOU_EXP14 = EXP:MASTER:14
		BEFORE_MOUSOU_EXP15 = EXP:MASTER:15
		BEFORE_MOUSOU_EXP16 = EXP:MASTER:16
		BEFORE_MOUSOU_EXP20 = EXP:MASTER:20
		BEFORE_MOUSOU_EXP21 = EXP:MASTER:21
		BEFORE_MOUSOU_EXP24 = EXP:MASTER:24
		BEFORE_MOUSOU_EXP25 = EXP:MASTER:25
		BEFORE_MOUSOU_EXP27 = EXP:MASTER:27
		BEFORE_MOUSOU_EXP28 = EXP:MASTER:28
		BEFORE_MOUSOU_EXP29 = EXP:MASTER:29
		BEFORE_MOUSOU_EXP53 = EXP:MASTER:53
	CASE 900
		TCVAR:194 = 4
		RETURN 0
	CASEELSE
		GOTO LOOP_MOUSOU
	ENDSELECT
ENDIF


