;-------------------------------------------------
;애널빨기
;애무계 커맨드, 레벨 1
;-------------------------------------------------
@COM4
;-------------------------------------------------
;COM별 FLAG의 설정
;-------------------------------------------------
;행위자
TCVAR:116 = PLAYER
;봉사 쾌락
TCVAR:PLAYER:108 = 1

CSTR:TARGET:10 += @"{PLAYER}/"
;TCVAR:2 사정장소 플래그(-1=콘돔 1=질내 2=애널 3=수음 4=펠라티오 5=파이즈리 6=가랑이 7=풋잡 8=체표 9=애널 봉사 10=도구 11=촉수 12=A고문 13=V 꾸짖고)
TCVAR:TARGET:2 = 12
;강도
TCVAR:TARGET:4 = 500

;-------------------------------------------------
;소스 추가 처리
;-------------------------------------------------
;소비 체력, 기력
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 50
	SOURCE:PLAYER:성행동 =3
	SOURCE:쾌A = 50
	SOURCE:액체 = 50
	SOURCE:쾌A += ABL:PLAYER:혀 * 2

	;조교자의 TALENT:혀놀림을 본다
	SIF TALENT:PLAYER:혀놀림
		TIMES SOURCE:쾌A , 1.50
		
	;조교자의 TALENT:고양이혀를 본다
	SIF TALENT:PLAYER:고양이혀
		TIMES SOURCE:쾌A , 0.75
	;노예의 A⇔조교자의 입의 더러움이 이동
	STAIN:4 |= STAIN:PLAYER:구
	STAIN:PLAYER:구 |= STAIN:4

	;동성애 레즈비언이라면 반환값 1 동성애자라면 반환값 2
	IF HETEROSEX(TARGET, PLAYER)
		EXP:PLAYER:(50 + HETEROSEX(TARGET, PLAYER)) += 3
	ENDIF

	;조교자가 고양이혀 소유의 경우는, 조교자에게 가학쾌락경험을 추가
	SIF TALENT:PLAYER:고양이혀
		EXP:PLAYER:가학쾌락경험 += 1
	EXP:PLAYER:펠라티오경험 ++
ELSE

	DOWNBASE:체력 += 5
	DOWNBASE:기력 += 50
	SOURCE:PLAYER:성행동 =3

	SOURCE:쾌A = 50
	SOURCE:액체 = 50
	SOURCE:일탈 = 40
	SOURCE:반감 = 30

	;-------------------------------------------------
	;특수소스처리
	;-------------------------------------------------
	;억압, 저항 소유에는, 억울소스 추가
	SIF TALENT:자기애 < 0 || TALENT:저항
		SOURCE:울굴 += 50

	SOURCE:쾌A += ABL:PLAYER:혀 * 2

	;조교자의 TALENT:혀놀림을 본다
	SIF TALENT:PLAYER:혀놀림
		TIMES SOURCE:쾌A , 1.50
		
	;조교자의 TALENT:고양이혀를 본다
	SIF TALENT:PLAYER:고양이혀
		TIMES SOURCE:쾌A , 0.75

	;-------------------------------------------------
	;더러움의 처리
	;-------------------------------------------------
	;노예의 A⇔조교자의 입의 더러움이 이동
	STAIN:4 |= STAIN:PLAYER:구
	STAIN:PLAYER:구 |= STAIN:4
	;-------------------------------------------------
	;경험의 처리
	;-------------------------------------------------
	;동성애 레즈비언이라면 반환값 1 동성애자라면 반환값 2
	IF HETEROSEX(TARGET, PLAYER)
		EXP:(50 + HETEROSEX(TARGET, PLAYER)) += 3
		EXP:PLAYER:(50 + HETEROSEX(TARGET, PLAYER)) += 3
	ENDIF

	;조교자가 고양이혀 소유의 경우는, 조교자에게 가학쾌락경험을 추가
	SIF TALENT:PLAYER:고양이혀
		EXP:PLAYER:가학쾌락경험 += 1
	EXP:PLAYER:펠라티오경험 ++
ENDIF
RETURN 1

;-------------------------------------------------
;실행 판정
;-------------------------------------------------
@COM_ABLE4
;애널빨기 실행 판정
SIF !TFLAG:100
	RETURN 0

;일괄관리
SIF GLOBAL_COMABLE(4)
	RETURN RESULT
;성기가 더러워져 있다
SIF STAIN:4 >= 2 && (STAIN:3 != 16 && STAIN:3 != 17) && ASSIPLAY == 0 && TALENT:PLAYER:악취내성 < 2
	RETURN 0

;고양이혀의 조교자의 경우는 기교 Lv2 이상 필요
SIF TALENT:PLAYER:고양이혀 && ABL:PLAYER:기교 < 2
	RETURN 0

;하반신착의
SIF TEQUIP:0 & 4 || TEQUIP:0 & 2
	RETURN 0
;애널바이브 사용중은 불가
SIF TEQUIP:14
	RETURN 0
;애널비즈 사용중은 불가
SIF TEQUIP:15
	RETURN 0
;보통 관장 사용중은 불가
SIF TEQUIP:21
	RETURN 0
;풍선 사용중은 불가
SIF TEQUIP:22
	RETURN 0
;전극 사용중은 불가
SIF TEQUIP:23
	RETURN 0
RETURN 1

