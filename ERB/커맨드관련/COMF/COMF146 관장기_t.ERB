;-------------------------------------------------
;관장기＋플러그
;하드한 조교 커맨드, 레벨 4
;-------------------------------------------------
@COM146
;착탈의처리
TEQUIP:관장 = !TEQUIP:관장
IF !TEQUIP:관장
	IF !GETBIT(CFLAG:3, 7)
		EXP:이상경험 += 1
		SETBIT CFLAG:3, 7
	ENDIF
ENDIF
;-------------------------------------------------
;COM별 FLAG의 설정
;-------------------------------------------------
;행위자
TCVAR:116 = PLAYER
;-------------------------------------------------
;소스 추가 처리
;-------------------------------------------------
;소비 체력, 기력
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 150
	SOURCE:쾌A = 300
	SOURCE:고통 = 250

ELSE

	DOWNBASE:체력 += 60
	DOWNBASE:기력 += 150

	SOURCE:쾌A = 300
	SOURCE:고통 = 500
	SOURCE:노출 = 300
	SOURCE:굴종 = 200
	SOURCE:불결 = 500
	SOURCE:일탈 = 500
	SOURCE:반감 = 500

	;-------------------------------------------------
	;특수소스처리
	;-------------------------------------------------
	;억압, 저항 소유에는, 억울소스 추가
	SIF TALENT:자기애 < 0 || TALENT:저항
		SOURCE:울굴 += 500
ENDIF
;A에의 고통은 먼저 처리해 둔다
CALL PAIN_CHECK_A(TARGET)
;-------------------------------------------------
;더러움의 처리
;-------------------------------------------------
STAIN:7 |= STAIN:4
STAIN:4 |= STAIN:7
;-------------------------------------------------
;경험의 처리
;-------------------------------------------------
;A경험
EXP:A경험 += 4
;동성애 레즈비언이라면 반환값 1 동성애자라면 반환값 2
IF FLAG:70 == 1
	IF HETEROSEX(TARGET, PLAYER)
		EXP:PLAYER:(50 + HETEROSEX(TARGET, PLAYER)) += 1
	ENDIF
ELSE
	IF HETEROSEX(TARGET, PLAYER)
		EXP:(50 + HETEROSEX(TARGET, PLAYER)) += 1
		EXP:PLAYER:(50 + HETEROSEX(TARGET, PLAYER)) += 1
	ENDIF
ENDIF
RETURN 1
;-------------------------------------------------
;장착 계속의 처리
;-------------------------------------------------

@EQUIP_COM146(ARG)
PRINTL ＜관장＋애널 플러그 삽입중＞
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 150
	SOURCE:ARG:쾌A += 150

	;A에의 고통은 먼저 처리해 둔다
	;EXP:A경험을 본다
	LOCAL = 250
	LOCAL:1 = 250
	IF EXP:ARG:A경험 < EXPLV:1
		TIMES LOCAL , 3.00
	ELSEIF EXP:ARG:A경험 < EXPLV:2
		TIMES LOCAL , 1.20
	ELSEIF EXP:ARG:A경험 < EXPLV:3
		TIMES LOCAL , 0.80
	ELSEIF EXP:ARG:A경험 < EXPLV:4
		TIMES LOCAL , 0.60
	ELSEIF EXP:ARG:A경험 < EXPLV:5
		TIMES LOCAL , 0.40
	ELSEIF EXP:ARG:A경험 >= EXPLV:5
		TIMES LOCAL , 0.20
	ENDIF

	;PALAM:윤활을 본다
	IF PALAM:ARG:윤활 < PALAMLV:1
		TIMES LOCAL , 1.20
	ELSEIF PALAM:ARG:윤활 < PALAMLV:2
		TIMES LOCAL , 1.00
	ELSEIF PALAM:ARG:윤활 < PALAMLV:3
		TIMES LOCAL , 0.60
	ELSEIF PALAM:ARG:윤활 < PALAMLV:4
		TIMES LOCAL , 0.30
	ELSEIF PALAM:ARG:윤활 >= PALAMLV:4
		TIMES LOCAL , 0.20
	ENDIF
	SOURCE:ARG:고통 += LOCAL

ELSE

	DOWNBASE:ARG:체력 += 60
	DOWNBASE:ARG:기력 += 150

	SOURCE:ARG:쾌A += 150
	SOURCE:ARG:굴종 += 100
	SOURCE:ARG:불결 += 250
	SOURCE:ARG:일탈 += 250

	;-------------------------------------------------
	;특수소스처리
	;-------------------------------------------------
	;억압, 저항 소유에는, 억울소스 추가
	SIF TALENT:ARG:자기애 < 0 || TALENT:ARG:저항
		SOURCE:ARG:울굴 += 250

	;A에의 고통은 먼저 처리해 둔다
	;EXP:A경험을 본다
	LOCAL = 250
	LOCAL:1 = 250
	IF EXP:ARG:A경험 < EXPLV:1
		TIMES LOCAL , 3.00
		TIMES LOCAL:1 , 3.00
	ELSEIF EXP:ARG:A경험 < EXPLV:2
		TIMES LOCAL , 1.20
		TIMES LOCAL:1 , 2.00
	ELSEIF EXP:ARG:A경험 < EXPLV:3
		TIMES LOCAL , 0.80
		TIMES LOCAL:1 , 1.50
	ELSEIF EXP:ARG:A경험 < EXPLV:4
		TIMES LOCAL , 0.60
		TIMES LOCAL:1 , 1.20
	ELSEIF EXP:ARG:A경험 < EXPLV:5
		TIMES LOCAL , 0.40
	ELSEIF EXP:ARG:A경험 >= EXPLV:5
		TIMES LOCAL , 0.20
	ENDIF

	;PALAM:윤활을 본다
	IF PALAM:ARG:윤활 < PALAMLV:1
		TIMES LOCAL , 1.20
		TIMES LOCAL:1 , 2.00
	ELSEIF PALAM:ARG:윤활 < PALAMLV:2
		TIMES LOCAL , 1.00
		TIMES LOCAL:1 , 1.50
	ELSEIF PALAM:ARG:윤활 < PALAMLV:3
		TIMES LOCAL , 0.60
	ELSEIF PALAM:ARG:윤활 < PALAMLV:4
		TIMES LOCAL , 0.30
	ELSEIF PALAM:ARG:윤활 >= PALAMLV:4
		TIMES LOCAL , 0.20
	ENDIF
	SOURCE:ARG:고통 += LOCAL
	SOURCE:ARG:반감 += LOCAL:1
ENDIF

;-------------------------------------------------
;경험의 처리
;-------------------------------------------------
;A경험
EXP:ARG:A경험 += 1

