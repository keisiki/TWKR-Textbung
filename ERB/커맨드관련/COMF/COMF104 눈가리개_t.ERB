;-------------------------------------------------
;눈가리개
;SM계 커맨드, 레벨 1
;-------------------------------------------------
@COM104
;착탈의처리
TEQUIP:눈가리개 = !TEQUIP:눈가리개
IF TEQUIP:눈가리개 && 클리캡유지조건(TARGET)
	PRINTFORML 계속 붙일까?
	CALL ASK_YN
	IF !RESULT
		TCVAR:눈가리개 = 1
	ENDIF
ENDIF
;-------------------------------------------------
;COM별 FLAG의 설정
;-------------------------------------------------
;행위자
TCVAR:116 = PLAYER
;-------------------------------------------------
;소스 추가 처리
;-------------------------------------------------
;소비 체력, 기력
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 80

ELSE
	CALL 종속도상승(TARGET, 1)
	DOWNBASE:체력 += 0
	DOWNBASE:기력 += 80

	SOURCE:공포 = 700
	SOURCE:노출 = 100
	SOURCE:일탈 = 300
	SOURCE:반감 = 600

	;-------------------------------------------------
	;특수소스처리
	;-------------------------------------------------
	;긴박경험이 높으면 소비 감소
	IF EXP:긴박경험 < EXPLV:3
		TIMES DOWNBASE:기력 , 1.00
	ELSEIF EXP:긴박경험 < EXPLV:4
		TIMES DOWNBASE:기력 , 0.90
	ELSE
		TIMES DOWNBASE:기력 , 0.70
	ENDIF
ENDIF
;-------------------------------------------------
;경험의 처리
;-------------------------------------------------
IF FLAG:70 == 1
	IF HETEROSEX(TARGET, PLAYER)
		EXP:PLAYER:(50 + HETEROSEX(TARGET, PLAYER)) += 1
	ENDIF
ELSE
	EXP:긴박경험 += 2
	;동성애 레즈비언이라면 반환값 1 동성애자라면 반환값 2
	IF HETEROSEX(TARGET, PLAYER)
		EXP:(50 + HETEROSEX(TARGET, PLAYER)) += 1
		EXP:PLAYER:(50 + HETEROSEX(TARGET, PLAYER)) += 1
	ENDIF
ENDIF
RETURN 1
;-------------------------------------------------
;장착 계속의 처리
;-------------------------------------------------
@EQUIP_COM104(ARG)
PRINTL ＜눈가리개 장착중＞

;-------------------------------------------------
;소스 추가 처리
;-------------------------------------------------
IF FLAG:70 == 1

ELSE

	DOWNBASE:ARG:체력 += 0
	DOWNBASE:기력 += 40

	SOURCE:ARG:공포 += 350
	SOURCE:ARG:노출 += 50
	SOURCE:ARG:일탈 += 150
	SOURCE:ARG:반감 += 300

	;-------------------------------------------------
	;특수소스처리
	;-------------------------------------------------
	;긴박경험이 높으면 소비 감소
	LOCAL = 40
	IF EXP:ARG:긴박경험 < EXPLV:3
		TIMES LOCAL , 1.00
	ELSEIF EXP:ARG:긴박경험 < EXPLV:4
		TIMES LOCAL , 0.90
	ELSE
		TIMES LOCAL , 0.70
	ENDIF
	DOWNBASE:ARG:기력 += LOCAL

	;-------------------------------------------------
	;경험의 처리
	;-------------------------------------------------
	EXP:ARG:긴박경험 ++
ENDIF
RETURN 1

