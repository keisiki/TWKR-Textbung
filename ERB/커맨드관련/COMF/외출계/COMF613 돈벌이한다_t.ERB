@COM613
;돈 벌어 한다
LOCAL = RAND:100
LOCAL:1 = 90 + GET_SUCCESS_RATE() / 5
SIF LOCAL:1 > 99
	LOCAL:1 = 99
IF LOCAL <= 9
	;10%로 대성공
	TFLAG:193 = 1
ELSEIF LOCAL >= LOCAL:1
	;10~1%로 실패
	TFLAG:193 = -1
ELSE
	;나머지는 성공
	TFLAG:193 = 0
ENDIF

DOWNBASE:MASTER:체력 += 50
DOWNBASE:MASTER:기력 += 100

;보수 계산
TFLAG:200 = 0
IF DATE_PARTTIME(CFLAG:MASTER:현재위치) > 99
	TFLAG:200 = (ABL:MASTER:기교 + 10) * (RAND:20 + 40) * 2
ELSE
	TFLAG:200 = (ABL:MASTER:기교 + 10) * (RAND:20 + 30) * DATE_PARTTIME(CFLAG:MASTER:현재위치)
ENDIF
SIF TFLAG:200 > 0
	MONEY += TFLAG:200

IF TARGET > 0 && !CFLAG:수면
	;고정으로 획득하는 소스
	SOURCE:환락 = 100
	SOURCE:반감 = 50
	
	;ABL:순종을 본다
	IF ABL:순종 <= 1

	ELSEIF ABL:순종 <= 3
		SOURCE:환락 += 100 + (ABL:순종 * 20)
	ELSEIF ABL:순종 <= 5
		SOURCE:환락 += 300 + (ABL:순종 * 30)
	ELSEIF ABL:순종 <= 8
		SOURCE:환락 += 600 + (ABL:순종 * 50)
	ELSEIF ABL:순종 <= 11
		SOURCE:환락 += 1000 + (ABL:순종 * 70)
	ELSE
		SOURCE:환락 += 2000 + (ABL:순종 * 50)
	ENDIF
	
	;호감 도를 본다
	IF CFLAG:2 <= 500
		SOURCE:환락 += CFLAG:2
	ELSEIF CFLAG:2 <= 5000
		SOURCE:환락 += 500 + (CFLAG:2 - 500) / 3
	ELSE
		SOURCE:환락 += 2000 + (CFLAG:2 - 5000) / 5
	ENDIF
	SIF SOURCE:환락 < 0
		SOURCE:환락 = 0
	
	SOURCE:정복 = 300 + 100 * ABL:새드끼
	
ENDIF
TIME += 60

RETURN 1

