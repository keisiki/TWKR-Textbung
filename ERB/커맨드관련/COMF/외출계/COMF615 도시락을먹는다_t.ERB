SIF GLOBAL_COMABLE(615)
	RETURN RESULT
;상대가 없다
SIF !TARGET
	RETURN 0
;데이트중 이외
SIF !CHK_DATENOW(CFLAG:12)
	RETURN 0
;데이트 도중
SIF TFLAG:데이트도중
	RETURN 0
SIF !OBENTO(CFLAG:MASTER:현재위치)
	RETURN 0
;먹었던 바로 직후
SIF !TIME_PROGRESS(TCVAR:312)
	RETURN 0
SIF GETBIT(TFLAG:일일일회, 1)
	RETURN 0
;수면중
SIF CFLAG:수면
	RETURN 0
;시간정지중
SIF FLAG:70
	RETURN 0
RETURN 1

