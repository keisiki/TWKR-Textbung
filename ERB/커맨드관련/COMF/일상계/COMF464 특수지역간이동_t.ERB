;-------------------------------------------------
@SPECIAL_AREAMOVE()
#FUNCTION
SELECTCASE CFLAG:MASTER:현재위치
;하쿠레이 신사 모리야 분사
	CASE 21
	;모리야 캐릭터와 동행중
		SIF CFLAG:31:동행 || CFLAG:32:동행 || CFLAG:33:동행
			RETURNF 840
;마을 기타도리
	CASE 205
		RETURNF 820
;広場
	CASE 210
		IF MAIN_MAP != 2
			IF MAIN_MAP == 8
				RETURNF 803
			ELSE
				RETURNF 820
			ENDIF
		ENDIF
;무연총（魔法の森がメインマップ）
	CASE 506
		RETURNF 610
;無縁塚（外出先から）
	CASE 570
		;メインマップが三途の川～冥界のときは中有の道へ
		SIF MAIN_MAP == 6
			RETURNF 601
		;今後のことを考えて弾いておく 中有の道(外出)へ
		SIF MAIN_MAP != 5
			RETURNF 610
;간헐천지하센터
	CASE 712
		RETURNF 970
;間欠泉地下センター(外出先から)
	CASE 760
		;メインマップが地底のときは灼熱地獄跡へ
		SIF MAIN_MAP == 9
			RETURNF 928
		;今後のことを考えて弾いておく 灼熱地獄跡(外出)へ
		SIF MAIN_MAP != 7
			RETURNF 970
;산정에의 길
	CASE 732
		RETURNF 810
;삭도역
	CASE 803
		RETURNF 210
;絶景の丘
	CASE 820
		;メインマップが人里のときは人里北通りへ
		SIF MAIN_MAP == 2
			RETURNF 205
		;守矢神社・早苗私室(820)を弾き広場へ
		SIF MAIN_MAP != 8
			RETURNF 210
;작열지옥터
	CASE 928
		RETURNF 760
;灼熱地獄跡（外出先から）
	CASE 970
		;メインマップが妖怪の山（山麓）のときは間欠泉地下センターへ
		SIF MAIN_MAP == 7
			RETURNF 712
		;今後のことを考えて弾いておく 灼熱地獄跡(外出)へ
		SIF MAIN_MAP != 9
			RETURNF 760
ENDSELECT
RETURNF 0
;-------------------------------------------------
@SPECIAL_AREAMOVE_TIME()
#FUNCTION
SELECTCASE CFLAG:MASTER:현재위치
;하쿠레이 신사 모리야 분사
	CASE 21
		RETURNF 1
;마을 기타도리
	CASE 205
		RETURNF 15
;広場
	CASE 210
		RETURNF 15
;무연총
	CASE 506, 570
		SIF SHORTCUT(3)
			RETURNF 3
		RETURNF 5
;간헐천지하센터
	CASE 712, 760
		RETURNF 10
;산정에의 길
	CASE 732
		RETURNF 5
;삭도역
	CASE 803
		RETURNF 15
;絶景の丘
	CASE 820
		RETURNF 15
;작열지옥터
	CASE 928, 970
		RETURNF 5
ENDSELECT
