;
;	// 자택 맵의 표시를 신묘화 방식으로
;
IF RECOLOREDMAPS
	CALL DRAW_COLOREDMAP(ANIMATION_SEED)
ELSE	
	CALL DRAW_MAP
ENDIF	


PRINTL 
PRINTFORM 현재{(CFLAG:MASTER:현재위치)}:
PRINTFORMS NAME_FROM_PLACE(CFLAG:MASTER:현재위치)
PRINTL 에 있습니다

IF FLAG:짐작모드 == 1
	PRINTL
	PRINT 색의 설명：
	CALL COLORMESSAGE("체류중　", 0xFF64C8, 0)
	CALL COLORMESSAGE("업무중　", 0xFF6400, 0)
	CALL COLORMESSAGE("수면중　", 0x0078b4, 0)
	CALL COLORMESSAGE("모브　　", C_D_PINK, 0)
	CALL COLORMESSAGE("자동행동", C_YELLOW, 1)
ELSEIF FLAG:짐작모드 == 2
	PRINT 청결도：
	CALL COLORMESSAGE("　 중 　", 0xFFFF00, 0)
	CALL COLORMESSAGE("　 저 　", 0xFF00FF, 0)
