;일상계 커맨드, 레벨 1
;-------------------------------------------------
@COM355
FOR LOCAL, 1, GET_TARGETNUM() + 1
	SIF CHK_DATENOW(CFLAG:LOCAL:데이트중)
		CONTINUE
	CFLAG:(TARGET:LOCAL):동행 = 0
	SIF EX:(TARGET:LOCAL):처녀상실체크 == 1
		EX:(TARGET:LOCAL):처녀상실체크 = 0
NEXT
SIF !CHK_DATENOW(CFLAG:MASTER:데이트중)
	CFLAG:MASTER:동행 = 0
FLAG:70 = 1
SETBGCOLOR 1, 24, 60

RETURN 1

