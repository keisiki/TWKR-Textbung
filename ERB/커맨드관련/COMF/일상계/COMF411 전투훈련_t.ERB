;-------------------------------------------------
;전투훈련
;일상계 커맨드, 레벨 1
;-------------------------------------------------
@COM411

TFLAG:무드상승억제 = 1
;날씨를 참조
SELECTCASE TIME:5
	CASE 4,6,8,10,12,13
		;악천후
		TFLAG:194 = 1
	CASE 5,9
		;위험 있고 날씨
		TFLAG:194 = 2
	;그 이외
	CASEELSE
		;여름 철은 죽어라
		SIF DAY:2 == 2 && TIME:5 == 1 && TIME > 360 && TIME < 1020
			TFLAG:194 = 3
ENDSELECT
SIF !OUTROOF(CFLAG:MASTER:현재위치)
	TFLAG:194 = 0
SELECTCASE TFLAG:194
	CASE 0
		DOWNBASE:MASTER:체력 = 200
		DOWNBASE:MASTER:기력 = 200
		IF TARGET > 0 && !CFLAG:수면
			;고정으로 획득하는 소스
			SOURCE:환락 = 400
				MAXBASE:TARGET:체력 += RAND:10
			;신뢰
			TFLAG:98 += 3
			SIF ABL:MASTER:전투능력 > 2
			TFLAG:98 ++ 
			IF ABL:MASTER:전투능력 > ABL:전투능력
				EXP:전투경험 += 2
				CALL 경험치처리(TARGET,20)
				TFLAG:98 ++ 
			ENDIF
			IF ABL:MASTER:전투능력 < ABL:전투능력 - 2
				EXP:MASTER:전투경험 ++
				CALL 경험치처리(MASTER,10)
			ENDIF
			;ABL:친밀을 본다
			IF ABL:친밀 <= 5
				SOURCE:환락 += 500 + (ABL:친밀 * 60)
				TFLAG:98 ++ 
			ELSEIF ABL:친밀 <= 8
				SOURCE:환락 += 750 + (ABL:친밀 * 75)
			ELSEIF ABL:친밀 <= 11
				SOURCE:환락 += 1000 + (ABL:친밀 * 75)
			ELSE
				SOURCE:환락 += 2000 + (ABL:친밀 * 30)
			ENDIF
			;호감 도를 본다
			IF CFLAG:2 <= 500
				SOURCE:환락 += CFLAG:2
			ELSEIF CFLAG:2 <= 5000
				SOURCE:환락 += 500 + (CFLAG:2 - 500) / 3
			ELSE
				SOURCE:환락 += 2000 + (CFLAG:2 - 5000) / 5
			ENDIF
			SIF SOURCE:환락 < 0
				SOURCE:환락 = 0
			EXP:MASTER:전투경험 ++
			EXP:전투경험 ++
			CALL 경험치처리(MASTER,10)
			CALL 경험치처리(TARGET,10)
		ENDIF
	CASE 1
	;악천후
	DOWNBASE:MASTER:체력 = 300
	DOWNBASE:MASTER:기력 = 300
	IF TARGET > 0 && !CFLAG:수면
		;고정으로 획득하는 소스
		SOURCE:환락 = 450
			MAXBASE:TARGET:체력  += RAND:15
			MAXBASE:TARGET:기력  += RAND:10
		;신뢰
		TFLAG:98 += 3
		SIF ABL:MASTER:전투능력 > 2
		TFLAG:98 ++ 
		IF ABL:MASTER:전투능력 > ABL:전투능력
			EXP:전투경험 += 2
			CALL 경험치처리(TARGET,20)
			TFLAG:98 ++ 
		ENDIF
		IF ABL:MASTER:전투능력 < ABL:전투능력 - 2
			EXP:MASTER:전투경험 ++
			CALL 경험치처리(MASTER,10)
		ENDIF
		;ABL:친밀을 본다
		IF ABL:친밀 <= 5
			SOURCE:환락 += 520 + (ABL:친밀 * 60)
			TFLAG:98 ++ 
		ELSEIF ABL:친밀 <= 8
			SOURCE:환락 += 750 + (ABL:친밀 * 75)
		ELSEIF ABL:친밀 <= 11
			SOURCE:환락 += 1100 + (ABL:친밀 * 75)
		ELSE
			SOURCE:환락 += 2150 + (ABL:친밀 * 30)
		ENDIF

		;호감 도를 본다
		IF CFLAG:2 <= 500
			SOURCE:환락 += CFLAG:2
		ELSEIF CFLAG:2 <= 5000
			SOURCE:환락 += 500 + (CFLAG:2 - 500) / 3
		ELSE
			SOURCE:환락 += 2000 + (CFLAG:2 - 5000) / 5
		ENDIF
		SIF SOURCE:환락 < 0
			SOURCE:환락 = 0
		EXP:MASTER:전투경험 += 2
		EXP:전투경험 += 2
		CALL 경험치처리(MASTER,20)
		CALL 경험치처리(TARGET,20)
	ENDIF
	CASE 2,3
	;위험 있고 날씨
		DOWNBASE:MASTER:체력 = 600
		DOWNBASE:MASTER:기력 = 600
		IF TARGET > 0 && !CFLAG:수면
			;고정으로 획득하는 소스
			SOURCE:환락 = 500
				MAXBASE:TARGET:체력 += RAND:30
				MAXBASE:TARGET:기력 += RAND:30
			;신뢰
			TFLAG:98 += 3
			SIF ABL:MASTER:전투능력 > 2
			TFLAG:98 ++ 
			IF ABL:MASTER:전투능력 > ABL:전투능력
				EXP:전투경험 += 2
				CALL 경험치처리(TARGET,20)
				TFLAG:98 ++ 
			ENDIF
			IF ABL:MASTER:전투능력 < ABL:전투능력 - 2
				EXP:MASTER:전투경험 ++
				CALL 경험치처리(MASTER,10)
			ENDIF
			;ABL:친밀을 본다
			IF ABL:친밀 <= 5
				TFLAG:98 ++ 
				SOURCE:환락 += 550 + (ABL:친밀 * 60)
			ELSEIF ABL:친밀 <= 8
				SOURCE:환락 += 800 + (ABL:친밀 * 75)
			ELSEIF ABL:친밀 <= 11
				SOURCE:환락 += 1200 + (ABL:친밀 * 75)
			ELSE
				SOURCE:환락 += 2300 + (ABL:친밀 * 30)
			ENDIF
			;호감도를 본다
			IF CFLAG:2 <= 500
				SOURCE:환락 += CFLAG:2
			ELSEIF CFLAG:2 <= 5000
				SOURCE:환락 += 500 + (CFLAG:2 - 500) / 3
			ELSE
				SOURCE:환락 += 2000 + (CFLAG:2 - 5000) / 5
			ENDIF
			SIF SOURCE:환락 < 0
				SOURCE:환락 = 0
			EXP:MASTER:전투경험 += 3
			EXP:전투경험 += 3
			CALL 경험치처리(MASTER,30)
			CALL 경험치처리(TARGET,30)
		ENDIF
ENDSELECT
TIME += 60
	SIF CFLAG:동행
		CFLAG:동행 += 60
EXP:MASTER:전투경험 ++
CALL 경험치처리(MASTER,10)
TCVAR:MASTER:공복시각 -= 15
IF TARGET
	TCVAR:TARGET:공복시각 -= 15
	CALL ADD_TIRED(TARGET, POWER(TFLAG:194 + 1, 3) * 100)
ENDIF
IF ITEM:101 && !RAND:2
	EXP:MASTER:전투경험 ++
	CALL 경험치처리(MASTER,10)
ENDIF
IF ITEM:스포츠드링크
	IF TFLAG:194 == 3
		DOWNBASE:MASTER:체력 -= 200
		DOWNBASE:MASTER:기력 -= 300
	ELSE
		DOWNBASE:MASTER:체력 -= 50
		DOWNBASE:MASTER:기력 -= 50
	ENDIF
	SIF TARGET
		SOURCE:환락 += 300
	TFLAG:193 = 1
ENDIF
RETURN 1

;-------------------------------------------------
;실행 판정
;-------------------------------------------------
@COM_ABLE411
;전투훈련 실행 판정
SIF !TFLAG:100
	RETURN 0
;일괄관리
SIF GLOBAL_COMABLE(411)
	RETURN RESULT
;정지 중에는 불가
SIF FLAG:70 == 1
	RETURN 0
;업무중
SIF CFLAG:행동 == 5
	RETURN 0
SIF !전투훈련가능(CFLAG:MASTER:현재위치)
	RETURN 0
;기력 0
SIF BASE:MASTER:기력 <= 0
	RETURN 0
SIF CFLAG:우후후 == 2
	RETURN 0
RETURN 1

