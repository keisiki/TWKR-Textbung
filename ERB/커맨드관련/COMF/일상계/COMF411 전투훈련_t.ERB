;-------------------------------------------------
;전투훈련
;일상계 커맨드, 레벨 1
;-------------------------------------------------
@COM411
#DIM DYNAMIC 타겟피난처
TFLAG:무드상승억제 = 1
;날씨를 참조
SELECTCASE TIME:5
	CASE 4,6,8,10,12,13
		;악천후
		IF WIND_VELOCITY >= 1
			;(天候パッチ)強風時はヤバい天気
			TFLAG:194 = 2
		ELSE
			;悪天候
			TFLAG:194 = 1
		ENDIF
	CASE 5,9,14,15
		;ヤバい天気
		TFLAG:194 = 2
	;그 이외
	CASEELSE
		;(天候パッチ)強風時は悪天候
		SIF WIND_VELOCITY == 1
			TFLAG:194 = 1
		;(天候パッチ)暴風時はヤバい天気
		SIF WIND_VELOCITY >= 2
			TFLAG:194 = 2
		;여름 철은 죽어라
		SIF DAY:2 == 2 && TIME:5 == 1 && TIME > 360 && TIME < 1020
			TFLAG:194 = 3
ENDSELECT
IF FLAG:70
	타겟피난처 = TARGET
	TARGET = 0
ENDIF
SIF !OUTROOF(CFLAG:MASTER:현재위치)
	TFLAG:194 = 0
SELECTCASE TFLAG:194
	CASE 0
		DOWNBASE:MASTER:체력 = 200
		DOWNBASE:MASTER:기력 = 200
		IF TARGET > 0 && !CFLAG:수면 && !FLAG:70
			;고정으로 획득하는 소스
			SOURCE:환락 = 400
			MAXBASE:TARGET:체력 += RAND:10
			DOWNBASE:TARGET:체력 = 200
			DOWNBASE:TARGET:기력 = 200
			;신뢰
			TFLAG:98 += 3
			SIF ABL:MASTER:전투능력 > 2
			TFLAG:98 ++ 
			IF ABL:MASTER:전투능력 > ABL:전투능력
				EXP:전투경험 += 2
				CALL 경험치처리(TARGET,80)
				TFLAG:98 ++ 
			ENDIF
			IF ABL:MASTER:전투능력 < ABL:전투능력 - 2
				EXP:MASTER:전투경험 ++
				CALL 경험치처리(MASTER,40)
			ENDIF
			;ABL:친밀을 본다
			IF ABL:친밀 <= 5
				SOURCE:환락 += 500 + (ABL:친밀 * 60)
				TFLAG:98 ++ 
			ELSEIF ABL:친밀 <= 8
				SOURCE:환락 += 750 + (ABL:친밀 * 75)
			ELSEIF ABL:친밀 <= 11
				SOURCE:환락 += 1000 + (ABL:친밀 * 75)
			ELSE
				SOURCE:환락 += 2000 + (ABL:친밀 * 30)
			ENDIF
			;호감 도를 본다
			IF CFLAG:2 <= 500
				SOURCE:환락 += CFLAG:2
			ELSEIF CFLAG:2 <= 5000
				SOURCE:환락 += 500 + (CFLAG:2 - 500) / 3
			ELSE
				SOURCE:환락 += 2000 + (CFLAG:2 - 5000) / 5
			ENDIF
			SIF SOURCE:환락 < 0
				SOURCE:환락 = 0
			EXP:MASTER:전투경험 ++
			EXP:전투경험 ++
			CALL 경험치처리(MASTER,40)
			CALL 경험치처리(TARGET,40)
		ENDIF
	CASE 1
	;악천후
	DOWNBASE:MASTER:체력 = 300
	DOWNBASE:MASTER:기력 = 300
	IF TARGET > 0 && !CFLAG:수면 && !FLAG:70
		;고정으로 획득하는 소스
		SOURCE:환락 = 450
		MAXBASE:TARGET:체력  += RAND:15
		MAXBASE:TARGET:기력  += RAND:10
		DOWNBASE:TARGET:체력 = 300
		DOWNBASE:TARGET:기력 = 300
		;신뢰
		TFLAG:98 += 3
		SIF ABL:MASTER:전투능력 > 2
		TFLAG:98 ++ 
		IF ABL:MASTER:전투능력 > ABL:전투능력
			EXP:전투경험 += 2
			CALL 경험치처리(TARGET,80)
			TFLAG:98 ++ 
		ENDIF
		IF ABL:MASTER:전투능력 < ABL:전투능력 - 2
			EXP:MASTER:전투경험 ++
			CALL 경험치처리(MASTER,40)
		ENDIF
		;ABL:친밀을 본다
		IF ABL:친밀 <= 5
			SOURCE:환락 += 520 + (ABL:친밀 * 60)
			TFLAG:98 ++ 
		ELSEIF ABL:친밀 <= 8
			SOURCE:환락 += 750 + (ABL:친밀 * 75)
		ELSEIF ABL:친밀 <= 11
			SOURCE:환락 += 1100 + (ABL:친밀 * 75)
		ELSE
			SOURCE:환락 += 2150 + (ABL:친밀 * 30)
		ENDIF

		;호감 도를 본다
		IF CFLAG:2 <= 500
			SOURCE:환락 += CFLAG:2
		ELSEIF CFLAG:2 <= 5000
			SOURCE:환락 += 500 + (CFLAG:2 - 500) / 3
		ELSE
			SOURCE:환락 += 2000 + (CFLAG:2 - 5000) / 5
		ENDIF
		SIF SOURCE:환락 < 0
			SOURCE:환락 = 0
		EXP:MASTER:전투경험 += 2
		EXP:전투경험 += 2
		CALL 경험치처리(MASTER,80)
		CALL 경험치처리(TARGET,80)
	ENDIF
	CASE 2,3
	;위험 있고 날씨
		DOWNBASE:MASTER:체력 = 600
		DOWNBASE:MASTER:기력 = 600
		IF TARGET > 0 && !CFLAG:수면 && !FLAG:70
			;고정으로 획득하는 소스
			SOURCE:환락 = 500
			MAXBASE:TARGET:체력 += RAND:30
			MAXBASE:TARGET:기력 += RAND:30
			DOWNBASE:TARGET:체력 = 600
			DOWNBASE:TARGET:기력 = 600
			;신뢰
			TFLAG:98 += 3
			SIF ABL:MASTER:전투능력 > 2
			TFLAG:98 ++ 
			IF ABL:MASTER:전투능력 > ABL:전투능력
				EXP:전투경험 += 2
				CALL 경험치처리(TARGET,40)
				TFLAG:98 ++ 
			ENDIF
			IF ABL:MASTER:전투능력 < ABL:전투능력 - 2
				EXP:MASTER:전투경험 ++
				CALL 경험치처리(MASTER,20)
			ENDIF
			;ABL:친밀을 본다
			IF ABL:친밀 <= 5
				TFLAG:98 ++ 
				SOURCE:환락 += 550 + (ABL:친밀 * 60)
			ELSEIF ABL:친밀 <= 8
				SOURCE:환락 += 800 + (ABL:친밀 * 75)
			ELSEIF ABL:친밀 <= 11
				SOURCE:환락 += 1200 + (ABL:친밀 * 75)
			ELSE
				SOURCE:환락 += 2300 + (ABL:친밀 * 30)
			ENDIF
			;호감도를 본다
			IF CFLAG:2 <= 500
				SOURCE:환락 += CFLAG:2
			ELSEIF CFLAG:2 <= 5000
				SOURCE:환락 += 500 + (CFLAG:2 - 500) / 3
			ELSE
				SOURCE:환락 += 2000 + (CFLAG:2 - 5000) / 5
			ENDIF
			SIF SOURCE:환락 < 0
				SOURCE:환락 = 0
			EXP:MASTER:전투경험 += 3
			EXP:전투경험 += 3
			CALL 경험치처리(MASTER,120)
			CALL 경험치처리(TARGET,120)
		ENDIF
ENDSELECT
IF !FLAG:70
	TIME += 60
ELSE
	DOWNBASE:MASTER:체력 = 0
	DOWNBASE:MASTER:기력 /= 10
	BASE:MASTER:TSP -= 300
ENDIF
SIF CFLAG:동행 && !FLAG:70
	CFLAG:동행 += 60
EXP:MASTER:전투경험 ++
CALL 경험치처리(MASTER,40)
IF !FLAG:70
	TCVAR:MASTER:공복시각 -= 15
	IF TARGET
		TCVAR:TARGET:공복시각 -= 15
		CALL ADD_TIRED(TARGET, POWER(TFLAG:194 + 1, 3) * 100)
	ENDIF
ENDIF
IF ITEM:101 && !RAND:2
	EXP:MASTER:전투경험 ++
	CALL 경험치처리(MASTER,50)
ENDIF
IF RAND:10 == 0
	;부상
	SELECTCASE RAND:5
		CASE 0
			CALL T_부상(MASTER,"힘",10)
		CASE 1
			CALL T_부상(MASTER,"지성",10)
		CASE 2
			CALL T_부상(MASTER,"인내",10)
		CASE 3
			CALL T_부상(MASTER,"속도",10)
		CASE 4
			CALL T_부상(MASTER,"운",10)
	ENDSELECT
	TFLAG:마스터부상 = 1
	DOWNBASE:MASTER:체력 += 300
ENDIF
IF TARGET&&RAND:15 == 0
	;부상
	SELECTCASE RAND:5
		CASE 0
			IF CHECK_부상(TARGET,"힘") <= 30
				CALL T_부상(TARGET,"힘",10)
				TFLAG:타겟부상 = 1
			ENDIF
		CASE 1
			IF CHECK_부상(TARGET,"지성") <= 30
				CALL T_부상(TARGET,"지성",10)
				TFLAG:타겟부상 = 1
			ENDIF
		CASE 2
			IF CHECK_부상(TARGET,"인내") <= 30
				CALL T_부상(TARGET,"인내",10)
				TFLAG:타겟부상 = 1
			ENDIF
		CASE 3
			IF CHECK_부상(TARGET,"속도") <= 30
				CALL T_부상(TARGET,"속도",10)
				TFLAG:타겟부상 = 1
			ENDIF
		CASE 4
			IF CHECK_부상(TARGET,"운") <= 30
				CALL T_부상(TARGET,"운",10)
				TFLAG:타겟부상 = 1
			ENDIF
	ENDSELECT
	DOWNBASE:TARGET:체력 += 100
ENDIF
IF ITEM:스포츠드링크 && !FLAG:70
	IF TFLAG:194 == 3
		DOWNBASE:MASTER:체력 -= 200
		DOWNBASE:MASTER:기력 -= 300
	ELSE
		DOWNBASE:MASTER:체력 -= 50
		DOWNBASE:MASTER:기력 -= 50
	ENDIF
	SIF TARGET
		SOURCE:환락 += 300
	TFLAG:193 = 1
ENDIF
IF 선인화의길 >= 10 && 선인화의길 < 20
	IF 명중판정(10)
		선인화의길++
		IF 선인화의길 >= 20
			PRINTFORML 지금껏 섭취한 선도의 힘과 훈련의 성과로, 무언가 몸에 변화가 생길것만 같은 기분이 든다!
			PRINTFORML 지금이라면 [선인], 운이 좋으면 [천인]이 될 수 있을 것만 같은 기분이다
			변화의술고정 = 0
		ENDIF
	ENDIF
ENDIF
IF FLAG:70
	TARGET = 타겟피난처
ENDIF
RETURN 1

;-------------------------------------------------
;실행 판정
;-------------------------------------------------
@COM_ABLE411
;전투훈련 실행 판정
SIF !TFLAG:100
	RETURN 0
;일괄관리
SIF GLOBAL_COMABLE(411)
	RETURN RESULT
;정지 중에는 불가
SIF BASE:MASTER:TSP < 300 && FLAG:70
	RETURN 0
;업무중
SIF CFLAG:행동 == 5
	RETURN 0
SIF !전투훈련가능(CFLAG:MASTER:현재위치)
	RETURN 0
;기력 0
SIF BASE:MASTER:기력 <= 0
	RETURN 0
SIF CFLAG:우후후 == 2
	RETURN 0
RETURN 1

