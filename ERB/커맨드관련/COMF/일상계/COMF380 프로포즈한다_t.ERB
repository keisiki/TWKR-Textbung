;-------------------------------------------------
;프로포즈한다
;일상계 커맨드, 레벨 2
;-------------------------------------------------
@COM380
LOCAL = 0
IF FLAG:생활능력무
	DRAWLINE
	PRINTFORMW %CALLNAME:MASTER%에겐 그런 배짱은 없다
	RETURN -1
ENDIF
;고백 대상 확인
PRINTFORM %CALLNAME:TARGET%에게 프로포즈합니다.
IF FLAG:스침연인수 == 100 && TALENT:스침
	PRINTFORML 　- 포말의 사랑의 상대는 100명까지밖에 기억할 수 없습니다
	PRINTFORML 　　【아내】가 되었을 경우, 지금까지 함께 한 누군가의 이름을 잊어버립니다 -
ELSEIF FLAG:추가연인수 > 0
	PRINTFORML 　- 【아내】는 {1 + FLAG:추가연인수}명까지밖에 취득할 수 없습니다 -
ELSE
;나올 수 없는 경우의 수
	PRINTFORML 　- 【아내】의 수에 제한은 없습니다 -
ENDIF
PRINTFORML 또한, 아내는 eraTWKR 에만 있는 기능이기에 연인 관련 처리 등에서 오류가 발생할 수 있습니다.
PRINTW 괜찮겠습니까?
CALL ASK_YN("그만둔다","프로포즈한다")
IF !RESULT
	RETURN -1
ENDIF

;파라미터에 의해 성공 기초치 판정

SELECTCASE TFLAG:192
	;통상
	CASE 0
		IF  CFLAG:합의판정 > 600 + TALENT:일선을넘지않음 * 200
			TFLAG:193 = 1
		ELSE
			TFLAG:193 = 0
		ENDIF
	;강제 성공 or대성공
	CASE 1
		TFLAG:193 = 1
	;강제 실패
	CASE -1
		TFLAG:193 = 0
	;커맨드 종료
	CASE -2
		TFLAG:193 = 0
		RETURN 0
ENDSELECT

IF TFLAG:193 == 1
	SOURCE:환락 = 2000
	SOURCE:수동 = 500 + 100 * ABL:순종
	SOURCE:정복 = 500 + 100 * ABL:새드끼
ENDIF
RETURN 1

;-------------------------------------------------
;실행 판정
;-------------------------------------------------
@COM_ABLE380
;정지 중에는 불가
SIF FLAG:70
	RETURN 0
;망상중은 고백할 수 없다
SIF TFLAG:망상중 == 1
	RETURN 0
;고백하는 실행 판정
SIF !TFLAG:100
	RETURN 0
;일괄관리
SIF GLOBAL_COMABLE(380)
	RETURN RESULT
;둘이서 없으면 안 돼
SIF GET_TARGETNUM() > 1
	RETURN 0
;친해져 강도 2
SIF TCVAR:MASTER:친해져 < 2
	RETURN 0
; 연인이 아닐 경우
SIF !TALENT:연인
	RETURN 0
;;이미 아내일 경우
SIF GETBIT(TALENT:연인,1)
	RETURN 0	
;;약혼반지가 없을경우
SIF !ITEM:약혼반지
	RETURN 0
SIF CFLAG:수면
	RETURN 0
;동침중
SIF CFLAG:동침중
	RETURN 0
;기력 0
SIF BASE:MASTER:기력 <= 0
	RETURN 0
RETURN 1
