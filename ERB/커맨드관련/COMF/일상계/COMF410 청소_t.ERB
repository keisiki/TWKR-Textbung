TIME += (500 - ARG * 100)
DOWNBASE:MASTER:체력 = (1500 - ARG * 600)
DOWNBASE:MASTER:기력 = (1500 - ARG * 300)
BASE:MASTER:TSP = 0
SIF ARG
	EXP:MASTER:청소경험 += (1 + RAND: (ARG * 3))
SIF !ARG
	EXP:MASTER:청소경험 += (1 + RAND: (2))
EXP:MASTER:이상청소경험 += RAND:5
