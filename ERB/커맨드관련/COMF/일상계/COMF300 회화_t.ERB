;실행 판정
;-------------------------------------------------
@COM_ABLE300
;회화 실행 판정
SIF !TFLAG:100
	RETURN 0
;일괄관리
SIF GLOBAL_COMABLE(300)
	RETURN RESULT
;수면중
SIF CFLAG:수면 && !CFLAG:동침중
	RETURN 0
;기력 0
SIF BASE:MASTER:기력 <= 0
	RETURN 0
;정지 중에는 불가
SIF FLAG:70
	RETURN 0
RETURN 1

