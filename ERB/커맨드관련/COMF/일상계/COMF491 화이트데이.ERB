@COM_ABLE491
;チョコレートを贈る実行判定
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(491)
	RETURN RESULT
;気力0
SIF BASE:MASTER:기력 <= 0
	RETURN 0
;停止中は不可
SIF FLAG:70 == 1
	RETURN 0
;添い寝中
SIF CFLAG:동침중
	RETURN 0
;イタズラ中
SIF CFLAG:MASTER:장난
	RETURN 0
SIF CFLAG:우후후 == 2
	RETURN 0
SIF !PREPARE_WD()
	RETURN 0
IF FESTIVAL() != "화이트 데이"
	SIF !KITCHEN(CFLAG:MASTER:현재위치)
		RETURN 0
ENDIF
RETURN 1

@PREPARE_WD()
#FUNCTION
SIF DAY:2 != 1
	RETURNF 0
SIF DAY:3 > 14
	RETURNF 0
RETURNF 1

;デバッグ用
@WD_DEBUG
ITEM:감미재 = 99
ITEM:딸기 = 99
ITEM:벌꿀 = 99
DAY:2 = 1
DAY:3 = 13
FOR LOCAL,1,CHARANUM
	CFLAG:LOCAL:발렌타인 = 1 + RAND:4
NEXT