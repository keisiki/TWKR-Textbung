	TCVAR:CHARA:가능한한움직이지않는다 = 1
NEXT

;料理生成
SIF TFLAG:193 >= 0
	CALL 요리생성("자른수박")
	
;結果記録
IF TFLAG:193 > 0
	SUIKA_GREAT ++
ELSEIF TFLAG:193 == 0
	SUIKA_SUCCESS ++
ENDIF

