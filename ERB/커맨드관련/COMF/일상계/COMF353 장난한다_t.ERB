;-------------------------------------------------
;장난한다
;일상계 커맨드, 레벨 1
;-------------------------------------------------
@COM353
IF FLAG:생활능력무
	DRAWLINE
	PRINTFORMW %CALLNAME:MASTER%에게 그런 담력은 없다
	RETURN -1
ENDIF
;복수를 상정하고 있는 것 같지만 ABLE의 (분)편으로 많은 사람을 연주하고 있다
FOR LOCAL, 1, GET_TARGETNUM() + 1
	CALL SET_PRANK(1, TARGET:LOCAL, 1)
NEXT
SIF CFLAG:TARGET:수면간 < 1
	CFLAG:TARGET:수면간 = 1
RETURN 1

;-------------------------------------------------
;실행 판정
;-------------------------------------------------
@COM_ABLE353
;장난 실행 판정
SIF !TFLAG:100
	RETURN 0
;일괄관리
SIF GLOBAL_COMABLE(353)
	RETURN RESULT
;수면중만
SIF CFLAG:수면 == 0
	RETURN 0
;타겟의 방에서만
SIF CFLAG:MASTER:현재위치 != CFLAG:311 && !TCVAR:수면제강도
	RETURN 0

;시간정지중 불가
SIF FLAG:70
	RETURN 0
;벌써 장난 모드
SIF CFLAG:장난
	RETURN 0
;동침중은 할 수 없다
SIF CFLAG:동침중
	RETURN 0
;그 밖에 누군가 있다
SIF GET_TARGETNUM() > 1
	RETURN 0
;기력 0
SIF BASE:MASTER:기력 <= 0
	RETURN 0
;약해지고 있으면(자) 없음
SIF CFLAG:쇠약 > 0
	RETURN 0
RETURN 1

