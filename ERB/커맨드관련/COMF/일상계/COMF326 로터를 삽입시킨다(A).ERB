;KR판 오라자날 또는 구잔재 COMF326
@COM326
;-------------------------------------------------
;COM별 FLAG의 설정
;-------------------------------------------------
;행위자
TCVAR:116 = PLAYER

;파과 억제
TFLAG:2 = 1
TFLAG:이성깎기 = 1
;-------------------------------------------------
;소스 추가 처리
;-------------------------------------------------
;소비 체력, 기력
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 40
	SOURCE:쾌A = 40
	IF ABL:PLAYER:손가락 >= 4
		SOURCE:쾌A += 25
	ELSE
		SOURCE:쾌A += ABL:PLAYER:손가락 * 5
	ENDIF
ELSE
	IF FLAG:생활능력무 && !CFLAG:우후후
		DRAWLINE
		PRINTFORMW %CALLNAME:MASTER%에게 그런 담력은 없다
		RETURN -1
	ENDIF
	DOWNBASE:체력 += 10
	DOWNBASE:기력 += 40


	SOURCE:쾌A = 60
	SOURCE:사랑 = 150
	SOURCE:고통 = 30
	SOURCE:굴종 = 250
	SOURCE:욕정 = 200
	SOURCE:노출 = 360
	SOURCE:환락 = 50
	SOURCE:일탈 = 350
	SOURCE:반감 = 300
	SOURCE:수동 = 150 + 30 * ABL:순종
	
	SIF TALENT:걸레 
		SOURCE:반감/=30
	;신뢰
	TFLAG:98 = -12

	;-------------------------------------------------
	;특수소스처리
	;-------------------------------------------------
	;억압, 저항 소유에는, 억울소스 추가
	IF TALENT:자기애 < 0 || TALENT:저항
		SOURCE:울굴 += 40
	ENDIF
ENDIF
;A에의 고통
CALL PAIN_CHECK_A(TARGET)
;-------------------------------------------------
;더러움의 처리
;-------------------------------------------------
;노예의 질내⇔조교자의 손가락의 더러움이 이동
STAIN:4 |= STAIN:PLAYER:1
STAIN:PLAYER:1 |= STAIN:4

;;;로터 사용

CFLAG:로터A삽입=240
;-------------------------------------------------
;경험의 처리
;-------------------------------------------------
EXP:PLAYER:도구사용경험 ++
IF FLAG:70 == 1
	IF HETEROSEX(TARGET, PLAYER)
		EXP:PLAYER:(50 + HETEROSEX(TARGET, PLAYER)) += 4
	ENDIF
ELSE
	IF HETEROSEX(TARGET, PLAYER)
		EXP:(50 + HETEROSEX(TARGET, PLAYER)) += 4
		EXP:PLAYER:(50 + HETEROSEX(TARGET, PLAYER)) += 4
	ENDIF
	TIME += 10
ENDIF
RETURN 1

;-------------------------------------------------
;실행 판정
;-------------------------------------------------
@COM_ABLE326
;손가락 삽입실행 판정
SIF !TFLAG:100
	RETURN 0
;일괄관리
SIF GLOBAL_COMABLE(326)
	RETURN RESULT
SIF CFLAG:로터A삽입
	RETURN 0
;아이템 을 가지고 있는인가, 아이템 없음 설정이 아니면 안 돼
SIF ITEM:0 == 0 && NOITEM == 0
	RETURN 0
;시간정지중은 스킵
IF !FLAG:70
	;친해져 강도 2
	SIF (TCVAR:MASTER:친해져 < 2) && CFLAG:수면 == 0
		RETURN 0
	;착의
	SIF TEQUIP:0 & 4
		RETURN 0
	;수면중
	SIF CFLAG:수면 && CFLAG:장난 < 2
		RETURN 0
	;업무중
	SIF CFLAG:행동 == 5
		RETURN 0
	;데이트중
	SIF CHK_DATENOW(CFLAG:데이트중) && CFLAG:현재위치 != OMANEKIBEYA()
		RETURN 0
	;동침중
	SIF CFLAG:동침중
		RETURN 0
	SIF TEQUIP:50 >= 0
		RETURN 0
ENDIF
;기력 0
SIF BASE:MASTER:기력 <= 0
	RETURN 0
;팔사용중
SIF TFLAG:61 && MASTER_POSE(SET_C, 3) != TARGET && MASTER_POSE(SET_P, SET_YUBI) != TARGET && MASTER_POSE(SET_V, SET_YUBI) != TARGET && MASTER_POSE(SET_A, SET_YUBI) != TARGET
	RETURN 0
SIF GETBIT (TCVAR:26, 5)
	RETURN 0
RETURN 1

