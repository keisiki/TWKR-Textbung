;실행 판정
;-------------------------------------------------
@COM_ABLE302
;스킨십 실행 판정
SIF !TFLAG:100
	RETURN 0
;일괄관리
SIF GLOBAL_COMABLE(302)
	RETURN RESULT
;1시간 간격
SIF TIME_PROGRESS(TCVAR:303) < 60 && !CHK_DATENOW(CFLAG:데이트중)
	RETURN 0
;수면중
SIF CFLAG:수면
	RETURN 0
;동침중
SIF CFLAG:동침중
	RETURN 0
;업무중
SIF CFLAG:행동 == 5
	RETURN 0
;기력 0
SIF BASE:MASTER:기력 <= 0
	RETURN 0
;정지 중에는 불가
SIF FLAG:70
	RETURN 0
RETURN 1

