@COM_ABLE303
;사과하는 실행 판정
SIF !TFLAG:100
	RETURN 0
;일괄관리
SIF GLOBAL_COMABLE(303)
	RETURN RESULT
;분노중이 아니다
SIF !CFLAG:빡침 && !(ITEM:과자상자 && MARK:TARGET:반발각인 == 1)
	RETURN 0
;수면중
SIF CFLAG:수면
	RETURN 0
;기력 0
SIF BASE:MASTER:기력 <= 0
	RETURN 0
;정지 중에는 불가
SIF FLAG:70
	RETURN 0
RETURN 1

