;-------------------------------------------------
;구리 애무
;일상계 커맨드 레벨 3
;-------------------------------------------------
@COM315

;-------------------------------------------------
;COM별 FLAG의 설정
;-------------------------------------------------
;행위자
TCVAR:116 = PLAYER
TFLAG:이성깎기 = 1
;-------------------------------------------------
;소스 추가 처리
;-------------------------------------------------
;소비 체력, 기력
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 20
	SOURCE:쾌C = 80
	IF ABL:PLAYER:손가락 >= 4
		SOURCE:쾌C += 50
	ELSE
		SOURCE:쾌C += ABL:PLAYER:손가락 * 10
	ENDIF
	;손을 돌진할 수 없는 의상
	IF TEQUIP:0 & 16
		TIMES SOURCE:쾌C , 0.80
		TIMES SOURCE:욕정 , 0.80
		TIMES SOURCE:노출 , 0.80
	;치마이외의무엇인가를 신고 있다
	ELSEIF TEQUIP > 1
		TIMES SOURCE:쾌C , 0.90
		TIMES SOURCE:욕정 , 0.90
		TIMES SOURCE:노출 , 0.90
	ENDIF
ELSE
	IF FLAG:생활능력무 && !CFLAG:우후후
		DRAWLINE
		PRINTFORMW %CALLNAME:MASTER%에게 그런 담력은 없다
		RETURN -1
	ENDIF
	;口上による強制失敗
	IF TFLAG:192 == -1
		RETURN -1
	ENDIF
	DOWNBASE:체력 += 5
	DOWNBASE:기력 += 50

	SOURCE:환락 = 100
	SOURCE:사랑 = 150
	SOURCE:욕정 = 150
	SOURCE:노출 = 250
	SOURCE:반감 = 600
	SOURCE:쾌C = 80
	SOURCE:수동 = 145 + 270 * ABL:순종
	IF ABL:PLAYER:손가락 >= 4
		SOURCE:쾌C += 50
	ELSE
		SOURCE:쾌C += ABL:PLAYER:손가락 * 10
	ENDIF
	;손을 돌진할 수 없는 의상
	IF TEQUIP:0 & 16
		TIMES SOURCE:쾌C , 0.80
		TIMES SOURCE:욕정 , 0.80
		TIMES SOURCE:노출 , 0.80
	;치마이외의무엇인가를 신고 있다
	ELSEIF TEQUIP > 1
		TIMES SOURCE:쾌C , 0.90
		TIMES SOURCE:욕정 , 0.90
		TIMES SOURCE:노출 , 0.90
	ENDIF
	IF HITOKE(1)
		TIMES SOURCE:노출 , 2.00
		TIMES SOURCE:반감 , 2.00
	ENDIF
	;신뢰
	TFLAG:98 = -5

	;-------------------------------------------------
	;특수소스처리
	;-------------------------------------------------
	;억압, 저항 소유에는, 억울소스 추가
	SIF TALENT:자기애 < 0 || TALENT:저항
		SOURCE:울굴 += 20
ENDIF
;-------------------------------------------------
;더러움의 처리
;-------------------------------------------------
;노예의 V⇔조교자의 입의 더러움이 이동
STAIN:3 |= STAIN:PLAYER:1
STAIN:PLAYER:1 |= STAIN:3
IF FLAG:70 == 1
	IF HETEROSEX(TARGET,PLAYER)
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 3
	ENDIF
ELSE
	IF HETEROSEX(TARGET,PLAYER)
		EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 3
		EXP:MASTER:레즈경험 += 3
	ENDIF
	TIME += 10
ENDIF
EXP:PLAYER:수음경험 ++
RETURN 1

;-------------------------------------------------
;실행 판정
;-------------------------------------------------
@COM_ABLE315
;구리 애무 실행 판정
SIF !TFLAG:100
	RETURN 0
;일괄관리
SIF GLOBAL_COMABLE(315)
	RETURN RESULT
;시간정지중은 스킵
IF !FLAG:70
	;친해져 강도 2
	SIF (TCVAR:MASTER:친해져 < 2)  && CFLAG:수면 == 0
		RETURN 0
	;수면중
	SIF CFLAG:수면 && !CFLAG:장난
		RETURN 0
	;동침중
	SIF CFLAG:동침중
		RETURN 0
	;업무중
	SIF CFLAG:행동 == 5
		RETURN 0
	;데이트중
	SIF CHK_DATENOW(CFLAG:데이트중) && CFLAG:현재위치 != OMANEKIBEYA()
		RETURN 0
ENDIF
;기력 0
SIF BASE:MASTER:기력 <= 0
	RETURN 0
;팔사용중
SIF TFLAG:61 && MASTER_POSE(SET_C,3) != TARGET && MASTER_POSE(SET_P,SET_YUBI) != TARGET && MASTER_POSE(SET_V,SET_YUBI) != TARGET && MASTER_POSE(SET_A,SET_YUBI) != TARGET
	RETURN 0
SIF GETBIT (TCVAR:26,5)
	RETURN 0
RETURN 1

