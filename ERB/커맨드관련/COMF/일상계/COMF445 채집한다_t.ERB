;-----------------------------------------------------------
;현재 위치로부터 채집 스팟을 산출하는 함수
;ARG		현재 위치
;ARG:1		@ShowGatheringSpots부터의 참조용
;RETURN		0 해당 없음	1～30숲, 초원	31～60 수계		61～ 특수
;COMMENT	장소를 추가했을 경우, CASE를 변경의 일
;-----------------------------------------------------------
@GATHERING_SPOT(ARG, ARG:1)
#FUNCTION
IF !IN_HOME(ARG) && !ARG:1
;서브 맵 따위에서의 판정
	SELECTCASE ARG
		CASE 50				;요정의 큰나무
			SIF MAIN_MAP != 0
				RETURNF 1
		CASE 사각의죽림		;430메인 맵에서는 「지하실」을 지정하기 위해(때문에) 제외
			SIF MAIN_MAP != 4
				RETURNF 2
		CASE 무명의언덕
			RETURNF 3
		CASE 태양의밭
			RETURNF 4
		CASE 재고의길
			RETURNF 5
		CASE 고목의큰나무		;530
			SIF MAIN_MAP != 5
				RETURNF 6
		CASE 630	;삼도천～명계에 있어서의 마요히가
			SIF MAIN_MAP != 7
				RETURNF 7
		CASE 피안
			RETURNF 8
		CASE 산록의수해
			SIF MAIN_MAP != 7
				RETURNF 11
		CASE 절경의언덕
			SIF MAIN_MAP != 8
			RETURNF 12
		CASE 천계
			RETURNF 13
		CASE 복숭아숲～모래사장
			RETURNF 14
		CASE 안개의호수
			SIF MAIN_MAP != 3
				RETURNF 31
		CASE 삼도천
			RETURNF 32
		CASE 현무의늪
			SIF MAIN_MAP != 7
				RETURNF 33
		CASE 큰두꺼비의연못
			SIF MAIN_MAP != 7
				RETURNF 34
		CASE 구천의폭포
			SIF MAIN_MAP != 8
				RETURNF 35
		CASE 산의호수
			SIF MAIN_MAP != 8
				RETURNF 36
		CASE 지옥의깊은길
			SIF MAIN_MAP != 9
				RETURNF 37
		CASE 묘지
			RETURNF 61
		CASE 무연총
			RETURNF 62
		CASE 간헐천지하센터
			RETURNF 64
		CASE 작열지옥터
			RETURNF 65
		CASE 괴안통로
			SIF MAIN_MAP != 9
				RETURNF 66
		CASE 고요의바다
			RETURNF 67
	ENDSELECT
ELSE
	;メインマップでの判定
	SELECTCASE ARG
		;하쿠레이신사：수호신의 숲
		CASE 25
			RETURNF 1
		;명련사:묘지
		CASE 121
			RETURNF 61
		;홍마관:호숫가
		CASE 343
			RETURNF 31
		;영원정:사각의죽림, 무명의언덕, 태양의 밭
		CASE 433
			RETURNF 2
		CASE 436
			RETURNF 3
		CASE 438
			RETURNF 4
		;마법의숲:무연총, 버섯 군생지, 재고의길, 고목의 큰나무
		CASE 506
			RETURNF 62
		CASE 507
			RETURNF 63
		CASE 509
			RETURNF 5
		CASE 540
			RETURNF 6
		;명계:피안, 야쿠모 가 현관
		CASE 604
			RETURNF 8
		CASE 630
			RETURNF 7
		;요괴의산 산록:늪에 계속되는 길, 현무의 늪, 중턱, 대두꺼비의 연못, 지하 간혈천 센터
		CASE 702
			RETURNF 9
		CASE 703
			RETURNF 33
		CASE 705
			RETURNF 10
		CASE 708
			RETURNF 34
		CASE 712
			RETURNF 64
		;요괴의산 산정:정상, 폭포의 뒤, 호숫가, 도원
		CASE 805
			RETURNF 12
		CASE 806
			RETURNF 35
		CASE 814
			RETURNF 36
		CASE 833
			RETURNF 13
		;지저:작열 지옥자취, 강가, 세로구멍의 바닥
		CASE 928
			RETURNF 65
		CASE 945
			RETURNF 37
		CASE 948
			RETURNF 66
		;달:복숭아밭～모래사장、후미
		CASE 1014, 1015
			RETURNF 14
		CASE 1016
			RETURNF 67
	ENDSELECT
ENDIF
RETURNF 0

;-------------------------------------------------
;그 채집 스팟에서의 채집물의 출현 판정을 하는 함수
; 아이템 번호 ARG:0
;GATHERING_SPOT(ARG)의 돌아가 값ARG:1（채집 스팟）  의
;출현 가부를 숫자로 돌려주는 출현==1비출현==0
; 아이템을 추가했을 경우는, GROUPMATCH내에 각각 덧붙여 씀
;-------------------------------------------------
@GATHERING_PRODUCT(ARG:0, ARG:1)
#FUNCTION

