;-----------------------------------------------------------
;벌채スポットから伐れる목재종류を割り出す関数
;ARG 벌채가능
;-----------------------------------------------------------
@WOOD_SPECIES(ARG)
#FUNCTION
#DIM 후보

$LOOP

후보 = RAND:12
SELECTCASE ARG
	CASE 1;鎮守の森、妖精の大樹
		SIF GROUPMATCH(후보, 1, 2, 3, 6, 7, 8, 9)
			RETURNF 후보
	CASE 2;사각의죽림
		;竹材に固定
		RETURNF 12
	CASE 3;魔法の森
		SIF 후보 == 0 && RAND:2 == 0
			RETURNF 646
		SIF GROUPMATCH(후보, 1, 2, 4, 6, 7, 8, 9)
			RETURNF 후보
	CASE 4;麓の樹海
		SIF 후보 == 0 && RAND:2 == 0
			RETURNF 646
		SIF GROUPMATCH(후보, 1, 2, 3, 5, 7, 9, 10)
			RETURNF 후보
	CASE 5;절경의언덕 標高高め
		SIF GROUPMATCH(후보, 3, 5, 7, 9, 10, 11)
			RETURNF 후보
ENDSELECT
GOTO LOOP

