@COM124
;-------------------------------------------------
;COM별 FLAG의 설정
;-------------------------------------------------
;행위자
TCVAR:116 = PLAYER
;봉사 쾌락 플래그
TCVAR:PLAYER:108 = 1


CSTR:TARGET:10 += @"{PLAYER}/"
TCVAR:TARGET:2 = 3
;TCVAR:2 사정장소 플래그(-1=콘돔 1=질내 2=애널 3=수음 4=펠라티오 5=파이즈리 6=가랑이 7=풋잡 8=체표 9=애널 봉사 10=도구)
TCVAR:TARGET:4 = 500

CALL 몸사용하기("손",2)

;-------------------------------------------------
;소스 추가 처리
;-------------------------------------------------
;성기술보정
IF ABL:PLAYER:손가락 < 4
SOURCE:PLAYER:성행동 =4
	SOURCE:쾌C += 80
ELSE
SOURCE:PLAYER:성행동 =ABL:PLAYER:손가락
	SOURCE:쾌C += ABL:PLAYER:손가락 * 20
ENDIF

;소비 체력, 기력
IF FLAG:70 == 1
SOURCE:PLAYER:성행동 =4
	BASE:MASTER:TSP -= 40
	SOURCE:쾌C = 80
ELSE
	DOWNBASE:PLAYER:체력 += 10
	DOWNBASE:PLAYER:기력 += 50
SOURCE:PLAYER:성행동 =4
	DOWNBASE:기력 += 50
	SOURCE:쾌C = 80
	
;우선 수음의 수치인 채로 시행
	SOURCE:사랑 = 50
	SOURCE:성행동 = 250
	SOURCE:달성 = 50
	SOURCE:굴종 = 350
	SOURCE:일탈 = 100
	SOURCE:반감 = 100

	;위 쪽으로 계산한 더러운 데이터
	SOURCE:불결 = Y*10 + 60

	;-------------------------------------------------
	;특수소스처리
	;-------------------------------------------------
	;억압, 저항 소유에는, 억울소스 추가
	SIF TALENT:자기애 < 0 || TALENT:저항
		SOURCE:울굴 += 200
ENDIF
;-------------------------------------------------
;더러움의 처리
;-------------------------------------------------
;사정에 관계없이 행해지는 처리는 여기에서
;조교자의 손가락⇔노예의 P의 더러움이 이동
STAIN:PLAYER:1 |= STAIN:2
STAIN:2 |= STAIN:PLAYER:1

;-------------------------------------------------
;경험의 처리
;-------------------------------------------------
;수음경험
EXP:PLAYER:수음경험 ++

;동성애 레즈비언이라면 반환값 1 동성애자라면 반환값 2
IF FLAG:70 == 1 || CFLAG:장난
	IF HETEROSEX(TARGET, PLAYER)
		EXP:PLAYER:(50 + HETEROSEX(TARGET, PLAYER)) += 1
	ENDIF
ELSE
	IF HETEROSEX(TARGET, PLAYER)
		EXP:(50 + HETEROSEX(TARGET, PLAYER)) += 1
		EXP:PLAYER:(50 + HETEROSEX(TARGET, PLAYER)) += 1
	ENDIF
ENDIF
RETURN 1

@CAN_COM124(ARG)
SKIPDISP ARG
PRINTL 수음한다
;-------------------------------------------------
;실행 판정 처리
;-------------------------------------------------
IF FLAG:70 == 1 || CFLAG:장난

ELSE
	A = 0
	S = 0

	;모든 명령에 공통의 요소를 고려
	;(순종이 높다고 명령에 따르기 쉬운 등)
	CALL COM_ORDER

	;ABL:욕망
	IF ABL:욕망
		SIF S
			PRINT  + 
		A += ABL:욕망 * 1
		PRINT 욕망
		PRINTV 'LV, ABL:욕망, '(, ABL:욕망 * 1, ')
		S = 1
	ENDIF
	;MARK:쾌락각인
	IF MARK:쾌락각인
		SIF S
			PRINT  + 
		A += MARK:쾌락각인 * 1
		PRINT 쾌락각인
		PRINTV 'LV, MARK:쾌락각인, '(, MARK:쾌락각인 * 1, ')
		S = 1
	ENDIF
	;PALAM:욕정
	IF GETPALAMLV(PALAM:욕정, 5)
		SIF S
			PRINT  + 
		A += GETPALAMLV(PALAM:욕정, 5) * 1
		PRINT 욕정
		PRINTV 'LV, GETPALAMLV(PALAM:욕정, 5), '(, GETPALAMLV(PALAM:욕정, 5) * 1, ')
		S = 1
	ENDIF
	;수줍음
	IF TALENT:수치심 > 0
		PRINT  - 
		A -= 1
		PRINT 수줍음
		PRINTV '(, 1, ')
		S = 1
	ENDIF
	;쾌감에 부정(음란계 소질로 무효)
	IF TALENT:쾌감응답 < 0 && !TALENT:음란
		PRINT  - 
		A -= 1
		PRINT 쾌감에 부정
		PRINTV '(, 1, ')
		S = 1
	ENDIF
	;남성기피(연모, 친애로 무효)
	IF OTOKOGIRAI(TARGET)
		PRINT  - 
		A -= 5
		PRINT 남성기피
		PRINTV '(, 5, ')
		S = 5
	ENDIF
	;연모
	IF TALENT:연모 && ASSIPLAY == 0
		SIF S
			PRINT  + 
		A += 5
		PRINT 연모
		PRINTV '(, 5, ')
		S = 5
	ENDIF
	;친애
	IF TALENT:연모 > 1 && ASSIPLAY == 0
		SIF S
			PRINT  + 
		A += 5
		PRINT 친애
		PRINTV '(, 5, ')
		S = 5
	ENDIF

	;조교자가 후타나리
	;동성에 고추 손대어져 기쁜 것일까?
	;시험삼아 마이나스에 반전 시켜 본다
	IF (TALENT:PLAYER:2 & 3) == 3
		SIF S
			PRINT  - 
		A -= 8
		PRINT 후타나리
		PRINTV '(, 8, ')
		S = 1
	ENDIF

	;이 부근은 미착손
	Y = 0
	;애액의 더러움
	SIF STAIN:PLAYER:2 & 1
		Y += 1
	;정액의 더러움
	SIF STAIN:PLAYER:2 & 4
		Y += 3
	;애널의 더러움
	SIF STAIN:PLAYER:2 & 8
		Y += 7
	SIF STAIN:PLAYER:2 & 16
		Y += 15
	;손호된 훈련에서는 더러움이 그만큼 영향을 주지 않는다
	Y /= 3
	Y = Y * (2 - TALENT:악취내성) / 2

	;서로 더러워져
	IF Y
		PRINT  - 
		A -= Y
		PRINT 서로 더러워져
		;악취 둔감
		IF TALENT:악취내성 > 0
			PRINT , 악취 둔감
		ELSEIF TALENT:악취내성 < 0
			PRINT , 악취 민감
		ENDIF
		PRINTV '(, Y, ')
		S = 1
	ENDIF


	;합계를 표시(14이상으로 실행)
	PRINT  = 
	PRINTV A

	V = 14
	SIF A < V
		PRINT  < 
	SIF A == V
		PRINT  = 
	SIF A > V
		PRINT  > 
	PRINT 실행치
	PRINTV V

	WAIT
	SKIPDISP 0
	;실행할 수 없다
	SIF A < V
		RETURN 0
ENDIF
RETURN 1

