;실행 판정
;-------------------------------------------------
@COM_ABLE23
;필로토크
SIF !TFLAG:100
	RETURN 0
;일괄관리
SIF GLOBAL_COMABLE(150)
	RETURN RESULT
;상대가 지치지 않았다고 안 돼
SIF BASE:체력 > 1000
	RETURN 0

;시간정지중도 안 돼
SIF FLAG:70
	RETURN 0
;어쩐지 장착하고 있다고(면) 안 돼
FOR LOCAL, 11,25
	SIF TEQUIP:LOCAL
		RETURN 0
NEXT
;삽입중은 안 돼
SIF TEQUIP:50 != -1
	RETURN 0
SIF TEQUIP:51 != -1
	RETURN 0
;샤워중은 안 돼
SIF TEQUIP:32
	RETURN 0
;유두빨기 안은 안 돼
SIF TEQUIP:41
	RETURN 0
;젖 비비어 안은 안 돼
SIF TEQUIP:42
	RETURN 0
;계속키스
SIF TEQUIP:계속키스
	RETURN 0
;수면간중
SIF CFLAG:장난 > 1
	RETURN 0
;침대 룸이 아니면 안 돼
SIF !BEDROOM(CFLAG:PLAYER:현재위치)
	RETURN 0

RETURN 1
