;-------------------------------------------------
;로터
;도구 사용 커맨드, 레벨 1
;-------------------------------------------------
@COM40
;-------------------------------------------------
;특수 파생 처리
;-------------------------------------------------
PRINTL 로터
STR:0 = 로터
;-------------------------------------------------
;COM별 FLAG의 설정
;-------------------------------------------------
;행위자
TCVAR:116 = PLAYER
;봉사 쾌락 플래그
TCVAR:PLAYER:108 = 1

;TARGET가 양성의 경우에는 사정 가능하게
CSTR:TARGET:10 += @"{PLAYER}/"
;TCVAR:2 사정장소 플래그(-1=콘돔 1=질내 2=애널 3=수음 4=펠라티오 5=파이즈리 6=가랑이 7=풋잡 8=체표 9=애널 봉사 10=도구 11=촉수 12=A고문 13=V 꾸짖고)
TCVAR:TARGET:2 = 10
;강도
TCVAR:TARGET:4 = 1000

;-------------------------------------------------
;소스 추가 처리
;-------------------------------------------------
;소비 체력, 기력
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 80
	;SOURCE:PLAYER:성행동 =10
	SOURCE:쾌C = 250

ELSE

	DOWNBASE:체력 += 10
	DOWNBASE:기력 += 80
	;SOURCE:PLAYER:성행동 =10

	SOURCE:쾌C = 250
	SOURCE:노출 = 20
	SOURCE:일탈 = 30
	SOURCE:반감 = 30
	;-------------------------------------------------
	;특수소스처리
	;-------------------------------------------------
	;억압, 저항 소유에는, 억울소스 추가
	SIF TALENT:자기애 < 0 || TALENT:저항
		SOURCE:울굴 += 30
ENDIF
;-------------------------------------------------
;경험의 처리
;-------------------------------------------------
;동성애 레즈비언이라면 반환값 1 동성애자라면 반환값 2
IF FLAG:70 == 1
	IF HETEROSEX(TARGET, PLAYER)
		EXP:PLAYER:(50 + HETEROSEX(TARGET, PLAYER)) += 1
	ENDIF
ELSE
	IF HETEROSEX(TARGET, PLAYER)
		EXP:(50 + HETEROSEX(TARGET, PLAYER)) += 1
		EXP:PLAYER:(50 + HETEROSEX(TARGET, PLAYER)) += 1
	ENDIF
ENDIF
EXP:PLAYER:도구사용경험 ++
RETURN 1

;-------------------------------------------------
;실행 판정
;-------------------------------------------------
@COM_ABLE40
;로터 실행 판정
SIF !TFLAG:100
	RETURN 0
;일괄관리
SIF GLOBAL_COMABLE(40)
	RETURN RESULT
;아이템 을 가지고 있는인가, 아이템 없음 설정이 아니면 안 돼
SIF ITEM:0 == 0 && NOITEM == 0
	RETURN 0

;하반신착의
SIF TEQUIP:0 & 8
	RETURN 0

RETURN 1

