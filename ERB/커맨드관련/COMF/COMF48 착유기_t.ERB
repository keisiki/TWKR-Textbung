;-------------------------------------------------
;착유기
;도구 사용 커맨드, 레벨 3
;-------------------------------------------------
@COM48
;착탈의처리
TEQUIP:착유기 = !TEQUIP:착유기

;-------------------------------------------------
;COM별 FLAG의 설정
;-------------------------------------------------
;행위자
TCVAR:116 = PLAYER
;봉사 쾌락 플래그
TCVAR:PLAYER:108 = 1

;-------------------------------------------------
;소스 추가 처리
;-------------------------------------------------
;소비 체력, 기력
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 100
	SOURCE:PLAYER:성행동 = 10
	SOURCE:쾌B = 200
	SOURCE:고통 = 50

ELSE

	DOWNBASE:체력 += 50
	DOWNBASE:기력 += 100
	SOURCE:PLAYER:성행동 = 10

	SOURCE:쾌B = 200
	SOURCE:고통 = 100
	SOURCE:노출 = 30
	SOURCE:굴종 = 100
	SOURCE:일탈 = 100
	SOURCE:반감 = 100

	;-------------------------------------------------
	;특수소스처리
	;-------------------------------------------------
	;억압, 저항 소유에는, 억울소스 추가
	SIF TALENT:자기애 < 0 || TALENT:저항
		SOURCE:울굴 += 100
ENDIF
;-------------------------------------------------
;경험의 처리
;-------------------------------------------------
;동성애 레즈비언이라면 반환값 1 동성애자라면 반환값 2
IF FLAG:70 == 1
	IF HETEROSEX(TARGET, PLAYER)
		EXP:PLAYER:(50 + HETEROSEX(TARGET, PLAYER)) += 1
	ENDIF
ELSE
	IF HETEROSEX(TARGET, PLAYER)
		EXP:(50 + HETEROSEX(TARGET, PLAYER)) += 1
		EXP:PLAYER:(50 + HETEROSEX(TARGET, PLAYER)) += 1
	ENDIF
ENDIF
EXP:PLAYER:도구사용경험 ++

RETURN 1
;-------------------------------------------------
;장착 계속의 처리
;-------------------------------------------------
@EQUIP_COM48(ARG)
;착유기 장비중
PRINTL ＜착유기 장비중＞
;-------------------------------------------------
;소스 추가 처리
;-------------------------------------------------
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 50
	SOURCE:ARG:쾌B += 100

ELSE

	DOWNBASE:ARG:체력 += 25
	DOWNBASE:ARG:기력 += 50

	SOURCE:ARG:쾌B += 100
	SOURCE:ARG:고통 += 50
	SOURCE:ARG:노출 += 15
	SOURCE:ARG:굴종 += 50
	SOURCE:ARG:일탈 += 50
	SOURCE:ARG:반감 += 50
ENDIF
RETURN 1

;-------------------------------------------------
;실행 판정
;-------------------------------------------------
@COM_ABLE48
;착유기 실행 판정
SIF !TFLAG:100
	RETURN 0
;일괄관리
SIF GLOBAL_COMABLE(48)
	RETURN RESULT
;해제는 언제라도 가능
SIF TEQUIP:17
	RETURN 1
;아이템 을 가지고 있는인가, 아이템 없음 설정이 아니면 안 돼
SIF ITEM:11 == 0 && NOITEM == 0
	RETURN 0
;모유체질이 아니면 사용할 수 없다
SIF TALENT:모유체질 == 0
	RETURN 0
;상반신착의
SIF TEQUIP:1 > 1 && TEQUIP:3 == 0
	RETURN 0
;유두캡 사용중은 불가
SIF TEQUIP:16
	RETURN 0
;유방 전극 장착중은 안 돼
SIF TEQUIP:24
	RETURN 0
;시간정지중은 허가
IF FLAG:70 != 1
	;B감도 2 이하는 안 돼
	SIF ABL:TARGET:B감각 <= 2
		RETURN 0
ENDIF
;남자라면 안 돼
SIF !(TALENT:2 & 1)
	RETURN 0
;ASSI의 경우, 기교 3이상이 아니면 사용할 수 없다.
IF ASSIPLAY
	SIF ABL:ASSI:기교 < 3
		RETURN 0
ENDIF
;샤워중은 안 돼
SIF TEQUIP:32
	RETURN 0
;새댁플레이중은 안 돼
SIF TEQUIP:33
	RETURN 0
;실내가 아니면 안 돼
SIF !INROOM(CFLAG:PLAYER:현재위치)
	RETURN 0
RETURN 1

