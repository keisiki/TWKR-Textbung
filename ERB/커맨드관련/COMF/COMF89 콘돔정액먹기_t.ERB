;-------------------------------------------------
;고무정음
;도구 사용 커맨드, 레벨 2
;-------------------------------------------------
@COM89
;-------------------------------------------------
;COM별 FLAG의 설정
;-------------------------------------------------
;행위자
TCVAR:116 = PLAYER
;-------------------------------------------------
;소스 추가 처리
;-------------------------------------------------
SELECTCASE TFLAG:고무내
	CASE IS > 300
		EXP:정음경험 += 8
	CASE IS > 150
		EXP:정음경험 += 5
	CASEELSE
		EXP:정음경험 += 3
ENDSELECT
STAIN:구 |= 4
IF FLAG:시간정지 == 1
	CFLAG:구내정액 = 2
ELSE
	CFLAG:구내정액 = 1
ENDIF
CFLAG:누계정음 += TFLAG:고무내


;소비 체력, 기력
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 50
ELSE

DOWNBASE:기력 += 100

SOURCE:사랑 = TFLAG:고무내 / 2
SOURCE:성행동 = TFLAG:고무내 / 2
SOURCE:달성 = TFLAG:고무내 / 2
SOURCE:굴종 = TFLAG:고무내 * 2
SOURCE:불결 = TFLAG:고무내 * 2
SOURCE:반감 = TFLAG:고무내

;-------------------------------------------------
;특수소스처리
;-------------------------------------------------
;억압, 저항 소유에는, 억울소스 추가
SIF TALENT:자기애 < 0 || TALENT:저항
	SOURCE:울굴 += 400
ENDIF
TFLAG:고무내 = 0
RETURN 0

;-------------------------------------------------
;실행 판정
;-------------------------------------------------
;고무정음
@COM_ABLE89
;실행 판정
SIF !TFLAG:100
	RETURN 0
;일괄관리
SIF GLOBAL_COMABLE(89)
	RETURN RESULT
SIF !TFLAG:고무내
	RETURN 0
;볼개그 사용중은 불가
SIF TEQUIP:볼개그
	RETURN 0
SIF ABL:정액중독 < 3 && !FLAG:70
	RETURN 0
	
RETURN 1

