;-------------------------------------------------
;손가락삽입
;애무계 커맨드, 레벨 1
;-------------------------------------------------
@COM3
;-------------------------------------------------
;COM별 FLAG의 설정
;-------------------------------------------------
;행위자
TCVAR:116 = PLAYER
;봉사 쾌락
TCVAR:PLAYER:108 = 1

;파과 억제
TFLAG:2 = 1
CALL 몸사용하기("손",2)
;-------------------------------------------------
;소스 추가 처리
;-------------------------------------------------
;소비 체력, 기력
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 40
	IF !TALENT:처녀 || TALENT:처녀 == -1
		;SOURCE:PLAYER:성행동=6
		SOURCE:쾌V = 120
		SOURCE:고통 = 10
	ELSE
		;SOURCE:PLAYER:성행동=3
		SOURCE:쾌V = 60
		SOURCE:고통 = 5
	ENDIF
	IF TALENT:PLAYER:능숙한손가락
		;SOURCE:PLAYER:성행동+=1
		SOURCE:쾌V += 20
	ENDIF
	;SOURCE:PLAYER:성행동= ABL:PLAYER:손가락 /2
	SOURCE:쾌V += ABL:PLAYER:손가락 * 5
	;V에의 고통
	CALL PAIN_CHECK_V(TARGET)
	;노예의 질내⇔조교자의 손가락의 더러움이 이동
	STAIN:6 |= STAIN:PLAYER:1
	STAIN:PLAYER:1 |= STAIN:6
	IF HETEROSEX(TARGET, PLAYER)
		EXP:PLAYER:(50 + HETEROSEX(TARGET, PLAYER)) += 1
	ENDIF
	EXP:V경험 ++
	EXP:PLAYER:수음경험 ++
ELSE

	DOWNBASE:체력 += 30
	DOWNBASE:기력 += 80

	IF !TALENT:처녀 || TALENT:처녀 == -1
		;SOURCE:PLAYER:성행동= 6
		SOURCE:쾌V = 120
		SOURCE:고통 = 15
		SOURCE:노출 = 10
		SOURCE:일탈 = 20
		SOURCE:반감 = 20
	;V경험이 0때는 V경험을 수반하지 않는 것에 파생
	;V의 구슬은 들어가지 않지만, 쾌V가 높으면 길들여 있기 (위해)때문에 처녀상실시에 영향
	ELSE
		;SOURCE:PLAYER:성행동= 3
		SOURCE:쾌V = 60
		SOURCE:고통 = 10
		SOURCE:노출 = 30
		SOURCE:일탈 = 30
		SOURCE:반감 = 30
	ENDIF

	IF TALENT:PLAYER:능숙한손가락
		;SOURCE:PLAYER:성행동+= 1
		SOURCE:쾌V += 20
	ENDIF
	;SOURCE:PLAYER:성행동+=  ABL:PLAYER:손가락/2
	SOURCE:쾌V += ABL:PLAYER:손가락 * 5
	;-------------------------------------------------
	;특수소스처리
	;-------------------------------------------------
	;억압, 저항 소유에는, 억울소스 추가
	IF TALENT:자기애 < 0 || TALENT:저항
		SOURCE:울굴 += 20
		;처녀
		SIF TALENT:처녀
			SOURCE:울굴 += 10
	ENDIF
	;V에의 고통
	CALL PAIN_CHECK_V(TARGET)

	;-------------------------------------------------
	;더러움의 처리
	;-------------------------------------------------
	;노예의 질내⇔조교자의 손가락의 더러움이 이동
		STAIN:6 |= STAIN:PLAYER:1
		STAIN:PLAYER:1 |= STAIN:6
	;-------------------------------------------------
	;경험의 처리
	;-------------------------------------------------
	;동성애 레즈비언이라면 반환값 1 동성애자라면 반환값 2
	IF HETEROSEX(TARGET, PLAYER)
		EXP:(50 + HETEROSEX(TARGET, PLAYER)) += 1
		EXP:PLAYER:(50 + HETEROSEX(TARGET, PLAYER)) += 1
	ENDIF
	EXP:V경험 ++
	EXP:PLAYER:수음경험 ++
ENDIF
RETURN 1

;-------------------------------------------------
;실행 판정
;-------------------------------------------------
@COM_ABLE3
;손가락삽입실행 판정
SIF !TFLAG:100
	RETURN 0

;일괄관리
SIF GLOBAL_COMABLE(3)
	RETURN RESULT
;남자라면 안 돼
SIF !(TALENT:2 & 1)
	RETURN 0
;시간정지중은 허가
IF FLAG:70 != 1
	;윤활 부족해, 순종 3 이하·레즈끼 3 이하의 ASSI의 경우 애널애무는 할 수 없다(새드라면 OK)
	IF PALAM:윤활 < PALAMLV:2 && ASSIPLAY
		SIF (ABL:ASSI:순종 <= 3 || ABL:ASSI:레즈끼 <= 3) && !TALENT:ASSI:새드
			RETURN 0
	ENDIF
ENDIF

;하반신착의
SIF TEQUIP:0 & 4
	RETURN 0


RETURN 1

