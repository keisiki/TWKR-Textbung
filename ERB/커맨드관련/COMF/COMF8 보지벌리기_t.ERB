@COM_ABLE8
;음부개장 실행 판정
SIF !TFLAG:100
	RETURN 0
;일괄관리
SIF GLOBAL_COMABLE(8)
	RETURN RESULT
	
;시간정지중은 허가
IF FLAG:70 != 1
	;순종이 2 미만이라면 안 돼
	SIF ABL:순종< 2
		RETURN 0
	;처녀의 경우, 순종 3이상 또는 노출벽 3이상 없으면 안 돼
	SIF TALENT:처녀 && ABL:순종 < 3 && ABL:노출벽 < 3
		RETURN 0
	;밧줄 사용 중에는 불가
	SIF TEQUIP:밧줄
		RETURN 0
ENDIF

;하반신착의
SIF TEQUIP:0 & 4 || TEQUIP:0 & 2
	RETURN 0
;바이브 삽입중은 안 돼
SIF TEQUIP:13
	RETURN 0
;남자라면 안 돼
SIF !(TALENT:2 & 1)
	RETURN 0
;목욕탕플레이중은 플레이매트가 없으면 안 돼
IF TEQUIP:31
	SIF ITEM:20 == 0 && NOITEM == 0
		RETURN 0
ENDIF

RETURN 1

