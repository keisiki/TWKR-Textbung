;-------------------------------------------------
;애널비즈
;도구 사용 커맨드, 레벨 3
;-------------------------------------------------
@COM46
;착탈의처리
TEQUIP:애널비즈 = !TEQUIP:애널비즈
;-------------------------------------------------
;COM별 FLAG의 설정
;-------------------------------------------------
;행위자
TCVAR:116 = PLAYER
;봉사 쾌락 플래그
TCVAR:PLAYER:108 = 1

CSTR:TARGET:10 += @"{PLAYER}/"
;TCVAR:2 사정장소 플래그(-1=콘돔 1=질내 2=애널 3=수음 4=펠라티오 5=파이즈리 6=가랑이 7=풋잡 8=체표 9=애널 봉사 10=도구 11=촉수 12=A고문 13=V 꾸짖고)
TCVAR:TARGET:2 = 12
;강도
TCVAR:TARGET:4 = 800
TCVAR:A상실발생 = 1
;-------------------------------------------------
;소스 추가 처리
;-------------------------------------------------
;소비 체력, 기력
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 150
;SOURCE:PLAYER:성행동+= 7
	SOURCE:쾌A = 150
	SOURCE:고통 = 100

	;장착시는 쾌A는 내린다
	SIF TEQUIP:애널비즈
		TIMES SOURCE:쾌A , 0.80

	;제외할 때는 쾌A는 오른다
	SIF !TEQUIP:애널비즈
		TIMES SOURCE:쾌A , 3.00

ELSE

	DOWNBASE:체력 += 60
	DOWNBASE:기력 += 150
;SOURCE:PLAYER:성행동+= 7

	SOURCE:쾌A = 150
	SOURCE:고통 = 200
	SOURCE:노출 = 50
	SOURCE:굴종 = 50
	SOURCE:일탈 = 60
	SOURCE:반감 = 80

	;장착시는 쾌A는 내린다
	SIF TEQUIP:애널비즈
		TIMES SOURCE:쾌A , 0.80

	;제외할 때는 쾌A는 오른다
	SIF !TEQUIP:애널비즈
		TIMES SOURCE:쾌A , 3.00

	;-------------------------------------------------
	;특수소스처리
	;-------------------------------------------------
	;억압, 저항 소유에는, 억울소스 추가
	SIF TALENT:자기애 < 0 || TALENT:저항
		SOURCE:울굴 += 70
ENDIF
;A에의 고통은 먼저 처리해 둔다
CALL PAIN_CHECK_A(TARGET)

;-------------------------------------------------
;더러움의 처리
;-------------------------------------------------
STAIN:7 |= STAIN:4
STAIN:4 |= STAIN:7
;-------------------------------------------------
;경험의 처리
;-------------------------------------------------
SIF !TEQUIP:애널비즈
	EXP:A경험 += 2
IF FLAG:70 == 1
	IF HETEROSEX(TARGET, PLAYER)
		EXP:PLAYER:(50 + HETEROSEX(TARGET, PLAYER)) += 1
	ENDIF
ELSE
	;동성애 레즈비언이라면 반환값 1 동성애자라면 반환값 2
	IF HETEROSEX(TARGET, PLAYER)
		EXP:(50 + HETEROSEX(TARGET, PLAYER)) += 1
		EXP:PLAYER:(50 + HETEROSEX(TARGET, PLAYER)) += 1
	ENDIF
ENDIF
EXP:PLAYER:도구사용경험 ++

RETURN 1
;-------------------------------------------------
;장착 계속의 처리
;-------------------------------------------------
@EQUIP_COM46(ARG)
;애널비즈 삽입중

PRINTL ＜애널비즈 삽입중＞

CSTR:TARGET:10 += @"{PLAYER}/"
TCVAR:TARGET:2 = 12
TCVAR:TARGET:4 = 400

IF FLAG:70 == 1
	BASE:MASTER:TSP -= 150
	SOURCE:ARG:쾌A += 75

ELSE


	DOWNBASE:ARG:체력 += 60
	DOWNBASE:ARG:기력 += 150

	SOURCE:ARG:쾌A += 75
	SOURCE:ARG:노출 += 25
	SOURCE:ARG:굴종 += 25
	SOURCE:ARG:일탈 += 25
	;-------------------------------------------------
	;특수소스처리
	;-------------------------------------------------
	;억압, 저항 소유에는, 억울소스 추가
	SIF TALENT:ARG:자기애 < 0 || TALENT:ARG:저항
		SOURCE:ARG:울굴 += 35

	;A에의 고통은 먼저 처리해 둔다
	;EXP:A경험을 본다
	LOCAL = 100
	LOCAL:1 = 25
	IF EXP:ARG:A경험 < EXPLV:1
		TIMES LOCAL , 3.00
		TIMES LOCAL:1 , 3.00
	ELSEIF EXP:ARG:A경험 < EXPLV:2
		TIMES LOCAL , 1.20
		TIMES LOCAL:1 , 2.00
	ELSEIF EXP:ARG:A경험 < EXPLV:3
		TIMES LOCAL , 0.80
		TIMES LOCAL:1 , 1.50
	ELSEIF EXP:ARG:A경험 < EXPLV:4
		TIMES LOCAL , 0.60
		TIMES LOCAL:1 , 1.20
	ELSEIF EXP:ARG:A경험 < EXPLV:5
		TIMES LOCAL , 0.40
	ELSEIF EXP:ARG:A경험 >= EXPLV:5
		TIMES LOCAL , 0.20
	ENDIF

	;PALAM:윤활을 본다
	IF PALAM:ARG:윤활 < PALAMLV:1
		TIMES LOCAL , 1.20
		TIMES LOCAL:1 , 2.00
	ELSEIF PALAM:ARG:윤활 < PALAMLV:2
		TIMES LOCAL , 1.00
		TIMES LOCAL:1 , 1.50
	ELSEIF PALAM:ARG:윤활 < PALAMLV:3
		TIMES LOCAL , 0.60
	ELSEIF PALAM:ARG:윤활 < PALAMLV:4
		TIMES LOCAL , 0.30
	ELSEIF PALAM:ARG:윤활 >= PALAMLV:4
		TIMES LOCAL , 0.20
	ENDIF
	SOURCE:ARG:고통 += LOCAL
	SOURCE:ARG:반감 += LOCAL:1
ENDIF
RETURN 1
