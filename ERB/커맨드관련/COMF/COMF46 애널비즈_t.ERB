	RETURN 0
;풍선 사용중은 불가
SIF TEQUIP:22
	RETURN 0
;전극 사용중은 불가
SIF TEQUIP:23
	RETURN 0
;새댁플레이중은 안 돼
SIF TEQUIP:33
	RETURN 0

RETURN 1

