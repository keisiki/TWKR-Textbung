;-------------------------------------------------
;풋잡한다
;조수에 의한 커맨드, 및 레즈비언 플레이, 레벨 1
;-------------------------------------------------
@COM123
;-------------------------------------------------
;COM별 FLAG의 설정
;-------------------------------------------------
;행위자
TCVAR:116 = PLAYER
;봉사 쾌락 플래그
TCVAR:PLAYER:108 = 1

CSTR:TARGET:10 += @"{PLAYER}/"
;TCVAR:2 사정장소 플래그(-1=콘돔 1=질내 2=애널 3=수음 4=펠라티오 5=파이즈리 6=가랑이 7=풋잡 8=체표 9=애널 봉사 10=도구 11=촉수 12=A고문 13=V 꾸짖고)
TCVAR:TARGET:2 = 7
;강도
TCVAR:TARGET:4 = 1000

TCVAR:PLAYER:기학플래그 = 1

CALL 몸사용하기("C",1)

;-------------------------------------------------
;소스 추가 처리
;-------------------------------------------------
;소비 체력, 기력
DOWNBASE:체력 += 30
DOWNBASE:기력 += 150

SOURCE:쾌C = 250
SOURCE:달성 = 200
SOURCE:노출 = 300
SOURCE:굴종 = 300
SOURCE:일탈 = 350
SOURCE:반감 = 350


;-------------------------------------------------
;특수소스처리
;-------------------------------------------------
;억압, 저항 소유에는, 억울소스 추가
SIF TALENT:자기애 < 0 || TALENT:저항
	SOURCE:울굴 += 400

;고통을 수반하지 않는 마조끼 및 마조의 처리는 먼저 해 둔다
;마조끼를 본다
SELECTCASE ABL:마조끼
	CASE 0
		TIMES SOURCE:달성 , 0.80
		TIMES SOURCE:굴종 , 0.80
		SOURCE:액체 += 0
		SOURCE:욕정 += 0
	CASE 1
		TIMES SOURCE:달성 , 1.00
		TIMES SOURCE:굴종 , 1.00
		SOURCE:액체 += 20
		SOURCE:욕정 += 30
	CASE 2
		TIMES SOURCE:달성 , 1.20
		TIMES SOURCE:굴종 , 1.20
		SOURCE:액체 += 40
		SOURCE:욕정 += 70
	CASE 3
		TIMES SOURCE:달성 , 1.40
		TIMES SOURCE:굴종 , 1.40
		SOURCE:액체 += 70
		SOURCE:욕정 += 120
	CASE 4
		TIMES SOURCE:달성 , 1.50
		TIMES SOURCE:굴종 , 1.50
		SOURCE:액체 += 110
		SOURCE:욕정 += 180
	CASE 5
		TIMES SOURCE:달성 , 1.70
		TIMES SOURCE:굴종 , 1.70
		SOURCE:액체 += 150
		SOURCE:욕정 += 250
	CASE 6
		TIMES SOURCE:달성 , 1.90
		TIMES SOURCE:굴종 , 1.90
		SOURCE:액체 += 200
		SOURCE:욕정 += 300
	CASE 7
		TIMES SOURCE:달성 , 2.10
		TIMES SOURCE:굴종 , 2.10
		SOURCE:액체 += 250
		SOURCE:욕정 += 350
	CASE 8
		TIMES SOURCE:달성 , 2.30
		TIMES SOURCE:굴종 , 2.30
		SOURCE:액체 += 300
		SOURCE:욕정 += 400
	CASE 9
		TIMES SOURCE:달성 , 2.50
		TIMES SOURCE:굴종 , 2.50
		SOURCE:액체 += 350
		SOURCE:욕정 += 450
	CASEELSE
		TIMES SOURCE:달성 , 3.00
		TIMES SOURCE:굴종 , 3.00
		SOURCE:액체 += 500
		SOURCE:욕정 += 500
ENDSELECT

;마조를 본다
IF TALENT:마조
	TIMES SOURCE:달성 , 2.50
	TIMES SOURCE:굴종 , 2.50
	TIMES SOURCE:액체 , 1.20
	TIMES SOURCE:욕정 , 1.20
ENDIF

;도착적
SIF TALENT:도착적
	TIMES SOURCE:달성 , 1.80

;-------------------------------------------------
;경험의 처리
;-------------------------------------------------
;동성애 레즈비언이라면 반환값 1 동성애자라면 반환값 2
IF HETEROSEX(TARGET, PLAYER)
	EXP:(50 + HETEROSEX(TARGET, PLAYER)) += 4
	EXP:PLAYER:(50 + HETEROSEX(TARGET, PLAYER)) += 4
ENDIF

RETURN 1

;-------------------------------------------------
;실행 판정
;-------------------------------------------------
@COM_ABLE123
;풋잡 실행 판정
SIF !TFLAG:100
	RETURN 0
;일괄관리
SIF GLOBAL_COMABLE(123)
	RETURN RESULT
;남자나 반인반요인가 양성이 아니면 안 돼
SIF !(HAS_PENIS(TARGET))
	RETURN 0
;하반신속옷착의
SIF TEQUIP:0 > 1
	RETURN 0
;정지 중에는 불가
SIF FLAG:70 == 1
	RETURN 0
RETURN 1

