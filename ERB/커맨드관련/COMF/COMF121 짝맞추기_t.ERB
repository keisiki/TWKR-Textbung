;-------------------------------------------------
;조개 우려라
;조수에 의한 커맨드, 및 레즈비언 플레이, 레벨 1
;-------------------------------------------------
@COM121
;-------------------------------------------------
;COM별 FLAG의 설정
;-------------------------------------------------
;행위자
TCVAR:116 = PLAYER

;봉사 쾌락 플래그
TCVAR:PLAYER:108 = 1
TCVAR:108 = 1
CALL 몸사용하기("V",1)
;-------------------------------------------------
;소스 추가 처리
;-------------------------------------------------
;소비 체력, 기력
IF FLAG:70 == 1
BASE:MASTER:TSP -= 90
SOURCE:PLAYER:쾌C = 200
SOURCE:PLAYER:성행동 =10
SOURCE:쾌C = 200

ELSE

DOWNBASE:체력 += 30
DOWNBASE:기력 += 90
SOURCE:PLAYER:성행동 =10

SOURCE:PLAYER:쾌C = 200
SOURCE:쾌C = 200
SOURCE:성행동 = 200
SOURCE:달성 = 100
SOURCE:노출 = 50
SOURCE:굴종 = 400
SOURCE:일탈 = 400
SOURCE:반감 = 400


;-------------------------------------------------
;특수소스처리
;-------------------------------------------------
;억압, 저항 소유에는, 억울소스 추가
SIF TALENT:자기애 < 0 || TALENT:저항
	SOURCE:울굴 += 400
ENDIF
;-------------------------------------------------
;더러움의 처리
;-------------------------------------------------
;노예의 V⇔조교자의 V의 더러움이 이동
STAIN:3 |= STAIN:PLAYER:3
STAIN:PLAYER:3 |= STAIN:3

;-------------------------------------------------
;경험의 처리
;-------------------------------------------------
;동성애 레즈비언이라면 반환값 1 동성애자라면 반환값 2
IF FLAG:70 == 1
	IF HETEROSEX(TARGET, PLAYER)
		EXP:PLAYER:(50 + HETEROSEX(TARGET, PLAYER)) += 8
	ENDIF
ELSE
	IF HETEROSEX(TARGET, PLAYER)
		EXP:(50 + HETEROSEX(TARGET, PLAYER)) += 8
		EXP:PLAYER:(50 + HETEROSEX(TARGET, PLAYER)) += 8
	ENDIF

	;애정경험
	SIF !ASSIPLAY
		EXP:애정경험 += 2 * TALENT:연모
ENDIF
RETURN 1

;-------------------------------------------------
;실행 판정
;-------------------------------------------------
@COM_ABLE121
;조개 겹옷 실행 판정
SIF !TFLAG:100
	RETURN 0
;일괄관리
SIF GLOBAL_COMABLE(121)
	RETURN RESULT
;남자인가 양성이라면 안 돼
SIF HAS_PENIS(PLAYER)|| HAS_PENIS(TARGET)
	RETURN 0
;욕망 3 이하의 경우조개 겹옷은 할 수 없다(소악마, 궁합 양호하면 OK)
IF ASSIPLAY
	SIF ABL:ASSI:욕망 <= 3 && TALENT:ASSI:소악마 == 0
		RETURN 0
ENDIF
;밧줄 사용 중에는 불가
SIF TEQUIP:밧줄
	RETURN 0
;하반신속옷착의
SIF TEQUIP:0 > 1
	RETURN 0
;바이브 삽입중은 안 돼
SIF TEQUIP:13
	RETURN 0
;클리캡 사용중은 안 돼
SIF TEQUIP:11
	RETURN 0
;목욕탕플레이중은 플레이매트가 없으면 안 돼
IF TEQUIP:31
	SIF ITEM:20 == 0 && NOITEM == 0
		RETURN 0
ENDIF
;실내가 아니면 안 돼
SIF !INROOM(CFLAG:PLAYER:현재위치)
	RETURN 0
;수면간중
SIF CFLAG:장난 > 1
	RETURN 0
;정지 중에는 불가
SIF FLAG:70 == 1
	RETURN 0
RETURN 1

