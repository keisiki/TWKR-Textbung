;오브젝트 본체
;여기서 ARG로 건네받는 것은 IRAI_SLOT의 내용(의뢰 ID + 의뢰자 등록 번호 * 1000)입니다
;함수명의@고유의뢰X의 X는 캐릭터 번호(레이무의 의뢰)군요
;진한 개는@EXIST 함수 불필요해 좋아(로 한다)
;상류, 캐릭터데이터측에서 의뢰 ID의 범위를 기술하는 것이 존부의 확인을 겸한다
;함수명 etc를 미스도 참 에러 토해 주고 알겠지
@고유의뢰1(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE ARG % 1000
;ID101：어깨 안마
CASE 101
	SELECTCASE O_DATA
	CASE "의뢰명"
		CALLF MAKE_STR(V_NAME, "어깨 안마")
	CASE "의뢰내용 표시"
		CALLF MAKE_STR(V_NAME, "레이무의 어깨를 안마한다")
	CASE "의뢰 보수 표시"
		CALLF MAKE_STR(V_NAME, "녹즙")
	CASE "의뢰실행 커맨드 이름"
		CALLF MAKE_STR(V_NAME, "어깨를 안마한다")
		
	CASE "의뢰내용"
		CALLF MAKE_INT(V_NAME, MAKE_IRAI_DATA(0, "작업"))
	CASE "의뢰 서브"
	CASE "의뢰기한"
	;발생시는 아니고 수탁시에 확정합니다
	CASE "의뢰 발생율"
	;이것은 다른 고유 의뢰와의 상대 확률 어째서 10%가 아닙니다
		CALLF MAKE_INT(V_NAME, 10)
	CASE "의뢰 발생 조건"
		CALLF MAKE_INT(V_NAME, 1)
	CASE "의뢰 수탁 가능 조건"
	;수탁 가능은@COM_ABLE366도 확인
	;여기를 참조하는 것은 의뢰인을 TARGET로 하고 있는 때이므로 소안내로 좋아
		CALLF MAKE_INT(V_NAME, 1)
	CASE "의뢰실행 가능 조건"
	;실행 가능은@COM_ABLE367도 확인
	;소안내로 좋아
		CALLF MAKE_INT(V_NAME, 1)
	;성공/실패 처리는 CARRYOUT로 직접 쓴다
	;SOURCE나 ITEM 입수 따위, 내용이 복잡해서
	CASE "의뢰 소멸 조건"
	;30%로 소실
		SIF RAND:100 < 30
			CALLF MAKE_INT(V_NAME, 1)
	ENDSELECT

;ID102：마리사의 분실물
CASE 102
	SELECTCASE O_DATA
	CASE "의뢰명"
		CALLF MAKE_STR(V_NAME, "마리사의 분실물")
	CASE "의뢰내용 표시"
		CALLF MAKE_STR(V_NAME, "마리사에게 분실물을 보낸다")
	CASE "의뢰 보수 표시"
		CALLF MAKE_STR(V_NAME, @"%금액표시(500)%")
	CASE "의뢰 보고 불필요"
		CALLF MAKE_STR(V_NAME, "보고 불필요(보수 수리에는 보고 필수)")
	CASE "의뢰실행 커맨드 이름"
		CALLF MAKE_STR(V_NAME, "분실물을 보낸다")
		
	CASE "의뢰내용"
		CALLF MAKE_INT(V_NAME, MAKE_IRAI_DATA(11, "전령(인물)"))
	CASE "의뢰 서브"
	CASE "의뢰기한"
		CALLF MAKE_INT(V_NAME, 7)
	;발생시는 아니고 수탁시에 확정합니다
	CASE "의뢰 발생율"
	;이것은 다른 고유 의뢰와의 상대 확률 어째서 10%가 아닙니다
		CALLF MAKE_INT(V_NAME, 10)
	CASE "의뢰 발생 조건"
		SIF GET_MAPID(CFLAG:11:현재위치) != 0 && CAN_MEET(11)
			CALLF MAKE_INT(V_NAME, 1)
	CASE "의뢰 수탁 가능 조건"
	;수탁 가능은@COM_ABLE366도 확인
	;여기를 참조하는 것은 의뢰인을 TARGET로 하고 있는 때이므로 소안내로 좋아
		CALLF MAKE_INT(V_NAME, 1)
	CASE "의뢰실행 가능 조건"
	;실행 가능은@COM_ABLE367/@CAN_IRAI_SLOT_DO도 확인
	;소안내로 좋아
		CALLF MAKE_INT(V_NAME, 1)
	;성공/실패 처리는 CARRYOUT로 직접 쓴다
	;SOURCE나 ITEM 입수 따위, 내용이 복잡해서
	CASE "의뢰 소멸 조건"
	;30%로 소실
		SIF RAND:100 < 30
			CALLF MAKE_INT(V_NAME, 1)
	ENDSELECT

;ID103：연회용의 술
CASE 103
	SELECTCASE O_DATA
	CASE "의뢰명"
		CALLF MAKE_STR(V_NAME, "연회용의 술")
	CASE "의뢰내용 표시"
		CALLF MAKE_STR(V_NAME, "술의 납입(10개)")
	CASE "의뢰 보수 표시"
		CALLF MAKE_STR(V_NAME, "연회규모 업")
	CASE "의뢰실행 커맨드 이름"
		CALLF MAKE_STR(V_NAME, "술을 건네준다")
		
	;대상의 ITEM_ID가 선택 가능해서 우선 작업 분류에
	CASE "의뢰내용"
		CALLF MAKE_INT(V_NAME, MAKE_IRAI_DATA(0, "작업"))
	CASE "의뢰 서브"
	CASE "의뢰기한"
	;발생시는 아니고 수탁시에 확정합니다
	CASE "의뢰 발생율"
	;조건을 채우는 것이 드물다고 생각하므로 조금 비싸게 합시다
		CALLF MAKE_INT(V_NAME, 100)
	CASE "의뢰 발생 조건"
		SIF FLAG:연회개최플래그 == 1
			CALLF MAKE_INT(V_NAME, 1)
	CASE "의뢰 수탁 가능 조건"
	;수탁 가능은@COM_ABLE366도 확인
	;여기를 참조하는 것은 의뢰인을 TARGET로 하고 있는 때이므로 소안내로 좋아
		CALLF MAKE_INT(V_NAME, 1)
	CASE "의뢰실행 가능 조건"
	;실행 가능은@COM_ABLE367도 확인
		SIF MAX(ITEM:51, ITEM:52, ITEM:53) >= 10
			CALLF MAKE_INT(V_NAME, 1)
	;성공/실패 처리는 CARRYOUT로 직접 쓴다
	;SOURCE나 ITEM 입수 따위, 내용이 복잡해서
	CASE "의뢰 소멸 조건"
		SIF FLAG:연회개최플래그 == 1 && !DAY % 7
			CALLF MAKE_INT(V_NAME, 1)
	ENDSELECT
ENDSELECT



;고유 의뢰의 열매 처리용
;이 함수는 실행/성공/실패시의
;보수와 페널티와 지문만을 취급합니다
;각 캐릭터의 메시지는 다른 장소에서
@IRAI_고유1(CHARA, IRAI_ID, SCENE)
#DIM  CHARA
#DIM  IRAI_ID
#DIMS SCENE
#DIM  CLIENT_ID
CLIENT_ID = IRAI_ID_TO_CLIENT(IRAI_ID)
SELECTCASE STR_DATA_IRAI(IRAI_ID, "의뢰명", CLIENT_ID)
;개개의 의뢰명으로 분기
CASE "어깨 안마"
	SELECTCASE SCENE
	CASE "의뢰 조건 표시"
	;무엇인가 전용의 표시 정보를 마련하고 싶을 시용
	;수탁 끝난 의뢰 표시로 사용됩니다
	;
	;PRINT계만으로 SOURCE라든지는 넣으면 안 돼, WAIT도 없음으로
	;여기 이외의표시 항목은
	;PRINTFORML 　　　　　：
	;되고 있으므로 스페이스를 가지런히 하는 편이 보기에 좋습니다
	
	CASE "의뢰실행시"
	;의뢰실행시에는 RESULT가 의미를 가집니다
	;이 CASE에 한정해, RESULT가 의미를 가집니다
	;의뢰실행시의 RESULT에는 IRAI_CONST_RESULT()를 사용해 주세요
	;가능한 인수는"캔슬", "실행해 성공", "실행해 실패", "실행해 미해결"입니다
	;독자 처리를 가르치고 싶을 때는"실행해 미해결"로 유보하자 마자 해 주세요
	;
	;·실행시/성공 보고/실패 보고로 지문을 붙일 때는 모두 마지막에 WAIT 붙이는 편이 좋다
	;·다만, @CHANGE_CFLAG를 사용하면(자) 함수측에서 PRINTFORMW 해 WAIT가 들어간다
		SOURCE:환락 = 1000
		SOURCE:사랑 = 300
		SOURCE:노출 = 20
		DOWNBASE:기력 += 50
		DOWNBASE:MASTER:기력 += 50
		PRINTFORMW %마스터는% %CALLNAME:TARGET%의 어깨를 주물렀다
		;이것은 추가의 10분
		TIME += 10
		;4할의 확률 그렇지만과 해!분기
		IF RAND:100 < 60
			RETURN IRAI_CONST_RESULT("실행해 미해결")
		ELSE
			RETURN IRAI_CONST_RESULT("실행해 성공")
		ENDIF
	CASE "의뢰 성공시"
	;성공 보고시의 보수 등
		SOURCE:환락 += 1000
		CALL CHANGE_CFLAG(2, 1, 20)
		CALL CHANGE_CFLAG(4, 1, 5)
		CALL GET_ITEM("녹즙", 1, 2)
	CASE "의뢰 실패시"
	;실패 보고시의 처리
		CALL CHANGE_CFLAG(2, 1, -5)
		CALL CHANGE_CFLAG(4, 1, -3)
	ENDSELECT

CASE "마리사의 분실물"
	SELECTCASE SCENE
	CASE "의뢰 조건 표시"
	CASE "의뢰실행시"
		SOURCE:환락 = 500
		PRINTFORMW %마스터는% %CALLNAME:11%에게 잊은 물건을 건네주었다
		;시스템 메시지 다하고 호감도 변화
		;마지막 인수만 호감도가 변화
		CALL CHANGE_CFLAG(2, 11, 20)
		CALL CHANGE_CFLAG(4, 11, 10)
		RETURN IRAI_CONST_RESULT("실행해 성공")
	CASE "의뢰 성공시"
		SOURCE:TARGET:환락 += 1000
		;시스템 메시지 다하고 호감도 변화
		;마지막 인수만 호감도가 변화
		CALL CHANGE_CFLAG(2, TARGET, 20)
		;시스템 메시지 다하고 신뢰도 변화
		;마지막 인수만 신뢰도가 변화
		CALL CHANGE_CFLAG(4, TARGET, 10)
		CALL GET_MONEY_YEN(500, 2)
	CASE "의뢰 실패시"
		CALL CHANGE_CFLAG(2, TARGET, -10)
		CALL CHANGE_CFLAG(4, TARGET, -10)
	ENDSELECT

CASE "연회용의 술"
	SELECTCASE SCENE
	CASE "의뢰 조건 표시"
	CASE "의뢰실행시"
		PRINTL 어떤 것을 건네줄까?
		CALL 술일람표시(10)
		IF INRANGE(RESULT, 51, 53)
			PRINTFORMW %마스터는% %CALLNAME:TARGET%에게 술을 건네주었다
			ITEM:RESULT -= 10
			FLAG:연회차입 = RESULT
			RETURN IRAI_CONST_RESULT("실행해 성공")
		ELSE
			RETURN IRAI_CONST_RESULT("캔슬")
		ENDIF
	CASE "의뢰 성공시"
		;시스템 메시지 다하고 호감도 변화
		;마지막 인수만 호감도가 변화
		CALL CHANGE_CFLAG(2, TARGET, 50)
		;시스템 메시지 다하고 신뢰도 변화
		;마지막 인수만 신뢰도가 변화
		CALL CHANGE_CFLAG(4, TARGET, 20)
	CASE "의뢰 실패시"
		;시스템 메시지 다하고 호감도 변화
		;마지막 인수만 호감도가 변화
		CALL CHANGE_CFLAG(2, TARGET, -30)
		;시스템 메시지 다하고 신뢰도 변화
		;마지막 인수만 신뢰도가 변화
		CALL CHANGE_CFLAG(4, TARGET, -10)
	ENDSELECT

ENDSELECT



