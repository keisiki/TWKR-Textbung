	PRINTFORML ＜%STR_DATA_IRAI(IRAI_SLOT:CHK_SLOT, "의뢰명", CHARA)%＞
	PRINTFORMW 　→[%IRAI_SLOT_TO_ACTNAME(CHK_SLOT)%]
	CALL IRAI_APPLY(CHK_SLOT)
	SIF RESULT > 0
		CNT_DO ++
NEXT

