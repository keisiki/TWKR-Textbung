	SIF !CAN_IRAI_VISIT_HOME_CLIENT(CHARA, CHK_SLOT)
		CONTINUE
	PRINTFORML ＜%STR_DATA_IRAI(IRAI_SLOT:CHK_SLOT, "의뢰명", CHARA)%＞
	PRINTFORMW 　→의뢰 보고
	CALL IRAI_REPORT(CHARA)
	SIF RESULT > 0
