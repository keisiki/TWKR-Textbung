	CHARA = ARG
	통찰력 = 100
	CALLF CNT_SPLIT(GET_TASTE_ASSIBONUS(CHARA), LIST, CNT, NUM)
	FOR LOCAL, 0, NUM
		SELECTCASE LIST:LOCAL
		CASE "영험"
			SIF 통찰력 >= 3
				LOCALS += "신력이 담겨 있다。"
		CASE "행운"
