@고유의뢰15(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE ARG % 1000
;ID101：메이링에게 간식
CASE 101
	SELECTCASE O_DATA
	CASE "의뢰명"
		CALLF MAKE_STR(V_NAME, "메이링에게 간식")
	CASE "의뢰내용 표시"
		CALLF MAKE_STR(V_NAME, "메이링에게 간식을 건네준다")
	CASE "의뢰 보수 표시"
		CALLF MAKE_STR(V_NAME, @"%금액표시(1000)%")
	CASE "의뢰 보고 불필요"
		CALLF MAKE_STR(V_NAME, "보고 불필요(보고 없이 보수 수리 가능)")
	CASE "의뢰실행 커맨드 이름"
		CALLF MAKE_STR(V_NAME, "차입을 건네준다")
		
	CASE "의뢰내용"
		CALLF MAKE_INT(V_NAME, MAKE_IRAI_DATA([[메이링]], "전령(인물)"))
	CASE "의뢰 서브"
	CASE "의뢰기한"
	CASE "의뢰 발생율"
	;이것은 다른 고유 의뢰와의 상대 확률 어째서 10%가 아닙니다
		CALLF MAKE_INT(V_NAME, 10)
	CASE "의뢰 발생 조건"
		SIF CAN_MEET([[메이링]])
			CALLF MAKE_INT(V_NAME, 1)
	CASE "의뢰 수탁 가능 조건"
	;수탁 가능은@COM_ABLE366도 확인
	;여기를 참조하는 것은 의뢰인을 TARGET로 하고 있는 때이므로 소안내로 좋아
		IF !IS_WEEKDAY(DAY)
		ELSEIF !INRANGE(TIME / 60, 7, 11)
		ELSE
			CALLF MAKE_INT(V_NAME, 1)
		ENDIF
	CASE "의뢰실행 가능 조건"
	;실행 가능은@COM_ABLE367도 확인
		CALLF MAKE_INT(V_NAME, 1)
	;성공/실패 처리는 CARRYOUT로 직접 쓴다
	;SOURCE나 ITEM 입수 따위, 내용이 복잡해서
	CASE "의뢰 소멸 조건"
	;30%로 소실
		SIF RAND:100 < 30
			CALLF MAKE_INT(V_NAME, 1)
	ENDSELECT
ENDSELECT



;고유 의뢰의 설정용
;이 함수는 실행/성공/실패시의
;보수와 페널티와 지문만을 취급합니다
;각 캐릭터의 메시지는 다른 장소에서
@IRAI_고유15(CHARA, IRAI_ID, SCENE)
#DIM  CHARA
#DIM  IRAI_ID
#DIMS SCENE
#DIM  CLIENT_ID
CLIENT_ID = IRAI_ID_TO_CLIENT(IRAI_ID)
SELECTCASE STR_DATA_IRAI(IRAI_ID, "의뢰명", CLIENT_ID)
;개개의 의뢰명으로 분기
CASE "메이링에게 간식"
	SELECTCASE SCENE
	CASE "의뢰 조건 표시"
	;무엇인가 전용의 표시 정보를 마련하고 싶을 시용
	;수탁 끝난 의뢰 표시로 사용됩니다
	;
	;PRINT계만으로 SOURCE라든지는 넣으면 안 돼, WAIT도 없음으로
	;여기 이외의표시 항목은
	;PRINTFORML 　　　　　：
	;되고 있으므로 스페이스를 가지런히 하는 편이 보기에 좋습니다
	
	CASE "의뢰실행시"
	;이 CASE에 한정해, RESULT가 의미를 가집니다
	;의뢰실행시의 RESULT에는 IRAI_CONST_RESULT()를 사용해 주세요
	;가능한 인수는"캔슬", "실행해 성공", "실행해 실패", "실행해 미해결"입니다
	;독자 처리를 가르치고 싶을 때는"실행해 미해결"로 유보하자 마자 해 주세요
		SOURCE:환락 = 500
		PRINTFORMW %마스터는% %CALLNAME:TARGET%에게 %CALLNAME:15%의 간식을 건네주었다
		PRINTFORMW %타겟은% 기꺼이 받았다
		PRINTL
		CALL CHANGE_CFLAG(2, TARGET, 30)
		CALL CHANGE_CFLAG(4, TARGET, 15)
		TALENT:기분 = LIMIT(TALENT:기분 + 1, -1, 1)
		RETURN IRAI_CONST_RESULT("실행해 성공")
	CASE "의뢰 성공시"
	;성공 보고시의 보수 등
		CALL CHANGE_CFLAG(2, TARGET, 20)
		CALL CHANGE_CFLAG(4, TARGET, 10)
		CALL GET_MONEY_YEN(1000, 2)
	CASE "의뢰 보고 불필요"
	;달성 후에 보고를 하지 않았던 경우, 다소 줄인다
		PRINTFORML 의뢰를 달성 한 %CALLNAME:MASTER%의 방에 %조사처리(CALLNAME:CHARA,"으로")%부터의 답례%금액표시(1000)%이 도착했다
		CALL GET_MONEY_YEN(1000, 1)
		CALL CHANGE_CFLAG(2, CHARA, 15)
		CALL CHANGE_CFLAG(4, CHARA, 7)
	CASE "의뢰 실패시"
	;실패 보고시의 처리
	ENDSELECT
ENDSELECT
