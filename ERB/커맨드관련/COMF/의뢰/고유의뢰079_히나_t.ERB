@고유의뢰79(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE ARG % 1000
;ID101：감주 주세요
CASE 101
	SELECTCASE O_DATA
	CASE "의뢰명"
		CALLF MAKE_STR(V_NAME, "감주 주세요")
	CASE "의뢰내용 표시"
		CALLF MAKE_STR(V_NAME, "감주를 2개 납입한다")
	CASE "의뢰 보수 표시"
		CALLF MAKE_STR(V_NAME, @"%금액표시(1000)%")
	CASE "의뢰실행커맨드명"
		CALLF MAKE_STR(V_NAME, "감주를 건네준다")
		
	CASE "의뢰내용"
		CALLF MAKE_INT(V_NAME, MAKE_IRAI_DATA(GETNUM(ITEM, "감주"), "조달"))
	CASE "의뢰 서브"
		CALLF MAKE_INT(V_NAME, 2)
	CASE "의뢰기한"
		CALLF MAKE_INT(V_NAME, 3)
	CASE "의뢰 발생율"
	;이것은 다른 고유 의뢰와의 상대 확률 어째서 10%가 아닙니다
		CALLF MAKE_INT(V_NAME, 10)
	CASE "의뢰 발생 조건"
		SIF DAY:2 != 2
			CALLF MAKE_INT(V_NAME, 1)
	CASE "의뢰 수탁 가능 조건"
	;수탁 가능은@COM_ABLE366도 확인
	;여기를 참조하는 것은 의뢰인을 TARGET로 하고 있는 때이므로 소안내로 좋아
		CALLF MAKE_INT(V_NAME, 1)
	CASE "의뢰실행 가능 조건"
	;실행 가능은@COM_ABLE367도 확인
		CALLF MAKE_INT(V_NAME, 1)
	;성공/실패 처리는 CARRYOUT로 직접 쓴다
	;SOURCE나 ITEM 입수 따위, 내용이 복잡해서
	CASE "의뢰 소멸 조건"
	;30%로 소실
		SIF RAND:100 < 30 || DAY:2 == 2
			CALLF MAKE_INT(V_NAME, 1)
	ENDSELECT
ENDSELECT



;고유 의뢰의 설정용
;이 함수는 실행/성공/실패시의
;보수와 페널티와 지문만을 취급합니다
;각 캐릭터의 메시지는 다른 장소에서
@IRAI_고유79(CHARA, IRAI_ID, SCENE)
#DIM  CHARA
#DIM  IRAI_ID
#DIMS SCENE
#DIM  CLIENT_ID
CLIENT_ID = IRAI_ID_TO_CLIENT(IRAI_ID)
SELECTCASE STR_DATA_IRAI(IRAI_ID, "의뢰명", CLIENT_ID)
;개개의 의뢰명으로 분기
CASE "감주 주세요"
	SELECTCASE SCENE
	CASE "의뢰 조건 표시"
	;무엇인가 전용의 표시 정보를 마련하고 싶을 시용
	;수탁 끝난 의뢰 표시로 사용됩니다
	;
	;PRINT계만으로 SOURCE라든지는 넣으면 안 돼, WAIT도 없음으로
	;여기 이외의표시 항목은
	;PRINTFORML 　　　　　：
	;되고 있으므로 스페이스를 가지런히 하는 편이 보기에 좋습니다
	
	CASE "의뢰실행시"
	;이 CASE에 한정해, RESULT가 의미를 가집니다
	;의뢰실행시의 RESULT에는 IRAI_CONST_RESULT()를 사용해 주세요
	;가능한 인수는"캔슬", "실행해 성공", "실행해 실패", "실행해 미해결"입니다
	;독자 처리를 가르치고 싶을 때는"실행해 미해결"로 유보하자 마자 해 주세요
		SOURCE:TARGET:환락 += 500
		SOURCE:MASTER:노출 += 100
		CALL LOST_ITEM("감주", 2, 2)
		PRINTFORMW %마스터가% %CALLNAME:TARGET%에게 감주를 건네주자, 그녀의 표정이 조금 누그러졌다
		PRINTFORML 후우 후우 하면서 감주를 마시는 %타겟이% 혀를 데지 않을까 하고 주시하고 있자
		PRINTFORMW 그 시선을 알아차린 %타겟은% 멋쩍은 듯이 부끄러워했다
		PRINTFORML 
		TIME += 20
		RETURN IRAI_CONST_RESULT("실행해 성공")
	CASE "의뢰 성공시"
	;성공 보고시의 보수 등
		CALL CHANGE_CFLAG(2, TARGET, 30)
		CALL CHANGE_CFLAG(4, TARGET, 20)
		TALENT:기분 = LIMIT(TALENT:기분 + 1, -1, 1)
		CALL GET_MONEY_YEN(1000, 2)
	CASE "의뢰 실패시"
	;실패 보고시의 처리
		CALL CHANGE_CFLAG(2, TARGET, -10)
		CALL CHANGE_CFLAG(4, TARGET, -10)
	ENDSELECT
ENDSELECT
