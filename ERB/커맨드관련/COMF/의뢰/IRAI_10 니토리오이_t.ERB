[SKIPSTART]
;--------------------------------------------
;기본 조건 여러 가지(51)
;--------------------------------------------
@IRAI_SETTING_10

IRAI_SETTING_DEADLINE:10 = 7
IRAI_SETTING_TARGET:10 = 51
IRAI_SETTING_CLIENT:10 = 51

IRAI_SETTING_COMMANDNAME:10 = 오이를 납입


;--------------------------------------------
;의뢰 발생시의 메시지
;--------------------------------------------
@IRAI_INITIALMESSAGE_10

PRINTFORML 의뢰내용：오이를 납입한다
PRINTFORML 보수　　：\\1000

;--------------------------------------------
;의뢰실행시의 메시지나 소스등의 처리
;--------------------------------------------
@IRAI_CARRYOUT_10
SOURCE:TARGET:환락 += 500
PRINTFORMW %마스터는% %CALLNAME:TARGET%에 오이를 납입했다
PRINTFORML 
ITEM:오이 -= 1

;--------------------------------------------
;의뢰 실패시의 메시지나 소스등의 처리
;--------------------------------------------
@IRAI_FAILED_10
CALL CHANGE_CFLAG(2, TARGET,-10)
CALL CHANGE_CFLAG(4, TARGET,-10)
TALENT:기분 = LIMIT(TALENT:기분 - 1, -1, 1)
;--------------------------------------------
;의뢰 달성 때의 메시지나 소스등의 처리
;--------------------------------------------
@IRAI_SUCCESS_10
MONEY += 1000
CALL CHANGE_CFLAG(2, TARGET, 30)
CALL CHANGE_CFLAG(4, TARGET, 20)
TALENT:기분 = LIMIT(TALENT:기분 + 1, -1, 1)
;--------------------------------------------
;의뢰실행 조건
;--------------------------------------------
@IRAI_ACTABLE_10
SIF SHIRAHU(TARGET) == 1 && ITEM:오이
	RETURN 1

;--------------------------------------------
;의뢰 발생 조건
;--------------------------------------------
@IRAI_HAPPEN_10
SIF !RAND:12
	RETURN 1

;--------------------------------------------
;의뢰 소멸 조건
;--------------------------------------------
@IRAI_VANISH_10
SIF !RAND:5
	RETURN 1
[SKIPEND]
