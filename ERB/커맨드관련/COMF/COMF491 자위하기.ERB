;----------------------
;491:オナニーする
;----------------------
;練習に作ってみた簡易オナニー
@COM491
;P持ちでかつ精力か勃起が0だとシコれない。無勃起でイケる人はイケるけど当座は発散目的ということで
IF TALENT:PLAYER:2 != 1 && BASE:MASTER:발기 <=1
	PRINTFORMW 무스코가 풀이 죽어 힘이 나지 않는다
	RETURN -1

ELSEIF TALENT:PLAYER:2 != 1 &&  BASE:MASTER:정력 <=1
	PRINTFORMW 총알 조각으로 의지가 나오지 않는다
	RETURN -1
	
ELSE
	PRINTFORML %마스터는% 적당한 그늘을 찾아내 깨끗이 하기로 했다

ENDIF

;-------------------------------------------------
;COM別FLAGの設定(日常系317,腰を動かすから流用）
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER

CSTR:PLAYER:10 += @"{PLAYER}/"
;TCVAR:2 射精箇所フラグ（-1=コンドーム 1=膣内 2=アナル 3=手淫 4=口淫 5=パイズリ 6=素股 7=足コキ 8=体表 9=アナル奉仕 10=道具 11=触手 12=Ａ責め 13=Ｖ責め）
TCVAR:PLAYER:2 = 3
;強度
TCVAR:PLAYER:4 = 5000 + ABL:손가락 * 100

CALL 몸사용하기("C",1)

;-------------------------------------------------
;ソース追加処理。
;-------------------------------------------------
;消費体力、気力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 30

ELSE

	DOWNBASE:0 += 200
	DOWNBASE:1 += 300
	
;精力が減少
;	SIF TALENT:PLAYER:2 != 1
;		BASE:MASTER:정력 -= 50

ENDIF
;勃起が減少
;SIF TALENT:PLAYER:2 != 1
;BASE:MASTER:발기 -=100



;先に時間経過
SIF FLAG:70 == 0
	TIME += 20

;快楽(313,胸愛撫から流用）

	SOURCE:0 = 1000
	IF ABL:PLAYER:손가락 >= 4
		SOURCE:0 += ABL:PLAYER:손가락 * 100
	ELSE
		SOURCE:0 += ABL:PLAYER:손가락 * 500
	ENDIF
	SOURCE:20 = 100
	SOURCE:15 = 50
	SOURCE:17 = 70

;各種経験
EXP:PLAYER:0 += 1
;EXP:PLAYER:10 += 1
;EXP:PLAYER:5 += 1
EXP:PLAYER:22 += 1
EXP:PLAYER:24 += 1

;P持ちなら射精経験
;SIF TALENT:PLAYER:2 != 1
;	EXP:PLAYER:11 += 1

RETURN 1

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;あなたの指にあなたのPかVの汚れが移動
;ふたなりなら両方

IF TALENT:PLAYER:2 ==1
	STAIN:PLAYER:1 |= STAIN:PLAYER:3
	
ELSEIF TALENT:PLAYER:2 ==2
	STAIN:PLAYER:1 |= STAIN:PLAYER:2
	
ELSE
	STAIN:PLAYER:1 |= STAIN:PLAYER:2
	STAIN:PLAYER:1 |= STAIN:PLAYER:3

ENDIF

;-------------------------------------------------
;実行判定。80行目までと84行目はERB700からコピペ
;-------------------------------------------------
@COM_ABLE491
;目撃者がいると駄目
SIF TARGET > 0 && !FLAG:70
	RETURN 0
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(491)
	RETURN RESULT
;気力0
SIF BASE:MASTER:기력 <= 0
	RETURN 0
SIF CFLAG:MASTER:지금바쁨
	RETURN 0

RETURN 1


