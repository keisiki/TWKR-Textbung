;-------------------------------------------------
;애널애무
;애무계 커맨드, 레벨 2
;-------------------------------------------------
@COM5
;-------------------------------------------------
;COM별 FLAG의 설정
;-------------------------------------------------
;행위자
TCVAR:116 = PLAYER
;봉사 쾌락
TCVAR:PLAYER:108 = 1

CSTR:TARGET:10 += @"{PLAYER}/"
;TCVAR:2 사정장소 플래그(-1=콘돔 1=질내 2=애널 3=수음 4=펠라티오 5=파이즈리 6=가랑이 7=풋잡 8=체표 9=애널 봉사 10=도구 11=촉수 12=A고문 13=V 꾸짖고)
TCVAR:TARGET:2 = 12
;강도
TCVAR:TARGET:4 = 700

;-------------------------------------------------
;소스 추가 처리
;-------------------------------------------------
;소비 체력, 기력
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 50
	SOURCE:PLAYER:성행동 = 5
	SOURCE:쾌A = 100
	SOURCE:고통 = 50

ELSE

	DOWNBASE:체력 += 40
	DOWNBASE:기력 += 100

	SOURCE:PLAYER:성행동 = 5
	SOURCE:쾌A = 100
	SOURCE:고통 = 100
	SOURCE:굴종 = 100
	SOURCE:일탈 = 80
	SOURCE:반감 = 60

	SIF TALENT:PLAYER:능숙한손가락
		SOURCE:쾌A += 20
	;-------------------------------------------------
	;특수소스처리
	;-------------------------------------------------
	;억압, 저항 소유에는, 억울소스 추가
	SIF TALENT:자기애 < 0 || TALENT:저항
		SOURCE:울굴 += 100
ENDIF
;A에의 고통은 먼저 처리해 둔다
CALL PAIN_CHECK_A(TARGET)

;-------------------------------------------------
;더러움의 처리
;-------------------------------------------------
;노예의 A⇔조교자의 손가락의 더러움이 이동
STAIN:PLAYER:1 |= STAIN:4
STAIN:PLAYER:1 |= STAIN:7
STAIN:4 |= STAIN:PLAYER:1
STAIN:7 |= STAIN:PLAYER:1
;-------------------------------------------------
;경험의 처리
;-------------------------------------------------
;동성애 레즈비언이라면 반환값 1 동성애자라면 반환값 2
IF FLAG:70 == 1
	IF HETEROSEX(TARGET, PLAYER)
		EXP:PLAYER:(50 + HETEROSEX(TARGET, PLAYER)) += 2
	ENDIF
ELSE
	IF HETEROSEX(TARGET, PLAYER)
		EXP:(50 + HETEROSEX(TARGET, PLAYER)) += 2
		EXP:PLAYER:(50 + HETEROSEX(TARGET, PLAYER)) += 2
	ENDIF
ENDIF
EXP:PLAYER:수음경험 ++
RETURN 1

;-------------------------------------------------
;실행 판정
;-------------------------------------------------
@COM_ABLE5
;애널애무 실행 판정
SIF !TFLAG:100
	RETURN 0

;일괄관리
SIF GLOBAL_COMABLE(5)
	RETURN RESULT
;시간정지중은 허가
IF FLAG:70 != 1
	;윤활 부족해, 순종 3 이하·레즈끼 3 이하의 ASSI의 경우 애널애무는 할 수 없다(새드라면 OK)
	IF PALAM:윤활 < PALAMLV:2 && ASSIPLAY
		SIF (ABL:ASSI:순종 <= 3 || ABL:ASSI:레즈끼 <= 3) && TALENT:ASSI:새드 == 0
			RETURN 0
	ENDIF
ENDIF

;하반신착의
SIF TEQUIP:0 & 4
	RETURN 0
RETURN 1

