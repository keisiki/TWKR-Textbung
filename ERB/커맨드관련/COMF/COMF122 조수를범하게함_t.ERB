;실행 판정
;-------------------------------------------------
@COM_ABLE122
;조수를 범하게 하는 실행 판정
SIF !TFLAG:100
	RETURN 0
;일괄관리
SIF GLOBAL_COMABLE(122)
	RETURN RESULT
;조수가 아니면 안 돼
SIF PLAYER != ASSI
	RETURN 0
;조수가 남자라면 안 돼
SIF !(TALENT:ASSI:2 & 1)
	RETURN 0
;체격 차이가 있는 경우는 주인이 금단의지식 소유가 아니면 안 돼
SIF ABS(TALENT:체형 - TALENT:ASSI:체형) > 2 && TALENT:MASTER:금단의지식 == 0
	RETURN 0
;남자, 반인반요, 후타나리, 혹은 페니스밴드가 없으면 안 돼
SIF !(HAS_PENIS(TARGET)) && ITEM:PBAND == 0
	RETURN 0
;오나홀사용중은 안 돼
SIF TEQUIP:12
	RETURN 0
;하반신속옷착의
SIF TEQUIP:0 & 4
	RETURN 0
;목욕탕플레이중은 플레이매트가 없으면 안 돼
IF TEQUIP:31
	SIF ITEM:20 == 0 && NOITEM == 0
		RETURN 0
ENDIF
;정지 중에는 불가
SIF FLAG:70 == 1
	RETURN 0
RETURN 1

