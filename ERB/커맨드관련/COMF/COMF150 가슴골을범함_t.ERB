@COM_ABLE150
;가슴의 골짜기를 범하는 실행 판정
SIF !TFLAG:100
	RETURN 0
SIF GLOBAL_COMABLE(150)
	RETURN RESULT
;조교자가 남자나 반인반요인가 후타나리이 아니면 안 돼
SIF !(TALENT:PLAYER:2 & 2)
	RETURN 0
;남자라면 안 돼
SIF !(TALENT:2 & 1)
	RETURN 0
;시간정지중은 허가
IF FLAG:70 != 1
	;[절벽]이라면 불가
	SIF TALENT:가슴사이즈 == -2
		RETURN 0
	;[폭유]라면 기교 LV1 이상,[거유]가 아니면 기교 3이상,[작은 가슴]이라면 기교 4이상 필요
	SIF TALENT:가슴사이즈 + ABL:PLAYER:기교 < 3
		RETURN 0
	;밧줄 사용 중에는 불가
	SIF TEQUIP:밧줄
		RETURN 0
ENDIF
;[폭유]라면 기교 LV1 이상,[거유]가 아니면 기교 3이상,[작은 가슴]이라면 기교 4이상 필요
SIF TALENT:가슴사이즈 + ABL:PLAYER:기교 < 3
	RETURN 0
;상반신윗도리착의 하고 있어 상반신속옷탈의 가능과 레오타드입지 않았다
IF (EQUIP:상반신속옷1 || EQUIP:보디슈트 || EQUIP:상반신윗도리1 || EQUIP:상반신윗도리2 || EQUIP:원피스 || EQUIP:기모노)
	IF (!EQUIP:상반신속옷2 || !EQUIP:레오타드)
		;상반신착의 판정
		IF (TEQUIP:1 & 2) && TEQUIP:3 == 0
			RETURN 0
		ENDIF
	ELSE
		;상반신착의 판정
		IF (TEQUIP:1 & 2) && TEQUIP:3 == 0
			RETURN 0
		ENDIF
	ENDIF
ENDIF

RETURN 1

