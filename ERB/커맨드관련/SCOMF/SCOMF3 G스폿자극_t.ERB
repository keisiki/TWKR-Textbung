;-------------------------------------------------
;G 스폿 자극
;애무계 파생 커맨드
;-------------------------------------------------
@SCOM3
;-------------------------------------------------
;COM별 FLAG의 설정
;-------------------------------------------------
;행위자
TCVAR:116 = PLAYER

CSTR:TARGET:10 += @"{PLAYER}/"
;TCVAR:2 사정장소 플래그(-1=콘돔 1=질내 2=애널 3=수음 4=펠라티오 5=파이즈리 6=가랑이 7=풋잡 8=체표 9=애널 봉사 10=도구 11=촉수 12=A고문 13=V 꾸짖고)
TCVAR:TARGET:2 = 13
;강도
TCVAR:TARGET:4 = 1300

;봉사 쾌락 플래그
TCVAR:PLAYER:108 = 1

;파과 억제
TFLAG:2 = 1
;-------------------------------------------------
;소스 추가 처리
;-------------------------------------------------
;소비 체력, 기력
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 15

	SOURCE:쾌V = 180
	SOURCE:고통 = 10
	SOURCE:액체 = 50

	;처녀였던 경우는, 고통의 소스와 반발의 소스를 추가한다
	IF TALENT:처녀 == 1
		SOURCE:고통 += 1000
	ENDIF

	;재생 처녀였던 경우는, 고통의 소스와 반발의 소스를 추가한다
	IF TALENT:처녀 == 2
		SOURCE:고통 += 250
	ENDIF

ELSE

	DOWNBASE:체력 += 50
	DOWNBASE:기력 += 80

	SOURCE:쾌V = 180
	SOURCE:고통 = 20
	SOURCE:액체 = 50
	SOURCE:노출 = 80
	SOURCE:일탈 = 100
	SOURCE:반감 = 100


	;-------------------------------------------------
	;특수소스처리
	;-------------------------------------------------
	;억압, 저항 소유에는, 억울소스 추가
	SIF TALENT:자기애 < 0 || TALENT:저항
		SOURCE:울굴 += 100

	;처녀였던 경우는, 고통의 소스와 반발의 소스를 추가한다
	IF TALENT:처녀 == 1
		SOURCE:고통 += 2000
		SOURCE:반감 += 3000
	ENDIF

	;재생 처녀였던 경우는, 고통의 소스와 반발의 소스를 추가한다
	IF TALENT:처녀 == 2
		SOURCE:고통 += 500
		SOURCE:반감 += 1000
	ENDIF
ENDIF
;V에의 고통은 먼저 처리해 둔다
CALL PAIN_CHECK_V(TARGET)

;-------------------------------------------------
;더러움의 처리
;-------------------------------------------------
;질내에 파과의 피의 더러움을 부가
SIF TALENT:처녀 && TALENT:처녀 != -1
	STAIN:6 |= 64
;노예의 질내⇔조교자의 손가락의 더러움이 이동
	STAIN:6 |= STAIN:PLAYER:1
	STAIN:PLAYER:1 |= STAIN:6

;-------------------------------------------------
;경험의 처리
;-------------------------------------------------
;V경험
EXP:V경험 += 1
;동성애 레즈비언이라면 반환값 1 동성애자라면 반환값 2
IF HETEROSEX(TARGET, PLAYER)
	EXP:(50 + HETEROSEX(TARGET, PLAYER)) += 3
	EXP:PLAYER:(50 + HETEROSEX(TARGET, PLAYER)) += 3
ENDIF

RETURN 1

;-------------------------------------------------
;선택 가능 판정
;-------------------------------------------------
@COM_ABLE503
;G 스폿 자극
SIF !TFLAG:100
	RETURN 0
;일괄관리
SIF GLOBAL_COMABLE(503)
	RETURN RESULT
;주인의 기교가 3 이하는 안 돼
SIF ABL:PLAYER:기교 < 3
	RETURN 0
;남자라면 안 돼
SIF  !(TALENT:2 & 1)
	RETURN 0
;윤활 부족해, 순종 3 이하·레즈끼 3 이하의 ASSI의 경우손가락 삽입는 할 수 없다(새드라면 OK)
IF PALAM:윤활 < PALAMLV:2 && ASSIPLAY
	SIF (ABL:ASSI:순종 <= 3 || ABL:ASSI:레즈끼 <= 3) && TALENT:ASSI:새드 == 0
		RETURN 0
ENDIF

;하반신착의
SIF TEQUIP:0 & 4
	RETURN 0
RETURN 1

