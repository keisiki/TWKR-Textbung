@COM_ABLE580
SIF !TFLAG:100
	RETURN 0
;일괄관리
SIF GLOBAL_COMABLE(580)
	RETURN RESULT
;데이트중이 아니면 안 돼
SIF !CFLAG:MASTER:데이트중 || !CFLAG:TARGET:데이트중
	RETURN 0
;홀로 여행은 안 돼
SIF !TARGET
	RETURN 0
;데이트 도중 이외
SIF !TFLAG:데이트도중
	RETURN 0
;수면중
SIF CFLAG:수면
	RETURN 0
RETURN 1
