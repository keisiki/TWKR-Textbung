	CALLF MAKE_STR(V_NAME, "파자마(바지) 세트")

CASE "평상복：액세서리"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("액세서리", "안경"))
CASE "평상복：모자"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("모자", "리본"))
CASE "평상복：외투"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("외투", "백의"))
CASE "평상복：신발"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("신발", "신발"))
