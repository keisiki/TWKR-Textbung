@CHARAMOVE_DATA_75(ARG, ARG:2)
LOCAL = 75
SELECTCASE ARG
	;연동설정 (RETURN=의존하는 캐릭터, RESULT:1~3=대등하게 연동되는 캐릭터)
	CASE 1
	;특수생활시간 설정 (CFLAG:LOCAL:생활시간보정 을 설정)
	CASE 3
	;이동경향 (±~10=가기 쉽다/가기 어렵다, -100=가지 않는다)
	CASE 4
		SELECTCASE ARG:2
			;몽환관には行かない
			CASE P450몽환관현관 TO P465몽환관홀
				RETURN -100
			;영원정の奥には行かない
			CASE P405조제실, P407복도 TO P430지하실
				RETURN -100
			;他人の家には入らない
			CASE P432카게로의집, P439라바의집, P443미스티아의집, P445모코우의집
				RETURN -100
			;自宅,무명의언덕,태양의밭,몽환관庭によく居る
			CASE P437메디슨의집, P436무명의언덕, P438태양의밭, P466몽환관정원
				RETURN 5
		ENDSELECT
	;출현장소
	CASE 7
		SELECTCASE ARG:2
			CASE 죽림입구, 미혹의샛길, 사각의죽림, 영원정, 무명의언덕, 태양의밭
				RETURN 1
			CASE 숲의입구, 고목의큰나무, 인형양관, 재고의길, 무연총
				RETURN 1
			CASE 중유의길, 삼도천
				RETURN 1
		ENDSELECT
	;인력설정 (CFLAG:LOCAL:인력점을 설정한다)
	CASE 8
ENDSELECT

@EXIST_캐릭터데이터75
#LOCALSIZE 1
#LOCALSSIZE 1

@캐릭터데이터75(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "통칭"
	CALLF MAKE_STR(V_NAME, "메디슨")
;여기서부터 의상 설정
CASE "오늘의 파자마"
	CALLF MAKE_STR(V_NAME, "파자마(바지) 세트")

CASE "평상복：모자"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("모자", "리본"))
CASE "평상복：신발"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("신발", "신발"))
CASE "평상복：양말"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("양말", "양말"))
CASE "평상복：치마"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("치마", "치마"))
CASE "평상복：상반신윗도리2"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("상반신윗도리2", "블라우스"))

CASE "고유 속옷 형용사"
	CALLF MAKE_STR(V_NAME, "다분히 독이 베어 있는")
CASE "고유 하반신속옷명"
	CALLF MAKE_STR(V_NAME, "보라색으로 물들인 팬티")
CASE "고유 상반신속옷"
	CALLF MAKE_INT(V_NAME, 1)
CASE "고유 상반신속옷명"
	CALLF MAKE_STR(V_NAME, "보라색으로 물들인 캐미숄")
CASE "고유 속옷 착용 조건"
	SIF !RAND:(1 + (2 * 승부속옷판정([[메디슨]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "고유 속옷 비쳐보이는(앞)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "고유 속옷 비쳐보이는(뒤)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "고유 속옷 옷감 두께"
	CALLF MAKE_INT(V_NAME, 2)

;요리 관련
CASE "요리：좋아하는 맛"
	CALLF MAKE_STR(V_NAME, "알/우유/국물/파이/시원한/호화/품위있는/선명한/푹신푹신/영장/단/단/시큼한/시큼한/")
CASE "요리：싫어하는 맛"
	CALLF MAKE_STR(V_NAME, "신력/매운/매운/푸짐/푸짐/" + "개구리/벌레고기/스파이스/" * 3)
CASE "요리：조수 효과"
	CALLF MAKE_STR(V_NAME, "자극적/")
;선물 관련
CASE "감성：좋아함"
	CALLF MAKE_STR(V_NAME, "보랏빛/혼돈/귀여운/서양풍/불가사의/" + "독/장식/" * 3 + "은방울꽃의/독의/약병/" * 5)
CASE "감성：싫어함"
	CALLF MAKE_STR(V_NAME, "질서/일본풍/지적/" + "금속/생체품/손목호구/담뱃대/기계/" * 3)
ENDSELECT

