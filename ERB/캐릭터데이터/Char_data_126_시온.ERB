	CALLF MAKE_INT(V_NAME, 2)

;요리 관련
CASE "요리：좋아하는 맛"
	CALLF MAKE_STR(V_NAME, "고급식재/고기 요리/버섯/야채/일식/면류/단/푸짐/정키/농후/호화/선명한/가정적/푹신푹신/" + "짠/" * 3)
