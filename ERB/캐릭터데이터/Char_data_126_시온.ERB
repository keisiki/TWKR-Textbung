	CALLF MAKE_INT(V_NAME, CLOTHES_ID("외투", "파카"))
CASE "평상복：치마"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("치마", "치마"))
CASE "평상복：그외3"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("그외1", "브레슬릿"))

CASE "고유 속옷 형용사"
	CALLF MAKE_STR(V_NAME, "이미 속옷은 아닌")
