	CALLF MAKE_INT(V_NAME, CLOTHES_ID("양말", "양말"))	

CASE "고유 속옷 형용사"
	;CALLF MAKE_STR(V_NAME, "that are somehow real")
	CALLF MAKE_STR(V_NAME, "왠지 있을 법한")
CASE "고유 하반신속옷명"
	;CALLF MAKE_STR(V_NAME, "make-believe panties")
	CALLF MAKE_STR(V_NAME, "눈속임의 팬티")
CASE "고유 상반신속옷"
	CALLF MAKE_INT(V_NAME, 1)
CASE "고유 상반신속옷명"
	;CALLF MAKE_STR(V_NAME, "imaginary bra")
	CALLF MAKE_STR(V_NAME, "상상의 브라")
CASE "고유 속옷 착용 조건"
	SIF !RAND:(3 - (2 * 승부속옷판정([[코토히메]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "고유 속옷 비쳐보이는(앞)"
	CALLF MAKE_INT(V_NAME, 0)
CASE "고유 속옷 비쳐보이는(뒤)"
	CALLF MAKE_INT(V_NAME, 0)
CASE "고유 속옷 옷감 두께"
	CALLF MAKE_INT(V_NAME, 3)

;요리 관련
CASE "요리：좋아하는 맛"
	CALLF MAKE_STR(V_NAME, "정묘/" * 5 + "푹신푹신/" * 2 +  "파이/" * 2 + "사각사각/" * 3 + "튀겨짐/" * 5 + "짠/" * 5 + "현란/" * 2 + "고급식재/" * 10)
CASE "요리：싫어하는 맛"
	CALLF MAKE_STR(V_NAME, "이파리/" * 2 + "시큼한/" * 5 + "과일/" * 3 + "매운/" * 8 + "싸구려식재/" * 10)
CASE "요리：조수 효과"
	CALLF MAKE_STR(V_NAME, "정묘/불가사의/특기요리＊영장＊/")
;선물 관련
CASE "감성：좋아함"
	CALLF MAKE_STR(V_NAME, "기묘/고급/일본풍의/병적으로 귀여운/그로테스크/귀여운/멋쟁이/법구/스틱/촌스러운/고물의/낡은/조잡한/부서진/비뚤어진/모조/녹슨/망가진/저주받은/저주의/" + "보랏빛/수갑/" * 3 + "질서/매니악/탄환/" * 5)
CASE "감성：싫어함"
	CALLF MAKE_STR(V_NAME, "혼돈/심플/화려/장난감/" + "싸구려/" * 3 + "요력/" * 10)
ENDSELECT

