	CALLF MAKE_STR(V_NAME, "매운/매운/그로테스크/그로테스크/그로테스크/수수께끼 요리/수수께끼 요리/수수께끼 요리/")
CASE "요리：조수 효과"
	CALLF MAKE_STR(V_NAME, "진한 맛/특기요리＊가정적＊/")
;선물 관련
CASE "감성：좋아함"
	CALLF MAKE_STR(V_NAME, "초록빛/근사함/팝/화려/" + "파워풀/음악/" * 3 + "개의/산의/경전/" * 5)
CASE "감성：싫어함"
	CALLF MAKE_STR(V_NAME, "시크/위엄/지적/" + "어둠/" * 3)
ENDSELECT

