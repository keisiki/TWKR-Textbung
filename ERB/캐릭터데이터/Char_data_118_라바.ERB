@CHARAMOVE_DATA_118(ARG, ARG:2)
LOCAL = 118
SELECTCASE ARG
	;연동설정 (RETURN=의존하는 캐릭터, RESULT:1~3=대등하게 연동되는 캐릭터)
	CASE 1
		;まれに連動
		SIF CFLAG:LOCAL:오늘의운세 % 16 == 0
			RETURN [[서니]]
	;특수생활시간 설정 (CFLAG:LOCAL:생활시간보정 을 설정)
	CASE 3
	;이동경향 (±~10=가기 쉽다/가기 어렵다, -100=가지 않는다)
	CASE 4
		SELECTCASE ARG:2
			;三妖精宅内に行きやすい
			CASE P27삼요정의집・객실 TO P34스타방
				RETURN 5
			;몽환관には行かない
			CASE P450몽환관현관 TO P465몽환관홀
				RETURN -100
			;영원정の奥には行かない
			CASE P405조제실, P407복도 TO P430지하실
				RETURN -100
			;他人の家には入らない
			CASE P432카게로의집, P437메디슨의집, P443미스티아의집, P445모코우의집
				RETURN -100
			;自宅,무명의언덕,태양의밭,몽환관庭によく居る
			CASE P439라바의집, P436무명의언덕, P438태양의밭, P466몽환관정원
				RETURN 5
		ENDSELECT
	;출현장소
	CASE 7
		SELECTCASE ARG:2
			CASE 안개의호수, 얼음집, 정문
				;冬は行かない
				SIF DAY:2 != 4
					RETURN 1
			CASE 숲의입구, 고목의큰나무, 재고의길, 무연총
				RETURN 1
			CASE 무명의언덕, 태양의밭
				RETURN 1
			CASE 요정의큰나무
				;冬は行かない
				SIF DAY:2 != 4
					RETURN 1
		ENDSELECT
	;인력설정 (CFLAG:LOCAL:인력점을 설정한다)
	CASE 8
ENDSELECT

