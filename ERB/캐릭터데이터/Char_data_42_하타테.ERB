@CHARAMOVE_DATA_42(ARG, ARG:2)
LOCAL = 42
SELECTCASE ARG
	;연동설정 (RETURN=의존하는 캐릭터, RESULT:1~3=대등하게 연동되는 캐릭터)
	CASE 1
	;특수생활시간 설정 (CFLAG:LOCAL:생활시간보정 을 설정)
	CASE 3
	;이동경향 (±~10=가기 쉽다/가기 어렵다, -100=가지 않는다)
	CASE 4
		SELECTCASE ARG:2
			;천계には行かない
			CASE P830현운해 TO P842히나나위저택헛간
				RETURN -100
			;私室やお風呂は入らない
			CASE P817카나코방, P818스와코방, P820사나에방
				RETURN -100
			CASE P851쿠다카의오두막, P852코마쿠사의오두막, P853미스마루의오두막, P824화장실, P825목욕탕
				RETURN -100
			;自宅に引きこもりがち
			CASE P809하타테댁
				RETURN 5
			;홍룡동は無理
			CASE P855홍룡동, P856모모요의거처
				RETURN -100
		ENDSELECT
	;출현장소
	CASE 7
		SELECTCASE ARG:2
			CASE 광장, 상가거리, 술집소로
				RETURN 1
			CASE 정문, 객실 , 식당, 대도서관
				RETURN 1
			CASE 산록의수해, 현무의늪, 큰두꺼비의연못
				RETURN 1
			CASE 구천의폭포, 절경의언덕, 산의호수, 모리야신사경내
				RETURN 1
		ENDSELECT
	;인력설정 (CFLAG:LOCAL:인력점을 설정한다)
	CASE 8
ENDSELECT

