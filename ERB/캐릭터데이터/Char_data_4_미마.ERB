@CHARAMOVE_DATA_4(ARG, ARG:2)
LOCAL = 4
SELECTCASE ARG
	;연동설정 (RETURN=의존하는 캐릭터, RESULT:1~3=대등하게 연동되는 캐릭터)
	CASE 1
	;특수생활시간 설정 (CFLAG:LOCAL:생활시간보정 을 설정)
	CASE 3
	;移動傾向
	CASE 4
		SELECTCASE ARG:2
			;よく居る
			CASE P11마당
				RETURN 5
			;他所
			CASE P27삼요정의집・객실 TO P35삼요정의집・지하실, P39몽환유적・욕실, P56아운의거처
				RETURN -100
		ENDSELECT
	;출현장소
	CASE 7
		SELECTCASE ARG:2
			CASE 벚꽃길토리이, 신사경내, 신사본당, 신사툇마루, 몽환유적
				RETURN 1
			CASE 광장, 상가거리, 술집소로
				RETURN 1
			CASE 숲의입구, 향림당, 고목의큰나무, 키리사메마법점, 인형양관, 재고의길, 무연총
				RETURN 1
			CASE 중유의길, 삼도천, 지옥
				RETURN 1
		ENDSELECT
	;인력설정 (CFLAG:LOCAL:인력점을 설정한다)
	CASE 8
ENDSELECT

@EXIST_캐릭터데이터4
#LOCALSIZE 1
#LOCALSSIZE 1

@캐릭터데이터4(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "통칭"
	CALLF MAKE_STR(V_NAME, "미마")
;여기서부터 의상 설정
CASE "오늘의 파자마"
	CALLF MAKE_STR(V_NAME, "파자마(바지) 세트")

CASE "평상복：외투"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("외투", "케이프"))
CASE "평상복：모자"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("모자", "모자"))
CASE "평상복：치마"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("치마", "롱 스커트"))
CASE "평상복：상반신윗도리2"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("상반신윗도리2", "블라우스"))

CASE "고유 속옷 형용사"
	CALLF MAKE_STR(V_NAME, "흰 살갖에 빛나는")
CASE "고유 하반신속옷명"
	CALLF MAKE_STR(V_NAME, "장미 자수 팬티")
CASE "고유 상반신속옷"
	CALLF MAKE_INT(V_NAME, 1)
CASE "고유 상반신속옷명"
	CALLF MAKE_STR(V_NAME, "장미 자수 브라")
CASE "고유 속옷 착용 조건"
	SIF !RAND:(3 - (2 * 승부속옷판정([[미마]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "고유 속옷 비쳐보이는(앞)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "고유 속옷 비쳐보이는(뒤)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "고유 속옷 옷감 두께"
	CALLF MAKE_INT(V_NAME, 1)

;요리 관련
CASE "요리：좋아하는 맛"
	CALLF MAKE_STR(V_NAME, "스파이스/버섯/양식/국물/짠/시원한/담백/호화/품위있는/호쾌/푹신푹신/달구경/매운/매운/매운/")
CASE "요리：싫어하는 맛"
	CALLF MAKE_STR(V_NAME, "중화/단/푸짐/농후/검소/마계풍/마계풍/마계풍/")
CASE "요리：조수 효과"
	CALLF MAKE_STR(V_NAME, "마력/" * 2)
;선물 관련
CASE "감성：좋아함"
	CALLF MAKE_STR(V_NAME, "흑빛/혼돈/무서움/레트로/지적/위엄/" + "유령/마법/어둠/" * 3 + "유령의/어둠의/망토/" * 5)
CASE "감성：싫어함"
	CALLF MAKE_STR(V_NAME, "질서/미래/로리타/" + "신령/부적/손목호구/" * 3)

ENDSELECT

