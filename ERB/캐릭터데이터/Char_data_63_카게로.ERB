	CALLF MAKE_STR(V_NAME, "진한 맛/특기요리＊고기 요리＊/")
;선물 관련
CASE "감성：좋아함"
	{
	CALLF MAKE_STR(V_NAME, "일본풍/개의/피에 굶주린/동물/섬세/" + "심플/빨강빛/자연/" * 2 + 
	"장식/달/이빨/손톱/예술적/아름다운/시크/" * 3
	 + "멋쟁이/늑대의/만월의/" * 5)
	}
CASE "감성：싫어함"
	{
	CALLF MAKE_STR(V_NAME, "기묘/금속/" + "화려/로리타/매니악/" * 2 
	+ "장대/위엄/날붙이/" * 3 + "기계/" * 5)
	}
ENDSELECT

