@CHARAMOVE_DATA_3(ARG, ARG:2)
LOCAL = 3
SELECTCASE ARG
	;연동설정 (RETURN=의존하는 캐릭터, RESULT:1~3=대등하게 연동되는 캐릭터)
	CASE 1
	;특수생활시간 설정 (CFLAG:LOCAL:생활시간보정 을 설정)
	CASE 3
	;移動傾向
	CASE 4
		SELECTCASE ARG:2
			;押入れにはあんまりいない
			CASE P18벽장
				RETURN -5
			;他所
			CASE P27삼요정의집・객실 TO P35삼요정의집・지하실, P39몽환유적・욕실, P56아운의거처
				RETURN -100
		ENDSELECT
	;출현장소
	CASE 7
		SELECTCASE ARG:2
			CASE 벚꽃길토리이, 신사경내, 신사툇마루, 몽환유적
				RETURN 1
			CASE 광장, 상가거리, 술집소로, 주택가
				RETURN 1
			CASE 몽환관
				RETURN 1
		ENDSELECT
	;인력설정 (CFLAG:LOCAL:인력점을 설정한다)
	CASE 8
ENDSELECT

@EXIST_캐릭터데이터3
#LOCALSIZE 1
#LOCALSSIZE 1

@캐릭터데이터3(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
