@CHARAMOVE_DATA_79(ARG, ARG:2)
LOCAL = 79
SELECTCASE ARG
	;연동설정 (RETURN=의존하는 캐릭터, RESULT:1~3=대등하게 연동되는 캐릭터)
	CASE 1
	;특수생활시간 설정 (CFLAG:LOCAL:생활시간보정 을 설정)
	CASE 3
	;이동경향 (±~10=가기 쉽다/가기 어렵다, -100=가지 않는다)
	CASE 4
		SELECTCASE ARG:2
			;私室には入らない
			CASE P704캇파의아지트, P706액신의집, P716아키자매의집・봉당 TO P730선인저택・마당
				RETURN -100
			CASE P733세이자은신처, P736야만바의집, P737마네키네코의집, P740야마와로의아지트
				RETURN -100
		ENDSELECT
	;출현장소
	CASE 7
		SELECTCASE ARG:2
			CASE 숲의입구, 향림당, 고목의큰나무, 재고의길, 무연총
				RETURN 1
			CASE 중유의길, 삼도천
				RETURN 1
			CASE 산록의수해, 현무의늪, 큰두꺼비의연못
				RETURN 1
			CASE 구천의폭포, 절경의언덕, 산의호수, 모리야신사경내
				RETURN 1
		ENDSELECT
	;인력설정 (CFLAG:LOCAL:인력점을 설정한다)
	CASE 8
ENDSELECT

@EXIST_캐릭터데이터79
#LOCALSIZE 1
#LOCALSSIZE 1

@캐릭터데이터79(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "통칭"
	CALLF MAKE_STR(V_NAME, "히나")
;여기서부터 의상 설정
CASE "오늘의 파자마"
	CALLF MAKE_STR(V_NAME, "파자마(바지) 세트")

CASE "평상복：모자"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("모자", "리본"))
CASE "평상복：신발"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("신발", "신발"))
CASE "평상복：양말"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("양말", "양말"))
CASE "평상복：원피스"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("원피스", "원피스"))

CASE "고유 속옷 형용사"
	CALLF MAKE_STR(V_NAME, "검정과 녹색으로 중후하게 물들여진")
CASE "고유 하반신속옷명"
	CALLF MAKE_STR(V_NAME, "고딕 팬티")
CASE "고유 상반신속옷"
	CALLF MAKE_INT(V_NAME, 1)
CASE "고유 상반신속옷명"
	CALLF MAKE_STR(V_NAME, "고딕 브라")
CASE "고유 속옷 착용 조건"
	SIF !RAND:(3 - (2 * 승부속옷판정([[히나]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "고유 속옷 비쳐보이는(앞)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "고유 속옷 비쳐보이는(뒤)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "고유 속옷 옷감 두께"
	CALLF MAKE_INT(V_NAME, 2)

;요리 관련
CASE "요리：좋아하는 맛"
	CALLF MAKE_STR(V_NAME, "야채/국물/단/담백/검소/선명한/가정적/뭉근뭉근/요력/시큼한/시큼한/시큼한/")
CASE "요리：싫어하는 맛"
	CALLF MAKE_STR(V_NAME, "푸짐/농후/매운/매운/호화/호화/개구리/개구리/개구리/벌레고기/벌레고기/벌레고기/")
CASE "요리：조수 효과"
	CALLF MAKE_STR(V_NAME, "숨김맛/특기요리＊가정적＊/")
;선물 관련
CASE "감성：좋아함"
	CALLF MAKE_STR(V_NAME, "빨강빛/흑빛/아름다운/예술적/시크/" + "어둠/요술/부적/" * 3 + "재앙의/불길한/" * 5)
CASE "감성：싫어함"
	CALLF MAKE_STR(V_NAME, "파워풀/위엄/" + "빛/손목호구/" * 3)

;농민 관련
;옷 모양을 닮음&산에서 살 것 같다
;그다지 부유한 이미지는 없다
CASE "농민：설명"
	CALLF MAKE_STR(V_NAME, "산나물 농가")
CASE "농민：작물"
	CALLF MAKE_STR(V_NAME, "고비")
CASE "농민：밭의 종류"
	CALLF MAKE_STR(V_NAME, "고비밭")
CASE "농민：밭의 맵"
	CALLF MAKE_STR(V_NAME, "요괴의 산·산록")

CASE "농민：맵 ID"
	CALLF MAKE_INT(V_NAME, 7)
CASE "농민：장소 ID"
	CALLF MAKE_INT(V_NAME, 705)
CASE "농민：보수"
	CALLF MAKE_INT(V_NAME, 350)
CASE "농민：금리"
	CALLF MAKE_INT(V_NAME, 3)

;여기는 의뢰 ID가 관련하지 않는 정보
;의뢰 발생율 스카2/일반3/고유 5
CASE "의뢰 없음 발생율"
	CALLF MAKE_INT(V_NAME, 2)
CASE "일반의뢰발생율"
	CALLF MAKE_INT(V_NAME, 3)
CASE "고유의뢰발생율"
	CALLF MAKE_INT(V_NAME, 5)
CASE "고유의뢰최종 요소"
	CALLF MAKE_INT(V_NAME, 101)
CASEELSE
	;고유의뢰관련의 데이터에 바톤 터치
	SIF STRCOUNT(O_DATA, "의뢰")
		CALLF 고유의뢰79(ARG, O_DATA, V_NAME)
ENDSELECT

