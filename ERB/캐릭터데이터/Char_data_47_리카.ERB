@CHARAMOVE_DATA_47(ARG, ARG:2)
LOCAL = 47
SELECTCASE ARG
	;연동설정 (RETURN=의존하는 캐릭터, RESULT:1~3=대등하게 연동되는 캐릭터)
	CASE 1
	;특수생활시간 설정 (CFLAG:LOCAL:생활시간보정 을 설정)
	CASE 3
	;이동경향 (±~10=가기 쉽다/가기 어렵다, -100=가지 않는다)
	CASE 4
		SELECTCASE ARG:2
			;몽환유적に引かれる
			CASE P36몽환유적앞 TO P50몽환유적・제2자료실
				RETURN 10
		ENDSELECT
	;출현장소
	CASE 7
		SELECTCASE ARG:2
			CASE 벚꽃길토리이, 신사경내
				RETURN 1
			CASE 광장, 상가거리, 술집소로
				RETURN 1
		ENDSELECT
	;인력설정 (CFLAG:LOCAL:인력점을 설정한다)
	CASE 8
ENDSELECT

@EXIST_캐릭터데이터47
#LOCALSIZE 1
#LOCALSSIZE 1

@캐릭터데이터47(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "통칭"
	CALLF MAKE_STR(V_NAME, "리카")
;여기서부터 의상 설정
CASE "오늘의 파자마"
	CALLF MAKE_STR(V_NAME, "파자마(바지) 세트")

CASE "평상복：신발"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("신발", "신발"))
CASE "평상복：양말"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("양말", "양말"))
CASE "평상복：바지"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("바지", "쇼트 바지"))
CASE "평상복：상반신윗도리2"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("상반신윗도리2", "블라우스"))

CASE "고유 속옷 형용사"
	CALLF MAKE_STR(V_NAME, "평상시에 입던 부주의한")
CASE "고유 하반신속옷명"
	CALLF MAKE_STR(V_NAME, "수수한 팬티")
CASE "고유 상반신속옷"
	CALLF MAKE_INT(V_NAME, 1)
CASE "고유 상반신속옷명"
	CALLF MAKE_STR(V_NAME, "스포츠브라")
CASE "고유 속옷 착용 조건"
	SIF !RAND:(1 + (2 * 승부속옷판정([[리카]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "고유 속옷 비쳐보이는(앞)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "고유 속옷 비쳐보이는(뒤)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "고유 속옷 옷감 두께"
	CALLF MAKE_INT(V_NAME, 2)

;요리 관련
CASE "요리：좋아하는 맛" ;KR판 추가주석 과학적(科学的) 참조없음
	CALLF MAKE_STR(V_NAME, "우유/알/조림/파이/푸짐/정키/농후/기능적/선명한/쫄깃한/과학적/단/단/시큼한/시큼한/" + "수수께끼 요리/" * 3)
CASE "요리：싫어하는 맛"
	CALLF MAKE_STR(V_NAME, "시원한/담백/야취/짠/짠/개구리/개구리/개구리/벌레고기/벌레고기/벌레고기/")
CASE "요리：조수 효과"
	CALLF MAKE_STR(V_NAME, "화학적/")
;선물 관련
CASE "감성：좋아함"
	CALLF MAKE_STR(V_NAME, "은빛/기술/혼돈/귀여운/기묘/파워풀/지적/매니악/" + "금속/츠쿠모가미/요술/" * 3 + "변형된/아티팩트/기계/" * 5)
CASE "감성：싫어함"
	CALLF MAKE_STR(V_NAME, "심플/시크/섬세/" + "손목호구/담뱃대/" * 3)
ENDSELECT

