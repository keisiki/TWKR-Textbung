@CHARAMOVE_DATA_117(ARG, ARG:2)
LOCAL = 117
SELECTCASE ARG
	;연동설정 (RETURN=의존하는 캐릭터, RESULT:1~3=대등하게 연동되는 캐릭터)
	CASE 1
		;たまに連動
		IF FLAG:일일이벤트 % 10 == 0
			RESULT:1 = [[무게츠]]
			RESULT:2 = [[겐게츠]]
		ENDIF
	;특수생활시간 설정 (CFLAG:LOCAL:생활시간보정 을 설정)
	CASE 3
	;이동경향 (±~10=가기 쉽다/가기 어렵다, -100=가지 않는다)
	CASE 4
		SELECTCASE ARG:2
			;영원정の奥には行かない
			CASE P405조제실, P407복도 TO P430지하실
				RETURN -100
			;他人の家には入らない
			CASE P432카게로의집, P437메디슨의집, P439라바의집, P443미스티아의집, P445모코우의집
				RETURN -100
			;ダイニング,リビング,自室によく居る
			CASE P453몽환관부엌, P461몽환관거실, P459몽환관겐게츠방
				RETURN 5
		ENDSELECT
	;출현장소
	CASE 7
		SELECTCASE ARG:2
			CASE 죽림입구, 미혹의샛길, 사각의죽림, 무명의언덕, 태양의밭, 몽환관
				RETURN 1
			CASE 숲의입구, 고목의큰나무, 인형양관, 재고의길, 무연총
				RETURN 1
			CASE 광장, 상가거리, 술집소로
				RETURN 1
		ENDSELECT
	;인력설정 (CFLAG:LOCAL:인력점을 설정한다)
	CASE 8
ENDSELECT

@EXIST_캐릭터데이터117
