@CHARAMOVE_DATA_24(ARG, ARG:2)
LOCAL = 24
SELECTCASE ARG
	;연동설정 (RETURN=의존하는 캐릭터, RESULT:1~3=대등하게 연동되는 캐릭터)
	CASE 1
		;たまに連動
		SIF CFLAG:LOCAL:오늘의운세 % 8 == 0
			RETURN [[란]]
	;특수생활시간 설정 (CFLAG:LOCAL:생활시간보정 을 설정)
	CASE 3
	;이동경향 (±~10=가기 쉽다/가기 어렵다, -100=가지 않는다)
	CASE 4
		SELECTCASE ARG:2
			;よく居る
			CASE P632야쿠모가정원, P604피안
				RETURN 5
			;是非曲直庁、축생계は行かない
			CASE P610시비곡직청홀 TO P618시비곡직청빈방, P640이계의문 TO P655유마댁목욕탕
				RETURN -100
			;他人の家には入らない
			CASE P608우루미집, P609에이카집
				RETURN -100
		ENDSELECT
	;출현장소
	CASE 7
		SELECTCASE ARG:2
			CASE 중유의길, 삼도천, 마요이가
				RETURN 1
			CASE 산록의수해, 현무의늪, 큰두꺼비의연못, 깊은숲속
				RETURN 1
			CASE 구천의폭포, 절경의언덕, 산의호수, 모리야신사경내
				RETURN 1
		ENDSELECT
	;인력설정 (CFLAG:LOCAL:인력점을 설정한다)
	CASE 8
ENDSELECT

@EXIST_캐릭터데이터24
#LOCALSIZE 1
#LOCALSSIZE 1

@캐릭터데이터24(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "통칭"
	CALLF MAKE_STR(V_NAME, "첸")
;여기서부터 의상 설정
CASE "오늘의 파자마"
	CALLF MAKE_STR(V_NAME, "파자마(주반) 세트")

CASE "평상복：모자"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("모자", "모자"))
CASE "평상복：신발"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("신발", "신발"))
CASE "평상복：양말"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("양말", "양말"))
CASE "평상복：원피스"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("원피스", "원피스"))
CASE "평상복：상반신윗도리2"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("상반신윗도리2", "블라우스"))
CASE "평상복：그외1"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("그외1", "귀걸이"))

CASE "고유 속옷 형용사"
	CALLF MAKE_STR(V_NAME, "검은 고양이 무늬의")
CASE "고유 하반신속옷명"
	CALLF MAKE_STR(V_NAME, "손바느질 팬티")
CASE "고유 상반신속옷"
	CALLF MAKE_INT(V_NAME, 0)
CASE "고유 속옷 착용 조건"
	SIF !RAND:(1 + (2 * 승부속옷판정([[첸]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "고유 속옷 비쳐보이는(앞)"
	CALLF MAKE_INT(V_NAME, 0)
CASE "고유 속옷 비쳐보이는(뒤)"
	CALLF MAKE_INT(V_NAME, 0)

;요리 관련
CASE "요리：좋아하는 맛"
	CALLF MAKE_STR(V_NAME, "생선 요리/고기 요리/중화/튀겨짐/푸짐/농후/야취/가정적/수수께끼 요리/사각사각/단/단/짠/짠/")
CASE "요리：싫어하는 맛"
	CALLF MAKE_STR(V_NAME, "건강한/시큼한/시큼한/야채/야채/야채/스파이스/스파이스/스파이스/")
CASE "요리：조수 효과"
	CALLF MAKE_STR(V_NAME, "요력/" * 2)
;선물 관련
CASE "감성：좋아함"
	CALLF MAKE_STR(V_NAME, "주홍빛/근사함/대륙풍/로리타/" + "요술/생체품/" * 3 + "고양이의/오렌지의/식신의/" * 5)
CASE "감성：싫어함"
	CALLF MAKE_STR(V_NAME, "물/얼음/도서/담뱃대/" * 3 + "개의/늑대의/" * 10)
ENDSELECT

