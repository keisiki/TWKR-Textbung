CASE "요리：조수 효과"
	CALLF MAKE_STR(V_NAME, "자극적/")
;선물 관련
CASE "감성：좋아함"
	CALLF MAKE_STR(V_NAME, "빨강빛/근사함/혼돈/심플/일본풍/파워풀/지적/" + "천둥/음악/악기/" * 3 + "태고의/뇌신의/번개의/넥타이/술대/드럼스틱/" * 5)
CASE "감성：싫어함"
	CALLF MAKE_STR(V_NAME, "서양풍/섬세/로리타/" + "날붙이/생체품/손목호구/" + "정령은의/" * 10)
ENDSELECT

