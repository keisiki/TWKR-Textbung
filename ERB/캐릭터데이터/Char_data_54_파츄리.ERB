@CHARAMOVE_DATA_54(ARG, ARG:2)
LOCAL = 54
SELECTCASE ARG
	;연동설정 (RETURN=의존하는 캐릭터, RESULT:1~3=대등하게 연동되는 캐릭터)
	CASE 1
	;특수생활시간 설정 (CFLAG:LOCAL:생활시간보정 을 설정)
	CASE 3
	;이동경향 (±~10=가기 쉽다/가기 어렵다, -100=가지 않는다)
	CASE 4
		SELECTCASE ARG:2
			;納屋と屋敷外には出ない
			CASE P305헛간, P334폐양관・입구 TO P348안개의호수・바닥
				RETURN -100
			;外にも二階にもあまり行かない
			CASE P302정원, P3192층복도 TO P327작은발코니
				RETURN -5
			;いつも図書館
			CASE P310도서관
				RETURN 5
		ENDSELECT
	;출현장소
	CASE 7
		SELECTCASE ARG:2
			CASE 정문, 객실, 식당, 대도서관, 지하실
				RETURN 1
		ENDSELECT
	;인력설정 (CFLAG:LOCAL:인력점을 설정한다)
	CASE 8
		;ごくまれに動く
		IF CFLAG:LOCAL:오늘의운세 % 100 == 0 && INRANGE(TIME, 720, 960)
			SELECTCASE DAY % 3
			CASE 1
				TCVAR:LOCAL:인력점 = P302정원
			CASE 2
				TCVAR:LOCAL:인력점 = P324큰발코니
			CASEELSE
				TCVAR:LOCAL:인력점 = P314식당
			ENDSELECT
		ENDIF
ENDSELECT

