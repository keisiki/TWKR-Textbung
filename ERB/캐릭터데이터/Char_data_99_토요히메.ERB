@CHARAMOVE_DATA_99(ARG, ARG:2)
LOCAL = 99
SELECTCASE ARG
	;연동설정 (RETURN=의존하는 캐릭터, RESULT:1~3=대등하게 연동되는 캐릭터)
	CASE 1
	;특수생활시간 설정 (CFLAG:LOCAL:생활시간보정 을 설정)
	CASE 3
	;이동경향 (±~10=가기 쉽다/가기 어렵다, -100=가지 않는다)
	CASE 4
		SELECTCASE ARG:2
			;몽환관には行かない
			CASE P450몽환관현관 TO P466몽환관정원
				RETURN -100
			;他人の家には入らない
			CASE P432카게로의집, P437메디슨의집, P439라바의집, P443미스티아의집, P445모코우의집
				RETURN -100
			;縁側,居間によく居る
			CASE P409툇마루, P416거실
				RETURN 5

			;고요의바다の方へは行かない
			CASE P1016후미, P1060순호저택・현관 TO P1072헤카티아방
				RETURN -100
			;ドレミー宅には行かない
			CASE P1050도레미댁・거실 TO P1055도레미댁・화장실
				RETURN -100
			;詰め所は行かない
			CASE P1023문지기초소 TO P1025옥토초소
				RETURN -100
			;書斎、식당によく居る
			CASE P1043서재, P1026식당
				RETURN 5
		ENDSELECT
	;출현장소
	CASE 7
		SELECTCASE ARG:2
			CASE 달의도시, 와타츠키정, 옥토거리, 복숭아숲～모래사장
				RETURN 1
		ENDSELECT
	;인력설정 (CFLAG:LOCAL:인력점을 설정한다)
	CASE 8
ENDSELECT

