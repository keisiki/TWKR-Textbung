	CALLF MAKE_STR(V_NAME, "스트링 T백")
CASE "고유 상반신속옷"
	CALLF MAKE_INT(V_NAME, 1)
CASE "고유 상반신속옷명"
	CALLF MAKE_STR(V_NAME, "미니 캐미숄")
