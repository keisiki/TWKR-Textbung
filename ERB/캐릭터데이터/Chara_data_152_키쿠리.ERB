	CALLF MAKE_STR(V_NAME, "copper panties")
CASE "고유 상반신속옷"
	CALLF MAKE_INT(V_NAME, 1)
CASE "고유 상반신속옷명"
	CALLF MAKE_STR(V_NAME, "copper bra")
CASE "고유 속옷 착용 조건"
	SIF !RAND:(3 - (2 * 승부속옷판정([[키쿠리]])))
		CALLF MAKE_INT(V_NAME, 1)
