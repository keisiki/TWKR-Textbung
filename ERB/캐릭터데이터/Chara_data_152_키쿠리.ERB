@CHARAMOVE_DATA_152(ARG, ARG:2)
LOCAL = 152
SELECTCASE ARG
	;連動設定(RETURN=依存するキャラ, RESULT:1～3=対等に連動するキャラ）
	CASE 1
	;特殊生活時間設定(CFLAG:LOCAL:生活時間補正を設定する）
	CASE 3
	;移動傾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;地霊殿には行かない、勇儀の家には行かない
			CASE P901지령전앞 TO P930옛혈지지옥, P936유기의집
				RETURN -100
			;自室、뒷길、酒場に行きやすい
			CASE P942키스메의집, P932뒷길, P933술집
				RETURN 5
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 환상풍혈, 지옥의깊은길, 옛지옥가도
				RETURN 1
			CASE 지옥, 피안, 중유의길, 삼도천
				RETURN 1
			CASE 작열지옥터, 옛지옥가도, 지옥의깊은길
				RETURN 1
			CASE 신사경내, 신사툇마루, 신사본당
				RETURN 1
			CASE 명련사경내, 명련사방장
				RETURN 1
		ENDSELECT
	;引力設定
	CASE 8
		;夜はたまに酒場
		SIF CFLAG:LOCAL:오늘의운세 % 8 == 0 && INRANGE(TIME, 1200, 1440)
			TCVAR:LOCAL:인력점 = P933술집
ENDSELECT

@EXIST_캐릭터데이터152
