	CALLF MAKE_STR(V_NAME, "파자마(원피스) 세트")

CASE "평상복：상반신윗도리2"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("상반신윗도리2", "블라우스"))
CASE "고유 속옷 형용사"
	;CALLF MAKE_STR(V_NAME, "solid metal")
