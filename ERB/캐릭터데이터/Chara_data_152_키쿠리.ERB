	CALLF MAKE_INT(V_NAME, 0)
CASE "고유 속옷 비쳐보이는(뒤)"
	CALLF MAKE_INT(V_NAME, 0)
CASE "고유 속옷 옷감 두께"
	CALLF MAKE_INT(V_NAME, 3)

;料理関連
CASE "요리：좋아하는 맛"
	CALLF MAKE_STR(V_NAME, "/")
CASE "요리：싫어하는 맛"
	CALLF MAKE_STR(V_NAME, "/")
CASE "요리：조수 효과"
	CALLF MAKE_STR(V_NAME, "/")
;贈り物関連
CASE "감성：좋아함"
	CALLF MAKE_STR(V_NAME, "/")
CASE "감성：싫어함"
	CALLF MAKE_STR(V_NAME, "/")
ENDSELECT

