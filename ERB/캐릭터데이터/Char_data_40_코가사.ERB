@CHARAMOVE_DATA_40(ARG, ARG:2)
LOCAL = 40
SELECTCASE ARG
	;연동설정 (RETURN=의존하는 캐릭터, RESULT:1~3=대등하게 연동되는 캐릭터)
	CASE 1
	;특수생활시간 설정 (CFLAG:LOCAL:생활시간보정 을 설정)
	CASE 3
	;이동경향 (±~10=가기 쉽다/가기 어렵다, -100=가지 않는다)
	CASE 4
		SELECTCASE ARG:2
			;命蓮寺メンバーの私室はあんまり入らない
			CASE P113나즈린방, P114무라사방, P115쇼방, P116이치린방, P117누에방, P118뱌쿠렌방, P109조온방, P136쿄코방
				RETURN -5
			;神霊廟メンバーの私室はあんまり入らない
			CASE P125토지코방, P127후토방, P128미코방, P139사선루
				RETURN -5
			;離れ、マミゾウの棲家には入らない
			CASE P119별채, P137마미조의거처
				RETURN -100
		ENDSELECT
	;출현장소
	CASE 7
		SELECTCASE ARG:2
			CASE 벚꽃길토리이, 신사경내, 신사툇마루
				RETURN 1
			CASE 지장길, 수양버들아래, 명련사경내, 묘지, 신령묘광장
				RETURN 1
			CASE 광장, 상가거리, 술집소로
				RETURN 1
			CASE 숲의입구, 향림당, 고목의큰나무, 재고의길, 무연총
				RETURN 1
		ENDSELECT
	;인력설정 (CFLAG:LOCAL:인력점을 설정한다)
	CASE 8
ENDSELECT

@EXIST_캐릭터데이터40
#LOCALSIZE 1
#LOCALSSIZE 1

@캐릭터데이터40(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "통칭"
	CALLF MAKE_STR(V_NAME, "코가사")
;여기서부터 의상 설정
CASE "오늘의 파자마"
	CALLF MAKE_STR(V_NAME, "팬티만")

CASE "평상복：액세서리"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("액세서리", "우산"))
CASE "평상복：신발"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("신발", "나막신"))
CASE "평상복：치마"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("치마", "치마"))
CASE "평상복：상반신윗도리2"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("상반신윗도리2", "블라우스"))
CASE "고유커맨드"
	CALLF MAKE_STR(V_NAME, "우산의수리")
CASE "고유커맨드 실행 가능"
	CALLF MAKE_INT(V_NAME, FLAG:우산내구도 > 5000 || ITEM:망가진우산)

CASE "고유 속옷 형용사"
	CALLF MAKE_STR(V_NAME, "놀래키는 용도의")
CASE "고유 하반신속옷명"
	CALLF MAKE_STR(V_NAME, "눈알 무늬 팬티")
CASE "고유 상반신속옷"
	CALLF MAKE_INT(V_NAME, 1)
CASE "고유 상반신속옷명"
	CALLF MAKE_STR(V_NAME, "눈알 무늬 브라")
CASE "고유 속옷 착용 조건"
	SIF !RAND:(1 + (2 * 승부속옷판정([[코가사]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "고유 속옷 비쳐보이는(앞)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "고유 속옷 비쳐보이는(뒤)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "고유 속옷 옷감 두께"
	CALLF MAKE_INT(V_NAME, 2)

;요리 관련
CASE "요리：좋아하는 맛"
	CALLF MAKE_STR(V_NAME, "쌀/일식/조림/농후/검소/선명한/수수께끼 요리/쫄깃한/맛있는물/단/단/매운/매운/가지/가지/가지/")
CASE "요리：싫어하는 맛"
	CALLF MAKE_STR(V_NAME, "고기 요리/시원한/시큼한/시큼한/개구리/개구리/개구리/벌레고기/벌레고기/벌레고기/")
CASE "요리：조수 효과"
	CALLF MAKE_STR(V_NAME, "몰카맛/")
;선물 관련
CASE "감성：좋아함"
	CALLF MAKE_STR(V_NAME, "푸른빛/무지갯빛/귀여운/레트로/섬세/" + "물/금속/날붙이/" * 3 + "수국화의/무지개의/비의/눈의/폭풍의/" * 5)
CASE "감성：싫어함"
	CALLF MAKE_STR(V_NAME, "서양풍/파워풀/" + "해/생체품/손목호구/" * 3 + "우산/" * 5 + "망각의/" * 10)
ENDSELECT

