@CHARAMOVE_DATA_12(ARG, ARG:2)
LOCAL = 12
SELECTCASE ARG
	;연동설정 (RETURN=의존하는 캐릭터, RESULT:1~3=대등하게 연동되는 캐릭터)
	CASE 1
	;특수생활시간 설정 (CFLAG:LOCAL:생활시간보정 을 설정)
	CASE 3
	;이동경향 (±~10=가기 쉽다/가기 어렵다, -100=가지 않는다)
	CASE 4
		SELECTCASE ARG:2
			;私室には入らない
			CASE P512마리사댁・침실, P514마리사댁・욕실, P521인형저택・앨리스방, P522인형저택・신키방
				RETURN -100
			CASE P523인형저택・유메코방, P526인형저택・욕실, P531인형저택・빈방
				RETURN -100
			CASE P541토키코의거처, P542리글의거처, P544나루미의오두막
				RETURN -100
		ENDSELECT
	;출현장소
	CASE 7
		SELECTCASE ARG:2
			CASE 지장길, 수양버들아래, 묘지
				RETURN 1
			CASE 숲의입구, 고목의큰나무, 재고의길, 무연총
				RETURN 1
			CASE 중유의길, 삼도천
				RETURN 1
		ENDSELECT
	;인력설정 (CFLAG:LOCAL:인력점을 설정한다)
	CASE 8
ENDSELECT

@EXIST_캐릭터데이터12
#LOCALSIZE 1
#LOCALSSIZE 1

@캐릭터데이터12(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "통칭"
	CALLF MAKE_STR(V_NAME, "루미아")
;여기서부터 의상 설정
CASE "오늘의 파자마"
	CALLF MAKE_STR(V_NAME, "파자마(바지) 세트")

CASE "평상복：모자"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("모자", "리본"))
CASE "평상복：신발"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("신발", "신발"))
CASE "평상복：양말"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("양말", "양말"))
CASE "평상복：치마"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("치마", "치마"))
CASE "평상복：상반신윗도리2"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("상반신윗도리2", "블라우스"))
CASE "평상복：상반신윗도리1"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("상반신윗도리1", "민소매 윗도리"))

CASE "고유 속옷 형용사"
	CALLF MAKE_STR(V_NAME, "어둠을 굳힌 듯한")
CASE "고유 하반신속옷명"
	CALLF MAKE_STR(V_NAME, "칠흑의 팬티")
CASE "고유 상반신속옷"
	CALLF MAKE_INT(V_NAME, 1)
CASE "고유 상반신속옷명"
	CALLF MAKE_STR(V_NAME, "칠흑의 캐미숄")
CASE "고유 속옷 착용 조건"
	SIF !RAND:(1 + (2 * 승부속옷판정([[루미아]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "고유 속옷 비쳐보이는(앞)"
	CALLF MAKE_INT(V_NAME, 0)
CASE "고유 속옷 비쳐보이는(뒤)"
	CALLF MAKE_INT(V_NAME, 0)
CASE "고유 속옷 옷감 두께"
	CALLF MAKE_INT(V_NAME, 2)

;요리 관련
CASE "요리：좋아하는 맛"
	CALLF MAKE_STR(V_NAME, "생선 요리/고기 요리/튀겨짐/단/농후/호화/야취/사각사각/푸짐/푸짐/" + "개구리/짠/그로테스크/" * 3)
CASE "요리：싫어하는 맛"
	CALLF MAKE_STR(V_NAME, "야채/시큼한/담백/검소/시원한/시원한/시원한/")
CASE "요리：조수 효과"
	CALLF MAKE_STR(V_NAME, "진한 맛/")
;선물 관련
CASE "감성：좋아함"
	CALLF MAKE_STR(V_NAME, "무서움/로리타/" + "흑빛/어둠/생체품/" * 3 + "요마의/땅거미의/어둠의/" * 5)
CASE "감성：싫어함"
	CALLF MAKE_STR(V_NAME, "지적/" + "흰빛/빛/해/조명/" * 3)

ENDSELECT

