@CHARAMOVE_DATA_22(ARG, ARG:2)
LOCAL = 22
SELECTCASE ARG
	;연동설정 (RETURN=의존하는 캐릭터, RESULT:1~3=대등하게 연동되는 캐릭터)
	CASE 1
		RESULT:1 = [[리리카]]
		RESULT:2 = [[메를랑]]
		RESULT:3 = [[루나사]]
	;특수생활시간 설정 (CFLAG:LOCAL:생활시간보정 을 설정)
	CASE 3
	;이동경향 (±~10=가기 쉽다/가기 어렵다, -100=가지 않는다)
	CASE 4
		SELECTCASE ARG:2
			;よく居る
			CASE P335폐양관・객실
				RETURN 5
			;私室には入らない
			CASE P303수위실, P304빈오두막, P305헛간, P311파츄리방, P312소악마방, P320사쿠야방, P326레밀리아방, P331지하실
				RETURN -100
			CASE P344레티의움집, P345치르노의움집, P346대요정의거처, P348안개의호수・바닥
				RETURN -100
		ENDSELECT
	;출현장소
	CASE 7
		SELECTCASE ARG:2
			CASE 광장, 상가거리, 술집소로
				RETURN 1
			CASE 안개의호수, 폐양관, 정문
				RETURN 1
			CASE 중유의길, 삼도천, 백옥루정원, 백옥루
				RETURN 1
		ENDSELECT
	;인력설정 (CFLAG:LOCAL:인력점을 설정한다)
	CASE 8
ENDSELECT

@EXIST_캐릭터데이터22
#LOCALSIZE 1
#LOCALSSIZE 1

@캐릭터데이터22(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "통칭"
	CALLF MAKE_STR(V_NAME, "루나사")
;여기서부터 의상 설정
CASE "오늘의 파자마"
	CALLF MAKE_STR(V_NAME, "파자마(바지) 세트")

CASE "평상복：모자"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("모자", "모자"))
CASE "평상복：신발"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("신발", "신발"))
CASE "평상복：양말"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("양말", "양말"))
CASE "평상복：치마"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("치마", "치마"))
CASE "평상복：상반신윗도리2"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("상반신윗도리2", "블라우스"))
CASE "평상복：외투"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("외투", "베스트"))

CASE "고유 속옷 형용사"
	CALLF MAKE_STR(V_NAME, "초승달 모양의")
CASE "고유 하반신속옷명"
	CALLF MAKE_STR(V_NAME, "미니 팬티")
CASE "고유 상반신속옷"
	CALLF MAKE_INT(V_NAME, 1)
CASE "고유 상반신속옷명"
	CALLF MAKE_STR(V_NAME, "스트랩리스 브라")
CASE "고유 속옷 착용 조건"
	SIF !RAND:(1 + (2 * 승부속옷판정([[루나사]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "고유 속옷 비쳐보이는(앞)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "고유 속옷 비쳐보이는(뒤)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "고유 속옷 옷감 두께"
	CALLF MAKE_INT(V_NAME, 2)

;요리 관련
CASE "요리：좋아하는 맛"
	CALLF MAKE_STR(V_NAME, "생선 요리/과일/양식/국물/파이/시원한/건강한/담백/예술적/가정적/선명한/쫄깃한/달구경/단/단/시큼한/시큼한/")
CASE "요리：싫어하는 맛"
	CALLF MAKE_STR(V_NAME, "푸짐/농후/야취/매운/매운/개구리/개구리/개구리/스파이스/스파이스/스파이스/수수께끼 요리/수수께끼 요리/수수께끼 요리/수수께끼 요리/수수께끼 요리/")
CASE "요리：조수 효과"
	CALLF MAKE_STR(V_NAME, "담백한 맛/")
;선물 관련
CASE "감성：좋아함"
	CALLF MAKE_STR(V_NAME, "흑빛/유령/아름다운/심플/시크/섬세/" + "음악/달/악기/" * 3 + "무지개의/유령의/우울의/트리니테리언의/" * 5)
CASE "감성：싫어함"
	CALLF MAKE_STR(V_NAME, "화려/파워풀/위엄/" + "별/해/날붙이/탄환/손목호구/담뱃대/" * 3 + "술대/피크/드럼스틱/" * 5 + "정령은의/기쁨의/" * 10)
ENDSELECT

