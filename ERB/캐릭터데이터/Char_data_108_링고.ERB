	CALLF MAKE_INT(V_NAME, CLOTHES_ID("상반신윗도리2", "T셔츠"))
CASE "평상복：바지"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("바지", "호박 바지"))

