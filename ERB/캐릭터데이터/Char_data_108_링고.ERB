@CHARAMOVE_DATA_108(ARG, ARG:2)
LOCAL = 108
SELECTCASE ARG
	;연동설정 (RETURN=의존하는 캐릭터, RESULT:1~3=대등하게 연동되는 캐릭터)
	CASE 1
		;たまに連動
		IF FLAG:일일이벤트 % 10 == 0
			RESULT:1 = [[세이란]]
			RESULT:2 = [[링고]]
		ENDIF
	;특수생활시간 설정 (CFLAG:LOCAL:생활시간보정 을 설정)
	CASE 3
	;이동경향 (±~10=가기 쉽다/가기 어렵다, -100=가지 않는다)
	CASE 4
		SELECTCASE ARG:2
			;고요의바다の方へは行かない
			CASE P1016후미, P1060순호저택・현관 TO P1072헤카티아방
				RETURN -100
			;ドレミー宅には行かない
			CASE P1050도레미댁・거실 TO P1055도레미댁・화장실
				RETURN -100
			;門番詰め所は行かない
			CASE P1023문지기초소
				RETURN -100
			;二階はあまり行かない
			CASE P10402층회랑 TO P1044응접실
				RETURN -5
			;玉兎街方面,玉兎식당,玉兎詰め所によく居る
			CASE P1003옥토거리, P1004광장, P1010식사처 TO P1013야채가게, P1024옥토식당, P1025옥토초소
				RETURN 5
		ENDSELECT
	;출현장소
	CASE 7
		SELECTCASE ARG:2
			CASE 죽림입구, 미혹의샛길, 사각의죽림, 토끼동굴, 영원정
				RETURN 1
			CASE 광장, 상가거리, 술집소로
				RETURN 1
			CASE 달의도시, 와타츠키정, 옥토거리, 복숭아숲～모래사장
				RETURN 1
		ENDSELECT
	;인력설정 (CFLAG:LOCAL:인력점을 설정한다)
	CASE 8
ENDSELECT

