@CHARAMOVE_DATA_105(ARG, ARG:2)
LOCAL = 105
SELECTCASE ARG
	;연동설정 (RETURN=의존하는 캐릭터, RESULT:1~3=대등하게 연동되는 캐릭터)
	CASE 1
		;たまに連動
		IF FLAG:일일이벤트 % 10 == 0
			RESULT:1 = [[유키]]
			RESULT:2 = [[마이]]
		ENDIF
	;특수생활시간 설정 (CFLAG:LOCAL:생활시간보정 을 설정)
	CASE 3
	;이동경향 (±~10=가기 쉽다/가기 어렵다, -100=가지 않는다)
	CASE 4
		SELECTCASE ARG:2
			;ユキマイの部屋,광장
			CASE P234유키방, P235마이방, P202중앙광장
				RETURN 5
			;私室には行かない
			CASE P221히에다저택, P224케이네댁, P222서당, P226코스즈방, P229아큐방
				RETURN -100
			CASE P208라이코방, P209야츠하시방, P210벤벤방
				RETURN -100
			CASE P231반키방, P232렌코방, P233메리방, P239미요이방
				RETURN -100
		ENDSELECT
	;仕事時間帯
	CASE 5
	;行く地域(0=博1=寺2=里3=湖4=竹5=森6=冥7=山8=守9=地10=月）
	CASE 6
		SELECTCASE ARG:2
			CASE 2, 5
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
	;출현장소
	CASE 7
		SELECTCASE ARG:2
			CASE 광장, 상가거리, 술집소로, 주택가
				RETURN 1
			CASE 숲의입구, 고목의큰나무, 재고의길, 무연총
				RETURN 1
		ENDSELECT
	;인력설정 (CFLAG:LOCAL:인력점을 설정한다)
	CASE 8
ENDSELECT

@EXIST_캐릭터데이터105
#LOCALSIZE 1
#LOCALSSIZE 1

@캐릭터데이터105(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "통칭"
	CALLF MAKE_STR(V_NAME, "마이")
;여기서부터 의상 설정
CASE "오늘의 파자마"
	CALLF MAKE_STR(V_NAME, "파자마(바지) 세트")

CASE "평상복：모자"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("모자", "리본"))
CASE "평상복：신발"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("신발", "신발"))
CASE "평상복：양말"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("양말", "양말"))
CASE "평상복：원피스"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("원피스", "원피스"))

CASE "고유 속옷 형용사"
	CALLF MAKE_STR(V_NAME, "마계에서도 괴짜의")
CASE "고유 하반신속옷명"
	CALLF MAKE_STR(V_NAME, "마법진무늬 팬티")
CASE "고유 상반신속옷"
	CALLF MAKE_INT(V_NAME, 1)
CASE "고유 상반신속옷명"
	CALLF MAKE_STR(V_NAME, "사라시")
CASE "고유 속옷 착용 조건"
	SIF !RAND:(1 + (2 * 승부속옷판정([[마이]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "고유 속옷 비쳐보이는(앞)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "고유 속옷 비쳐보이는(뒤)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "고유 속옷 옷감 두께"
	CALLF MAKE_INT(V_NAME, 3)

;요리 관련
CASE "요리：좋아하는 맛"
	CALLF MAKE_STR(V_NAME, "우유/과일/양식/국물/시원한/담백/기능적/품위있는/가정적/푹신푹신/마계풍/단/단/짠/짠/")
CASE "요리：싫어하는 맛"
	CALLF MAKE_STR(V_NAME, "농후/야취/시큼한/시큼한/" + "개구리/벌레고기/수수께끼 요리/" * 3)
CASE "요리：조수 효과"
	CALLF MAKE_STR(V_NAME, "마계풍/")
;선물 관련
CASE "감성：좋아함"
	CALLF MAKE_STR(V_NAME, "흰빛/귀여운/팝/서양풍/시크/섬세/" + "마법/" * 3 + "마계의/배반의/금단의/" * 5)
CASE "감성：싫어함"
	CALLF MAKE_STR(V_NAME, "레트로/일본풍/화려/파워풀/매니악/")
ENDSELECT

