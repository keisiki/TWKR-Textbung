@CHARAMOVE_DATA_157(ARG, ARG:2)
LOCAL = 157
SELECTCASE ARG
	;연동설정 (RETURN=의존하는 캐릭터, RESULT:1~3=대등하게 연동되는 캐릭터)
	CASE 1
	;특수생활시간 설정 (CFLAG:LOCAL:생활시간보정 을 설정)
	CASE 3
	;이동경향 (±~10=가기 쉽다/가기 어렵다, -100=가지 않는다)
	CASE 4
		SELECTCASE ARG:2
			;よく居る
			CASE P605지옥
				RETURN 5
			;是非曲直庁、冥界、八雲邸には行かない（入り口部分は出る時用）
			CASE P612법정 TO P639야쿠모가거실
				RETURN -100
			;霊長園,組長の家には行かない
			CASE P642영장원 TO P655유마댁목욕탕
				RETURN -100
			;他人の家には入らない
			CASE P608우루미집, P609에이카집, P606히사미집
				RETURN -100
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 벚꽃길토리이, 신사경내, 신사툇마루
				RETURN 1
			CASE 중유의길, 삼도천, 피안, 지옥
				RETURN 1
			CASE 산록의수해, 현무의늪, 큰두꺼비의연못, 깊은숲속
				RETURN 1
			CASE 구천의폭포, 절경의언덕, 산의호수
				RETURN 1
		ENDSELECT
	;引力設定（CFLAG:LOCAL:引力点を設定する）
	CASE 8
ENDSELECT

