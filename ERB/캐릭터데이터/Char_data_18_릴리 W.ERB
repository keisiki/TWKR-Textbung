	CALLF MAKE_STR(V_NAME, "얼음/날붙이/탄환/손목호구/담뱃대/" * 3 + "흑빛/여름의/단풍나무의/수박의/단풍의/" * 5 + "겨울의/가을의/가을바람의/" * 10)
ENDSELECT

