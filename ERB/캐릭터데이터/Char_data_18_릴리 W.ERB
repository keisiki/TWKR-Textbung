@CHARAMOVE_DATA_18(ARG, ARG:2)
LOCAL = 18
SELECTCASE ARG
	;연동설정 (RETURN=의존하는 캐릭터, RESULT:1~3=대등하게 연동되는 캐릭터)
	CASE 1
		;たまに連動
		IF FLAG:일일이벤트 % 8 == 0
			RESULT:1 = [[릴리 W]]
			RESULT:2 = [[릴리 B]]
		ENDIF
	;특수생활시간 설정 (CFLAG:LOCAL:생활시간보정 을 설정)
	CASE 3
	;이동경향 (±~10=가기 쉽다/가기 어렵다, -100=가지 않는다)
	CASE 4
		SELECTCASE ARG:2
			;三妖精宅内に行きやすい
			CASE P27삼요정의집・객실 TO P34스타방
				RETURN 5
			;私室には入らない
			CASE P704캇파의아지트, P706액신의집, P716아키자매의집・봉당 TO P730선인저택・마당
				RETURN -100
			CASE P733세이자은신처, P736야만바의집, P737마네키네코의집, P740야마와로의아지트
				RETURN -100
		ENDSELECT
	;출현장소
	CASE 7
		SELECTCASE ARG:2
			CASE 광장, 상가거리, 술집소로
				RETURN 1
			CASE 안개의호수, 얼음집, 폐양관, 정문
				RETURN 1
			CASE 숲의입구, 향림당, 고목의큰나무
				RETURN 1
			CASE 산록의수해, 현무의늪, 큰두꺼비의연못, 깊은숲속
				RETURN 1
		ENDSELECT
	;인력설정 (CFLAG:LOCAL:인력점을 설정한다)
	CASE 8
ENDSELECT

