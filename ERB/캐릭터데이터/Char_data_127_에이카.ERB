@CHARAMOVE_DATA_127(ARG, ARG:2)
LOCAL = 127
SELECTCASE ARG
	;連動設定（参照する側＞RETURN=参照先, 参照される側＞RESULT:1～3=連動対象）
	CASE 1
	;특수생활시간 설정 (CFLAG:LOCAL:생활시간보정 을 설정)
	CASE 3
	;移動傾向
	CASE 4
		SELECTCASE ARG:2
			;八雲邸と피안から先は行かない（入り口部分は出る時用）
			CASE P604피안, P610시비곡직청홀 TO P655유마댁목욕탕
				RETURN -100
			;潤美の家には行かない
			CASE P608우루미집
				RETURN -100
			;積石塚に引きこもる
			CASE P603돌총
				RETURN 10
		ENDSELECT
	;출현장소
	CASE 7
		SELECTCASE ARG:2
			CASE 중유의길, 삼도천
				RETURN 1
		ENDSELECT
	;인력설정 (CFLAG:LOCAL:인력점을 설정한다)
	CASE 8
ENDSELECT

