	CALLF MAKE_STR(V_NAME, "야취/짠/짠/" + "개구리/벌레고기/스파이스/" * 3 + "수수께끼 요리/" * 5)
CASE "요리：조수 효과"
	CALLF MAKE_STR(V_NAME, "몽환풍/메이드류/")
;선물 관련
CASE "감성：좋아함"
	CALLF MAKE_STR(V_NAME, "푸른빛/혼돈/귀여운/서양풍/시크/위엄/" + "요술/금단의/" * 3 + "메이드의/몽환의/악마의/" * 5)
CASE "감성：싫어함"
	CALLF MAKE_STR(V_NAME, "질서/일본풍/화려/" + "신령/" * 3)
ENDSELECT


