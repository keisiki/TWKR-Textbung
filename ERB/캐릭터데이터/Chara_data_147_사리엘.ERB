@CHARAMOVE_DATA_147(ARG, ARG:2)
LOCAL = 147
SELECTCASE ARG
	;連動設定（RETURN=依存するキャラ, RESULT:1～3=対等に連動するキャラ）
	CASE 1
	;特殊生活時間設定（CFLAG:LOCAL:生活時間補正を設定する）
	CASE 3
	;移動傾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4 ;lives at 853
		SELECTCASE ARG:2
			;often visits heaven
			CASE P830현운해 TO P842히나나위저택헛간
				RETURN 10
			;私室やお風呂は入らない
			CASE P817카나코방, P818스와코방, P820사나에방
				RETURN -100
			;他所の家には行かない
			CASE P807모미지댁, P808아야댁, P809하타테댁, P851쿠다카의오두막, P854메구무댁, P855홍룡동, P856모모요의거처
				RETURN -100
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 구천의폭포, 절경의언덕, 산의호수, 천계
				RETURN 1
			CASE 지옥의깊은길, 옛지옥가도
				RETURN 1
			;spooky places
			CASE 묘지, 무명의언덕, 재고의길, 무연총
				RETURN 1
			;death
			CASE 삼도천, 피안, 지옥
				RETURN 1
		ENDSELECT
	;引力設定
	CASE 8
ENDSELECT

