	LOCAL = MAX(EXP:COUNT:14, EXP:COUNT:15)
	EXP:COUNT:14 = LOCAL ;정액경험(구 정음경험)
	EXP:COUNT:15 = LOCAL ;정음경험(구 정음경험)
REND

