;-------------------------------------------------
;평일 판정(ARG)
;DAY를 건네주어 츠키～ 금요일이라면 1
;-------------------------------------------------
@IS_WEEKDAY(ARG)
#FUNCTION
SIF !ARG
	ARG = DAY
RETURNF INRANGE(ARG % 7, 1, 5)

;-------------------------------------------------
;주말 판정(ARG)
;DAY를 건네주어 토일요일이라면 1
;-------------------------------------------------
@IS_WEEKEND(ARG)
#FUNCTION
SIF !ARG
	ARG = DAY
RETURNF !INRANGE(ARG % 7, 1, 5)

;-------------------------------------------------
;요일 일치 판정(ARG)
;DAY와 캐릭터라인을 건네주어, 일치하고 있으면 1
;판정용 캐릭터라인은 세월화수목금흙에서 각 요일을 나타낸다(=복수 지정 가능)
;-------------------------------------------------
@YOUBI_MATCH(ARG, CHECK_STR)
#FUNCTION
#DIMS  CHECK_STR
SIF !ARG
	ARG = DAY
SIF STRCOUNT(CHECK_STR, GET_DAY(ARG))
	RETURNF 1
RETURNF 0

;-------------------------------------------------
;함수명 :GET_DAY
;개요:요일을 나타내는 캐릭터라인을 취득하는 함수
;인수:인수가 없는 경우 DAY
;반환값:요일을 나타내는 캐릭터라인(일/월/화/수/목/금/토)
;비고:문중 함수
;-------------------------------------------------
@GET_DAY(ARG)
#FUNCTIONS
#DIMS CONST YOUBI = "일", "월", "화", "수", "목", "금", "토"
SIF !ARG
	ARG = DAY
RETURNF YOUBI:(ARG % 7)

;FileName_COMMON.ERB ------------------------------- Rev1. 00
;날씨 관리
;CALL		USER
;ARG		VOID
;RETURN		VOID
;COMMENT	
;-----------------------------------------------------------
@CHANGE_WEATHER
#DIM 지저
#DIM 입수팬티
#DIM 소유자
#DIM 루프개시
#DIM 루프종료
#DIM 루프가산
DEBUGPRINTL 【CHANGE_WEATHER】CALL CHANGE_WATHER
;날씨 관리에 메시지 표시 처리시켜 죄송합니다＞＜；
;우후후 안은 공기를 읽는 정도의 능력
;날씨 변화하지 않아도 무지개는 사라진다
지저 = 0
IF CFLAG:MASTER:데이트중 == 9
	지저 = 1
ELSEIF CFLAG:MASTER:현재위치 == OMANEKIBEYA() && GROUPMATCH(CFLAG:MASTER:초대, 36, 37, 38, 49, 60, 64, 83, 84)
	지저 = 1
ENDIF
TIME:7 = 0
IF !지저
	SELECTCASE FLAG:이상기상
		CASE 7
			;이러해도 하지 않으면 또 노팬티가 날라와서 끝낸다고 생각해
			DO
				CALL RAND_CHARASELECT("주인공 이외의캐릭터리스트")
				소유자 = RESULT
				입수팬티 = 오늘의팬티(소유자)
			LOOP !입수팬티
			PRINTFORML 회오리 바람이 %CALLNAME:소유자%의 %조사처리(PANTSNAME(입수팬티, 소유자),"를")% 옮겨 왔다
			CALL ASK_YN("줍는다","줍지 않는다")
			IF !RESULT
				PRINTFORMW %마스터는% %CALLNAME:소유자%의 %조사처리(PANTSNAME(입수팬티, 소유자),"를")% 주웠다
				CALL PANTS_GETTING(소유자, 입수팬티)
			ELSE
				PRINTFORML %PANTSNAME(입수팬티, 소유자)%는 그대로 어딘가에 날아 갔다
			ENDIF
		CASE 8
			SETCOLOR 255,100,255
			FONTBOLD
			PRINTFORMW 환상향에 분홍색의 바람이 불었다!
			FOR LOCAL, 1, CHARANUM
				IF !RAND:8 && !TALENT:LOCAL:임신
					PRINTFORML 분홍색의 바람을 받은 %조사처리(CALLNAME:LOCAL,"는")% 이상한 기분이 되었다…
					CFLAG:LOCAL:욕구불만도 += LIMIT((10 + RAND:20 + RAND:20 + RAND:20) * ABL:LOCAL:욕망, 200,1000)
					SIF !TALENT:LOCAL:인형
						TCVAR:LOCAL:발정 = 1
				ENDIF
			NEXT
			RESETCOLOR
			FONTREGULAR
		CASE 11
			SETCOLOR 0x66FFFF
			FONTBOLD
			PRINTFORMW 환상향에 푸른색의 바람이 불었다!
			FOR LOCAL, 1, CHARANUM
				IF !RAND:7
					PRINTFORML 푸른색의 바람을 받은 %조사처리(CALLNAME:LOCAL,"는")% 이상한 기분이 되었다…
					CFLAG:LOCAL:욕구불만도 -= LIMIT((10 + RAND:20 + RAND:20 + RAND:20) * ABL:LOCAL:욕망, 200,1000)
					IF CFLAG:LOCAL:욕구불만도 < 0
						CFLAG:LOCAL:욕구불만도 = 0
					ENDIF
					SIF !TALENT:LOCAL:인형&&TCVAR:LOCAL:발정 == 1&&RAND:2 == 0
						TCVAR:LOCAL:발정 = 0
				ENDIF
			NEXT
			RESETCOLOR
			FONTREGULAR
		CASE 12
			SETCOLOR 0xF0F0F0
			FONTBOLD
			PRINTFORMW 환상향에 흰색의 바람이 불었다!
			FOR LOCAL, 1, CHARANUM
				IF !RAND:15
					PRINTFORML 흰색의 바람을 받은 %조사처리(CALLNAME:LOCAL,"는")% 이상한 기분이 되었다…
					SIF ABL:LOCAL:욕망
						ABL:LOCAL:욕망 = MAX(ABL:LOCAL:욕망 - 1 , 1)
					SIF !TALENT:LOCAL:인형&&TCVAR:LOCAL:발정 == 1
						TCVAR:LOCAL:발정 = 0
				ENDIF
			NEXT
			RESETCOLOR
			FONTREGULAR
	ENDSELECT
ENDIF

SIF FLAG:이상기상
	RETURN
SIF TIME:5 > 15
	TIME:5 = 0
;날씨 변화 확률(표준은50%)
SELECTCASE TIME:5
	CASE 5
		LOCAL = 16
	CASE 9
		IF DAY:2 == 2
			LOCAL = 12
		ELSE
			LOCAL = 16
		ENDIF
	CASE IS >= 8
		IF DAY:2 == 4
			LOCAL = 24
		ELSEIF DAY:2 == 2
			LOCAL = 12
		ELSE
			LOCAL = 16
		ENDIF
	CASEELSE
		LOCAL = 24
ENDSELECT

IF RAND:LOCAL + 1 <= 12 && CFLAG:MASTER:현재위치 != 천계
	;날씨 변화 발생으로 무지개는 사라진다
	;TIME:7 = 0
	SELECTCASE TIME:5
		;개이고의 때
		CASE 0
			;20%로 맑은 하늘에 이행
			IF RAND:5 == 0
				SETBIT TIME:5, 0
			;20%로 박담에 이행
			ELSEIF RAND:5 == 0
				SETBIT TIME:5, 1
				SIF !CFLAG:MASTER:우후후 && !지저
					PRINTW 살짝 흐려졌다
			;5%로 흐림에 이행
			ELSEIF RAND:20 == 0
				TIME:5 = 3
				SIF !CFLAG:MASTER:우후후 && !지저
					PRINTW 구름이 나왔다
			;상기 확률에 걸리지 않았으면 맑음
			ELSE
				TIME:5 = 0
			ENDIF
		CASE 1
			;20%로 맑음에 이행
			IF RAND:5 == 0
				CLEARBIT TIME:5, 0
			;20%로 박담에 이행
			ELSEIF RAND:5 == 0
				TIME:5 = 2
				SIF !CFLAG:MASTER:우후후 && !지저
					PRINTW 살짝 흐려졌다
			ENDIF
		;흐림때
		CASE 2,3
			;25%로 강화 or약체화
			IF RAND:4 == 0
				INVERTBIT TIME:5, 0
			ELSE
				;20%로 맑음에 이행
				IF RAND:5 == 0
					TIME:5 = 0
					IF !CFLAG:MASTER:우후후 && !지저
						IF TIME:2 >= 5 && TIME:2 <= 7
							PRINTW 별이 보인다
						ELSE
							PRINTW 해가 비친다
						ENDIF
					ENDIF
				;박담이라면10%로 비나 눈에 이행
				ELSEIF TIME:5 == 2 && RAND:10 == 0
					IF DAY:2 == 4 && RAND:5
						TIME:5 = 8
						SIF !CFLAG:MASTER:우후후 && !지저
							PRINTW 눈이 내리기 시작했다!
					ELSE
						TIME:5 = 4
						SIF !CFLAG:MASTER:우후후 && !지저
							PRINTW 비가 내리기 시작했다!
					ENDIF
					;더욱10%의 확률로 안개비, 가루눈에 이행
					SIF RAND:10 == 0
						SETBIT TIME:5, 1
				;흐림이라면30%로 비에 이행
				ELSEIF TIME:5 == 3 && RAND:10 < 3
					IF DAY:2 == 4 && RAND:5
						TIME:5 = 8
						SIF !CFLAG:MASTER:우후후 && !지저
							PRINTW 눈이 내리기 시작했다!
					ELSE
						TIME:5 = 4
						SIF !CFLAG:MASTER:우후후 && !지저
							PRINTW 비가 내리기 시작했다!
					ENDIF
				ENDIF
			ENDIF
		;비때
		CASE 4,5,6,7
			;25%로 강화 or약체화
			IF RAND:4 == 0
				INVERTBIT TIME:5, 0
				IF TIME:5 == 5
					PRINTW 비가 억수같이 쏟아진다!
				ELSE
					PRINTW 비가 약해졌다
				ENDIF
			ELSE
				;25%로 흐림에 이행
				IF RAND:4 == 0
					TIME:5 = 3
					SIF !CFLAG:MASTER:우후후 && !지저
						PRINTW 비가 그친 것 같다
					;만약을 위해 한우산을씀을 해제
					FOR LOCAL, 0, CHARANUM
						SIF TEQUIP:LOCAL:201
							TEQUIP:LOCAL:201 = 0
					NEXT
				;비라면10%로 안개비인가 진눈깨비에 이행
				ELSEIF TIME:5 == 4 && RAND:10 == 0
					IF DAY:2 == 4
						TIME:5 = 12
						SIF !CFLAG:MASTER:우후후 && !지저
							PRINTW 눈이 약간 섞여있다
					ELSE
						TIME:5 = 6
						SIF !CFLAG:MASTER:우후후 && !지저
							PRINTW 빗줄기가 가늘어졌다
					;더욱10%의 확률로 안개, 뻥튀기에 이행
					SIF RAND:10 == 0
						SETBIT TIME:5, 0
					ENDIF
				;10%로 맑음에 이행
				ELSEIF RAND:10 == 0
					TIME:5 = 0
					IF !CFLAG:MASTER:우후후 && !지저
						;일지도 모르면 좋은 개개 확실히 보이는 것은 기분을 자주(잘) 시키는 마법
						IF TIME:2 >= 5 && TIME:2 <= 7
							PRINTW 갑자기 밤하늘이 개었다! 달무리가 보일지도 모르겠다
						ELSE
							PRINTW 갑자기 해가 비쳤다! 무지개가 보일지도 모르겠다
						ENDIF
					FOR LOCAL, 0, CHARANUM
						SIF TEQUIP:LOCAL:201
							TEQUIP:LOCAL:201 = 0
					NEXT
					ENDIF
					;더욱 저확률로 쾌청
					SIF RAND:100 < 5
						TIME:5 = 1
