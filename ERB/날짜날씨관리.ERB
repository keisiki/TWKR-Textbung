;FileName_COMMON.ERB ------------------------------- Rev1. 00
;계절 관리
;CALL		USER
;ARG		VOID
;RETURN		VOID
;COMMENT	
;-----------------------------------------------------------
@CHANGE_MONTH
#DIM 운세뽑기값
;일자가 달을 넘으면(자) 달변경
IF DAY:3 > 31
	DAY:3 = 1
	DAY:2 ++
	탄막놀이축제발동 = 0
	IF FLAG:범죄율
		FLAG:범죄율 = MAX(0,FLAG:범죄율 - MAX(5,FLAG:범죄율/10))
	ENDIF
	CALL 직장처리
	CALL 세금징수
	IF 은행잔고 >= 100
		PRINTFORML 은행 이자가 들어왔습니다
		은행잔고 += MIN(500000,은행잔고/100 * 5)
	ENDIF
	CALL 부양의무
	CALL 행정집행
	대국민스택 = 1
	;겨울의 다음은 봄
	IF DAY:2 > 4
		DAY:2 = 1
		FLAG:연시대출금 = FLAG:지주대출금
	ENDIF
	FLAG:은행털기기회 = 0
	;여름이 되면 발렌타인 플래그 리셋
	SIF DAY:2 == 2
		CVARSET CFLAG, 383
	;징수 발생
	SIF FLAG:지주
		FLAG:연공 = 1
	IF FLAG:물주기대행
		FLAG:물주기대행 = 0
		PRINTFORMW 물주기대행의 기한이 지났습니다.
	ENDIF
	IF FLAG:식재료구독
		IF MONEY < 20000 && MONEY:2 < 30
			PRINTFORML 돈이 부족하기에 식재료의 구독을 정지합니다.
		ELSE
			PRINTL
			PRINTFORML ★식재료 배달 서비스를 연장하겠습니까? (월액￦20000 or 30 카리스마)
			CALL ASK_M("해약", 1,"갱신(￦20000)", MONEY >= 20000,"갱신(30 카리스마)", MONEY:2 >= 30)
			SELECTCASE RESULT
				CASE 0
					PRINTFORML 구독을 정지합니다.
					FLAG:식재료구독 = 0
				CASE 1
					MONEY -= 20000
					PRINTFORML 이번 달도 구독합니다.
				CASE 2
					MONEY:2 -= 300
					PRINTFORML 이번 달도 구독합니다.
			ENDSELECT
		ENDIF
	ENDIF
	IF FLAG:신문구독
		IF MONEY < 3000 && MONEY:2 < 10
			PRINTFORML 돈이 부족하기에 붕붕마루 신문의 구독을 정지합니다.
		ELSE
			PRINTL
			PRINTFORML ★붕붕마루 신문을 계속 구독하겠습니까? (월액￥3000 or 10 카리스마)
			CALL ASK_M("해약", 1,"갱신(￥3000)", MONEY >= 3000,"갱신(10 카리스마)", MONEY:2 >= 10)
			SELECTCASE RESULT
				CASE 0
					PRINTFORML 구독을 정지합니다.
					FLAG:신문구독 = 0
				CASE 1
					MONEY -= 3000
					PRINTFORML 이번 달도 구독합니다.
				CASE 2
					MONEY:2 -= 10
					PRINTFORML 이번 달도 구독합니다.
			ENDSELECT
		ENDIF
	ENDIF
	IF FLAG:건강보험
		IF MONEY < 건보가격(80000)
			PRINTFORML 돈이 부족하기에 건강보험의 갱신을 정지합니다.
		ELSE
			PRINTL
			PRINTFORML ★건강보험을 유지하겠습니까? (월액 {건보가격(80000)} 원)
			CALL ASK_M("해약", 1,"갱신", MONEY >= 건보가격(80000))
			SELECTCASE RESULT
				CASE 0
					PRINTFORML 건강보험을 취소합니다.
					FLAG:건강보험 = 0
				CASE 1
					MONEY -= 건보가격(80000)
					PRINTFORML 건강보험을 유지합니다.
			ENDSELECT
		ENDIF
	ENDIF
	IF FLAG:전화
		IF MONEY < 5000
			PRINTFORML 돈이 부족하기에 전화 계약을 해지합니다.
		ELSE
			PRINTL
			PRINTFORML ★전화 서비스를 유지하겠습니까? (월액 5000 원)
			CALL ASK_M("해약", 1,"갱신", MONEY >= 50000,"갱신(50 카리스마)", MONEY:2 >= 50)
			SELECTCASE RESULT
				CASE 0
					PRINTFORML 해약했습니다
					FLAG:전화 = 0
				CASE 1
					MONEY -= 5000
					PRINTFORML 계약을 연장했습니다
				CASE 2
					MONEY:2 -= 50
					PRINTFORML 계약을 연장했습니다
			ENDSELECT
		ENDIF
	ENDIF
	IF FLAG:운세뽑기계약
		운세뽑기값 = 50
		SIF !MAIN_MAP
			운세뽑기값 = 30
		IF MONEY:2 < 운세뽑기값
			PRINTFORML 카리스마가 부족하기 때문에, 운세뽑기계약이 중지되었습니다
			FLAG:운세뽑기계약 = 0
		ELSE
			PRINTFORML 운세뽑기계약을 계속하겠습니까?
			CALL ASK_YN
			IF !RESULT
				PRINTFORML 계약을 갱신했습니다
				MONEY:2 -= 운세뽑기값
			ELSE
				FLAG:운세뽑기계약 = 0
				PRINTFORML 계약을 종료합니다
			ENDIF
		ENDIF
	ENDIF
ENDIF
;이상치를 고정 수정
SIF DAY:3 < 1
	DAY:3 = 1
SIF DAY:2 < 1 || DAY:2 > 4
	DAY:2 = 1

