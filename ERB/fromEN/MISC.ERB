		;new line
		HTML_RESULT_TEXT += "<br>"
		LINE_POS = 0
	ENDIF
	HTML_RESULT_TEXT += HTML_SEGMENT
	LINE_POS += ACTUAL_SEGMENT_LENGTH
	CURRENT_POS += HTML_SEGMENT_LENGTH
