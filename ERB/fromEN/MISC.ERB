	RETURNF replace(ARGS,"(?i)([aeiouy])?", "$1"*nRand)
SIF ARG == -3 ;multiply only last vowel with negative lookahead
	RETURNF replace(ARGS,"(?i)([aeiouy])(?!.*[aeiouy])", "$1"*nRand)
