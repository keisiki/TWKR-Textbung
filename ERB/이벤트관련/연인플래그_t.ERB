@SET_아내(ARG)
SELECTCASE ARG
	CASE -1
		스친아내수 = 0
		VARSET 포말의아내
		VARSET 아내플래그
		RETURN -1
	CASE RANDOM_CHARANUM
		VARSET LOCALS
		IF 스친아내수 < 100
			포말의아내:스친아내수 = %CALLNAME:ARG%
			스친아내수 ++
		ELSE
			포말의아내:(RAND:100) = %CALLNAME:ARG%
		ENDIF
		SIF FINDELEMENT(포말의연인, CALLNAME:ARG, , ,1) > 0
			포말의연인:FINDELEMENT(포말의연인, CALLNAME:ARG, , ,1) '= ""
	CASE 1 TO CHARANUM
		아내플래그:ARG:0 = 1
	CASEELSE
		THROW NO가 부정합니다
ENDSELECT

@IS_아내(ARG)
#FUNCTION
IF TALENT:ARG:스침
	SIF FINDELEMENT(포말의아내, CALLNAME:ARG, , , 1) > 0
		RETURNF 1
	RETURNF 0
ELSE
	RETURNF TOINT(아내플래그:ARG:0)
ENDIF

@WITH_아내(ARG)
#FUNCTION
;아내의 몇 사람과 ARG가 같은 장소에 있을까를 돌려준다
VARSET LOCAL
SIF ARG == 0
	ARG = MASTER
FOR LOCAL, 1, CHARANUM
	SIF CFLAG:LOCAL:현재위치 == CFLAG:ARG:현재위치
		LOCAL:1 += IS_아내(LOCAL)
NEXT
RETURNF LOCAL:1

@HOW_아내
#FUNCTION
;아내이 지금 몇 사람 있을까를 돌려준다
VARSET LOCAL
FOR LOCAL, 1, CHARANUM
	LOCAL:1 += IS_아내(LOCAL)
NEXT
LOCAL:1 += 스친아내수
RETURNF LOCAL:1

