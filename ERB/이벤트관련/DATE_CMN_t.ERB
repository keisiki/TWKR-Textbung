SIF ARG == 0
	ARG = MASTER
FOR LOCAL,1,CHARANUM
	SIF CFLAG:LOCAL:현재위치 == CFLAG:ARG:현재위치 && TALENT:LOCAL:연인
		LOCAL:1 ++
NEXT
RETURNF LOCAL:1

