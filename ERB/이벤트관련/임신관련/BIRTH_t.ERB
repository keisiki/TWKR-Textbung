#DIM C_ID
FOR C_ID,1,CHARANUM
	FOR LOCAL,0,10
		SIF CHILDNAME:C_ID:LOCAL == ARGS
			CALL COLORMESSAGE(@"%CALLNAME:C_ID%에게 동명의 아이가 있습니다",C_YELLOW,1)
	NEXT
NEXT
