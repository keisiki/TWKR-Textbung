@CHILD_NAME(YOME)
#DIM YOME
#DIM CHILDNUM
#DIMS PROPOSED_NAME
CHILDNUM = EXP:YOME:출산경험 % 10
SIF !EXP:YOME:출산경험 % 10
	CHILDNUM = 10
$LOOP0
PRINTL 아이의 이름을 결정합시다
PRINTFORML 
CALL ASK_M("스스로 결정한다", 1,"랜덤 후보 보기", 1,"「멕시코에 부는 열풍!」이라는 뜻의 「산타나」라 하는 건 어떨까!", 1)

SELECTCASE RESULT
	CASE 0
		$LOOP1
		PRINTL 아이의 이름을 입력해 주세요
		INPUTS
		IF RESULTS == ""
			GOTO LOOP1
		ELSE
			PROPOSED_NAME = RESULTS
			CALL CHK_CHILDNAME_DUPLICATION(PROPOSED_NAME)
			PRINTFORML %조사처리(PROPOSED_NAME,"로")% 괜찮겠습니까?
			CALL ASK_YN
			IF RESULT
				GOTO LOOP1
			ELSE
				CHILDNAME:YOME:CHILDNUM = %RESULTS%
			ENDIF
		ENDIF
	CASE 1
		$LOOP2
		FOR LOCAL, 1,10
			IF CHILD_SEX:YOME:CHILDNUM == 1
			LOCALS:LOCAL = %랜덤캐릭터_명명(YOME)%
			ELSE
				LOCALS:LOCAL = %남자아이_명명(YOME, CHILDNUM)%
			ENDIF
			PRINTFORML [{LOCAL}] - %LOCALS:LOCAL%
		NEXT
		DRAWLINE
		PRINTFORML [99] - 후보 재생성
		PRINTFORML [100] - 돌아간다
		$LOOP3
		INPUT
		SELECTCASE RESULT
			CASE 0 TO 9
				PROPOSED_NAME = LOCALS:RESULT
				CALL CHK_CHILDNAME_DUPLICATION(PROPOSED_NAME)
				PRINTFORML %조사처리(PROPOSED_NAME,"로")% 괜찮겠습니까?
				CALL ASK_YN
				IF RESULT
					GOTO LOOP0
				ELSE
					CHILDNAME:YOME:CHILDNUM = %PROPOSED_NAME%
				ENDIF
			CASE 99
				GOTO LOOP2
			CASE 100
				GOTO LOOP0
			CASEELSE
				GOTO LOOP3
		ENDSELECT
	CASE 2
		PRINTFORML 화가 난 %조사처리(CALLNAME:YOME,"가")% 이름을 정해버렸다…
		IF CHILD_SEX:YOME:CHILDNUM == 1
		CHILDNAME:YOME:CHILDNUM = %랜덤캐릭터_명명(YOME)%
		ELSE
			CHILDNAME:YOME:CHILDNUM = %남자아이_명명(YOME, CHILDNUM, 1)%
		ENDIF
ENDSELECT

PRINTFORML %조사처리(CHILDNAME:YOME:CHILDNUM,"라")%는 이름이 되었습니다
TALENT:YOME:육아중 = CHILDNUM
