@SEASONAL(ARG)
VARSET LOCAL
;만났을 때
SELECTCASE FESTIVAL()
	CASE "설날"
		PRINTL
		PRINTFORML ●%마스터는% %CALLNAME:ARG%에게 새해 인사를 했다
		CALL OTOSHIDAMA(ARG)
	CASE "발렌타인 데이"
		SELECTCASE CFLAG:ARG:호감도
			CASE 1000 TO 3000
				PRINTFORMW %조사처리(CALLNAME:ARG,"로")%부터 초콜릿을 받았다
				PRINTW ……블랙썬더다
				ITEM:120 ++
				CFLAG:ARG:발렌타인 = 1
			CASE 3001 TO 5000
				PRINTFORMW %조사처리(CALLNAME:ARG,"로")%부터 초콜릿을 받았다
				ITEM:121 ++
				CFLAG:ARG:발렌타인 = 2
			CASE IS > 5000
				IF EXP:ARG:애정경험 < 100
					PRINTFORMW %조사처리(CALLNAME:ARG,"로")%부터 비싸보이는 초콜릿을 받았다
					ITEM:122 ++
					CFLAG:ARG:발렌타인 = 3
				ELSE
					PRINTFORML %조사처리(CALLNAME:ARG,"로")%부터 초콜릿을 받았다
					PRINTW 손수 만든 것이다! 기쁘다!
					ITEM:123 ++
					CFLAG:ARG:발렌타인 = 4
				ENDIF
		ENDSELECT
ENDSELECT

