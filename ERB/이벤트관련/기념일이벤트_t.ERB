@FESTIVAL
#FUNCTIONS
IF DAY:2 == 1
	SELECTCASE DAY:3
		CASE 1
			RETURNF "설날" ;元日
		CASE 3
			RETURNF "히나마츠리" ;雛祭り
		CASE 11
			RETURNF "어버이날" ;母の日
		CASE 13
 			RETURNF "화이트 데이 전날" ;ホワイトデー前日
		CASE 14
			RETURNF "화이트 데이" ;ホワイトデー
		CASE 25
			RETURNF "예대제" ;例大祭
	ENDSELECT
ELSEIF DAY:2 == 2
	SELECTCASE DAY:3
		CASE 7
			RETURNF "칠석" ;七夕
		CASE 14
			RETURNF "추석" ;お盆
	ENDSELECT
ELSEIF DAY:2 == 3
	SELECTCASE DAY:3
		CASE 1
			RETURNF "풍신 「입춘으로부터 210일째 되는 날」" ;"風神「二百十日」
		CASE 15
			RETURNF "보름" ;十五夜
		CASE 27
			RETURNF "수확제" ;収穫祭
		CASE 30
			RETURNF "할로윈" ;ハロウィン
	ENDSELECT
ELSEIF DAY:2 == 4
	SELECTCASE DAY:3
		CASE 3
			RETURNF "절분" ;節分
		CASE 14
			RETURNF "발렌타인 데이" ;バレンタインデー
		CASE 24
			RETURNF "크리스마스 이브" ;クリスマスイヴ
		CASE 25
			RETURNF "크리스마스" ;クリスマス
		CASE 31
			RETURNF "그믐날" ;大晦日
	ENDSELECT
ENDIF

