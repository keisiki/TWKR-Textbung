	CASEELSE
		CLEARLINE 1
		GOTO INPUT_LOOP2
ENDSELECT
IF 거래 < 999
	CALL PRINT_FACE, 0, "笑顔", "服", "20"
	CALL COLORMESSAGE("「구입해주셔서 감사합니다！」", 0XFFFFFF, 2, 1)
