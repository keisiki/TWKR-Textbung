	PRINTFORM [{GETNUM(ITEM, "미라다의돌")}] 
	CALL COLORMESSAGE("애욕을 독점하는 미라다의 돌 밀레니엄", C_D_PINK, 1, 1)
	CALL COLORMESSAGE("　　　특별가격90％OFF！", C_RED, 0, 1)
	PRINTFORML %금액표시(가격), 13%
