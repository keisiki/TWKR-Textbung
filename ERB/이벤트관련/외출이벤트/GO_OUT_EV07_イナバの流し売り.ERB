		CALL COLORMESSAGE("애욕을 독점하는 미라다의돌 밀레니엄", C_D_PINK, 0, 1)
		PRINTFORMW ！！！！」
		PRINTFORML 「물론！　사주시겠죠！？」
		FONTREGULAR
		CALL ASK_M("산다！", MONEY >= 가격, "사지 않는다", 1)
		IF !RESULT
			MONEY -= 가격
			CALL GET_ITEM("미라다의돌", 1, 2)
		ELSE
			거래 = 999
		ENDIF
