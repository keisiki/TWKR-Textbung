;*********************************************************************************************
;カウンターコマンド：가슴애무
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOMF58(ARG)

	;몸의자세の変更
	;=============================
	CALL TOUCH_SET(SET_FROM_YUBI,5,ARG)
	TFLAG:MASTER의B사용중 ++
	
	;ソース計算および内部処理系統
	;=============================
	IF TEQUIP:PLAYER:1 & 2
		SIF RAND:2
			CALL DATUI_TOP(ARG,0)
	ENDIF
	SIF !(TALENT:PLAYER:2 & 1)
		SOURCE:ARG:가학 += 100
	SOURCE:ARG:성행동 += 200
	SOURCE:ARG:송구스러운 += 300
	SOURCE:ARG:유혹 += 200
	SOURCE:ARG:도발 += 100
	SOURCE:ARG:정복 += 300
	SOURCE:PLAYER:쾌B += 300
	EXP:ARG:수음경험 ++

	;マスターカウンター制御
	;(ビット立ちで不可 0=엉덩이를 쓰다듬는다 1=껴안는다 2=키스한다 3=가슴애무 4=애널애무 5=클리애무 6=指挿入れ 7=치마를 넘긴다)
	;=============================
	CALL 카운터삽입됨지속처리(ARG)
	SETBIT TCVAR:ARG:26 ,7

RETURN 1

;*********************************************************************************************
;カウンター実行可否出力関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ABLE58(ARG)

	SIF TFLAG:65
		RETURN 0
	SIF ABL:ARG:손가락 < 1
		RETURN 0

RETURN 1

;*********************************************************************************************
;カウンター実行判定値算出関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ORDER58(커맨드번호, ARG, 기본치)
#DIM 커맨드번호
#DIM 기본치
#DIMS 카운터타입

	;카운터타입設定
	;=============================
	카운터타입 = 탈의애무

	;実行判定値算出式
	;=============================
	LOCAL = 기본치 + 2 * TALENT:ARG:능숙한손가락 + ABL:ARG:손가락

	;카운터타입別計算処理 実質実行判定処理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:커맨드번호, 1)
	LOCAL *= COUNTER_TYPE(카운터타입, ARG)

RETURN LOCAL
