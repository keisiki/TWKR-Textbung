;*********************************************************************************************
;カウンターコマンド：体を摺り寄せる
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOMF23(ARG)

	;몸의자세の変更
	;=============================
	CALL TOUCH_RESET_T(ARG)

	;ソース計算および内部処理系統
	;=============================
	CALLF ONCE("치마젖히기",0,ARG)
	SOURCE:ARG:치욕 += 300
	SOURCE:ARG:도발 += 200

	;マスターカウンター制御
	;=============================
	;なし

RETURN 1

;*********************************************************************************************
;カウンター実行可否出力関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ABLE23(ARG)

	;服装制限
	SIF !(EQUIP:PLAYER:치마 || EQUIP:PLAYER:원피스 || EQUIP:PLAYER:기모노)
	RETURN 0
	SIF TEQUIP:PLAYER:0 > 3
		RETURN 0
	SIF !EQUIP:PLAYER:0
		RETURN 0
	SIF !ONCE("치마젖히기",1,ARG)
		RETURN 0

RETURN 1

;*********************************************************************************************
;カウンター実行判定値算出関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ORDER23(커맨드번호, ARG, 기본치)
#DIM 커맨드번호
#DIM 기본치
#DIMS 카운터타입

	;카운터타입設定
	;=============================
	카운터타입 = 소프트

	;実行判定値算出式
	;=============================
	LOCAL = 기본치 + CFLAG:ARG:적극성 + CFLAG:ARG:질 - CFLAG:ARG:수줍음

	;카운터타입別計算処理 実質実行判定処理を含む
	;=============================
	LOCAL *= COUNTER_TYPE(카운터타입, ARG)

RETURN LOCAL
