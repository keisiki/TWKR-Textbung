;*********************************************************************************************
;カウンター実行可否出力関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ABLE44(ARG)

	SIF GETBIT(FLAG:애널개발무효, 1)
		RETURN 0
	;毒人形だと性器がついてないのでダメ
	SIF TALENT:ARG:인형 == 99
		RETURN 0
	;体格差がある場合は経験がないとダメ
	SIF 삽입불가(ARG) == 1 && EXP:ARG:A경험 < 50 && !TALENT:MASTER:금단의지식
		RETURN 0
	;さらに体格差があると禁断の知識が必要
	SIF 삽입불가(ARG) == 2 && (EXP:ARG:A경험 < 50 || !TALENT:MASTER:금단의지식)
		RETURN 0
	SIF 삽입불가(ARG) == 3
		RETURN 0
	SIF !(TALENT:ARG:2 & 1)
		RETURN 0
	SIF TALENT:ARG:임신 && (CFLAG:ARG:903 <= 30 || CFLAG:ARG:903 >= 71)
		RETURN 0
	SIF CFLAG:ARG:육아인원수 >= 1 && CFLAG:ARG:육아인원수 <= 30
		RETURN 0
	SIF !(TALENT:PLAYER:2 & 2)
		RETURN 0
	SIF BASE:MASTER:발기 < 1000
		RETURN 0
	SIF TFLAG:MASTER의V사용중 || TEQUIP:50 >= 0 || TEQUIP:51 >= 0 || TFLAG:MASTER의A사용중
		RETURN 0
	SIF TEQUIP:MASTER:50 >= 0 || TEQUIP:MASTER:51 >= 0
		RETURN 0
	SIF PALAM:ARG:윤활 < PALAMLV:3
		RETURN 0
	SIF TEQUIP:ARG:애널바이브
		RETURN 0
	SIF TEQUIP:ARG:체위
		RETURN 0
	SIF TEQUIP:MASTER:50 >= 0 || TEQUIP:MASTER:51 >= 0
		RETURN 0
	SIF EXP:ARG:A경험 < 30
		RETURN 0
	;정조帯、触手下着、바이브パンツ、二穴바이브パンツをはいてるとダメ
	SIF EQUIP:하반신속옷2 == 27 || EQUIP:하반신속옷2 == 28 || EQUIP:하반신속옷2 == 29 || EQUIP:하반신속옷2 == 30
		RETURN 0

RETURN 1

;*********************************************************************************************
;カウンター実行判定値算出関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ORDER44(커맨드번호, ARG, 기본치)
#DIM 커맨드번호
#DIM 기본치
#DIMS 카운터타입

	;카운터타입設定
	;=============================
	카운터타입 = 애원

	;実行判定値算出式
	;=============================
	LOCAL = 기본치 + ABL:ARG:A감각 * 3 + EX:ARG:A절정직전 * 10
	SIF TALENT:ARG:동물귀
		LOCAL += ABL:ARG:A감각 * 2

	;카운터타입別計算処理 実質実行判定処理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:커맨드번호, 1)
	LOCAL *= COUNTER_TYPE(카운터타입, ARG)

RETURN LOCAL
