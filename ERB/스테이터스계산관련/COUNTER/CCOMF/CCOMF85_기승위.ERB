;カウンターコマンド：기승위Ｖ
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOMF85(ARG)

	;몸의자세の変更
	;=============================
	SIF MASTER_POSE(0,SET_V) == ARG || MASTER_POSE(0,SET_A) == ARG
		CALL TOUCH_RESET_T(ARG)
	CALL TOUCH_SET(SET_FROM_V,1,ARG)
	TFLAG:MASTER의P삽입중 = 1
	TFLAG:MASTER의C사용중 ++
	
	;ソース計算および内部処理系統
	;=============================
	SIF TEQUIP:PLAYER:0
		CALL DATUI_BOTTOM(ARG,0)
	IF BEDROOM(CFLAG:MASTER:현재위치)
		SIF TEQUIP:ARG:0
			CALL DATUI_BOTTOM_T(ARG,0)
	ELSE
		SIF TEQUIP:ARG:0 & 14
			CALL DATUI_BOTTOM_T(ARG,1)
	ENDIF
	TCVAR:PLAYER:동정상실 = 1
	TCVAR:ARG:피임 = 1
	DOWNBASE:ARG:체력 += 60
	DOWNBASE:ARG:기력 += 120
	SOURCE:ARG:정복 += 700
	SOURCE:ARG:쾌V = 300
	SOURCE:ARG:사랑 = 150
	SOURCE:ARG:성행동 = 500
	SOURCE:ARG:달성 = 300
	SOURCE:ARG:고통 = 250
	SOURCE:ARG:노출 = 60
	SOURCE:ARG:가학 += 200
	TCVAR:116 = PLAYER
	CALL PAIN_CHECK_V(ARG)
	;사정장소（1=질내 2=애널 3=수음 4=口淫 5=파이즈리 6=스마타 7=풋잡 8=体表 9=애널봉사 10=道具 11=触手 12=Ａ고문 13=Ｖ고문）
	CALL 사정대상등록(PLAYER, ARG, 1)
	TEQUIP:ARG:체위 = 3
	;強度
	TCVAR:PLAYER:4 = 1000
	CALL STAIN_질내P삽입
	EXP:ARG:V성교경험 ++
	EXP:PLAYER:삽입경험 ++
	CALL LOST_VIRGIN(ARG)
	EXP:ARG:애정경험 += TALENT:ARG:연모
	TEQUIP:ARG:50 = MASTER
	TCVAR:ARG:기학플래그 = 1

	;マスターカウンター制御
	;(ビット立ちで不可 0=엉덩이를 쓰다듬는다 1=껴안는다 2=키스한다 3=가슴애무 4=애널애무 5=클리애무 6=指挿入れ 7=치마를 넘긴다)
	;=============================
	;CALL 카운터삽입됨지속처리(ARG)
	SETBIT TCVAR:ARG:26 ,6
	SETBIT TCVAR:ARG:26 ,7

RETURN 1

;*********************************************************************************************
;カウンター実行可否出力関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ABLE85(ARG)

	;毒人形だと性器がついてないのでダメ
	SIF TALENT:ARG:인형 == 99
		RETURN 0
	;体格差がある場合は経験がないとダメ
	SIF 삽입불가(ARG) == 1 && EXP:ARG:V경험 < 50 && !TALENT:MASTER:금단의지식
		RETURN 0
	;さらに体格差があると禁断の知識が必要
	SIF 삽입불가(ARG) == 2 && (EXP:ARG:V경험 < 50 || !TALENT:MASTER:금단의지식)
		RETURN 0
	SIF 삽입불가(ARG) == 3
		RETURN 0
	SIF !(TALENT:ARG:2 & 1)
		RETURN 0
	SIF TALENT:ARG:임신 && (CFLAG:ARG:903 <= 30 || CFLAG:ARG:903 >= 71)
		RETURN 0
	SIF CFLAG:ARG:육아인원수 >= 1 && CFLAG:ARG:육아인원수 <= 30
		RETURN 0
	SIF !(TALENT:PLAYER:2 & 2)
		RETURN 0
	SIF BASE:MASTER:발기 < 1000
		RETURN 0
	SIF TFLAG:63
		RETURN 0
	SIF TEQUIP:50 >= 0 || TEQUIP:51 >= 0
		RETURN 0
	SIF TEQUIP:ARG:체위
		RETURN 0
	SIF TEQUIP:MASTER:50 >= 0 || TEQUIP:MASTER:51 >= 0
		RETURN 0
	SIF PALAM:ARG:윤활 < PALAMLV:3
		RETURN 0
	SIF TEQUIP:ARG:바이브
		RETURN 0
	;정조帯、触手下着、바이브パンツ、二穴바이브パンツをはいてるとダメ
	SIF EQUIP:하반신속옷2 == 27 || EQUIP:하반신속옷2 == 28 || EQUIP:하반신속옷2 == 29 || EQUIP:하반신속옷2 == 30
		RETURN 0

RETURN 1

;*********************************************************************************************
;カウンター実行判定値算出関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ORDER85(커맨드번호, ARG, 기본치)
#DIM 커맨드번호
#DIM 기본치
#DIMS 카운터타입

	;카운터타입設定
	;=============================
	카운터타입 = 성교

	;実行判定値算出式
	;=============================
	LOCAL = 기본치 + ABL:ARG:V감각 * 3 + EX:ARG:V절정직전 * 10

	;카운터타입別計算処理 実質実行判定処理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:커맨드번호, 1)
	LOCAL *= COUNTER_TYPE(카운터타입, ARG)

RETURN LOCAL
