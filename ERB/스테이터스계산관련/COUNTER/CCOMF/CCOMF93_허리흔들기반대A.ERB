;*********************************************************************************************
;カウンターコマンド：腰振り逆Ａ
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOMF93(ARG)

	;몸의자세の変更
	;=============================
	CALL TOUCH_SET(SET_FROM_P,7,ARG)
	TFLAG:MASTER의A사용중 ++
	
	;ソース計算および内部処理系統
	;=============================
	SOURCE:ARG:쾌C += 100
	SOURCE:ARG:성행동 += 300
	SOURCE:ARG:정복 += 1000
	SOURCE:PLAYER:액체 += 100
	SOURCE:ARG:가학 += 600
	SOURCE:ARG:강요 += 600
	SOURCE:PLAYER:쾌A += 1000
	CALL PAIN_CHECK_A_MASTER(ARG)
	;사정장소（1=질내 2=애널 3=수음 4=口淫 5=파이즈리 6=스마타 7=풋잡 8=体表 9=애널봉사 10=道具 11=触手 12=Ａ責め 13=Ｖ責め）
	CALL 사정대상등록(PLAYER, ARG, 12)
	TCVAR:PLAYER:4 += 250
	;사정장소（1=질내 2=애널 3=수음 4=口淫 5=파이즈리 6=스마타 7=풋잡 8=体表 9=애널봉사 10=道具 11=触手 12=Ａ고문 13=Ｖ고문）
	CALL 사정대상등록(ARG, PLAYER, 2)
	;強度
	TCVAR:ARG:4 += 1000
	CALL STAIN_애널P삽입
	EXP:PLAYER:A성교경험 ++
	EXP:ARG:삽입경험 ++
	TEQUIP:PLAYER:51 = ARG
	;봉사플래그
	TCVAR:ARG:108 = 1
	TCVAR:ARG:기학플래그 = 1

	;マスターカウンター制御
	;(ビット立ちで不可 0=엉덩이를 쓰다듬는다 1=껴안는다 2=키스한다 3=가슴애무 4=애널애무 5=클리애무 6=指挿入れ 7=치마를 넘긴다)
	;=============================
	;CALL 카운터삽입됨지속처리(ARG)
	IF TEQUIP:MASTER:체위 == 2
		SETBIT TCVAR:ARG:26 ,0
		SETBIT TCVAR:ARG:26 ,1
		SETBIT TCVAR:ARG:26 ,2
		SETBIT TCVAR:ARG:26 ,3
	ENDIF
	SETBIT TCVAR:ARG:26 ,4
	SETBIT TCVAR:ARG:26 ,5
	SETBIT TCVAR:ARG:26 ,6
	SETBIT TCVAR:ARG:26 ,7

RETURN 1

;*********************************************************************************************
;カウンター実行可否出力関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ABLE93(ARG)

	SIF !(TALENT:ARG:2 & 2)
		RETURN 0
	SIF TEQUIP:PLAYER:51 != ARG
		RETURN 0

RETURN 1

;*********************************************************************************************
;カウンター実行判定値算出関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ORDER93(커맨드번호, ARG, 기본치)
#DIM 커맨드번호
#DIM 기본치
#DIMS 카운터타입

	;카운터타입設定
	;=============================
	카운터타입 = 고문

	;実行判定値算出式
	;=============================
	LOCAL = 기본치 + ABL:ARG:C감각 + MAX(EXP:ARG:사정경험 / 15, 15)
	
	;카운터타입別計算処理 実質実行判定処理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:커맨드번호, 1)
	LOCAL *= COUNTER_TYPE(카운터타입, ARG)

RETURN LOCAL
