;*********************************************************************************************
;カウンターコマンド：抱きつき
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOMF122(ARG)

	;몸의자세の変更
	;=============================
	CALL TOUCH_RESET_T(ARG)
	
	;ソース計算および内部処理系統
	;=============================
	SOURCE:ARG:사랑 += 100
	SOURCE:ARG:유혹 += 80
	SOURCE:ARG:봉사 += 50

	;マスターカウンター制御
	;(ビット立ちで不可 0=엉덩이를 쓰다듬는다 1=껴안는다 2=키스한다 3=가슴애무 4=애널애무 5=클리애무 6=指挿入れ 7=치마를 넘긴다)
	;=============================
	SETBIT TCVAR:ARG:26 ,4
	SETBIT TCVAR:ARG:26 ,6
	SETBIT TCVAR:ARG:26 ,7

RETURN 1

