;*********************************************************************************************
;カウンターコマンド：腰振りＶ
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOMF88(ARG)

	;몸의자세の変更
	;=============================
	CALL TOUCH_SET(SET_FROM_V,1,ARG)
	TFLAG:MASTER의P삽입중 = 1
	TFLAG:MASTER의C사용중 ++
	
	;ソース計算および内部処理系統
	;=============================
	DOWNBASE:MASTER:체력 += 40
	DOWNBASE:MASTER:기력 += 80
	TCVAR:PLAYER:4 += 1000
	SOURCE:ARG:쾌V += 300
	SOURCE:ARG:사랑 += 200
	SOURCE:ARG:성행동 += 500
	SOURCE:ARG:달성 += 200
	SOURCE:ARG:정복 += 500
	SOURCE:ARG:가학 += 100
	TCVAR:116 = PLAYER
	TCVAR:ARG:기학플래그 = 1
	CALL PAIN_CHECK_V(ARG)
	;사정장소（1=질내 2=애널 3=수음 4=口淫 5=파이즈리 6=스마타 7=풋잡 8=体表 9=애널봉사 10=道具 11=触手 12=Ａ고문 13=Ｖ고문）
	CALL 사정대상등록(PLAYER, ARG, 1)
	EXP:ARG:V성교경험 ++
	EXP:PLAYER:삽입경험 ++
	EXP:ARG:애정경험 += TALENT:ARG:연모
	TEQUIP:ARG:50 = MASTER
	;봉사플래그
	TCVAR:ARG:108 = 1

	;マスターカウンター制御
	;(ビット立ちで不可 0=엉덩이를 쓰다듬는다 1=껴안는다 2=키스한다 3=가슴애무 4=애널애무 5=클리애무 6=指挿入れ 7=치마를 넘긴다)
	;=============================
	;CALL 카운터삽입됨지속처리(ARG)
	SETBIT TCVAR:ARG:26 ,6
	SETBIT TCVAR:ARG:26 ,7

RETURN 1

;*********************************************************************************************
;カウンター実行可否出力関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ABLE88(ARG)

	SIF !(TALENT:ARG:2 & 1)
		RETURN 0
	SIF !(TALENT:PLAYER:2 & 2)
		RETURN 0
	SIF BASE:MASTER:발기 < 1000
		RETURN 0
	SIF TEQUIP:ARG:50 < 0
		RETURN 0
	SIF !(TEQUIP:50 >= 0 || TEQUIP:51 >= 0)
		RETURN 0
	SIF TCVAR:ARG:100 != PLAYER
		RETURN 0
	SIF ABL:ARG:허리 < 2
		RETURN 0

RETURN 1

;*********************************************************************************************
;カウンター実行判定値算出関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ORDER88(커맨드번호, ARG, 기본치)
#DIM 커맨드번호
#DIM 기본치
#DIMS 카운터타입

	;카운터타입設定
	;=============================
	카운터타입 = 성교

	;実行判定値算出式
	;=============================
	LOCAL = 기본치 + (ABL:ARG:봉사정신 + ABL:ARG:V감각) * 2
	
	;카운터타입別計算処理 実質実行判定処理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:커맨드번호, 1)
	LOCAL *= COUNTER_TYPE(카운터타입, ARG)

RETURN LOCAL
