@COUNTER_TYPE(ARGS, ARG)
;TFLAG:102 =1로 일상,=2그리고 통상 우후후,=3그리고 상대에게서의 덮치기
#FUNCTION
VARSET LOCAL
SELECTCASE ARGS
	CASE "소프트", "ソフト"
		SIF TFLAG:102 == 1 && TCVAR:ARG:친해져 >= 2
			LOCAL = 100
	CASE "베리소프트", "ベリーソフト"
		IF TFLAG:102 == 1
			LOCAL = 100
			SIF !TALENT:ARG:연모 && !TALENT:ARG:사모
				LOCAL -= 50
		ENDIF
	CASE "코뮤", "コミュ"
		SIF TFLAG:102 == 1
			LOCAL = 100
	CASE "착의", "着衣"
		IF (CFLAG:ARG:우후후 == 2) && !TFLAG:껴안기모드
			LOCAL = 100
			;탈의에 의해 착의 성희롱은 제한된다
			SIF TEQUIP:PLAYER:0 < 2
				LOCAL -= 10
			SIF TEQUIP:PLAYER:1 < 1
				LOCAL -= 10
		ENDIF
	CASE "탈의애무", "脱衣愛撫"
		IF (CFLAG:ARG:우후후 == 2) && !TFLAG:껴안기모드
			LOCAL = 80
			IF BASE:ARG:무드 > 900
				LOCAL += 10
			ELSEIF BASE:ARG:무드 > 500
				LOCAL += 5
			ENDIF
			IF BASE:ARG:이성 <= 0
				LOCAL += 15
			ELSEIF BASE:ARG:이성 <= 500
				LOCAL += 10
			ENDIF
			;소질로 진퉁성희롱율이 변동
			SIF TALENT:ARG:걸레
				LOCAL += 5
			SIF TALENT:ARG:성적흥미 > 0
				LOCAL += 3
			SIF TALENT:ARG:정조 < 0
				LOCAL += 3
			SIF TALENT:ARG:수치심 < 0
				LOCAL += 3
			SIF TALENT:ARG:헌신적
				LOCAL += 3
			SIF TALENT:ARG:자제심
				LOCAL -= 3
			SIF TALENT:ARG:성적흥미 < 0
				LOCAL -= 5
			SIF TALENT:ARG:일선을넘지않음
				LOCAL -= 5
			SIF TALENT:ARG:정조 > 0
				LOCAL -= 5
			SIF TALENT:ARG:수치심 > 0
				LOCAL -= 3
			LOCAL += 2 * (CFLAG:ARG:질 + CFLAG:ARG:적극성)
		ENDIF
	CASE "탈의강요", "脱衣強要"
		IF (CFLAG:ARG:우후후 == 2) && !TFLAG:껴안기모드
			LOCAL = COUNTER_TYPE("탈의애무", ARG)
			IF LOCAL
				SIF TALENT:ARG:걸레
					LOCAL += 5
				SIF TALENT:ARG:새드
					LOCAL += 2
				SIF TALENT:ARG:음란
					LOCAL += 5
				SIF TALENT:ARG:자존심 > 0
					LOCAL += 3
				SIF TALENT:ARG:수치심 < 0
					LOCAL += 3
				SIF TALENT:ARG:성적흥미 > 0
					LOCAL += 3
				SIF TALENT:ARG:헌신적
					LOCAL -= 3
				SIF TALENT:ARG:일선을넘지않음
					LOCAL -= 5
				SIF TALENT:ARG:자제심
					LOCAL -= 3
				SIF TALENT:ARG:수치심 > 0
					LOCAL -= 3
				SIF TALENT:ARG:응답 < 0
					LOCAL -= 3
				SIF TALENT:ARG:담력 < 0
					LOCAL -= 3
				LOCAL += 2 * (CFLAG:ARG:유혹 - CFLAG:ARG:적극성)
			ENDIF
			;여자끼리라면 확률 저하
			IF (TALENT:MASTER:성별 & 1) && (TALENT:ARG:성별 & 1)
				IF TALENT:ARG:성별 & 2
					LOCAL = LOCAL * 3 / 5
				ELSE
					LOCAL = LOCAL * 2 / 5
				ENDIF
			ENDIF
		ENDIF
	CASE "성교", "고문", "性交", "責め"
		IF (CFLAG:ARG:우후후 == 2) && !TFLAG:껴안기모드
			LOCAL = COUNTER_TYPE("탈의애무", ARG)
			IF LOCAL
				SIF TALENT:ARG:걸레
					LOCAL += 5
				SIF TALENT:ARG:섹프
					LOCAL += 5
				SIF TALENT:ARG:헌신적 && TALENT:ARG:연모
					LOCAL += 3
				IF TALENT:ARG:연모
					IF TALENT:ARG:연인
						LOCAL += 5
					ELSE
						LOCAL += 3
					ENDIF
				ENDIF
				SIF TALENT:ARG:일선을넘지않음
					LOCAL -= 5
				SIF TALENT:ARG:자제심
					LOCAL -= 3
				LOCAL += 2 * (CFLAG:ARG:적극성 + CFLAG:ARG:질)
				SIF TALENT:MASTER:처녀
					LOCAL -= 5
				SIF TALENT:ARG:처녀 == 1 && !TALENT:ARG:연모 && !TALENT:ARG:걸레
					LOCAL = 0
				SIF TALENT:ARG:무지 && !TALENT:ARG:걸레
					LOCAL = 0
			ENDIF
		ENDIF
	CASE "애원", "おねだり"
		IF (CFLAG:ARG:우후후 == 2) && GETPALAMLV(PALAM:ARG:욕정, 10) > 3 && !TFLAG:껴안기모드
			LOCAL = GETPALAMLV(PALAM:ARG:욕정, 10)
			IF LOCAL
				SIF TALENT:ARG:걸레
					LOCAL:1 += 5
				SIF TALENT:ARG:섹프
					LOCAL:1 += 5
				SIF TALENT:ARG:자존심 > 0
					LOCAL:1 -= 3
				SIF TALENT:ARG:수치심 < 0
					LOCAL:1 += 3
				SIF TALENT:ARG:성적흥미 > 0
					LOCAL:1 += 3
				SIF TALENT:ARG:일선을넘지않음
					LOCAL:1 -= 5
				SIF TALENT:ARG:자제심
					LOCAL:1 -= 3
				SIF TALENT:ARG:수치심 > 0
					LOCAL:1 -= 3
				SIF TALENT:ARG:응답 < 0
					LOCAL:1 -= 3
				SIF TALENT:ARG:담력 < 0
					LOCAL:1 -= 3
				SIF TCVAR:ARG:미약
					LOCAL:1+= 2
				SIF TCVAR:ARG:발정
					LOCAL:1+= 2
				SIF IsInsenceValid(ARG)
					LOCAL:1+= 2
				IF TALENT:ARG:처녀
					LOCAL:1 -= 7
					SIF TALENT:ARG:정조 > 0
						LOCAL:1 -= 5
				ENDIF
				LOCAL:1 += CFLAG:ARG:유혹 * 2 - CFLAG:ARG:적극성 - CFLAG:ARG:수줍음 + 12
				LOCAL:1 = MAX(LOCAL:1, 1)
				LOCAL = LOCAL * LOCAL:1
				SIF TALENT:ARG:무지 && !TALENT:ARG:걸레 && TALENT:ARG:처녀
					LOCAL = 0
			ENDIF
		ENDIF
	;CASE "삽입중"
	;	SIF (CFLAG:ARG:우후후 == 2) && (TEQUIP:ARG:50 >= 0 || TEQUIP:ARG:51 >= 0) && !TFLAG:껴안기모드
	;		LOCAL = 999
	CASE "포옹", "抱き着き"
		IF (CFLAG:ARG:우후후 == 2) && TFLAG:껴안기모드
			LOCAL = 100
		ENDIF
ENDSELECT
RETURNF MAX(LOCAL, 0)

@SETTING_PERSONALITY(ARG)
CFLAG:ARG:수줍음 = TALENT:ARG:눈에띄고싶어함 + TALENT:ARG:자기애 - TALENT:ARG:자제심 - TALENT:ARG:정조 - 2 * TALENT:ARG:수치심
CFLAG:ARG:유혹 = TALENT:ARG:매력 + TALENT:ARG:매혹 + TALENT:ARG:수수께끼의매력 + TALENT:ARG:가슴사이즈 + TALENT:ARG:체형 - TALENT:ARG:정조 + TALENT:ARG:소악마 - TALENT:ARG:유치+ 3 * FLAG:생활능력무
CFLAG:ARG:적극성 = TALENT:ARG:담력 + TALENT:ARG:명랑／음침 - TALENT:ARG:무관심 - TALENT:ARG:감정결여 + TALENT:ARG:성적흥미 - TALENT:ARG:일선을넘지않음 + TALENT:ARG:헌신적
CFLAG:ARG:질 = TALENT:ARG:응답 + TALENT:ARG:자존심 + TALENT:ARG:헌신적 + 2 * (TALENT:ARG:새드 - TALENT:ARG:마조) + 3 * FLAG:생활능력무
SIF !CFLAG:ARG:성격경향
	CFLAG:ARG:성격경향 = 소질계산(ARG)