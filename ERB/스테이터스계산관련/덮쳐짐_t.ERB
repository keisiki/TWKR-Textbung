@ENDURE(ARG)
#FUNCTION
;소질에 따라 판정 변화
LOCAL = CFLAG:ARG:합의판정
LOCAL += (EX:ARG:C절정직전 + EX:ARG:V절정직전 + EX:ARG:A절정직전 + EX:ARG:B절정직전 + EX:ARG:M절정직전) * 20
;껴안으면 밀어 넘어뜨려지는 확률 상승
SIF SELECTCOM == 311
	LOCAL += 30
LOCAL += TALENT:ARG:성적흥미 * 20
SIF TALENT:ARG:처녀
	LOCAL -= 50
SIF TALENT:ARG:연모
	LOCAL = LOCAL + 50
SIF TALENT:ARG:자존심 > 0
	LOCAL -= 20
SIF CFLAG:ARG:생해금 == 2
	LOCAL = LOCAL + 50
SIF CFLAG:ARG:억지로질내사정
	LOCAL -= 100
SIF TALENT:ARG:담력 < 0 || TALENT:ARG:응답 < 0 || TALENT:ARG:무관심
	LOCAL = LOCAL - 30
SIF TALENT:ARG:수치심 > 0
	LOCAL -= 30
SIF TALENT:ARG:수치심 < 0
	LOCAL = LOCAL + 20
SIF TALENT:ARG:자제심
	LOCAL = LOCAL - 20
SIF TALENT:ARG:정조 < 0 || TALENT:ARG:소악마
	LOCAL = LOCAL + 20
SIF TALENT:ARG:정조 > 0 || TALENT:ARG:일선을넘지않음
	LOCAL -= 20
IF !GETBIT(CFLAG:ARG:기정사실, 1) && TALENT:ARG:정조 > 0
	LOCAL -= 30
	SIF !TALENT:ARG:연모 && !TALENT:ARG:섹프
		LOCAL -= 50
ENDIF
SIF OTOKOGIRAI(ARG) && !(IsHeat(ARG) || IsInsenceValid(ARG))
	LOCAL = LOCAL / 2
SIF TALENT:ARG:일선을넘지않음 && TALENT:ARG:연모
	LOCAL = LOCAL * 12 / 5
SIF MARK:ARG:반발각인 == 3
	LOCAL = 0
SIF TFLAG:120 && TFLAG:120 != ARG
	LOCAL = 0
SIF !SHIRAHU(ARG)
	LOCAL = 0
SIF CFLAG:ARG:행동 == 5
	LOCAL = 0
SIF CFLAG:ARG:데일리
	LOCAL = 0
SIF CFLAG:ARG:동침중
	LOCAL = 0
SELECTCASE CFLAG:ARG:욕구불만도
	CASE IS >= 1000
		LOCAL *= 3
	CASE IS >= 800
		LOCAL = LOCAL * 3 / 2
	CASE IS >= 600
		LOCAL = LOCAL * 5 / 4
	CASE IS >= 500
	CASE IS >= 300
		LOCAL /= 2
	CASE IS >= 200
		LOCAL /= 4
	CASE IS >= 100
		LOCAL /= 10
	CASEELSE
		LOCAL = 0
ENDSELECT

;체력에 의존하여 밀어 넘어뜨려짐 확률 감소

SELECTCASE BASE:ARG:체력
	CASE IS < 750
		LOCAL = 0
	CASE IS < 1000
		LOCAL /= 2
	CASE IS < 1500
		LOCAL = LOCAL * 3 / 4
	CASEELSE
ENDSELECT

SELECTCASE BASE:ARG:기력
	CASE 0
		LOCAL = 0
	CASE IS < 500
		LOCAL /= 2
	CASEELSE
ENDSELECT

;이성에 의존하여 밀어 넘어뜨려짐 확률 감소
IF BASE:ARG:이성 > 800
	LOCAL = LOCAL / 5
ELSEIF BASE:ARG:이성 > 600
	LOCAL = LOCAL / 2
ELSE
	;Do Notting
ENDIF
SELECTCASE BASE:ARG:무드
	CASE IS < 200
		LOCAL = 0
	CASE 201 TO 400
		LOCAL /= 4
	CASE 401 TO 600
		LOCAL /= 2
	CASE 601 TO 800
	CASEELSE
		LOCAL = LOCAL * 6 / 5
ENDSELECT
SIF FLAG:생활능력무
	LOCAL = LOCAL * 2
SIF CFLAG:ARG:빡침
	LOCAL = 0
SIF CFLAG:ARG:덮침금지
	LOCAL = 0
SIF TFLAG:펄기한
	LOCAL = 0
RETURNF LOCAL

