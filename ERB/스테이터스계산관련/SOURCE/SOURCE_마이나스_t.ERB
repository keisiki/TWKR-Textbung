;불결의 소스 처리
;CALL		USER
;ARG		캐릭터 NO
;RETURN		VOID
;COMMENT	
;-----------------------------------------------------------
@SOURCE_불결(ARG)
VARSET LOCAL
LOCAL = SOURCE:ARG:불결

;ABL:순종을 본다
SELECTCASE ABL:ARG:순종
	CASE 0
		TIMES LOCAL , 1.50
	CASE 1 TO 3
		TIMES LOCAL , 1.30
	CASE 4 TO 6
		TIMES LOCAL , 1.00
	CASE 7 TO 9
		TIMES LOCAL , 0.75
	CASE 10 TO 12
		TIMES LOCAL , 0.50
	CASE 13 TO 15
		TIMES LOCAL , 0.25
	CASEELSE
		TIMES LOCAL , 0.10
ENDSELECT
IF D_불쾌변동:ARG:D_변동치
	LOCAL = LOCAL * (100 + D_불쾌변동:ARG:D_변동치) / 100
ENDIF
CUP:ARG:불쾌 += LOCAL

