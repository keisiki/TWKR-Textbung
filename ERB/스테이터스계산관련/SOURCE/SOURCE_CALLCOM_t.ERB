@CALL_COM(ARG)
;=== 우후후계 콤보 ===

;파이즈리펠라
IF (TEQUIP:ARG:B접촉부위 == 1 && TEQUIP:ARG:입2 == 1) || (TEQUIP:ARG:입접촉부위 == 1 && TEQUIP:ARG:가슴2 == 1)
	TFLAG:50 = 12
;식스나인
ELSEIF (TEQUIP:ARG:입접촉부위 == 1 || TEQUIP:ARG:입접촉부위 == 2) && (TEQUIP:ARG:P접촉부위 == 4 || TEQUIP:ARG:C접촉부위 == 4) && (SELECTCOM == 1 || SELECTCOM == 81) && !FLAG:70
	TFLAG:50 = 1
;이와시미즈
ELSEIF TEQUIP:ARG:수치플레이 && SELECTCOM == 1
	TFLAG:50 = 2
;G 스폿 자극
ELSEIF SELECTCOM == 3 && PREVCOM == SELECTCOM && TFLAG:103 == ARG
	TFLAG:50 = 3
;흐트러지고 모란
ELSEIF TEQUIP:ARG:수치플레이 && SELECTCOM == 68
	TFLAG:50 = 4
;수음 펠라
ELSEIF (TEQUIP:ARG:손가락접촉부위 == 1 && TEQUIP:ARG:입2 == 1) || (TEQUIP:ARG:입접촉부위 == 1 && TEQUIP:ARG:손가락2 == 1)
	IF FLAG:70 == 1
	ELSE
		;페러 수음
		IF TEQUIP:ARG:손가락접촉부위 == 1
			TFLAG:194 = 0
		;수음-펠라
		ELSE
			TFLAG:194 = 1
		ENDIF
		TFLAG:50 = 5
	ENDIF
;삽입 G 스폿 꾸짖어 자궁구 꾸짖어 교호 삽입
ELSEIF (SELECTCOM == 60 || SELECTCOM == 61 || SELECTCOM == 65 || SELECTCOM == 67 || SELECTCOM == 68) 
;	IF TEQUIP:ARG:체위 == TEQUIP:ARG:체위2 && TFLAG:103 == TARGET && TEQUIP:ARG:질2 == 1
;		IF SELECTCOM == 65 || RAND:2
;			TFLAG:50 = 7
;		ELSE
;			TFLAG:50 = 6
;		ENDIF
;	ENDIF
	;교호 삽입
	IF TEQUIP:ARG:V접촉부위 == 1 && (MASTER_POSE(SET_V, SET_P, 1) && MASTER_POSE(SET_V, SET_P, 1) != ARG)
		TFLAG:50 = 13
	ENDIF
;アナル交互挿入
ELSEIF (SELECTCOM == 62 || SELECTCOM == 63 || SELECTCOM == 66 || SELECTCOM == 69 || SELECTCOM == 70) 
	;アナル交互挿入
	IF TEQUIP:ARG:A접촉부위 == 1 && (MASTER_POSE(SET_A,SET_P,1) && MASTER_POSE(SET_A,SET_P,1) != ARG)
		TFLAG:50 = 16
	ENDIF
ELSEIF SELECTCOM == 72
	TFLAG:50 = 6
ELSEIF SELECTCOM == 73
	TFLAG:50 = 7
;식스나인 파이즈리
ELSEIF TEQUIP:ARG:B접촉부위 == 1 && (TEQUIP:ARG:P접촉부위 == 4 || TEQUIP:ARG:C접촉부위 == 4) && (SELECTCOM == 1 || SELECTCOM == 82)
	IF FLAG:70 == 1
	ELSE
	TFLAG:50 = 8
	ENDIF
;더블 펠라
ELSEIF TEQUIP:ARG:입접촉부위 == 1 && (MASTER_POSE(SET_M, SET_P, 1) && MASTER_POSE(SET_M, SET_P, 1) != ARG )
	TFLAG:50 = 9
;더블 가랑이
ELSEIF TEQUIP:ARG:C접촉부위 == 1 && (MASTER_POSE(SET_C, SET_P, 1) && MASTER_POSE(SET_C, SET_P, 1) != ARG )
	TFLAG:50 = 10
;더블 파이즈리
ELSEIF TEQUIP:ARG:B접촉부위 == 1 && (MASTER_POSE(SET_B, SET_P, 1) && MASTER_POSE(SET_B, SET_P, 1) != ARG )
	IF FLAG:70 == 1
	ELSE
	TFLAG:50 = 11
	ENDIF
;S장 결장 꾸짖어 애널 G 스폿 자극
ELSEIF (SELECTCOM == 62 || SELECTCOM == 63 || SELECTCOM == 66 || SELECTCOM == 69 || SELECTCOM == 70) && PREVCOM == SELECTCOM && TFLAG:103 == ARG
	IF SELECTCOM == 66 || RAND:2
		TFLAG:50 = 14
	ELSE
		TFLAG:50 = 15
	ENDIF
ELSEIF SELECTCOM == 74
	TFLAG:50 = 14
ELSEIF SELECTCOM == 75
	TFLAG:50 = 15
;ELSEIF SELECTCOM == 81 && TEQUIP:ARG:입2 == 1
;	TFLAG:50 = 16
;후배위 스팬킹
;ELSEIF SELECTCOM == 100 && TEQUIP:ARG:50 == PLAYER && 
;수유 플레이
ELSEIF (SELECTCOM == 80 && TFLAG:103 == ARG && TEQUIP:ARG:유두빨기) || (TEQUIP:ARG:손가락접촉부위 == 1 && TFLAG:103 == ARG  && SELECTCOM == 11 && PREVCOM != 11)
	IF !FLAG:70
		;乳首吸い-手淫
		IF TEQUIP:ARG:손가락접촉부위 == 1
			TFLAG:194 = 0
		;手淫-乳首吸い
		ELSE
			TFLAG:194 = 1
		ENDIF
		TFLAG:50 = 19
	ENDIF
;유두동시빨기
ELSEIF SELECTCOM == 11 && TFLAG:103 == ARG && TEQUIP:ARG:유두빨기
	TFLAG:50 = 17
ENDIF

;=== 일상계 ===
;귀이개
IF SELECTCOM == 302 && PREVCOM == 305
	TFLAG:50 = 60
;다키마쿠라
ELSEIF SELECTCOM == 402 && PREVCOM == 311
	TFLAG:50 = 61
;이마 쪽―
ELSEIF SELECTCOM == 312 && PREVCOM == 309 && !FLAG:70
	TFLAG:50 = 62
ENDIF
;좀 더 키스한다
SIF SELECTCOM == 312 && PREVCOM == 312 && !TFLAG:151
	TFLAG:50 = 63

;=== 데이트계 ===
IF CHK_DATENOW(CFLAG:TARGET:데이트중)
	;손을 잡아 당긴다
	IF SELECTCOM == 603 && PREVCOM == 603
		TFLAG:50 = 80
	ENDIF
ENDIF

RESULT = 0
SIF TFLAG:전회커맨드결과 <= 0
	TFLAG:50 = 0
IF TFLAG:50
	CALLFORM COM_ABLE{500 + TFLAG:50}
	IF RESULT
		TRYCALLFORM CAN_SCOM{TFLAG:50}(1)
		IF RESULT
			TRYCCALLFORM CAN_SCOM{TFLAG:50}
			CATCH
				PRINTFORML %STR:(1500 + TFLAG:50)%
			ENDCATCH
			STR:0 = %STR:(1500 + TFLAG:50)%
			TRYCALLFORM SCOM{TFLAG:50}
		ENDIF
	ENDIF
ENDIF
SIF RESULT
	RETURN RESULT
TFLAG:50 = 0
;LOCALS = %STR:(1000 + SELECTCOM)%
;LOCALS = %TRAINNAME:(SELECTCOM)%
;TRYCCALLFORM CAN_COM{SELECTCOM}
;CATCH
;	PRINTFORML %LOCALS%
;ENDCATCH
;kojo com
IF INRANGE(SELECTCOM, 270, 299)
	CALL KOJO_MESSAGE_SEND("COM", 0, TARGET, SELECTCOM - 270)
	LOCALS '= RESULTS
	CALLFORM CAN_COM{SELECTCOM}
	SIF RESULT == -1
		PRINTFORML %LOCALS%
ELSE
	LOCALS = %TRAINNAME:(SELECTCOM)%
	TRYCCALLFORM CAN_COM{SELECTCOM}
	CATCH
		PRINTFORML %LOCALS%
	ENDCATCH
ENDIF
STR:0 = %LOCALS%
CALL KOJO_MESSAGE_SEND("SUCCESS",-1,TARGET,-1,-1)
TRYCALLFORM COM{SELECTCOM}
RETURN RESULT
