;외출맵의 설정
;ARG   대상 지점
;ARGS  판정문자인수
;-----------------------------------------
@ODEKAKEMAP_SETTING_0(ARG, ARGS)
#FUNCTION
;＼1 2 3 4 5 6 7 8 9 
;01　　　　　　　　　
;02　　　　　　　　　
;03　　　　　　　　　
;04　　　　　　　　　
;05　　　４　　　　　
;06５　　　　　　　　
;07　　　３　　　　　
;08　　　２　　　　　
;09　　　１　　　６　
SELECTCASE ARG
CASE 벚꽃길토리이
	SIF ARGS == "좌표"
		RETURNF 49
	SIF GROUPMATCH(ARGS, "도시락")
		RETURNF 1
CASE 신사경내
	SIF ARGS == "좌표"
		RETURNF 48
	SIF GROUPMATCH(ARGS, "넓은", "훈련")
		RETURNF 1
CASE 신사본당
	SIF ARGS == "좌표"
		RETURNF 47
	SIF GROUPMATCH(ARGS, "옥내")
		RETURNF 1
CASE 신사툇마루
	SIF ARGS == "좌표"
		RETURNF 45
	SIF GROUPMATCH(ARGS, "옥내", "달구경", "휴식")
		RETURNF 1
CASE 요정의큰나무
	SIF ARGS == "좌표"
		RETURNF 16
	SIF GROUPMATCH(ARGS, "옥내", "서양식", "달구경")
		RETURNF 1
CASE 몽환유적
	SIF ARGS == "좌표"
		RETURNF 88
	SIF GROUPMATCH(ARGS, "옥내", "서양식", "공부")
		RETURNF 1
ENDSELECT