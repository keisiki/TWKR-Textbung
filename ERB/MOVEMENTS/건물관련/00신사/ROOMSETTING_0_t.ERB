	SIF ARGS == "좌표"
		RETURNF 45
	SIF GROUPMATCH(ARGS, "옥내", "달구경", "휴식")
		RETURNF 1
CASE 요정의큰나무
	SIF ARGS == "좌표"
		RETURNF 16
	SIF GROUPMATCH(ARGS, "옥내", "서양식", "달구경")
		RETURNF 1
CASE 몽환유적
	SIF ARGS == "좌표"
		RETURNF 88
	SIF GROUPMATCH(ARGS, "옥내", "서양식", "공부")
		RETURNF 1
ENDSELECT