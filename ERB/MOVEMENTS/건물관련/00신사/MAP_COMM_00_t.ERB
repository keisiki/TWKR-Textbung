;장소 ARG가 어느 지역에 있는지
;표시하는 맵의 번호와 연동 (TFLAG:맵변환)
;ARG     장소ID
;--------------------------------------------------
@MAP_AREASELECT_0(ARG)
#FUNCTION
SELECTCASE ARG
	;삼요정의 집
	CASE P27삼요정의집・객실 TO P35삼요정의집・지하실
		RETURNF 3
	;몽환유적
	CASE P36몽환유적앞 TO P51몽환유적・창고
		RETURNF 2
	;신사주변
	CASE P22참배길 TO P25수호신의숲
		RETURNF 4
	;하쿠레이 신사
	CASEELSE
		RETURNF 1
ENDSELECT

;--------------------------------------------------
;내부구조가 있는 장소의 내부 판정
;		TFLAG:맵변환	내부감지(察知)가 필요한 맵 번호
;				P_ID  	표시버튼의 장소ID
;				Q_ID  	판정하는 내부 장소ID, 반드시 P_ID와 일치하는 수치도 포함
;--------------------------------------------------
@GETMAP_BUILDING_0(P_ID, Q_ID)
#FUNCTION
#DIM P_ID
#DIM Q_ID
IF TFLAG:맵변환 == 4
	SELECTCASE P_ID
		;三妖精の家
		CASE P27삼요정의집・객실
			SELECTCASE Q_ID
			CASE P27삼요정의집・객실 TO P35삼요정의집・지하실
				RETURNF 1
			ENDSELECT
		;몽환유적
		CASE P36몽환유적앞
			SELECTCASE Q_ID
			CASE P36몽환유적앞 TO P51몽환유적・창고
				RETURNF 1
			ENDSELECT
	ENDSELECT
ENDIF
RETURNF 0

;--------------------------------------------------
;이동제한설정
;ARG    장소ID
;CHARA  이동하는 캐릭터ID
;RETURNF 1=이동 가능, 0=이동 불가능
;TFLAG:이동불능메시지   ↓の@MAP_CANNOT_WORD용 설정
;--------------------------------------------------
@MAP_CAN_MOVE_0(ARG, CHARA)
#FUNCTION
#DIM CHARA
SELECTCASE ARG
	;虫かご
	CASE P54난쟁이벌레통
		;小人じゃないと入れない
		IF TALENT:CHARA:체형 > -5
			TFLAG:이동불능메시지 = 2
			RETURNF 0
		ENDIF
	;三妖精ハウス
	CASE P27삼요정의집・객실 TO P35삼요정의집・지하실
		;妖精なら入れる
		SIF TALENT:CHARA:요정
			RETURNF 1
		;中からは動ける
		SIF INRANGE(CFLAG:CHARA:현재위치, P27삼요정의집・객실, P35삼요정의집・지하실)
			RETURNF 1
		;あなたは恋慕か教養LV1以上で入れる
		IF CHARA == MASTER
			IF TALENT:[[서니]]:연모 || TALENT:[[루나]]:연모 || TALENT:[[스타]]:연모 || ABL:CHARA:교양 >= 1
				RETURNF 1
			ELSEIF INRANGE(CFLAG:MASTER:초기위치, P27삼요정의집・객실, P35삼요정의집・지하실)
				RETURNF 1
			ELSE
				TFLAG:이동불능메시지 = 1
				RETURNF 0
			ENDIF
		;それ以外は入れない
		ELSE
			RETURNF 0
		ENDIF
	;몽환유적,あなた以外は教養LV3が必要
	CASE P37몽환유적・1층통로 TO P51몽환유적・창고
		;中からは動ける
		IF INRANGE(CFLAG:CHARA:현재위치, P37몽환유적・1층통로, P51몽환유적・창고)
			RETURNF 1
		ELSEIF ABL:CHARA:교양 <= 2 && CHARA != MASTER
			RETURNF 0
		ENDIF
ENDSELECT
RETURNF 1

