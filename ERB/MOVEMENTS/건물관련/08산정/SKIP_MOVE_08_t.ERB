;-----------------------------------------------------------
;원거리 이동 설정
;ARG     목적지
;ARG:1   현위치
;RETURN  다음 목적지
;-----------------------------------------------------------
@SKIP_MOVE_8(ARG, ARG:1)
#DIM 현재의위치
;現在位置取得
IF ARG:1
	현재의위치 = ARG:1
ELSE
	현재의위치 = CFLAG:MASTER:현재위치
ENDIF

;目的地に直接移動できる場合そこに移動
SIF CAN_MOVE(현재의위치, ARG) & 1
	RETURN ARG

;袋小路から行ける場所は固定なので、そこを目指す
SELECTCASE 현재의위치
	CASE P806폭포뒤
		RETURN P802다리
	CASE P813신사사무소
		RETURN P811경내
	CASE P822부엌, P823빈방, P824화장실, P825목욕탕
		RETURN P821봉당
	CASE P833도원
		RETURN P832유정천거리
	CASE P837히나나위저택목욕탕
		RETURN P834히나나위저택봉당
	CASE P841이쿠방, P842히나나위저택헛간
		RETURN P838히나나위저택거실
	CASE P851쿠다카의오두막, P852코마쿠사의오두막, P853미스마루의오두막, P854메구무댁
		RETURN P805정상
	CASE P856모모요의거처
		RETURN P855홍룡동
ENDSELECT

;直接移動できない場合、1つ近い位置を暫定目的地に設定し直してループ
;基本的に最短で行けるコースを設定する
;現在地によってコースが変わることも考慮して対応する
SELECTCASE ARG
	CASE P801산정입구
		RETURN P802다리
	CASE P802다리
		RETURN P803삭도역
	CASE P803삭도역
		SELECTCASE 현재의위치
		CASE P801산정입구, P807모미지댁, P806폭포뒤
			RETURN P802다리
		CASEELSE
			RETURN P804모리야신사토리이
		ENDSELECT
	CASE P804모리야신사토리이
		SELECTCASE 현재의위치
		CASE P801산정입구, P807모미지댁, P802다리, P806폭포뒤, P808아야댁, P809하타테댁
			RETURN P803삭도역
		CASE P811경내 TO P826복도
			RETURN P811경내
		CASEELSE
			RETURN P805정상
		ENDSELECT
	CASE P805정상
		SELECTCASE 현재의위치
		CASE P856모모요의거처
			RETURN P855홍룡동
		CASE P831히나나위저택앞 TO P842히나나위저택헛간
			RETURN P830현운해
		CASEELSE
			RETURN P804모리야신사토리이
		ENDSELECT
	CASE P806폭포뒤, P807모미지댁
		RETURN P802다리
	CASE P808아야댁, P809하타테댁
		SELECTCASE 현재의위치
		CASE P801산정입구, P807모미지댁, P806폭포뒤
			RETURN P802다리
		CASEELSE
			RETURN P803삭도역
		ENDSELECT
	CASE P810산막
		SELECTCASE 현재의위치
		CASE P801산정입구, P807모미지댁, P802다리, P806폭포뒤, P808아야댁, P809하타테댁
			RETURN P803삭도역
		CASEELSE
			RETURN P804모리야신사토리이
		ENDSELECT
	;▼守矢神社
	CASE P811경내
		SELECTCASE 현재의위치
		CASE P815마당
			RETURN P814호숫가
		CASE P811경내 TO P826복도
			RETURN P821봉당
		CASEELSE
			RETURN P804모리야신사토리이
		ENDSELECT
	CASE P812본전
		SELECTCASE 현재의위치
		CASE P814호숫가, P813신사사무소
			RETURN P811경내
		CASE P811경내 TO P826복도
			RETURN P826복도
		CASEELSE
			RETURN P811경내
		ENDSELECT
	CASE P813신사사무소
		RETURN P811경내
	CASE P814호숫가
		SELECTCASE 현재의위치
		CASE P812본전, P813신사사무소, P821봉당
			RETURN P811경내
		CASE P811경내 TO P826복도
			RETURN P815마당
		CASEELSE
			RETURN P811경내
		ENDSELECT
	CASE P815마당
		SELECTCASE 현재의위치
		CASE P820사나에방 TO P825목욕탕
			RETURN P821봉당
		CASE P811경내, P813신사사무소
			RETURN P814호숫가
		CASE P811경내 TO P826복도
			RETURN P816툇마루
		CASEELSE
			RETURN P814호숫가
		ENDSELECT
	CASE P816툇마루
		SELECTCASE 현재의위치
		CASE P814호숫가
			RETURN P815마당
		CASE P812본전
			RETURN P826복도
		CASEELSE
			RETURN P821봉당
		ENDSELECT
	CASE P817카나코방
		SELECTCASE 현재의위치
		CASE P820사나에방
			RETURN P819거실
		CASEELSE
			RETURN P816툇마루
		ENDSELECT
	CASE P818스와코방
		SELECTCASE 현재의위치
		CASE P815마당, P814호숫가, P826복도, P812본전, P819거실
			RETURN P816툇마루
		CASEELSE
			RETURN P821봉당
		ENDSELECT
	CASE P819거실
		SELECTCASE 현재의위치
		CASE P818스와코방, P815마당, P814호숫가
			RETURN P816툇마루
		CASEELSE
			RETURN P826복도
		ENDSELECT
	CASE P820사나에방
		SELECTCASE 현재의위치
		CASE P817카나코방
			RETURN P819거실
		CASE P812본전
			RETURN P826복도
		CASEELSE
			RETURN P821봉당
		ENDSELECT
	CASE P821봉당
		SELECTCASE 현재의위치
		CASE P819거실, P812본전
			RETURN P826복도
		CASE P817카나코방
			RETURN P816툇마루
		CASEELSE
			RETURN P811경내
		ENDSELECT
	CASE P822부엌, P823빈방, P824화장실, P825목욕탕
		RETURN P821봉당
	CASE P826복도
		SELECTCASE 현재의위치
		CASE P815마당, P817카나코방, P818스와코방
			RETURN P816툇마루
		CASEELSE
			RETURN P821봉당
		ENDSELECT
	;▼천계
	CASE P830현운해
		SELECTCASE 현재의위치
		CASE P831히나나위저택앞 TO P842히나나위저택헛간
			RETURN P832유정천거리
		CASEELSE
			RETURN P805정상
		ENDSELECT
	CASE P831히나나위저택앞
		SELECTCASE 현재의위치
		CASE P834히나나위저택봉당 TO P842히나나위저택헛간
			RETURN P834히나나위저택봉당
		CASEELSE
			RETURN P832유정천거리
		ENDSELECT
	CASE P832유정천거리
		SELECTCASE 현재의위치
		CASE P834히나나위저택봉당 TO P842히나나위저택헛간
			RETURN P831히나나위저택앞
		CASEELSE
			RETURN P830현운해
		ENDSELECT
	CASE P833도원
		RETURN P832유정천거리
	CASE P834히나나위저택봉당
		SELECTCASE 현재의위치
		CASE P834히나나위저택봉당 TO P842히나나위저택헛간
			RETURN P838히나나위저택거실
		CASEELSE
			RETURN P831히나나위저택앞
		ENDSELECT
	CASE P835히나나위저택응접실, P836히나나위저택주방, P837히나나위저택목욕탕, P838히나나위저택거실
		RETURN P834히나나위저택봉당
	CASE P839히나나위저택다다미방 TO P842히나나위저택헛간
		RETURN P838히나나위저택거실
	;▼頂上部
	CASE P851쿠다카의오두막, P852코마쿠사의오두막, P853미스마루의오두막, P854메구무댁, P855홍룡동
		RETURN P805정상
	CASE P856모모요의거처
		RETURN P855홍룡동
ENDSELECT
