@MAP_PLACENAME_8(ARG)
#FUNCTIONS

IF GET_MAPID(ARG) == MAIN_MAP
	SELECTCASE ARG
		CASE 1 TO (MAXROOM - 1)
			RETURNF STR:(ARG + 8000)
		CASE 898
			RETURNF OMANEKI_PLACE()
		CASE 899
			RETURNF "스키마 공간"
		CASE MAXROOM
			RETURNF "길의 저 편"
		CASEELSE
			RETURNF "불명"
	ENDSELECT
ELSE
	RETURNF "불명"
ENDIF

