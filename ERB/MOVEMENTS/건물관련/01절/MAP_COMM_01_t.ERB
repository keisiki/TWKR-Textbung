;地点名変更関数
;--------------------------------------------------
@MAP_PLACENAME_1(ARG)
#FUNCTIONS
IF GET_MAPID(ARG) == MAIN_MAP
	SELECTCASE ARG
		CASE SUMIKOMI_ROOM
			;※このマップでは未実装
			IF FLAG:더부살이캐릭터
				RETURNF CALLNAME:(FLAG:더부살이캐릭터) + "의 방"
			ELSE
				RETURNF "빈 방"
			ENDIF
		CASE MINROOM() TO (MAXROOM - 1)
			RETURNF STR:(ARG + 8000)
		CASE OMANEKIBEYA()
			RETURNF OMANEKI_PLACE()
		CASE SUKIMA()
			RETURNF "스키마 공간"
		CASE MAXROOM
			RETURNF "참배길 저편"
		CASEELSE
			RETURNF "불명"
	ENDSELECT
ELSE
	RETURNF "길의 저편"
ENDIF

;--------------------------------------------------
;場所ARGがどのエリアにあるか
;表示するマップの番号と連動（TFLAG:맵변환）
;ARG     場所ID
;--------------------------------------------------
@MAP_AREASELECT_1(ARG)
#FUNCTION
SELECTCASE ARG
	CASE P140지장길
		RETURNF 1
	;命蓮寺
	CASE P101산문 TO P122종루, P135복도 TO P137마미조의거처
		RETURNF 1
