;--------------------------------------------------
;이동제한설정
;ARG    장소ID
;CHARA  이동하는 캐릭터ID
;RETURNF 1=이동 가능, 0=이동 불가능
;TFLAG:이동불능메시지   ↓の@MAP_CANNOT_WORD용 설정
;--------------------------------------------------
@MAP_CAN_MOVE_2(ARG, CHARA)
#FUNCTION
#DIM CHARA
SELECTCASE ARG
	CASE P226코스즈방
		IF CHARA == MASTER
			IF FLAG:70
				RETURNF 1
			ELSEIF CFLAG:[[코스즈]]:동행 || CFLAG:[[아큐]]:동행
				RETURNF 1
			ELSEIF TALENT:[[코스즈]]:연모
				RETURNF 1
			ELSEIF TALENT:[[코스즈]]:사모 && CFLAG:[[코스즈]]:현재위치 == ARG
				RETURNF 1
			ELSE
				TFLAG:이동불능메시지 = 1
				RETURNF 0
			ENDIF
		;本人は入れる,阿求も入れる
		ELSEIF CHARA == [[코스즈]] || CHARA == [[아큐]]
			RETURNF 1
		;他は入れない
		ELSE
			RETURNF 0
		ENDIF
	CASE P229아큐방
		IF CHARA == MASTER
			IF FLAG:70
				RETURNF 1
			ELSEIF CFLAG:[[아큐]]:동행
				RETURNF 1
			ELSEIF TALENT:[[아큐]]:연모
				RETURNF 1
			ELSEIF TALENT:[[아큐]]:사모 && CFLAG:[[아큐]]:현재위치 == ARG
				RETURNF 1
			ELSE
				TFLAG:이동불능메시지 = 1
				RETURNF 0
			ENDIF
		;本人は入れる,相性の良いキャラも入れる
		ELSEIF CHARA == [[아큐]] || RELATION:[[아큐]]:CHARA >= 100
			RETURNF 1
		;他は入れない
		ELSE
			RETURNF 0
		ENDIF
	CASE P239미요이방
		IF CHARA == MASTER
			IF FLAG:시간정지
				RETURNF 1
			ELSEIF CFLAG:[[미요이]]:동행
				RETURNF 1
			ELSEIF TALENT:[[미요이]]:연모
				RETURNF 1
			ELSEIF TALENT:[[미요이]]:사모 && CFLAG:[[미요이]]:현재위치 == ARG
				RETURNF 1
			ELSE
				TFLAG:이동불능메시지 = 1
				RETURNF 0
			ENDIF
		;本人は入れる
		ELSEIF CHARA == [[미요이]]
			RETURNF 1
		;他は入れない
		ELSE
			RETURNF 0
		ENDIF
	;あなた以外は入らない
	CASE P220망루, P225혼숙여관
		SIF CHARA != MASTER
			RETURNF 0
	;あなた以外は入らない,貸し切っていないと入れない
	CASE P228대절욕탕
		IF CHARA != MASTER
			RETURNF 0
		ELSEIF !욕탕대절(DAY)
			TFLAG:이동불능메시지 = 2
			RETURNF 0
		ENDIF
	;誰かが住んでないと入れない
	CASE P230빈방, P241빈방
		IF !PRIVATEROOM:(ARG % 100) && CFLAG:MASTER:초기위치 != ARG
			TFLAG:이동불능메시지 = 999
			RETURNF 0
		ENDIF
ENDSELECT
RETURNF 1

