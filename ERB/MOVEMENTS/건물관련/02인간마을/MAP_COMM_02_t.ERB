@MAP_CAN_MOVE_2(ARG, ARG:1)
#FUNCTION
#DIM 재택
SELECTCASE ARG
	;코스즈의 방
	CASE 226
		IF ARG:1 == MASTER
			IF FLAG:70
				RETURNF 1
			ELSEIF CFLAG:70:동행 || CFLAG:80:동행
				RETURNF 1
			ELSEIF TALENT:70:연모
				RETURNF 1
			ELSEIF TALENT:70:사모 && CFLAG:70:현재위치 == ARG
				RETURNF 1
			ELSE
				TFLAG:이동불능메시지 = ARG
				RETURNF 0
			ENDIF
		;본인은 들어갈 수 있는, 아큐도 넣는다
		ELSEIF ARG:1 == 70 || ARG:1 == 80
			RETURNF 1
		ELSE
			RETURNF 0
		ENDIF
	;노와 혼숙여관, 당신 이외는 들어가지 않는다
	CASE 220, 225
		SIF ARG:1 != MASTER
			RETURNF 0
	;대절욕탕, 당신 이외에는 들어가지 않는다, 대절하지 않으면 들어갈 수 없다
	CASE 228
		SIF ARG:1 != MASTER
			RETURNF 0
		IF !욕탕대절(DAY)
			TFLAG:이동불능메시지 = ARG
			RETURNF 0
		ENDIF
	CASEELSE
		RETURNF 1
ENDSELECT
RETURNF 1


@MAP_CANNOT_WORD_2(ARG)
SELECTCASE TFLAG:이동불능메시지
	CASE 224,231 TO 235
		PRINTFORMW 자물쇠가 걸려 있다
	CASE 226
		PRINTFORMW 마음대로 들어가는 것은 곤란해
	CASE 228
		PRINTFORMW 직접 들어가려면 대절하지 않으면 안 된다
ENDSELECT

;유사 TFLAG로 취급한다, 날짜가 바뀌면 종료
;ARG = DAY
@욕탕대절(ARG, 전세내다)
#FUNCTION
#DIM 대절일
#DIM 전세내다
IF 전세내다
	대절일 = ARG
	RETURNF 1
ELSEIF 대절일 == ARG
	RETURNF 1
ENDIF
RETURNF 0

