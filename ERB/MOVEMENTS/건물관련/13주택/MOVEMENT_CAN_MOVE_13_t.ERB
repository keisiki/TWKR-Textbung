
;-----------------------------------------------------------
;지점의 연결 설정
;ARG    기준지점
;ARG:1  대상지점
;RETURNF 0=이동할 수 없다, 보이지 않는다
;        1=이동할 수 있다, 보이지 않는다
;        2=이동할 수 없다, 보인다
;        3=이동할 수 있다, 보인다(직통)
;-----------------------------------------------------------
@CAN_MOVE_13(ARG, ARG:1)
#FUNCTION
SELECTCASE ARG
	;봉당
	CASE P1301봉당
		SIF GROUPMATCH(ARG:1, P1304응접실,P1305식사소)
			RETURNF 3
		SIF ARG:1 == MAXROOM
			RETURNF 2
	;거실
	CASE P1302거실
		SIF GROUPMATCH(ARG:1,P1304응접실)
			RETURNF 3
            
        SIF GROUPMATCH(ARG:1, P1303침실)
			RETURNF 1
	;침실
	CASE P1303침실
		SIF GROUPMATCH(ARG:1, P1302거실,P1305식사소)
			RETURNF 1
	;식사
	CASE P1304응접실
		SIF GROUPMATCH(ARG:1, P1301봉당,P1302거실,P1305식사소)
			RETURNF 3
	;응접실
	CASE P1305식사소
		SIF GROUPMATCH(ARG:1,P1304응접실,P1301봉당,P1306마당)
			RETURNF 3
        SIF GROUPMATCH(ARG:1, P1303침실)
			RETURNF 1
	;정원
	CASE P1306마당
		SIF GROUPMATCH(ARG:1, P1305식사소)
			RETURNF 3
        
        SIF GROUPMATCH(ARG:1,P1307헛간)
            RETURNF 1
        SIF GROUPMATCH(ARG:1,P1308목욕탕)
            RETURNF 1
	;창고
	CASE P1307헛간
		SIF GROUPMATCH(ARG:1, P1306마당)
			RETURNF 1
	;욕실
	CASE P1308목욕탕
		SIF GROUPMATCH(ARG:1, P1306마당)
			RETURNF 1
	CASE MAXROOM
		SIF ARG:1 == P1301봉당
			RETURNF 1
ENDSELECT
RETURNF 0