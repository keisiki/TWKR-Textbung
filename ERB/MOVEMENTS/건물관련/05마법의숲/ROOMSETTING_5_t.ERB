;외출맵의 설정
;ARG   대상 지점
;ARGS  판정문자인수
;-----------------------------------------
@ODEKAKEMAP_SETTING_5(ARG, ARGS)
#FUNCTION
;무연총→피안へ繋がる특수워프の条件
SIF ARGS == "특수워프" &&  MAIN_MAP != 6 && CFLAG:MASTER:현재위치 == 무연총 && (ABL:MASTER:교양 > 1 || ABL:(FLAG:데이트상대):교양 > 1)
	RETURNF 피안
;＼1 2 3 4 5 6 7 8 9 
;01　　　　　　　　　
;02　　　　　　　　　
;03　　　　　　　　　
;04　　　　　　７　　
;05　　　　　６　　　
;06　　４３　　　　　
;07　　　　５　　　　
;08　　２　　　　　　
;09　　１　　　　　　
SELECTCASE ARG
CASE 숲의입구
	SIF ARGS == "좌표"
		RETURNF 39
	SIF GROUPMATCH(ARGS, "")
		RETURNF 1
CASE 향림당
	SIF ARGS == "좌표"
		RETURNF 38
	SIF GROUPMATCH(ARGS, "옥내")
		RETURNF 1
CASE 고목의큰나무
	SIF ARGS == "좌표"
		RETURNF 46
	SIF GROUPMATCH(ARGS, "도시락")
		RETURNF 1
CASE 키리사메마법점
	SIF ARGS == "좌표"
		RETURNF 36
	SIF GROUPMATCH(ARGS, "옥내", "서양식")
		RETURNF 1
CASE 인형양관
	SIF ARGS == "좌표"
		RETURNF 57
	SIF GROUPMATCH(ARGS, "옥내", "서양식")
		RETURNF 1
CASE 재고의길
	SIF ARGS == "좌표"
		RETURNF 65
	SIF GROUPMATCH(ARGS, "")
		RETURNF 1
CASE 무연총
	SIF ARGS == "좌표"
		RETURNF 74
	SIF GROUPMATCH(ARGS, "")
		RETURNF 1
ENDSELECT