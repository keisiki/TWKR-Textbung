@CHARA_HOLIDAY(ARG, ARG:1=0)
#FUNCTION

;잔일량·일종료시간을 확인할까 분기
IF !ARG:1
	SIF BASE:ARG:일량 <= 0
		RETURNF 1
	SIF TCVAR:ARG:일종료 > 0 && TIME > TCVAR:ARG:일종료
		RETURNF 1
ENDIF
RETURNF TCVAR:ARG:일개시 == -1

;-----------------------------------------------------------
;@CHARA_HOLIDAY로부터 분리
;MOVEMENT가 불릴 때에 갱신된다
;ARG:1에 1을 설정하면(자) 연회나 업무중에 의한 스킵을 무시
;-----------------------------------------------------------
@일내용설정(ARG, ARG:1)
#DIM 청소하기
VARSET LOCAL

;CFLAG:350 직종(40, 청소　41, 회화　42, 전투　43, 교양　44, 요리　45, 음악 46, 놀이 47, 장사중(도울수없다) 48, 연회준비 49, 연회참가 50, 연회 정리 51, 연회 후의 취기 52, 여자 모임
;TCVAR:도울수없다 =1 도울수없다 =2 도와도 빨리는 끝나지 않는다
;연회계의 일은 여기에서는 설정하지 않습니다. 연회. ERB를 참조해 주세요.

;에이키 님은 일이 있습니다. 일꾼이군요.
;IF ARG == 30
	;기수일은 비번입니다
;	IF (DAY % 2 == 1) 
;		BASE:ARG:일량 = 0
;	ENDIF


IF !ARG:1
	;현재 업무중이라면 돌아간다
	SIF CFLAG:ARG:행동 == 5
		RETURN

	;연회에 참가하는 놈은 그 날의 일을 쉰다
	IF FLAG:연회개최플래그 > 0 && CFLAG:ARG:연회참가 > 0
		IF !GROUPMATCH(CFLAG:ARG:직종, 48, 49, 50, 51)
			TCVAR:ARG:일개시 = -1
			TCVAR:ARG:일종료 = -1
		ENDIF
		RETURN
	ENDIF
ENDIF

IF CFLAG:ARG:출산휴가중
	TCVAR:ARG:일개시 = -1
	TCVAR:ARG:일종료 = -1
	RETURN
ENDIF

;일개시·일종료시각을―1으로 한다(개시시각이―1이라면 휴일이라고 판정)
TCVAR:ARG:일개시 = -1
TCVAR:ARG:일종료 = -1

;일의 처리
IF TALENT:ARG:창녀 || TALENT:ARG:렌탈창녀
	TCVAR:ARG:도울수없다 = 1
	TCVAR:ARG:급료 = 0
	;0=오프, 1=개인실, 2=스트립쇼, 3=공란, 4=대연회장, 5=촉수궁경마
	SELECTCASE CFLAG:ARG:창관일
        CASE 0
            CFLAG:ARG:직장 = 1540
			MAXBASE:ARG:일량 = 600 * 10
			CFLAG:ARG:직종 = 40
			TCVAR:ARG:일개시 = CLOCK_TO_TIME( 0, 10)
			TCVAR:ARG:일종료 = CLOCK_TO_TIME( 24, 0)
        CASE 1
            CFLAG:ARG:직장 = 1570
			MAXBASE:ARG:일량 = 600 * 10
			CFLAG:ARG:직종 = 40
			TCVAR:ARG:일개시 = CLOCK_TO_TIME( 0, 10)
			TCVAR:ARG:일종료 = CLOCK_TO_TIME( 24, 0)
        CASE 2
            CFLAG:ARG:직장 = 1560
			MAXBASE:ARG:일량 = 600 * 10
			CFLAG:ARG:직종 = 40
			TCVAR:ARG:일개시 = CLOCK_TO_TIME( 0, 10)
			TCVAR:ARG:일종료 = CLOCK_TO_TIME( 24, 0)
        CASE 4
            CFLAG:ARG:직장 = 1540
			MAXBASE:ARG:일량 = 600 * 10
			CFLAG:ARG:직종 = 40
			TCVAR:ARG:일개시 = CLOCK_TO_TIME( 0, 10)
			TCVAR:ARG:일종료 = CLOCK_TO_TIME( 24, 0)
        CASE 5
            CFLAG:ARG:직장 = 1540
			MAXBASE:ARG:일량 = 600 * 10
			CFLAG:ARG:직종 = 40
			TCVAR:ARG:일개시 = CLOCK_TO_TIME( 0, 10)
			TCVAR:ARG:일종료 = CLOCK_TO_TIME( 24, 0)
    ENDSELECT
