	IF TIME:0 == TCVAR:ARG:357
	;전회의 처리로부터 시간이 경과하고 있지 않으면 패스
	ELSEIF GROUPMATCH(DAY:3, 15, 30)
	;출장
		;객수의 증감, 계상, 기본은-3~＋5
		LOCAL:1 = RAND:8 - 3
		
		;날씨
		SELECTCASE TIME:5
		;안개비, 안개는-1
		CASE 6, 7
			LOCAL:1 -= 1
		;비, 눈은-2
		CASE 4, 8
			LOCAL:1 -= 2
		;큰 비, 눈보라, 진눈깨비, 뻥튀기는-3
		CASE 5, 9, 12, 13
			LOCAL:1 -= 3
		ENDSELECT
		;무지개, 다이아몬드 더스트는＋2
		SIF TIME:7 >= 1
			LOCAL:1 += 2
		
		;객수가 적으면보다 늘린다
		SIF TCVAR:ARG:354 < 5
			LOCAL:1 += 1
		;객수가 많으면보다 줄인다
		SIF TCVAR:ARG:354 > 25
			LOCAL:1 -= 3
		
		;음수 방지
		TCVAR:ARG:354 = MAX(0, TCVAR:ARG:354 + LOCAL:1)
		SIF LOCAL:1 > 0
			TCVAR:ARG:355 += LOCAL:1
		;현재의 객수가 일정 이상이라면 엘렌의 응원자로 돈다
		IF TCVAR:ARG:354 > 25
			CFLAG:ARG:직종 = 43
