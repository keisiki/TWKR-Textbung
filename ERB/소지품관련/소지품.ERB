@소지품생성(ARG)

IF ARG == 0
    ;마스터는 무시해
    RETURN -1
ENDIF
CALL 소지품리셋(ARG)
TRYCCALLFORM 소지품표{ARG}()
CATCH
    CALL 공용소지품표(ARG)
ENDCATCH

@공용소지품표(ARG)

FOR LOCAL,0,9
    IF RAND:(LOCAL+1) < 3
        SELECTCASE RAND:10
            CASE 0
                CALL 소지품추가(ARG,물건("맥주"))
            CASE 1
                CALL 소지품추가(ARG,물건("스포츠드링크"))
            CASE 2
                CALL 소지품추가(ARG,물건("블랙썬더"))
            CASE 3
                CALL 소지품추가(ARG,물건("엿"))
            CASE 4
                CALL 소지품추가(ARG,물건("녹즙"))
            CASE 5
                CALL 소지품추가(ARG,물건("붕대"))
            CASE 6
                CALL 소지품추가(ARG,물건("탁주"))
            CASE 7
                CALL 소지품추가(ARG,물건("우콘드링크"))
            CASE 8
                CALL 소지품추가(ARG,물건("초콜릿"))
            CASE 9
                CALL 소지품추가(ARG,물건("잡곡"))
            CASEELSE
                ;혹시나
                CALL 소지품추가(ARG,물건("맥주"))
        ENDSELECT
    ENDIF
NEXT

@소지품뷰(ARG)
FOR LOCAL,0,9
    IF 캐릭터소지품:ARG:LOCAL > 0
        PRINTFORML [%ITEMNAME:(캐릭터소지품:ARG:LOCAL)%]
    ELSE
        SETCOLOR 0x808080
        PRINTFORML [----------------------------------]
        RESETCOLOR
    ENDIF
NEXT

@소지품리셋(ARG)
FOR LOCAL,0,9
    캐릭터소지품:ARG:LOCAL = 0
NEXT

@소지품추가(ARG,ARG:1)

FOR LOCAL,0,9
    IF 캐릭터소지품:ARG:LOCAL == 0
        캐릭터소지품:ARG:LOCAL = ARG:1
        RETURN 1
    ENDIF
NEXT
RETURN 0

@소지품제거(ARG,ARG:1)

FOR LOCAL,0,9
    IF 캐릭터소지품:ARG:LOCAL == ARG:1
        캐릭터소지품:ARG:LOCAL = 0
        RETURN 1
    ENDIF
NEXT
RETURN 0

@소지품랜덤취득(ARG)
#DIM DYNAMIC 소지품랜덤배열,10
#DIM DYNAMIC 결과
LOCAL:1 = 0
FOR LOCAL,0,9
    IF 캐릭터소지품:ARG:LOCAL > 0
        소지품랜덤배열:(LOCAL:1) = 캐릭터소지품:ARG:LOCAL
        LOCAL:1++
    ENDIF
NEXT
결과 = 소지품랜덤배열:(RAND:(LOCAL:1 + 1))
IF 결과 <= 0
    RETURN -1
ENDIF
PRINTFORML %조사처리(ITEMNAME:결과,"를")% 훔쳤다!
ITEM:결과 ++
CALL 소지품제거(ARG,결과)
RETURN 결과

