;-------------------------------------------------
;함수명 :TINKO
;개요:두 번 달이고 상등
;인수 :ARG…캐릭터등록번호
;반환값:
;비고:문중 함수
;사용예:%TINKO(PLAYER)%
;-------------------------------------------------
@TINKO(ARG)
#FUNCTIONS
VARSET LOCALS
SIF !ARG
	ARG = MASTER
;지문과 앞뒤 맞댐이 필요해서 우선 더러운 묘사는 보류
[SKIPSTART]
IF GETBIT(STAIN:ARG:2, 64)
	LOCALS = 파과피
	LOCAL ++
ENDIF
IF GETBIT(STAIN:ARG:2, 8)
	SIF LOCAL
		LOCALS += "와 "
	LOCALS += "장액"
	LOCAL ++
ENDIF
IF GETBIT(STAIN:ARG:2, 4)
	SIF LOCAL
		LOCALS += "와 "
	LOCALS += "정액"
	LOCAL ++
ENDIF
IF GETBIT(STAIN:ARG:2, 1)
	SIF LOCAL
		LOCALS += "와 "
	LOCALS += "애액"
	LOCAL ++
ENDIF
SIF LOCAL
	LOCALS += "으로 범벅된 "
[SKIPEND]
;확률로 형용사가 도착한다
IF !RAND:4 && ARG == MASTER && TCVAR:ARG:100 != TARGET && TCVAR:ARG:101 != TARGET
	IF BASE:ARG:발기 > 1000 
		SELECTCASE RAND:4
			CASE 0
				LOCALS += "우뚝 휘어진 "
			CASE 1
				LOCALS += "쿠퍼액이 뚝뚝 떨어지는 "
			CASE 2
				LOCALS += "핏줄이 도드라진 "
			CASE 3
				LOCALS += "농후한 정액 냄새를 풍기는 "
		ENDSELECT
	ELSEIF BASE:ARG:발기 > 500
		SELECTCASE RAND:3
			CASE 0
				LOCALS += "꺼덕꺼덕 고개를 쳐드는 "
			CASE 1
				LOCALS += "더욱 단단해지는 "
			CASE 2
				LOCALS += "서는 도중의 "
		ENDSELECT
	ELSE
		LOCALS += "아직 말랑한 "	
	ENDIF
ELSEIF !RAND:3
	SELECTCASE TALENT:ARG:형상
		CASE 1
			;미숙
			SELECTCASE RAND:3
				CASE 0
					LOCALS += "귀여운 "
				CASE 1
					LOCALS += "어린애 같은 "
				CASE 2
					LOCALS += "껍질이 미처 안 까진 "
			ENDSELECT
		CASE 2
			;조말
			LOCALS += "허접한 "
		CASE 3
			;보통
			LOCALS += "튼실한 "
		CASE 4
			;빛난다
			SELECTCASE RAND:3
				CASE 0
					LOCALS += "희미하게 빛이 나는 "
				CASE 1
					LOCALS += "번쩍번쩍 점멸하는 "
				CASE 2
					LOCALS += "눈부시게 빛나는 "
			ENDSELECT
		CASE 5
			SELECTCASE RAND:3
				CASE 0
					LOCALS += "그로테스크한 "
				CASE 1
					LOCALS += "흉악한 "
				CASE 2
					LOCALS += "돌기투성이의 "
			ENDSELECT
		CASE 6
			;와
			LOCALS += "장대한 "
		CASE 10
			;말 보통
			LOCALS += "말과 같은 "
	ENDSELECT
ELSEIF ARG == MASTER && TARGET
	IF !RAND:3
		IF TALENT:TARGET:임신
			LOCALS += "그녀를 임신시킨 "
		ELSEIF STRFIND(CSTR:TARGET:처녀상실이력, "페니스") > 0
			LOCALS += "그녀를 여자로 만든 "
		ENDIF
	ELSEIF !RAND:2 && 임신가부(TARGET) && CFLAG:TARGET:생리주기 == 7 && TEQUIP:TARGET:50 == MASTER
		LOCALS += "임신시킬 맘으로 가득한 "
	ENDIF
ENDIF
SELECTCASE RAND:12
	CASE 0
		LOCALS += "수컷의 심볼"
	CASE 1
		LOCALS += "남근"
	CASE 2
		LOCALS += "양물"
	CASE 3
		LOCALS += "음경"
	CASE 4
		LOCALS += "육봉"
	CASE 5
		LOCALS += "자지"
	CASEELSE
		LOCALS += "페니스"
ENDSELECT
SIF !TALENT:ARG:2 & 2
	LOCALS = "페니스밴드"
RETURNF LOCALS


@TINKO_DECIDE(ARG)
	$LOOP
		PRINTFORML %CALLNAME:ARG%의 남성기 형상을 설정해주세요.
		PRINTL [1] 미성숙
		PRINTL [2] 허접자지
		PRINTL [3] 보통
		PRINTL [4] 빛난다
		PRINTL [5] 돌기 부착
		PRINTL [6] 방망이
		;PRINTL [7] 작은 축
		;PRINTL [8] 드릴
		;PRINTL [9] 정관 수술 완료
		INPUT
		IF RESULT == 5
			PRINTW 그딴 거 넣어봤자 아프기만 하지 기분 좋지 않은데요?
			PRINTW 단순히 자기만족 아녜요? 상대를 배려하는 마음씨를 잊은 것 아닌가요?
			PRINTL [0] 그럼 관둘게
			PRINTL [1] 쓸데없는 오지랖이다
			INPUT
			IF RESULT == 1
				PRINTW 이 귀축!
				PRINTFORMW %CALLNAME:ARG%의 남성기에 돌기가 났습니다
				TALENT:ARG:형상 = 5
			ELSE
				GOTO LOOP
			ENDIF
		ELSEIF RESULT == 4
			PRINTL 뭔 소린지 모르겠는데요
			PRINTL [0] 미안 실수했어
			PRINTL [1] 매오징어랑 같은 원리로 빛나요
			INPUT
			IF RESULT == 1
				PRINTW 그런가요.
				PRINTFORMW %CALLNAME:ARG%의 남성기가 빛나게 되었습니다
				TALENT:ARG:형상 = 4
			ELSE
				GOTO LOOP
			ENDIF
		ELSEIF RESULT == 6
			PRINTL 크면 장땡이라고 안이하게 생각하는 건 아닌가요? 크면 혈액이 두루 돌기 어려운 만큼 말랑해집니다.
			PRINTL 그리고 중요한 건 사이즈의 크고 작음이 아니라 상대 구멍과의 속궁합이에요. 사이즈가 안 맞으면 서로 괴롭기만 할 뿐이죠.
			PRINTL [0] 로리 ××에 박고 싶으니 관둘래
			PRINTL [1] 나는 내가 괴로움을 겪더라도 고통에 일그러진 소녀의 얼굴을 보고 싶어요
			INPUT
			IF RESULT == 1
				PRINTW 맙소사.
				PRINTFORMW %CALLNAME:ARG%의 남성기가 커졌습니다
				TALENT:ARG:형상 = 6
			ELSE
				GOTO LOOP
			ENDIF
		ELSEIF RESULT == 3
			PRINTFORMW %CALLNAME:ARG%의 남성기는 지극히 보통 형태입니다
			TALENT:ARG:형상 = RESULT
		ELSEIF RESULT == 2
			PRINTFORMW %CALLNAME:ARG%의 남성기가 보기에도 딱한 모습이 되었습니다
			TALENT:ARG:형상 = RESULT
		ELSEIF RESULT == 1
			PRINTFORMW %CALLNAME:ARG%의 남성기는 깜찍한 사이즈가 되었습니다
			TALENT:ARG:형상 = RESULT
		ENDIF
@TINKO_VSOURCE(ARG)

SELECTCASE TALENT:(TEQUIP:ARG:50):형상
	CASE 5
	;돌기 부착
		CUP:ARG:쾌V /= 4
	CASE 2
	;조말
		CUP:ARG:쾌V /= 2
	CASE 10
	;말 보통
		CUP:ARG:쾌V *= 2
ENDSELECT
SIF 삽입불가(ARG) == -1 && ABL:ARG:질 < 2
	CUP:ARG:쾌V = CUP:ARG:쾌V * 4 / 5
SIF 삽입불가(ARG) == -2 && ABL:ARG:질 < 3
	CUP:ARG:쾌V /= 2
@TINKO_ASOURCE(ARG)

SELECTCASE TALENT:(TEQUIP:ARG:51):형상
	CASE 5
	;돌기 부착
		CUP:ARG:쾌A /= 4
	CASE 2
	;조말
		CUP:ARG:쾌A /= 2
	CASE 10
	;말 보통
		CUP:ARG:쾌A *= 2
SIF 삽입불가(ARG) == -1 && ABL:ARG:애널 < 2
	CUP:ARG:쾌A = CUP:ARG:쾌V * 4 / 5
SIF 삽입불가(ARG) == -2 && ABL:ARG:애널 < 3
	CUP:ARG:쾌A /= 2
ENDSELECT

@TINKO_SIMPLE(ARG)
#FUNCTIONS
VARSET LOCALS
SELECTCASE TALENT:ARG:형상
	CASE 1
		LOCALS = 어린 
	CASE 2
		LOCALS = 허접한 
	CASE 3
		LOCALS = 튼실한 
	CASE 4
		LOCALS = 빛나는 
	CASE 5
		LOCALS = 흉악한 
	CASE 6
		LOCALS = 대담한 
	CASE 10
		LOCALS = 말 수준의 
ENDSELECT
LOCALS += "페니스"
RETURNF LOCALS