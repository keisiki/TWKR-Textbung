;戦闘能力を上げれば戦えるはず！
;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K70_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②ダイスロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、キャラが被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に戻る→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
	SIF FLAG:대사색깔
		TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数値が大きいほどあなたが不利になる　数値が負ならあなたが有利に
	;キャラの能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		IF ALCOHOL_FACE(70) == "주정꾼" || ALCOHOL_FACE(70) == "곤드레만드레"
			PRINTFORMW 「은～？？ 탄막 짓거리입니까～？」
		ELSEIF TALENT:70:기분 == -1 || CFLAG:70:빡침 || MARK:70:반발각인 >= 3
			PRINTFORMW 「……그런 기분이 아닙니다만……」
		ELSE
			SELECTCASE RAND:3
			CASE 1
				PRINTFORMW 「특훈의 성과를 보입시다！」
			CASE 2
				PRINTFORMW 「 나라도 싸울 수 있습니다！」
			CASEELSE
				PRINTFORMW 「관대히 부탁합니다！」
			ENDSELECT
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;最後
		IF 相手残機 == 0
			IF ALCOHOL_FACE(70) == "주정꾼" || ALCOHOL_FACE(70) == "곤드레만드레"
				PRINTFORML 「말했다～……」
			ELSEIF TALENT:70:기분 == -1 || CFLAG:70:빡침 || MARK:70:반발각인 >= 3
				PRINTFORML 「아-아……」
			ELSE
				SELECTCASE RAND:3
				CASE 1
					PRINTFORML 「히～…」
				CASE 2
					PRINTFORML 「 이제(벌써) 안돼～…」
				CASEELSE
					PRINTFORML 「당했다～…」
				ENDSELECT
			ENDIF
		ELSE
			IF ALCOHOL_FACE(70) == "주정꾼" || ALCOHOL_FACE(70) == "곤드레만드레"
				SELECTCASE RAND:3
				CASE 1
					PRINTFORML 「은～！？」
				CASE 2
					PRINTFORML 「에～！？」
				CASEELSE
					PRINTFORML 「우우～응……」
				ENDSELECT
			ELSEIF TALENT:70:기분 == -1 || CFLAG:70:빡침 || MARK:70:반발각인 >= 3
				SELECTCASE RAND:3
				CASE 1
					PRINTFORML 「……」
				CASE 2
					PRINTFORML 「……」
				CASEELSE
					PRINTFORML 「응……」
				ENDSELECT
			ELSE
				SELECTCASE RAND:9
				CASE 1
					PRINTFORML 「아！」
				CASE 2
					PRINTFORML 「있어！」
				CASE 3
					PRINTFORML 「있던！」
				CASE 4
					PRINTFORML 「위！」
				CASE 5
					PRINTFORML 「꺄！」
				CASE 6
					PRINTFORML 「꺄！」
				CASE 7
					PRINTFORML 「히응！」
				CASE 8
					PRINTFORML 「히네-！」
				CASEELSE
					PRINTFORML 「네！」
				ENDSELECT
			ENDIF
		ENDIF
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上ならあなたの負け、0の場合はあなたの勝利
		;あなた勝利
		IF 相手残機 == 0
			IF ALCOHOL_FACE(70) == "주정꾼" || ALCOHOL_FACE(70) == "곤드레만드레"
				PRINTFORMW 「저것～？ 뭐가 일어났습니까～？」
			ELSEIF TALENT:70:기분 == -1 || CFLAG:70:빡침 || MARK:70:반발각인 >= 3
				PRINTFORMW 「 이제(벌써)……재미없다！」
			ELSE
				IF TALENT:70:연모
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「%CALLNAME:MASTER%씨는 역시 강하네요～！」
					CASE 2
						PRINTFORMW 「탄막 짓거리는 즐겁네요♪」
					CASEELSE
						PRINTFORMW 「, 꼭 단련해 주세요！！」
					ENDSELECT
				ELSEIF TALENT:70:사모
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「팥밥 있고군요……」
					CASE 2
						PRINTFORMW 「 나에게는 아직 빠를지도……」
					CASEELSE
						PRINTFORMW 「―！ 분합니다…！」
					ENDSELECT
				ELSE
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「, 역시 대단합니다……」
					CASE 2
						PRINTFORMW 「졌습니다……」
					CASEELSE
						PRINTFORMW 「아직도인가……」
					ENDSELECT
				ENDIF
			ENDIF
		;小鈴勝利,普通にやっててありえるのか？？
		ELSE
			IF ALCOHOL_FACE(70) == "주정꾼" || ALCOHOL_FACE(70) == "곤드레만드레"
				PRINTFORML 「저것～？ %CALLNAME:MASTER%산도했습니까～？」
			ELSEIF TALENT:70:기분 == -1 || CFLAG:70:빡침 || MARK:70:반발각인 >= 3
				PRINTFORML 「했다！ 기분 상쾌！！」
			ELSE
				IF TALENT:70:연모
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「%CALLNAME:MASTER%씨, 아직 멀었습니다～♪」
					CASE 2
						PRINTFORMW 「했다！ %CALLNAME:MASTER%씨에게 이겨 버렸다～！」
					CASEELSE
						PRINTFORMW 「 나 혹시 재능 있을지도～♪」
					ENDSELECT
				ELSEIF TALENT:70:사모
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「어！？ 나 혹시 이겨 버렸다！？」
					CASE 2
						PRINTFORMW 「뭐, 설마 이길 수 있다고는…！」
					CASEELSE
						PRINTFORMW 「이라고, 손대중 해 주었습니다…！」
					ENDSELECT
				ELSE
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「했다！ 이긴！」
					CASE 2
						PRINTFORMW 「%CALLNAME:MASTER%씨, 의외로 약하다…？」
					CASEELSE
						PRINTFORMW 「좋은 승부였습니다♪」
					ENDSELECT
				ENDIF
				TALENT:70:기분 = 1
			ENDIF
		ENDIF
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

