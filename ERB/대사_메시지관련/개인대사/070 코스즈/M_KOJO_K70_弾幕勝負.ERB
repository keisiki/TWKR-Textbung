;戦闘能力を上げれば戦えるはず！
;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K70_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②ダイスロールとプレイヤー選択肢,ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定,キャラが被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に戻る→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示,1, 表示）
LOCAL = 1
;-------------
IF LOCAL
	SIF FLAG:구상색
		TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ,数値が大きいほどあなたが不利になる　数値が負ならあなたが有利に
	;キャラの能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示,1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		IF ALCOHOL_FACE(70) == "주정꾼" || ALCOHOL_FACE(70) == "곤드레만드레"
			PRINTFORMW 「하에～？？ 탄막놀이인가요～？」
		ELSEIF TALENT:70:기분 == -1 || CFLAG:70:빡침 || MARK:70:반발각인 >= 3
			PRINTFORMW 「우으……그럴 기분이 아닌데요……」
		ELSE
			SELECTCASE RAND:3
			CASE 1
				PRINTFORMW 「특별훈련의 성과를 보여드릴게요！」
			CASE 2
				PRINTFORMW 「저도 싸울 수 있다구요！」
			CASEELSE
				PRINTFORMW 「손대중을 부탁드려요！」
			ENDSELECT
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示,1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示,1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;最後
		IF 相手残機 == 0
			IF ALCOHOL_FACE(70) == "주정꾼" || ALCOHOL_FACE(70) == "곤드레만드레"
				PRINTFORML 「아파～앗……」
			ELSEIF TALENT:70:기분 == -1 || CFLAG:70:빡침 || MARK:70:반발각인 >= 3
				PRINTFORML 「아ー아……」
			ELSE
				SELECTCASE RAND:3
				CASE 1
					PRINTFORML 「히아아～…」
				CASE 2
					PRINTFORML 「이제 무리～…」
				CASEELSE
					PRINTFORML 「당했다～…」
				ENDSELECT
			ENDIF
		ELSE
			IF ALCOHOL_FACE(70) == "주정꾼" || ALCOHOL_FACE(70) == "곤드레만드레"
				SELECTCASE RAND:3
				CASE 1
					PRINTFORML 「하에～！？」
				CASE 2
					PRINTFORML 「호에에～！？」
				CASEELSE
					PRINTFORML 「우우～응……」
				ENDSELECT
			ELSEIF TALENT:70:기분 == -1 || CFLAG:70:빡침 || MARK:70:반발각인 >= 3
				SELECTCASE RAND:3
				CASE 1
					PRINTFORML 「아파파……」
				CASE 2
					PRINTFORML 「으으……」
				CASEELSE
					PRINTFORML 「으ー응……」
				ENDSELECT
			ELSE
				SELECTCASE RAND:9
				CASE 1
					PRINTFORML 「햐앗！」
				CASE 2
					PRINTFORML 「아야！」
				CASE 3
					PRINTFORML 「아팟！」
				CASE 4
					PRINTFORML 「우와앗！」
				CASE 5
					PRINTFORML 「꺗！」
				CASE 6
					PRINTFORML 「꺄앗！」
				CASE 7
					PRINTFORML 「히읏！」
				CASE 8
					PRINTFORML 「히에ー엣！」
				CASEELSE
					PRINTFORML 「에엣！」
				ENDSELECT
			ENDIF
		ENDIF
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示,1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示,1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示,1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示,1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上ならあなたの負け,0の場合はあなたの勝利
		;あなた勝利
		IF 相手残機 == 0
			IF ALCOHOL_FACE(70) == "주정꾼" || ALCOHOL_FACE(70) == "곤드레만드레"
				PRINTFORMW 「어라아～？ 무슨 일이 일어난 건가요～？」
			ELSEIF TALENT:70:기분 == -1 || CFLAG:70:빡침 || MARK:70:반발각인 >= 3
				PRINTFORMW 「이제……재미없ー어요！」
			ELSE
				IF TALENT:70:연모
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「%CALLNAME:MASTER%씨는 역시 강하시네요～！」
					CASE 2
						PRINTFORMW 「탄막놀이는 즐겁네요♪」
					CASEELSE
						PRINTFORMW 「ㄲ,꼭 단련을 시켜주세요！！」
					ENDSELECT
				ELSEIF TALENT:70:사모
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「강하시네요……」
					CASE 2
						PRINTFORMW 「저에게는 아직 이를지도……」
					CASEELSE
						PRINTFORMW 「으ー！ 분해요…！」
					ENDSELECT
				ELSE
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「ㄱ,과연이네요……」
					CASE 2
						PRINTFORMW 「졌어요……」
					CASEELSE
						PRINTFORMW 「아직 먼 걸까……」
					ENDSELECT
				ENDIF
			ENDIF
		;小鈴勝利,普通にやっててありえるのか？？
		ELSE
			IF ALCOHOL_FACE(70) == "주정꾼" || ALCOHOL_FACE(70) == "곤드레만드레"
				PRINTFORML 「어라아～？ %CALLNAME:MASTER%씨도 술을 마셨나요～？」
			ELSEIF TALENT:70:기분 == -1 || CFLAG:70:빡침 || MARK:70:반발각인 >= 3
				PRINTFORML 「해냈다！ 기분 상쾌！！」
			ELSE
				IF TALENT:70:연모
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「%CALLNAME:MASTER%씨, 아직 부족하네요～♪」
					CASE 2
						PRINTFORMW 「해냈다！ %CALLNAME:MASTER%씨를 이겼어～！」
					CASEELSE
						PRINTFORMW 「나 어쩌면 재능이 있을지도～♪」
					ENDSELECT
				ELSEIF TALENT:70:사모
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「어라！？ 나 혹시 이긴거야！？」
					CASE 2
						PRINTFORMW 「뭐, 설마 이길줄이야…！」
					CASEELSE
						PRINTFORMW 「라는건, 손대중을 해주신 거군요…！」
					ENDSELECT
				ELSE
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「얏호！ 이겼다！」
					CASE 2
						PRINTFORMW 「%CALLNAME:MASTER%씨, 의외로 약한 건가요…？」
					CASEELSE
						PRINTFORMW 「좋은 승부였습니다♪」
					ENDSELECT
				ENDIF
				TALENT:70:기분 = 1
			ENDIF
		ENDIF
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

