CASE IS >= ( TALENT:ARG:체형 == -2 ? 3 #2 )
	LOCALS += @"%TEXTR("젖/유방/젖가슴/폭유")%"
CASE TALENT:ARG:체형 == -2 ? 2 #1
	LOCALS += @"%TEXTR("젖/유방/젖가슴")%"
CASE TALENT:ARG:체형 == -2 ? 1 #0
	LOCALS += @"%TEXTR("젖/유방/젖가슴")%"
CASE TALENT:ARG:체형 == -2 ? 0 #-1
	LOCALS += @"%TEXTR("흉/유/젖가슴")%"
CASEELSE
	LOCALS += @"%TEXTR("가슴/흉부")%"
ENDSELECT

RETURNF LOCALS

