;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K95_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②ダイスロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、キャラが被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に戻る→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:구상색
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;ハンデをつけることができ、数値が大きいほどあなたが不利になる　数値が負ならあなたが有利に
	;キャラの能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		;怒り
		IF CFLAG:318 == 1
			PRINTFORMW 「왔구나！싸움 걸어온 걸 후회하게 해 줄 테니까！」
		ELSEIF RAND:4 == 0
			PRINTFORM 「야호- 그래！승부야！
			CALL MASTER_CALLNAME_K95
			PRINTFORMW ！」
		ELSEIF RAND:3 == 0
			PRINTFORMW 「 나의 음악만으로 가볍게 이겨 줄 테니까！」
		ELSEIF RAND:2 == 0
			PRINTFORMW 「신토 의례 라이브를 시작―하겠습니다！」
		ELSE
			PRINTFORMW 「악기라고 얕잡아 보지 마！」
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;別に一律で「やられたー」だけでもいいよ
		SELECTCASE 相手残機
			;残り残機3が表示されるのは【洽覧深識】持ちのみ
			CASE 3
				PRINTFORML 
			CASE 2
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「아무것도 아냐！이 정도로 우쭐대지 마！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「아이쿠！또！살살 해 줘！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「이 정도는！」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「운이 좋았을 뿐！」
				ELSE
					PRINTFORMW 「아직이야！지금부터다！」
				ENDIF
			CASE 1
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「―, 이대로는…」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「이런…이대로는 져버린다！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「 나도…할 때는 하니까！」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「승부는 지금부터야！」
				ELSE
					PRINTFORMW 「단념하지 않을 테니까！」
				ENDIF
			CASE 0
				;怒り
				IF CFLAG:318 == 1
					PRINTFORM 「
					CALL MASTER_CALLNAME_K95
					PRINTFORMW  미워-！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「…」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「와~, 이건 무리야―」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「…」
				ELSE
					PRINTFORMW 「…안 되는 건가…」
				ENDIF
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
	
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上ならあなたの負け、0の場合はあなたの勝利
		SELECTCASE 相手残機
			CASE 4
				PRINTFORML 
			CASE 3
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「맛이 어때！네가 잘못했지！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「해냈다―！이겼다！」
				ELSEIF RAND:3 == 0
					PRINTFORM 「
					CALL MASTER_CALLNAME_K95
					PRINTFORMW , 컨디션 난조였을까？」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「후후응, 뭐야！」
				ELSE
					PRINTFORMW 「 좀 더 짜릿한 싸움을 바랬는데」
				ENDIF
			CASE 2
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「이건 아무것도 아냐！난 지지 않을 테니까！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「아- 이런！머리카락 흐트러져 버렸다！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「아야야야… 찰과상 입어 버렸다…」
				ELSEIF RAND:2 == 0
					PRINTFORM 「,
					CALL MASTER_CALLNAME_K95
					PRINTFORMW 도 확실히 강하네요！」
				ELSE
					PRINTFORMW 「좋은 승부였어요！」
				ENDIF
			CASE 1
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「아…위험했다…」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「아슬아슬하네…」
				ELSEIF RAND:3 == 0
					PRINTFORM 「
					CALL MASTER_CALLNAME_K95
					PRINTFORMW , 강한데―」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「치열했네요…지쳤다…」
				ELSE
					PRINTFORMW 「간발차로 이겼다…」
				ENDIF
			CASE 0
				;怒り
				IF CFLAG:318 == 1
					PRINTFORM 「
					CALL MASTER_CALLNAME_K95
					PRINTFORMW 정말 미워！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「응, 그래 그래, 항복이야―」
				ELSEIF RAND:3 == 0
					PRINTFORM 「
					CALL MASTER_CALLNAME_K95
					PRINTFORMW , 강하구나！」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「분한데…」
				ELSE
					PRINTFORMW 「언니랑 태그 팀으로 리벤지 매치 할 테니까！」
				ENDIF
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

