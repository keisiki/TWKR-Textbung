@M_KOJO_MESSAGE_COM_K134_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;전체의 흐름
;①【戦闘前】→ ②다이스 롤과 플레이어 선택지、핸디캡을 추가했을 경우【ハンデ구상】→ ③대응 기술이 발동 시【スキル구상】→ ④피탄판정、캐릭터가 피탄했다면【被弾구상】→
;어느 한쪽의 잔기가 0이 되지 않으면 ②로 돌아간다 → ⑤【戦闘後구상】

;--------------------------------------------------
;기입체크 (=0, 비표시、1, 표시)
LOCAL = 0
;-------------
IF LOCAL
SIF FLAG:구상색
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;소분기
	;-------------------------------------------------
	;전투전
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;핸디캡을 추가해, 수치가 클수록 아나타가 불리해진다   수치가 음수면 아나타가 유리하게
	;캐릭터의 능력에 관계없이 강하게 하거나 약하게 할 수 있다
	;기입체크 (=0, 비표시、1, 표시)
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;핸디캡
	;기입체크 (=0, 비표시、1, 표시)
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;핸디캡을 추기하지 않으면 표시되지 않기 때문에 미기입으로 좋다
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;전투중 TARGET 피탄시 구상
	;기입체크 (=0, 비표시、1, 표시)
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;일률적으로「당했다ー」정도만 해도 돼
		SELECTCASE 相手残機
			;남은 잔기 3이 표시될 수 있는건【습람심식】소유만
			CASE 3
				PRINTFORML 
			CASE 2
				PRINTFORML 
			CASE 1
				PRINTFORML 
			CASE 0
				PRINTFORML 
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;전투중
	;TARGET의【잔인무도】발동시
	;ARG는 TARGET의 잔기
	;기입체크 (=0, 비표시、1, 표시)
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		
	ENDIF
	;-------------------------------------------------
	;전투중
	;TARGETの【건곤일척】발동시
	;ARG는 TARGET의 잔기
	;기입체크 (=0, 비표시、1, 표시)
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		
	ENDIF
	;-------------------------------------------------
	;전투중
	;TARGETの【괴력난신】발동시
	;ARG는 TARGET의 잔기
	;기입체크 (=0, 비표시、1, 표시)
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;전투후
	;기입체크 (=0, 비표시、1, 표시)
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;남은 잔기 3가 표시될 수 있는건【습람심식】소유만
		;잔기가 1 이상이라면 당신이 패배, 0의 경우는 당신의 승리
		SELECTCASE 相手残機
			CASE 4
				PRINTFORML 
			CASE 3
				PRINTFORML 
			CASE 2
				PRINTFORML 
			CASE 1
				PRINTFORML 
			CASE 0
				PRINTFORML 
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

