;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K110_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②ダイスロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、キャラが被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に戻る→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:구상색
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;ハンデをつけることができ、数値が大きいほどあなたが不利になる　数値が負ならあなたが有利に
	;キャラの能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		;怒り
		IF CFLAG:318 == 1
			PRINTFORMW 「『오래오래, 죽어라』!」
		ELSE
			SELECTCASE RAND:4
				CASE 0
					PRINTFORMW 「……」
				CASE 1
					PRINTFORMW 「…시험해 볼께, 당신의 힘을」
				CASE 2
					PRINTFORMW 「…부정 투성이가 된 지상인처럼 질 내가 아냐」
				CASE 3
					PRINTFORMW 「…『헛되이 떨어지는게 좋아』!」
			ENDSELECT
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;別に一律で「やられたー」だけでもいいよ
		SELECTCASE 相手残機
			;残り残機3が表示されるのは【洽覧深識】持ちのみ
			CASE 3
				PRINTFORML 
			CASE 2
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「………」
				ELSE
					SELECTCASE RAND:4
						CASE 0
							PRINTFORMW 「……!」
						CASE 1
							PRINTFORMW 「…맞았다?」
						CASE 2
							PRINTFORMW 「…이 정도로는」
						CASE 3
							PRINTFORMW 「…우연이네」
					ENDSELECT
				ENDIF
			CASE 1
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「………!」
				ELSE
					SELECTCASE RAND:4
						CASE 0
							PRINTFORMW 「…바보같은…」
						CASE 1
							PRINTFORMW 「…우연은 아닌가?」
						CASE 2
							PRINTFORMW 「…의외로 강하네」
						CASE 3
							PRINTFORMW 「『이대로는 당신이 이길거야』!」
					ENDSELECT
				ENDIF
			CASE 0
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「…이런…!」
				ELSE
					SELECTCASE RAND:4
						CASE 0
							PRINTFORMW 「…졌다…」
						CASE 1
							PRINTFORMW 「…실력은 되는 것 같네」
						CASE 2
							PRINTFORMW 「…윽!」
						CASE 3
							PRINTFORMW 「……!!!」
					ENDSELECT
				ENDIF
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上ならあなたの負け、0の場合はあなたの勝利
		SELECTCASE 相手残機
			CASE 4
				PRINTFORML 
			CASE 3
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「…언제 죽어?」
				ELSE
					SELECTCASE RAND:4
						CASE 0
							PRINTFORMW 「…별일 없었네」
						CASE 1
							PRINTFORMW 「…결국 지상인인가」
						CASE 2
							PRINTFORMW 「…살아있어?」
						CASE 3
							PRINTFORMW 「……」
					ENDSELECT
				ENDIF
			CASE 2
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「귀찮네, 고집이 센 것은」
				ELSE
					SELECTCASE RAND:4
						CASE 0
							PRINTFORMW 「…별로 강하지는 않았다」
						CASE 1
							PRINTFORMW 「…그럭저럭 강하네」
						CASE 2
							PRINTFORMW 「…」
						CASE 3
							PRINTFORMW 「……」
							PRINTFORMW 사구메는 조금 흥미롭게 이쪽을 보고 있다
					ENDSELECT
				ENDIF
			CASE 1
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「…애먹여 주마」
					;てこずらせてくれる
				ELSE
					SELECTCASE RAND:4
						CASE 0
							PRINTFORMW 「…꽤 강하네」
						CASE 1
							PRINTFORMW 「…이쪽도 궁지에 몰렸다…이길 수 있었던 것은 우연인가」
						CASE 2
							PRINTFORMW 「…하마터질 뻔했네」
						CASE 3
							PRINTFORMW 「……」
							PRINTFORMW 사구메는 흥미롭게 이쪽을 보고 있다
					ENDSELECT
				ENDIF
			CASE 0
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「…미천한 것이」
				ELSE
					SELECTCASE RAND:4
						CASE 0
							PRINTFORMW 「…강한데, %CALLNAME:MASTER%」
						CASE 1
							PRINTFORMW 「…진건가…」
						CASE 2
							PRINTFORMW 「…지상인의 힘이라는 것도 얕볼 수 없지」
						CASE 3
							PRINTFORMW 「……」
							PRINTFORMW 사구메는 흥미롭게 이쪽 얼굴을 들여다보고 있다
					ENDSELECT
				ENDIF
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

