;탄막 승부
;==================================================
;
@M_KOJO_MESSAGE_COM_K129_DANMAKU(ARGS, 상대잔기)
#DIM 상대잔기
;전체의 흐름
;①【전투 전】→②다이스 롤과플레이어 선택지, 핸디캡을 붙였을 경우는【핸디캡 말】→③대응 스킬이 발동했을 경우【스킬 말】→④피탄 판정, 캐릭터가 피탄하고 싶은들【피탄 말】→
;어느 쪽인가의잔기가 0으로 되어 있지 않으면②에 돌아오는→⑤【전투후 말】

;--------------------------------------------------
;기입 체크(=0, 비표시, 1, 표시)
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:구상색
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;소분기
	;-------------------------------------------------
	;전투전
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;핸디캡을 붙일 수가 있어 수치가 큰 만큼 당신이 불리하게 되는 수치가 부라면 당신이 유리하게
	;캐릭터의 능력에 관련되지 않고 쿠소 강하게 하거나 약하게 하거나 할 수 있다
	;기입 체크(=0, 비표시, 1, 표시)
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		;분노
		IF CFLAG:318 == 1
			PRINTFORMW 「너에게도 지옥을 보여 주는 것으로 있어요!!!」
		ELSEIF RAND:4 == 0
			PRINTFORMW 「나의 시련을 받고 싶습니까? 좋아요!」
		ELSEIF RAND:3 == 0
			PRINTFORMW 「지옥에 가기 전에 지옥을 보입시다!」
		ELSEIF RAND:2 == 0
			PRINTFORMW 「자! 지옥을 즐거움 주십시오!」
		ELSE
			PRINTFORMW 「%CALLNAME:MASTER%씨! 승부입니다!」
		ENDIF
	ENDIF
	;-------------------------------------------------
	;핸디캡
	;기입 체크(=0, 비표시, 1, 표시)
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;핸디캡 붙이지 않았으면 표시되지 않기 때문에 무기입으로 좋다
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;전투중 TARGET 피탄시 말
	;기입 체크(=0, 비표시, 1, 표시)
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;별로 일률적이어 「당했다―」만이라도 좋아
		SELECTCASE 상대잔기
			;나머지잔기 3이 표시되는 것은【습람심식】소유만
			CASE 3
				PRINTFORML 
			CASE 2
				;분노
				IF CFLAG:318 == 1
					PRINTFORMW 「무구구…… 해 주네요!」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「아픕니다!」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「…… 하네요!」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「역시 대단합니다!」
				ELSE
					PRINTFORMW 「실력은 충분히라고 하는 곳습니다……」
				ENDIF
			CASE 1
				;분노
				IF CFLAG:318 == 1
					PRINTFORMW 「…… 심합니다!」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「과연 강하네요」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「아직도 이것으로부터입니다!」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「추적할 수 있었지만 아직 지고 있지 않습니다!」
				ELSE
					PRINTFORMW 「조금 정도 손대중 해 주어도……」
				ENDIF
			CASE 0
				;분노
				IF CFLAG:318 == 1
					PRINTFORMW 「…… 바보오!」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「신님인데……」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「후, 훌륭합니다……」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「우우, 심하다……」
				ELSE
					PRINTFORMW 「당했습니다―!」
				ENDIF
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;전투중
	;TARGET의【잔인혹박】발동시
	;ARG는 TARGET의 잔기
	;기입 체크(=0, 비표시, 1, 표시)
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		
	ENDIF
	;-------------------------------------------------
	;전투중
	;TARGET의【건곤 일척】발동시
	;ARG는 TARGET의 잔기
	;기입 체크(=0, 비표시, 1, 표시)
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		
	ENDIF
	;-------------------------------------------------
	;전투중
	;TARGET의【괴력난신】발동시
	;ARG는 TARGET의 잔기
	;기입 체크(=0, 비표시, 1, 표시)
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;전투후
	;기입 체크(=0, 비표시, 1, 표시)
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;나머지잔기 4가 표시될 수 있는 것은【습람심식】소유만
		;잔기가 1이상이라면 당신이 져, 0의 경우는 당신인 승리
		SELECTCASE 상대잔기
			CASE 4
				PRINTFORML 
			CASE 3
				;분노
				IF CFLAG:318 == 1
					PRINTFORMW 「…… 꾸물거리네요」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「상태가 나빴던 것입니까?」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「그다지 당치 않음은 하지 말아 주세요?」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「몸은 괜찮습니까?」
				ELSE
					PRINTFORMW 「상처라든지 하고 있지 않습니까?」
				ENDIF
			CASE 2
				;분노
				IF CFLAG:318 == 1
					PRINTFORMW 「굉장한 일은 없었습니다」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「당신이라면 지옥에 가도 순살[瞬殺] 되는 일은 없을 것입니다」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「상당한 예법이네요」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「하네요! %CALLNAME:MASTER%씨!」
				ELSE
					PRINTFORMW 「단련이 충분하지 않아요~」
				ENDIF
			CASE 1
				;분노
				IF CFLAG:318 == 1
					PRINTFORMW 「…… 시간이 걸리게 해 주고 자빠졌어요!」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「완전히, 정말로 인간인 것입니까?」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「과연 강하네요……」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「%CALLNAME:MASTER%씨라면 지옥에 가도 싸울 수 있을지도 모르네요」
				ELSE
					PRINTFORMW 「나의 시련에 견딜 수 없는 것 같은 것은 안됩니다?」
				ENDIF
			CASE 0
				;분노
				IF CFLAG:318 == 1
					PRINTFORMW 「…… 분합니다」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「뭐, 갔습니다……」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「그 만큼의 솜씨가 있으면, 지옥의 귀신에도 서로 싸울 수 있을지도 모르네요」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「…… 강하네요……」
				ELSE
					PRINTFORMW 「…… 져 버렸습니다」
				ENDIF
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

