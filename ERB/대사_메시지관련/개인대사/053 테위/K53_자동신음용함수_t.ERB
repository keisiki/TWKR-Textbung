;*********************************************************************************
;자극(CUP)을 자극 레벨에 변환
;여기서 통일해 두면 조정하기 쉽다
;*********************************************************************************
@K53_자극LV(ARGS)
#FUNCTION
;쾌감계 CUP의 합계
;LV:0낯간지러운 LV:1느끼고 있는 LV:2강렬한 쾌감 LV:3매우 강렬한 쾌감 LV:4 절정 레벨
IF ARGS == "쾌감"
	SIF K53_쾌감 >10000
		RETURNF 4
	SIF K53_쾌감 >5000
		RETURNF 3
	SIF K53_쾌감 >1000
		RETURNF 2
	SIF K53_쾌감 >100
		RETURNF 1
	SIF K53_쾌감 > 0
		RETURNF 0
ENDIF

IF ARGS == "고통"
;LV0:참을 수 있는 LV1:아픈 LV2:히힉
;고통각인은 2000~이지만, SM가 없는 TW에서는 우선 발생하지 않는다
;처녀:1250 자궁구 고문:~500 스팬킹:450+유치 350 애널애무:100 정상위애널:800
	SIF CUP:TARGET:고통 > 2000
		RETURNF 2
	SIF CUP:TARGET:고통 > 500
		RETURNF 1
	SIF CUP:TARGET:고통 > 0
		RETURNF 0
ENDIF

IF ARGS == "반감"
;LV0:참을 수 있는 LV1:아니 LV2:그만두어 LV3:죽여버리겠어
;반발각인:반감＋불쾌	1:500~1000 2:1001~2000 3:2000~
;반감 기준 삽입 G 스폿·자궁구 고문:500+정조 관념 1000
	SIF CUP:TARGET:반감> 2000
		RETURNF 3
	SIF CUP:TARGET:반감> 1000
		RETURNF 2
	SIF CUP:TARGET:반감 > 500
		RETURNF 1
	SIF CUP:TARGET:반감 > 0
		RETURNF 0
ENDIF

IF ARGS == "공포"
	SIF CUP:TARGET:공포> 2000
		RETURNF 3
	SIF CUP:TARGET:공포> 1000
		RETURNF 2
	SIF CUP:TARGET:공포 > 500
		RETURNF 1
	SIF CUP:TARGET:공포 > 0
		RETURNF 0
ENDIF


;자지 불러
@K53_TINPO(ARG)
#FUNCTIONS
VARSET RESULTS

SELECTCASE RAND:2
	CASE 0
		RESULTS += "자지"
	CASE 1
		SELECTCASE RAND:4
			CASE 0
				RESULTS += "변태"
			CASE 1
				RESULTS += "색골"
			CASE 2
				RESULTS += "로리콘"
		ENDSELECT
		RESULTS += "자지"
ENDSELECT
RETURNF RESULTS


;보지 불러
@K53_MANKO(ARG)
#FUNCTIONS
VARSET RESULTS

SELECTCASE RAND:5
	CASE 0
		RESULTS += "어린애"
	CASE 1
		RESULTS += "로리"
	CASE 2
		RESULTS += "꼬맹이"
	CASE 3
		RESULTS += "어린이"
ENDSELECT

RESULTS += "보지"

RETURNF RESULTS


;하트인가","를 붙인다
;ARG = 1 ","붙이지 않는다
;ARG >= 2 확실히 ARG-1수 하트부여
@K53_하트부여(ARG)
#FUNCTIONS

A = 0
SIF ARG >= 2
	A += ARG - 1

;욕정 LV에 응해 확립으로 하트를 붙인다
IF GETPALAMLV(PALAM:욕정, 15) >= 12
	SELECTCASE RAND:3
		CASE 0
			A += 1
	ENDSELECT
	SELECTCASE RAND:3
		CASE 0
			A += 1
	ENDSELECT
	SELECTCASE RAND:3
		CASE 0
			A += 1
	ENDSELECT
ELSEIF GETPALAMLV(PALAM:욕정, 15) >= 8
	SELECTCASE RAND:3
		CASE 0
			A += 1
	ENDSELECT
	SELECTCASE RAND:3
		CASE 0
			A += 1
	ENDSELECT
ELSEIF GETPALAMLV(PALAM:욕정, 15) >= 4
	SELECTCASE RAND:3
		CASE 0
			A += 1
	ENDSELECT
ENDIF

IF A > 0
	RETURNF UNICODE(0x2764) * A
ELSEIF ARG == 0
	RETURNF ","
ENDIF
