;
@M_KOJO_MESSAGE_COM_K96_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;전체 흐름
;①【戦闘前】→②ダイスロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、キャラが被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に戻る→⑤【戦闘後口上】

;--------------------------------------------------
;기입 체크（=0, 비표시、1, 표시）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:구상색
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;소분기
	;-------------------------------------------------
	;ハンデをつけることができ、数値が大きいほどあなたが不利になる　数値が負ならあなたが有利に
	;キャラの能力に関わらずクッソ強くしたり弱くしたりできる
	;기입 체크（=0, 비표시、1, 표시）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		;怒り
		IF CFLAG:318 == 1
			PRINTFORMW 「누나를 화나게 한걸 후회하게 해주겠어%UNICODE(0x2665) *1%」
		ELSE
			SELECTCASE RAND:4
				CASE 0
					PRINTFORMW 「자! 지금이야말로 투쟁의 비트를 새기는 거다!」
				CASE 1
					PRINTFORMW 「자! 환상향에 시원한 비트를 울려라!」
				CASE 2
					PRINTFORMW 「자! 전무후무한 비트를 울려라!」
				CASE 3
					PRINTFORMW 「자 영혼의 비트로 시원한 감정을 일깨워라!」
			ENDSELECT
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;기입 체크（=0, 비표시、1, 표시）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら표시されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;전투중TARGET被弾時口上
	;기입 체크（=0, 비표시、1, 표시）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;別に一律で「やられたー」だけでもいいよ
		SELECTCASE 相手残機
			;残り残機3が표시されるのは【洽覧深識】持ちのみ
			CASE 3
				PRINTFORML 
			CASE 2
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「응, 이 정도?」
				ELSE
					SELECTCASE RAND:4
						CASE 0
							PRINTFORMW 「순수 탄막 파워로 밀어낼게!」
						CASE 1
							PRINTFORMW 「그 정도로는 흥분하지 않아♪」
						CASE 2
							PRINTFORMW 「좀 더 나를 흥분시켜줘!」
						CASE 3
							PRINTFORMW 「싱거워!」
					ENDSELECT
				ENDIF
			CASE 1
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「신경을 건드리는 소리를 내네!」
				ELSE
					SELECTCASE RAND:4
						CASE 0
							PRINTFORMW 「어? 격렬하네, 좋아해, 그런거!」
						CASE 1
							PRINTFORMW 「하잖아! %MASTER_CALLNAME_K96()%!」
						CASE 2
							PRINTFORMW 「아직 진짜 승부는 지금부터야!」
						CASE 3
							PRINTFORMW 「좀 더 %MASTER_CALLNAME_K96()%의 소리를 내게 새겨줘!」
					ENDSELECT
				ENDIF
			CASE 0
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「…진건가」
				ELSE
					SELECTCASE RAND:4
						CASE 0
							PRINTFORMW 「당―했―다!」
						CASE 1
							PRINTFORMW 「아차…」
						CASE 2
							PRINTFORMW 「%MASTER_CALLNAME_K96()%의 소리, 굉장하네♪」
						CASE 3
							PRINTFORMW 「내 소리가 졌다…!」
					ENDSELECT
				ENDIF
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;전투중
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;기입 체크（=0, 비표시、1, 표시）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
	
	ENDIF
	;-------------------------------------------------
	;전투중
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;기입 체크（=0, 비표시、1, 표시）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		SELECTCASE RAND:4
			CASE 0
				PRINTFORMW 「이게 건곤일척 일격이라는 녀석이야!」
			CASE 1
				PRINTFORMW 「내 소리를 들어라!」
			CASE 2
				PRINTFORMW 「터져라!」
				;たまや！
			CASE 3
				PRINTFORMW 「아직 방심하지 마!」
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;전투중
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;기입 체크（=0, 비표시、1, 표시）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;전투후
	;기입 체크（=0, 비표시、1, 표시）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が표시されうるのは【洽覧深識】持ちのみ
		;残機が1以上ならあなたの負け、0の場合はあなたの勝利
		SELECTCASE 相手残機
			CASE 4
				PRINTFORML 
			CASE 3
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「이게 질렸다면 다시는 화나게 만들지 말아야 할거야」
				ELSE
					SELECTCASE RAND:4
						CASE 0
							PRINTFORMW 「어머? 오늘은 상태가 나빴나?」
						CASE 1
							PRINTFORMW 「의외로 %MASTER_CALLNAME_K96()%, 약하구나」
						CASE 2
							PRINTFORMW 「압승이네 어때 내 소리는?」
						CASE 3
							PRINTFORMW 「내 소리 어땠어?」
					ENDSELECT
				ENDIF
			CASE 2
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「정말! 사람을 화나게 하면 이렇게 되는거니까!」
				ELSE
					SELECTCASE RAND:4
						CASE 0
							PRINTFORMW 「아직 멀었네, %MASTER_CALLNAME_K96()%%UNICODE(0x2665) *1%」
						CASE 1
							PRINTFORMW 「더 격렬하게 만들길 바랬는데♪」
						CASE 2
							PRINTFORMW 「별로 기분 좋지는 않았네…」
						CASE 3
							PRINTFORMW 「아직 여력이 남았니? 그런 기분이 들어」
					ENDSELECT
				ENDIF
			CASE 1
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「분노에 몸을 맡기면 안 되는 건가」
				ELSE
					SELECTCASE RAND:4
						CASE 0
							PRINTFORMW 「위험했어…하지만 매우 즐거웠어♪」
						CASE 1
							PRINTFORMW 「%MASTER_CALLNAME_K96()%의 소리…굉장히 격렬하구나…♪」
						CASE 2
							PRINTFORMW 「하마터면 질 뻔 했어…」
						CASE 3
							PRINTFORMW 「이번은 모두도 유혹해 줄까?」
					ENDSELECT
				ENDIF
			CASE 0
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「…미안하지만 납득이 안가니까」
				ELSE
					SELECTCASE RAND:4
						CASE 0
							PRINTFORMW 「어머머머, 항복이야―」
						CASE 1
							PRINTFORMW 「%MASTER_CALLNAME_K96()%의 소리, 새겨져 버렸다…%UNICODE(0x2665) *1%」
						CASE 2
							PRINTFORMW 「매우 즐거웠어♪ 또 싸워!」
						CASE 3
							PRINTFORMW 「마력조정에 과제가 있네…」
					ENDSELECT
				ENDIF
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

