;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K83_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②ダイスロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、キャラが被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に戻る→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:대사색깔
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数値が大きいほどあなたが不利になる　数値が負ならあなたが有利に
	;キャラの能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		;酔ってる
		IF M_KOJO_K83_YOIDORE(83)
			CALL M_KOJO_K83_TALKSET("酔いどれ")
		;不機嫌
		ELSEIF M_KOJO_K83_FUKIGEN(83)
			PRINTFORMW 「네……원, 알았다……」
		;通常
		ELSE
			IF TALENT:연인
				PRINTFORMW 「뭐, 지지 않아……！」
			ELSEIF TALENT:연모
				PRINTFORMW 「이, 노력한다……！」
			ELSEIF TALENT:사모
				PRINTFORMW 「, 잘 부탁드립니다……」
			ELSE
				PRINTFORMW 「원, 나약있어라……」
			ENDIF
		ENDIF
		RETURN 0
	ENDIF
;	;-------------------------------------------------
;	;ハンデ
;	;記入チェック（=0, 非表示、1, 表示）
;	LOCAL:1 = 0
;	;-------------------------------------------------
;	IF LOCAL:1 && ARGS == "ハンデ"
;		;ハンデつけなかったら表示されないので無記入でよい
;		PRINTFORML 
;		RETURN 0
;	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾"
		;最後
		IF 相手残機 == 0
			;酔ってる
			IF M_KOJO_K83_YOIDORE(83)
				PRINTFORML 「응―…？？」
			;不機嫌
			ELSEIF M_KOJO_K83_FUKIGEN(83)
				PRINTFORML 「…………」
			;通常
			ELSE
				SELECTCASE RAND:3
				CASE 1
					PRINTFORML 「이나, 당했다……」
				CASE 2
					PRINTFORML 「개, 강하다……」
				CASEELSE
					PRINTFORML 「도, 이제(벌써) 안돼……」
				ENDSELECT
			ENDIF
		ELSE
			;酔ってる
			IF M_KOJO_K83_YOIDORE(83)
				SELECTCASE RAND:3
				CASE 1
					PRINTFORML 「！？」
				CASE 2
					PRINTFORML 「응응！？」
				CASEELSE
					PRINTFORML 「……！？」
				ENDSELECT
			;不機嫌
			ELSEIF M_KOJO_K83_FUKIGEN(83)
				SELECTCASE RAND:3
				CASE 1
					PRINTFORML 「 이제(벌써)나다……」
				CASE 2
					PRINTFORML 「아프다……」
				CASEELSE
					PRINTFORML 「……」
				ENDSELECT
			;通常
			ELSE
				PRINTFORML 「%M_KOJO_K83_AUTO("被弾")%」
			ENDIF
		ENDIF
	ENDIF
;	;-------------------------------------------------
;	;戦闘中
;	;TARGETの【残忍酷薄】発動時
;	;ARGはTARGETの残機
;	;記入チェック（=0, 非表示、1, 表示）
;	LOCAL:1 = 0
;	;-------------------------------------------------
;	IF LOCAL:1 && ARGS == "残忍酷薄"
;		
;	ENDIF
;	;-------------------------------------------------
;	;戦闘中
;	;TARGETの【乾坤一擲】発動時
;	;ARGはTARGETの残機
;	;記入チェック（=0, 非表示、1, 表示）
;	LOCAL:1 = 0
;	;-------------------------------------------------
;	IF LOCAL:1 && ARGS == "乾坤一擲"
;		
;	ENDIF
;	;-------------------------------------------------
;	;戦闘中
;	;TARGETの【怪力乱神】発動時
;	;ARGはTARGETの残機
;	;記入チェック（=0, 非表示、1, 表示）
;	LOCAL:1 = 0
;	;-------------------------------------------------
;	IF LOCAL:1 && ARGS == "怪力乱神"
;		
;	ENDIF
;	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上ならあなたの負け、0の場合はあなたの勝利
		;あなた勝利
		IF 相手残機 == 0
			;酔ってる
			IF M_KOJO_K83_YOIDORE(83)
				PRINTFORMW 「어……？」
			;不機嫌
			ELSEIF M_KOJO_K83_FUKIGEN(83)
				PRINTFORMW 「심하다…………」
			;通常
			ELSE
				IF TALENT:연인
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「%CALLNAME:MASTER%～, 손대중 해……」
					CASE 2
						PRINTFORMW 「즐거웠다…♪」
					CASEELSE
						PRINTFORMW 「또 놀자…♪」
					ENDSELECT
				ELSEIF TALENT:연모
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「강한 사람은 좋겠다……」
					CASE 2
						PRINTFORMW 「상대가 되지 않아……」
					CASEELSE
						PRINTFORMW 「졌지만, 즐거웠다……」
					ENDSELECT
				ELSEIF TALENT:사모
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「%마스터는% 강하다……」
					CASE 2
						PRINTFORMW 「구, 분하다……」
					CASEELSE
						PRINTFORMW 「져 버렸다……」
					ENDSELECT
				ELSE
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「뭐, 졌다……」
					CASE 2
						PRINTFORMW 「, 무리……」
					CASEELSE
						PRINTFORMW 「%CALLNAME:MASTER%, 강하다……」
					ENDSELECT
				ENDIF
			ENDIF
		;キスメ勝利
		ELSE
			;酔ってる
			IF M_KOJO_K83_YOIDORE(83)
				PRINTFORMW 「아하하！ 재미있었다―！」
			;不機嫌
			ELSEIF M_KOJO_K83_FUKIGEN(83)
				PRINTFORMW 「…………바보」
			;通常
			ELSE
				IF TALENT:연인
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「%CALLNAME:MASTER%, 나보다 약하다니……」
					CASE 2
						PRINTFORMW 「있고, 아팠다…？ 미안해요……」
					CASEELSE
						PRINTFORMW 「이번에 특훈하자…♪」
					ENDSELECT
				ELSEIF TALENT:연모
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「, 운이 좋았다…！」
					CASE 2
						PRINTFORMW 「%CALLNAME:MASTER%도 강했다……」
					CASEELSE
						PRINTFORMW 「후후, 즐겁다……」
					ENDSELECT
				ELSEIF TALENT:사모
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「어……이겨 버렸다……」
					CASE 2
						PRINTFORMW 「있고, 좋은 승부였다……」
					CASEELSE
						PRINTFORMW 「 , 미안……」
					ENDSELECT
				ELSE
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「원……」
					CASE 2
						PRINTFORMW 「네……끝…？」
					CASEELSE
						PRINTFORMW 「얌전하게 하고 있었던 편이……」
					ENDSELECT
				ENDIF
			ENDIF
		ENDIF
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

