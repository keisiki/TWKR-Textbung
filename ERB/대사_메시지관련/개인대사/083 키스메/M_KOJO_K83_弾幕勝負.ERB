;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K83_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②ダイスロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、キャラが被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に戻る→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:구상색
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数値が大きいほどあなたが不利になる　数値が負ならあなたが有利に
	;キャラの能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		;酔ってる
		IF M_KOJO_K83_YOIDORE([[키스메]])
			CALL M_KOJO_K83_TALKSET("주정꾼")
		;不기분
		ELSEIF M_KOJO_K83_FUKIGEN([[키스메]])
			PRINTFORMW 「어…… 아, 알았어……」
		;通常
		ELSE
			IF TALENT:[[키스메]]:연인
				PRINTFORMW 「지, 지지 않을 거야……!」
			ELSEIF TALENT:[[키스메]]:연모
				PRINTFORMW 「여, 열심히 할게……!」
			ELSEIF TALENT:[[키스메]]:사모
				PRINTFORMW 「자, 잘 부탁해……」
			ELSE
				PRINTFORMW 「나, 난 약한데……」
			ENDIF
		ENDIF
		RETURN 0
	ENDIF
;	;-------------------------------------------------
;	;ハンデ
;	;記入チェック（=0, 非表示、1, 表示）
;	LOCAL:1 = 0
;	;-------------------------------------------------
;	IF LOCAL:1 && ARGS == "ハンデ"
;		;ハンデつけなかったら表示されないので無記入でよい
;		PRINTFORML 
;		RETURN 0
;	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾"
		;最後
		IF 相手残機 == 0
			;酔ってる
			IF M_KOJO_K83_YOIDORE([[키스메]])
				PRINTFORML 「응…??」
			;不기분
			ELSEIF M_KOJO_K83_FUKIGEN([[키스메]])
				PRINTFORML 「…………」
			;通常
			ELSE
				SELECTCASE RAND:3
				CASE 1
					PRINTFORML 「다, 당했어……」
				CASE 2
					PRINTFORML 「가, 강해……」
				CASEELSE
					PRINTFORML 「더, 더는 안 돼……」
				ENDSELECT
			ENDIF
		ELSE
			;酔ってる
			IF M_KOJO_K83_YOIDORE([[키스메]])
				SELECTCASE RAND:3
				CASE 1
					PRINTFORML 「흐엣!?」
				CASE 2
					PRINTFORML 「으응!?」
				CASEELSE
					PRINTFORML 「……!?」
				ENDSELECT
			;不기분
			ELSEIF M_KOJO_K83_FUKIGEN([[키스메]])
				SELECTCASE RAND:3
				CASE 1
					PRINTFORML 「더는 싫어……」
				CASE 2
					PRINTFORML 「아파……」
				CASEELSE
					PRINTFORML 「으……」
				ENDSELECT
			;通常
			ELSE
				PRINTFORML 「%M_KOJO_K83_AUTO("被弾")%」
			ENDIF
		ENDIF
	ENDIF
;	;-------------------------------------------------
;	;戦闘中
;	;TARGETの【残忍酷薄】発動時
;	;ARGはTARGETの残機
;	;記入チェック（=0, 非表示、1, 表示）
;	LOCAL:1 = 0
;	;-------------------------------------------------
;	IF LOCAL:1 && ARGS == "残忍酷薄"
;		
;	ENDIF
;	;-------------------------------------------------
;	;戦闘中
;	;TARGETの【乾坤一擲】発動時
;	;ARGはTARGETの残機
;	;記入チェック（=0, 非表示、1, 表示）
;	LOCAL:1 = 0
;	;-------------------------------------------------
;	IF LOCAL:1 && ARGS == "乾坤一擲"
;		
;	ENDIF
;	;-------------------------------------------------
;	;戦闘中
;	;TARGETの【怪力乱神】発動時
;	;ARGはTARGETの残機
;	;記入チェック（=0, 非表示、1, 表示）
;	LOCAL:1 = 0
;	;-------------------------------------------------
;	IF LOCAL:1 && ARGS == "怪力乱神"
;		
;	ENDIF
;	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上ならあなたの負け、0の場合はあなたの勝利
		;あなた勝利
		IF 相手残機 == 0
			;酔ってる
			IF M_KOJO_K83_YOIDORE([[키스메]])
				PRINTFORMW 「어라……?」
			;不기분
			ELSEIF M_KOJO_K83_FUKIGEN([[키스메]])
				PRINTFORMW 「너무해…………」
			;通常
			ELSE
				IF TALENT:[[키스메]]:연인
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「%CALLNAME:MASTER%~ 좀 봐 줘……」
					CASE 2
						PRINTFORMW 「즐거웠어…♪」
					CASEELSE
						PRINTFORMW 「또 놀아 줘…♪」
					ENDSELECT
				ELSEIF TALENT:[[키스메]]:연모
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「강해서 좋겠어……」
					CASE 2
						PRINTFORMW 「상대가 안 되네……」
					CASEELSE
						PRINTFORMW 「지긴 했어도, 재밌었어……」
					ENDSELECT
				ELSEIF TALENT:[[키스메]]:사모
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「%마스터는% 강하네……」
					CASE 2
						PRINTFORMW 「부, 분해……」
					CASEELSE
						PRINTFORMW 「졌어……」
					ENDSELECT
				ELSE
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「져, 졌어……」
					CASE 2
						PRINTFORMW 「모, 못 하겠어……」
					CASEELSE
						PRINTFORMW 「%CALLNAME:MASTER%, 강해……」
					ENDSELECT
				ENDIF
			ENDIF
		;キスメ勝利
		ELSE
			;酔ってる
			IF M_KOJO_K83_YOIDORE([[키스메]])
				PRINTFORMW 「아하핫! 재밌었어~!」
			;不기분
			ELSEIF M_KOJO_K83_FUKIGEN([[키스메]])
				PRINTFORMW 「…………바보」
			;通常
			ELSE
				IF TALENT:[[키스메]]:연인
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「%CALLNAME:MASTER%, 나보다 약하다니……」
					CASE 2
						PRINTFORMW 「아, 아팠어…? 미안해……」
					CASEELSE
						PRINTFORMW 「이번에 특훈하자…♪」
					ENDSELECT
				ELSEIF TALENT:[[키스메]]:연모
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「우, 운이 좋았어…!」
					CASE 2
						PRINTFORMW 「%CALLNAME:MASTER%도 약하구나…」
					CASEELSE
						PRINTFORMW 「후후, 즐거웠어……」
					ENDSELECT
				ELSEIF TALENT:[[키스메]]:사모
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「어라…… 이겼네……」
					CASE 2
						PRINTFORMW 「조, 좋은 승부였어……」
					CASEELSE
						PRINTFORMW 「미, 미안……」
					ENDSELECT
				ELSE
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「약해……」
					CASE 2
						PRINTFORMW 「어…… 끝이야…?」
					CASEELSE
						PRINTFORMW 「얌전히 있는 게……」
					ENDSELECT
				ENDIF
			ENDIF
		ENDIF
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

