;
@M_KOJO_MESSAGE_COM_K30_DANMAKU(ARGS, 상대잔기)
#DIM 상대잔기
;全体の流れ
;①【전투전】→②ダイスロールとプレイヤー選択肢、핸디캡をつけた場合は【핸디캡구상】→③対応スキルが発動した場合【スキル구상】→④피탄判定、キャラが피탄したなら【피탄구상】→
;どちらかの残機が0になっていなければ②に戻る→⑤【전투후구상】

;--------------------------------------------------
;기입 체크（=0, 비표시、1, 표시）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:구상색
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;전투전
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;花映塚でくっそ強かった覚えがあるけど핸디캡表記されるならいじらない
	
	;핸디캡をつけることができ、数値が大きいほどあなたが不利になる　数値が負ならあなたが有利に
	;キャラの能力に関わらずクッソ強くしたり弱くしたりできる
	;기입 체크（=0, 비표시、1, 표시）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		IF CFLAG:318 == 1
			PRINTFORMW 「이 자리에서 심판을 받으십시오!!」
		ELSE
			SELECTCASE RAND:3
				CASE 0
					PRINTFORMW 「당신이 가진 죄의 무게, 이 자리에서 헤아려 보겠습니다」
				CASE 1
					PRINTFORMW 「제 가르침은 잘 지키고 계십니까?」
				CASE 2
					PRINTFORMW 「저는 탄막의『대전』에는 자신이 있어요」
			ENDSELECT
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;핸디캡
	;기입 체크（=0, 비표시、1, 표시）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;핸디캡つけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET피탄時구상
	;기입 체크（=0, 비표시、1, 표시）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;別に一律で「やられたー」だけでもいいよ
		SELECTCASE 상대잔기
			;残り残機3が表示されるのは【洽覧深識】持ちのみ
			CASE 3
				PRINTFORML 
			CASE 2
				IF CFLAG:318 == 1
					PRINTFORMW 「…다음」
				ELSE
					PRINTFORML 「나의 가르침을 지키고 있다면 이 정도는 당연합니다」
					PRINTFORMW 「다음에는 좀 더 강하게 가겠습니다」
				ENDIF
				PRINTFORMW 「심판『시왕재판』!」
			CASE 1
				IF CFLAG:318 == 1
					PRINTFORMW 「…이걸로 끝입니다」
				ELSE
					PRINTFORML 「꽤 하시는군요」
					PRINTFORMW 「자, 이걸로 흑백을 분명히 가리겠습니다」
				ENDIF
				PRINTFORMW 「심판『라스트 저지먼트』!!」
			CASE 0
				IF CFLAG:318 == 1
					PRINTFORMW 「…크윽」
				ELSE
					PRINTFORMW 「훌륭합니다」
				ENDIF
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【잔인무도】発動時
	;ARGはTARGETの残機
	;기입 체크（=0, 비표시、1, 표시）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【건곤일척】発動時
	;ARGはTARGETの残機
	;기입 체크（=0, 비표시、1, 표시）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		IF CFLAG:318 == 1
			PRINTFORMW 「……약삭빠르군요」
		ELSE
			PRINTFORMW 「여기가 승부처군요」
		ENDIF
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【괴력난신】発動時
	;ARGはTARGETの残機
	;기입 체크（=0, 비표시、1, 표시）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;전투후
	;기입 체크（=0, 비표시、1, 표시）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上ならあなたの負け、0の場合はあなたの승리
		SELECTCASE 상대잔기
			CASE 4
				PRINTFORML 
			CASE 3
				IF CFLAG:318 == 1
					PRINTFORMW 「…판결은 지옥행이네요. 구원받을 일도 없을 것 같아요」
				ELSE
					PRINTFORMW 「뭐 하는 겁니까. 정신 차리세요!」
				ENDIF
			CASE 2
				IF CFLAG:318 == 1
					PRINTFORMW 「…판결은 축생계행이네. 축생들의 먹이라도 되는 건 어떠십니까」
				ELSE
					PRINTFORMW 「으ー음, 우선 제 가르침을 잘 기억하고 있나요?」
				ENDIF
			CASE 1
				IF CFLAG:318 == 1
					PRINTFORMW 「…판결에서는 인계에 머물 수 있을거야. 크게 회개할 일이로군요」
				ELSE
					PRINTFORMW 「안타깝지만 하루하루 쌓아올린 것이 부족했다고도 할 수 있습니다」
				ENDIF
			CASE 0
				;일기플래그＠에이키님이 負けた
				IF DIARY:30:4 == 0
					CALL K30_WRITE_DIARY(4)
					;過去に에이키님이 승리してたら分岐
					SIF STRCOUNT(CSTR:30:80, "승리")
						SETBIT CFLAG:1910, 1
				ENDIF
				IF CFLAG:318 == 1
					PRINTFORMW 「………판결은 보류하겠습니다」
				ELSE
					PRINTFORML 「잘하셨습니다. 그치만 여기서 끝이 아니에요」
					PRINTFORMW 「선행도 수련도 쌓아야 합니다. 앞으로도 계속해 주세요」
				ENDIF
		ENDSELECT
		;일기플래그＠あなたが負けた
		IF 상대잔기 > 0
			CALLF FIRSTTIME("승리")
			IF DIARY:30:3 == 0 && !CFLAG:30:탄막승부승리
				CALL K30_WRITE_DIARY(3)
				SIF 상대잔기 == 1
					SETBIT CFLAG:1910, 0
			ENDIF
		ENDIF
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

