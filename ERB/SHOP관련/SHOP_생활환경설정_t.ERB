	IF RESULT == 0 && 수면시간예측(TIME:3) >= 240
		PRINTFORM 자명종을 
		CALL COLORMESSAGE(@"%시각표시(TIME:3)%", C_YELLOW)
		PRINTFORMW 로 설정했습니다.
		RETURN 1
	ELSEIF RESULT == 2222 && 동거사람 < CHARANUM && 동거사람
		TIME:3 = CFLAG:동거사람:기상시간
	ELSEIF RESULT == 3333
		CALL 캘린더()
	ELSEIF RESULT == 4444
		CALL 기상시간입력()
	ELSEIF RESULT == 5555
		CALL 최저수면시간설정()
	ELSEIF INRANGE(RESULT, -1360, 1360)
		TIME:3 += RESULT
		IF TIME:3 >= 1440
			TIME:3 -= 1440
		ELSEIF TIME:3 < 0
			TIME:3 += 1440
		ENDIF
	CLEARLINE 8
	ENDIF
