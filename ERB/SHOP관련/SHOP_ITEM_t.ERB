;----------------------------------------------------------------------
;기본 가게 메뉴
;----------------------------------------------------------------------
@SHOW_SHOPPING(판매점, TYPE, 할인)
#DIMS 판매점
#DIMS TYPE
#DIM 할인
#DIM 표시수
#DIM 표시행
#DIM 가격
표시수 = 0
표시행 = 0
FOR LOCAL, 0 , 1100
	CALL ITEMDATA(LOCAL, "SHOP:" + 판매점)
	IF RESULT
		IF TYPE != ""
			CALL ITEMDATA(LOCAL, "TYPE:" + TYPE)
		ELSE
			RESULT = 1
		ENDIF
		IF RESULT
			가격 = ITEMPRICE:LOCAL * (100 - 할인 + FLAG:물가) / 100
			SELECTCASE ITEMSTOCK(LOCAL, 가격)
			CASE 1
				LOCALS:1 = 존재하지 않음
				CONTINUE
			CASE 2
				LOCALS:1 = 매진
				SETCOLOR C_GRAY
			CASE 3
				LOCALS:1 = %금액표시(가격)%
				SETCOLOR C_GRAY
			CASE 4
				LOCALS:1 = 봉인
				CONTINUE
			CASE 5
				LOCALS:1 = 다 들 수 없다
				SETCOLOR C_GRAY
			CASEELSE
				LOCALS:1 = %금액표시(가격)%
			ENDSELECT
			LOCALS = [{LOCAL,2}]%ITEMNAME:LOCAL%
			PRINTFORM %LOCALS, 24, LEFT% %LOCALS:1, 8% 
			RESETCOLOR
			표시수 ++
			IF 표시수 % 3 == 0
				PRINTL 
				표시행 ++
			ENDIF
		ENDIF
	ENDIF
NEXT
IF 표시수 % 3 != 0
	PRINTL 
	표시행 ++
ENDIF
RETURN 표시행

